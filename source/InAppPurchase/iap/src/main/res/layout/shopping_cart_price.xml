<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:minHeight="52dp"
           android:paddingLeft="31dp"
           android:paddingRight="32dp"
           android:paddingTop="11dp"
           android:paddingBottom="11dp"
           android:layout_gravity="center_vertical"
           android:gravity="center"
    >

    <ImageView
        android:id="@+id/arrowwithouticons"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow"
        android:textSize="13sp"
        android:layout_marginRight="-3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textColor="#7ba4d9"
        android:tint="@color/colorDarkBlue"
        />



    <TextView
        android:id="@+id/text_description_without_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/colorDarkBlue"
        android:text="By enabling analytics, usage data is sent to us anonymously so we can continue to improve this Philips app."
        android:textSize="14sp"
        android:layout_below="@+id/ifo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toRightOf="@id/ifo"
        android:layout_marginTop="11dp"
        fontPath="fonts/centralesansbook.ttf"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/totalcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/colorDarkBlue"
        android:text="By enabling analytics, usage data is sent to us anonymously so we can continue to improve this Philips app."
        android:textSize="16sp"
        android:layout_below="@+id/ifo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        fontPath="fonts/centralesansbook.ttf"
        android:layout_alignBaseline="@id/text_description_without_icons"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/numberwithouticon"
        android:text="Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/arrowwithouticons"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorDarkBlue"
        android:visibility="gone"
        android:textSize="20sp"
        fontPath="fonts/centralesanslight.ttf"
        />


    <TextView
        android:id="@+id/ifo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        fontPath="fonts/centralesansbook.ttf"
        android:includeFontPadding="false"
        android:text="Version"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorDarkBlue"
        android:layout_alignBaseline="@id/numberwithouticon"
        android:layout_toLeftOf="@id/numberwithouticon"
        />

    </RelativeLayout>