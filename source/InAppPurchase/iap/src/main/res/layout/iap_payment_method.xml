<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_payment_method"
        fontPath="fonts/centralesansbold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_selection_address_select_address_margint_bottom"
        android:layout_marginLeft="@dimen/iap_selection_address_layout_margin"
        android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_top"
        android:text="@string/iap_payment_method"
        android:textColor="?attr/baseColor"
        android:textSize="@dimen/iap_selection_address_select_address_text_size"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_below="@id/tv_payment_method"
        android:background="?attr/listDividerColor"/>

    <Button
        android:id="@+id/btn_cancel"
        style="?attr/outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/iap_cancel"
        android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
        android:layout_marginEnd="@dimen/iap_selection_address_layout_margin"
        android:layout_marginBottom="@dimen/iap_selection_address_cancel_margin_bottom"
        android:textAllCaps="false"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_payment_method"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_cancel"
        android:layout_below="@id/divider">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>