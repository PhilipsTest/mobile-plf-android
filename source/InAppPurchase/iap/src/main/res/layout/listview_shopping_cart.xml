<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ratingtheme"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="85dp"
                android:paddingBottom="3dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        style="@style/networkImage"
        android:layout_centerVertical="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/network_image_width"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="13dp"
                android:paddingLeft="13dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:src="@drawable/dots"/>
        </FrameLayout>

        <TextView
            android:id="@+id/price"
            style="@style/tvTitle"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/frame"
            android:includeFontPadding="false"
            android:text="â‚¬ 209,99"
            android:textColor="?attr/baseColor"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/text1Name"
            style="@style/tvBoldTitle"
            android:layout_alignBaseline="@id/price"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/price"
            android:scrollHorizontally="false"
            android:text="DiamondClean"/>

        <TextView
            android:id="@+id/text2value"
            style="@style/tvTitle"
            android:layout_below="@+id/text1Name"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/from"
            android:layout_toRightOf="@+id/from"
            android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
            android:text="2"
            android:textColor="?attr/baseColor"
            android:textSize="10sp"/>


        <TextView
            android:id="@+id/out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1Name"
            android:layout_toRightOf="@id/text2value"
            android:text="@string/out_of_stock"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/from"
            style="@style/tvTitle"
            android:layout_alignBaseline="@id/text2value"
            android:layout_marginRight="3dp"
            android:text="from"/>
    </RelativeLayout>

</RelativeLayout>