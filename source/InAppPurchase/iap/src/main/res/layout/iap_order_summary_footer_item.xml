<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="85dp"
              android:orientation="vertical"
              android:paddingBottom="3dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/listDividerColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/iap_shipping_address"/>

        <TextView
            android:id="@+id/tv_shipping_first_name"
            style="@style/tvTitle"
            android:layout_marginTop="5dp"
            android:text="@string/iap_first_name"/>

        <TextView
            android:id="@+id/tv_shipping_address"
            style="@style/tvTitle"
            android:text="@string/iap_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/listDividerColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/iap_billing_address"/>

        <TextView
            android:id="@+id/tv_billing_first_name"
            style="@style/tvTitle"
            android:layout_marginTop="5dp"
            android:text="@string/iap_first_name"/>

        <TextView
            android:id="@+id/tv_billing_address"
            style="@style/tvTitle"
            android:text="@string/iap_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/listDividerColor"/>

    <LinearLayout
        android:id="@+id/ll_payment_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/iap_payment_method"/>

        <TextView
            android:id="@+id/tv_card_type"
            style="@style/tvTitle"
            android:layout_marginTop="5dp"
            android:text="Master card"/>

        <TextView
            android:id="@+id/tv_card_holder_name"
            style="@style/tvTitle"
            android:text="@string/iap_first_name"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/listDividerColor"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delivery"
                style="@style/tvBoldTitle"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:text="Delivery via UPS parcel"/>

            <TextView
                android:id="@+id/tv_delivery_price"
                style="@style/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:text="-1600"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/listDividerColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_vat"
                style="@style/tvBoldTitle"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:includeFontPadding="false"
                android:text="VAT"/>

            <TextView
                android:id="@+id/tv_vat_price"
                style="@style/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:text="1299"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_lable"
                style="@style/tvBoldTitle"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:includeFontPadding="false"
                android:text="Total(3 Items)"/>

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:text="8500"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>