<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/continues_btn"
        style="?attr/outlinedButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_continue_shopping" />


    <Button
        android:id="@+id/checkout_btn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_above="@id/continues_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:background="@color/uikit_philips_bright_orange"
        android:enabled="true"
        android:text="@string/iap_checkout" />

    <ListView
        android:id="@+id/withouticon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkout_btn"
        android:layout_alignParentTop="true"
        android:listSelector="@android:color/transparent"></ListView>

</RelativeLayout>