<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_field_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/uikit_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/centralesansbold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="33dp"
            android:gravity="center_horizontal"
            android:text="Shipping address"
            android:textColor="?attr/baseColor"
            android:textSize="20sp" />


        <com.philips.cdp.uikit.customviews.InlineForms
            android:id="@+id/InlineForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/firstname_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstname_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="First name" />

                <EditText
                    android:id="@+id/firstname_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter first name" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lastname_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastname_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Last name" />

                <EditText
                    android:id="@+id/lastname_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter last name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Address" />

                <EditText
                    android:id="@+id/address_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter first address line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/town_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/town_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Town/City" />

                <EditText
                    android:id="@+id/town_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter your town or city" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/postalcode_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postalcode_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Postal Code" />

                <EditText
                    android:id="@+id/postalcode_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter ZIP/Postal code" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/country_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/country_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Country" />

                <EditText
                    android:id="@+id/country_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter your country" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Email" />

                <EditText
                    android:id="@+id/email_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter your email" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_tv"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Phone" />

                <EditText
                    android:id="@+id/phone_et"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Enter phone number" />
            </LinearLayout>
        </com.philips.cdp.uikit.customviews.InlineForms>

        <LinearLayout
            android:id="@+id/billing_address_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/billing_address_tv"
                style="@style/PhilipsTextInputLayoutTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Billing address is the same"
                android:textColor="?attr/baseColor" />

            <com.philips.cdp.uikit.customviews.PuiSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="33dp"
                android:layout_marginRight="31dp"
                android:layout_marginTop="11dp"
                android:checked="true" />

        </LinearLayout>

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:text="Continue" />


        <Button
            android:id="@+id/cancel_btn"
            style="?attr/outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_above="@id/continue_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Cancel" />
    </LinearLayout>
</ScrollView>