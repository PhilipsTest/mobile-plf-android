<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ratingtheme"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        style="@style/networkImage"
        android:layout_centerVertical="true"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iap_shopping_cart_dots_margin_left"
                android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_gravity="right"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/price"
            style="@style/tvTitle"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_toLeftOf="@id/frame"
            android:includeFontPadding="false"
            android:text="â‚¬ 209,99"
            android:textColor="?attr/uikit_baseColor"
            android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
            fontPath="fonts/centralesansbold.ttf"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/text1Name"
            style="@style/tvBoldTitle"
            android:layout_alignBaseline="@id/price"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/price"
            android:scrollHorizontally="false"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
            fontPath="fonts/centralesansbold.ttf"
            android:layout_marginRight="@dimen/iap_shopping_cart_image_right"
            android:text="DiamondClean"/>

        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_below="@+id/text1Name">
            <TextView
                android:id="@+id/from"
                style="@style/tvTitle"
                android:layout_marginRight="@dimen/iap_shopping_cart_image_right"
                android:textSize="@dimen/quantity"
                fontPath="fonts/centralesansbook.ttf"
                android:text="@string/iap_product_item_quantity"/>
            <TextView
                android:id="@+id/text2value"
                style="@style/tvTitle"
                android:layout_alignBaseline="@id/from"
                android:layout_toRightOf="@id/from"
                android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1Name"
            android:layout_toRightOf="@id/quantity_count_layout"
            android:layout_alignBaseline="@id/quantity_count_layout"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/image"
        android:background="?attr/uikit_listDividerColor"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>