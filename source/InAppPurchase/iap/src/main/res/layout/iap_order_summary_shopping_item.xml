<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_product_image"
            style="@style/networkImage"
            android:layout_alignParentLeft="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_toRightOf="@id/iv_product_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_productName"
                style="@style/tvBoldTitle"
                android:layout_alignBaseline="@id/tv_total_price"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_total_price"
                android:scrollHorizontally="false"
                android:text="DiamondClean"/>

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:gravity="right"
                android:text="USD 200"/>

            <RelativeLayout
                android:id="@+id/quantity_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from"
                    style="@style/tvTitle"
                    android:layout_marginRight="3dp"
                    android:text="@string/iap_product_item_quantity"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/tvTitle"
                    android:layout_alignBaseline="@id/from"
                    android:layout_toRightOf="@id/from"
                    android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                    android:textColor="?attr/uikit_baseColor"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:layout_below="@id/iv_product_image"
            android:layout_marginTop="@dimen/iap_selection_address_layout_margin"
            android:background="?attr/uikit_listDividerColor"/>
    </RelativeLayout>

</LinearLayout>