<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/iap_tv_redeem_vochur"
        style="@style/iap_redeem_voucher"
        android:visibility="gone" />

    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/arrow"
        style="@style/iap_right_arrow"
        android:visibility="gone" />

    <View
        android:id="@+id/iap_redeem_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_below="@id/iap_tv_redeem_vochur"
        android:background="?attr/uikit_listDividerColor"
        android:visibility="gone" />


    <TextView
        android:id="@+id/iap_tv_delivery_price"
        style="@style/iap_delivery_price"
        android:layout_below="@+id/iap_redeem_bottom_divider"
        />

    <TextView
        android:id="@+id/iap_tv_delivery_via_ups"
        style="@style/iap_delivery_via"
        android:layout_alignBaseline="@id/iap_tv_delivery_price"
        android:layout_toLeftOf="@id/iap_tv_delivery_price"
        android:includeFontPadding="false" />



    <View
        android:id="@+id/iap_divider_bottom_delivery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_below="@id/iap_tv_delivery_via_ups"
        android:background="?attr/uikit_listDividerColor" />

    <TextView
        android:id="@+id/iap_tv_vat"
        style="@style/iap_vat"
        android:visibility="gone"
        android:layout_below="@id/iap_divider_bottom_delivery"
        android:text="@string/iap_vat" />

    <TextView
        android:id="@+id/iap_tv_totalItems"
        style="@style/iap_total_items"
        android:layout_below="@id/iap_tv_vat" />

    <TextView
        android:id="@+id/iap_tv_vat_inclusive"
        style="@style/iap_vat_uk"
        android:layout_below="@id/iap_tv_totalItems"
        android:text="@string/iap_vat_inclusive_text" />

    <TextView
        android:id="@+id/iap_tv_vat_value"
        style="@style/iap_vat_value"
        android:visibility="gone"
        android:layout_alignBaseline="@id/iap_tv_vat" />

    <TextView
        android:id="@+id/iap_tv_vat_value_uk_shopping_cart"
        style="@style/iap_vat_value"
        android:layout_alignBaseline="@id/iap_tv_vat_inclusive"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/iap_tv_totalcost"
        style="@style/iap_total_cost"
        android:layout_alignBaseline="@id/iap_tv_totalItems"
        android:layout_below="@+id/iap_tv_vat_value" />
</RelativeLayout>