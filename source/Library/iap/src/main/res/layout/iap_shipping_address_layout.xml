<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_field_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/uikit_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shipping_address_margin_top_bottom"
            android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
            android:layout_marginTop="@dimen/iap_shipping_address_margin_top_bottom"
            android:gravity="center_horizontal"
            android:text="@string/iap_shipping_address"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/iap_shipping_address_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/same_as_shipping_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/billing_address_tv"
                style="@style/iapCentralesansBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0.5"
                android:background="@color/uikit_white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/iap_billing_address_is_same"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.philips.cdp.uikit.customviews.PuiSwitch
                android:id="@+id/switch_billing_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/iap_billing_toggle_margin_bottom"
                android:layout_marginEnd="@dimen/iap_billing_toggle_margin_right"
                android:layout_marginTop="@dimen/iap_billing_toggle_margin_top"
                android:checked="true" />

        </LinearLayout>

        <com.philips.cdp.uikit.customviews.InlineForms
            android:id="@+id/inlineForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_first_name"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_first_name" />

                <EditText
                    android:id="@+id/et_first_name"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_first_name_hint"
                    android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                    android:maxLength="17" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_last_name"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_last_name" />

                <EditText
                    android:id="@+id/et_last_name"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_last_name_hint"
                    android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                    android:maxLength="17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_salutation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_salutation"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_salutation" />

                <EditText
                    android:id="@+id/et_salutation"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/iap_salutation_none"
                    android:inputType="none"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address_line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address_line_one"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_address_line_one" />

                <EditText
                    android:id="@+id/et_address_line_one"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_address_line_one_hint"
                    android:inputType="textCapWords|textNoSuggestions|textVisiblePassword"
                    android:maxLength="35" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address_line_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address_line_two"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_address_line_two" />

                <EditText
                    android:id="@+id/et_address_line_two"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_address_line_two_hint"
                    android:inputType="textCapWords|textNoSuggestions|textVisiblePassword"
                    android:maxLength="35" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_town"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_town" />

                <EditText
                    android:id="@+id/et_town"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_town_hint"
                    android:inputType="textCapSentences" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_postal_code"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_postal_code" />

                <EditText
                    android:id="@+id/et_postal_code"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_postal_code_hint"
                    android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_country"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_country" />

                <EditText
                    android:id="@+id/et_country"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_country_hint"
                    android:inputType="textCapCharacters|textNoSuggestions|textVisiblePassword"
                    android:maxLength="2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_state"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_state" />

                <EditText
                    android:id="@+id/et_state"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/iap_state_hint"
                    android:inputType="none"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_email" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_email_hint"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/iap_phone" />

                <EditText
                    android:id="@+id/et_phone_number"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="@string/iap_phone_hint"
                    android:inputType="phone" />
            </LinearLayout>
        </com.philips.cdp.uikit.customviews.InlineForms>

        <Button
            android:id="@+id/btn_continue"
            style="@style/iapButtonStyle"
            android:text="@string/iap_continue" />

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/uikit_outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_shipping_address_cancel_button_height"
            android:layout_marginBottom="@dimen/iap_shipping_address_cancel_button_margin_bottom"
            android:layout_marginEnd="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:layout_marginLeft="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:layout_marginRight="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:layout_marginStart="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:text="@string/iap_cancel" />
    </LinearLayout>
</ScrollView>