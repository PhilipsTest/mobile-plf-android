<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent_id"
        android:layout_width="@dimen/uikit_modal_alert_dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/uikit_modal_alert"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogTitle"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/uikit_modal_alert_button_left_margin"
            android:layout_marginTop="@dimen/uikit_modal_alert_text_top_margin"
            android:text="@string/uikit_modal_alert_label"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_label_text_size" />

        <TextView
            android:id="@+id/dialogDescription"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/uikit_modal_alert_text_right_margin"
            android:layout_marginStart="@dimen/uikit_modal_alert_button_left_margin"
            android:layout_marginTop="@dimen/uikit_modal_alert_message_text_top_margin"
            android:text="@string/uikit_modal_alert_message"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_message_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/uikit_modal_alert_bottom_layout_margin"
            android:layout_marginStart="@dimen/uikit_modal_alert_bottom_layout_margin"
            android:layout_marginTop="@dimen/uikit_modal_alert_button_top_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_ok"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/uikit_modal_alert_button_width"
                android:text="@string/uikit_modal_alert_negative_button_text"
                android:visibility="gone"
                android:textSize="@dimen/uikit_modal_alert_message_text_size" />

            <Button
                android:id="@+id/btn_dialog_tryAgain"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:minWidth="@dimen/uikit_modal_alert_button_width"
                android:text="Try Again"
                android:textSize="@dimen/uikit_modal_alert_message_text_size"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>