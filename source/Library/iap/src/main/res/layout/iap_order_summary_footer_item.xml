<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
    android:orientation="vertical"
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/iap_shipping_address" />

        <TextView
            android:id="@+id/tv_shipping_first_name"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/uikit_baseColor" />

        <TextView
            android:id="@+id/tv_shipping_address"
            style="@style/tvTitle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/uikit_listDividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/iap_billing_address" />

        <TextView
            android:id="@+id/tv_billing_first_name"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"

            android:textColor="?attr/uikit_baseColor" />

        <TextView
            android:id="@+id/tv_billing_address"
            style="@style/tvTitle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/uikit_listDividerColor" />

    <LinearLayout
        android:id="@+id/ll_payment_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/iap_payment_method" />

        <TextView
            android:id="@+id/tv_card_type"
            style="@style/tvTitle"
            android:layout_marginTop="5dp"
            android:text="@string/mastercard" />

        <TextView
            android:id="@+id/tv_card_holder_name"
            style="@style/tvTitle"
            android:text="@string/iap_first_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginEnd="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_voucher"
                style="@style/tvBoldTitle"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:text="@string/iap_voucher" />

            <TextView
                android:id="@+id/tv_voucher_price"
                style="@style/tvBoldTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp"
                android:text="0.0" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/uikit_listDividerColor"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delivery"
                style="@style/tvBoldTitle"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                android:text="@string/iap_deliver_via_parcel" />

            <TextView
                android:id="@+id/tv_delivery_price"
                style="@style/tvBoldTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/uikit_listDividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginEnd="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_vat"
                style="@style/tvTitle"
                android:layout_alignParentStart="true"
                android:includeFontPadding="false"
                android:text="@string/iap_vat" />

            <TextView
                android:id="@+id/tv_vat_price"
                style="@style/tvTitle"
                android:layout_alignParentEnd="true"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_lable"
                style="@style/tvBoldTitle"
                android:layout_alignParentStart="true"
                android:includeFontPadding="false"
                android:text="@string/iap_total_val" />

            <TextView
                android:id="@+id/tv_vat_inclusive"
                style="@style/tvTitle"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_total_lable"
                android:includeFontPadding="false"
                android:text="@string/iap_vat_inclusive_text" />

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvBoldTitle"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>