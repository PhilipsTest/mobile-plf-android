<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Overwrite the ToggleButton style -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_btn_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="Widget.Button.Toggle.Text" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textOn">@string/done</item>
        <item name="android:textOff">@string/edit</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="sharemenu_item_icon">
         <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">center</item>
    </style>
    
    <style name="menu_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="line_solid_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#CCCCCC</item>
    </style>
    
    <style name="parent_container" parent="fillParent">
        <item name="android:background">#FFFFFF</item>
    </style>
    
     <style name="fillParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="titlebar">
        <item name="android:background">#FAF9F6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
    </style>


    <style name="btn_blue_text">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/philips_blue</item>
    </style>
    <style name="expression_share_label_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:background">#EBEBEC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="expression_share_img">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>