<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_philips_support_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/contact_philips_support_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/contact_philips_support_msg1"
            android:textColor="@color/title_gray"
            android:textSize="19sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:text="@string/contact_philips_support_msg2"
            android:textColor="@color/philips_blue"
            android:textSize="24sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/seperator_line_2x" />

        <RelativeLayout
            android:id="@+id/contact_support_phone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/contact_support_phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/img_description"
                android:src="@drawable/call_us_help" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_phone_lanbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contact_support_phone_img"
                android:drawablePadding="16dp"
                android:text="@string/contact_philips_support_msg3"
                android:textColor="@color/title_gray"
                android:textSize="22sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:layout_below="@+id/contact_support_phone_lanbel"
                android:layout_toRightOf="@+id/contact_support_phone_img"
                android:drawablePadding="16dp"
                android:gravity="left"
                android:lineSpacingExtra="2dp"
                android:text="@string/contact_philips_support_phone_num"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_phone_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_support_phone_lanbel"
                android:layout_toRightOf="@+id/contact_support_phone"
                android:background="@drawable/list_item_selector"
                android:lineSpacingExtra="2dp"
                android:text="@string/contact_philips_support_phone_num_2"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/seperator_line_2x" />

        <RelativeLayout
            android:id="@+id/layout_we_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/we_chat_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/img_description"
                android:src="@drawable/we_chat" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/lbl_we_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/we_chat_icon"
                android:drawablePadding="16dp"
                android:text="@string/subtitle_we_chat"
                android:textColor="@color/title_gray"
                android:textSize="22sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lbl_we_chat"
                android:layout_below="@+id/lbl_we_chat"
                android:drawablePadding="16dp"
                android:text="@string/wechat_id"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/seperator_line_2x" />

        <RelativeLayout
            android:id="@+id/contact_support_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:clickable="true" >

            <ImageView
                android:id="@+id/contact_support_email_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/img_description"
                android:src="@drawable/email_help" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_email_lanbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contact_support_email_img"
                android:drawablePadding="16dp"
                android:text="@string/diagnostics"
                android:textColor="@color/title_gray"
                android:textSize="22sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_support_email_lanbel"
                android:layout_toRightOf="@+id/contact_support_email_img"
                android:drawablePadding="16dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/contact_philips_support_email"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/seperator_line_2x" />

        <RelativeLayout
            android:id="@+id/contact_support_website_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:clickable="true" >

            <ImageView
                android:id="@+id/contact_support_website_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/img_description"
                android:src="@drawable/help_section" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/contact_support_website_lanbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contact_support_website_img"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:minHeight="85dp"
                android:text="@string/contact_philips_support_msg5"
                android:textColor="@color/title_gray"
                android:textSize="22sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </RelativeLayout>

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/contact_support_website_ac4373"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:drawableRight="@drawable/purifier_ac4373_icon"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:minHeight="85dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/purifier_ac4373"
            android:textColor="@color/blue_list_item"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/contact_support_website_ac4375"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:drawableRight="@drawable/purifier_ac4375_icon"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:minHeight="85dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/purifier_ac4375"
            android:textColor="@color/blue_list_item"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/seperator_line_2x" />
    </LinearLayout>

</ScrollView>