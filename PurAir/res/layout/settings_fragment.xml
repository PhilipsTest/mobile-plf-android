<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/iv_rate_this_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/icon_mycity_4x" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_rate_this_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_rate_this_app"
        android:layout_alignTop="@+id/iv_rate_this_app"
        android:layout_toRightOf="@+id/iv_rate_this_app"
        android:gravity="center_vertical"
        android:text="@string/rate_this_app"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        custom:fontAssetName="fonts/gillsans.ttf" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_rate_this_app"
        android:layout_marginTop="10dp"
        android:background="@color/darkgray" />

    <ImageView
        android:id="@+id/iv_send_us_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_rate_this_app"
        android:layout_below="@+id/divider_1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/icon_1_4x" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_send_us_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_send_us_feedback"
        android:layout_alignLeft="@+id/tv_rate_this_app"
        android:layout_alignTop="@+id/iv_send_us_feedback"
        android:gravity="center_vertical"
        android:text="@string/send_us_feedback"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        custom:fontAssetName="fonts/gillsans.ttf" />

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_send_us_feedback"
        android:layout_marginTop="10dp"
        android:background="@color/darkgray" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/settings_demo_mode_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settings_demo_mode_toggle"
        android:layout_alignTop="@+id/settings_demo_mode_toggle"
        android:layout_toLeftOf="@+id/settings_demo_mode_toggle"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/shop_demo_mode"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        custom:fontAssetName="fonts/gillsans.ttf" />

    <ToggleButton
        android:id="@+id/settings_demo_mode_toggle"
        style="@style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider2"
        android:layout_marginRight="8dp"
        android:checked="false" />

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_demo_mode_toggle"
        android:background="@color/darkgray" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="20dp"
        android:text="@string/version_number"
        android:textColor="@color/gray"
        custom:fontAssetName="fonts/gillsans.ttf" />
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="20dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/gray"
        custom:fontAssetName="fonts/gillsans.ttf" />

</RelativeLayout>