<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp" >
    
    <Button
	    android:id="@+id/btnClose"
	    android:layout_width="20dp"
	    android:layout_height="20dp"
		android:padding="16dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true" 
	    android:background="@drawable/close_icon_2x"/>
    
	<com.philips.cl.di.dev.pa.view.FontTextView
		xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
		android:id="@+id/tvErrorMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:paddingBottom="32dp"
		android:text="@string/error_title"
		android:textColor="@color/indianred"
		android:textSize="18sp"
		custom:fontAssetName="fonts/gillsans.ttf" 
		android:layout_below="@id/btnClose"/>

</RelativeLayout>