<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/heading" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head_include"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/guards_environment_subheading"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="@string/guards_environment_intro"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp" >

                <ImageView
                    android:id="@+id/vistashield_filter_imgView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_description"
                    android:scaleType="centerInside"
                    android:src="@drawable/vistashield_filter" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/vistashield_filter_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/vistashield_filter_imgView"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/guards_environment_filter"
                    android:textColor="@color/contain_gray"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/monitoring_sensor_imgView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_description"
                    android:scaleType="centerInside"
                    android:src="@drawable/monitoring_sensor" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/monitoring_sensor_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/monitoring_sensor_imgView"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/guards_environment_monitoring_sensor"
                    android:textColor="@color/contain_gray"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <ImageView
                    android:id="@+id/ozone_emission_imgView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_description"
                    android:scaleType="centerInside"
                    android:src="@drawable/ozone_emission" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/ozone_emission_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/ozone_emission_imgView"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/guards_environment_ozone_emmission"
                    android:textColor="@color/contain_gray"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </RelativeLayout>

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/new_home_syndrome_heading"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/new_home_syndrome_intro_part1"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_description"
                    android:src="@drawable/formaldehyde_percentage" />
            </LinearLayout>

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/new_home_syndrome_intro_part2"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img_description"
                android:src="@drawable/active_carbon" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/vistashield_features"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/airborne_disease_heading"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/airborne_disease_desc"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/head_include"
        android:background="@drawable/actionbar_shadow" />

</RelativeLayout>