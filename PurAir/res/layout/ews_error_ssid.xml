<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_error_ssid_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_ssid_msg1"
            android:textColor="@color/title_gray"
            android:lineSpacingExtra="10dp"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_error_ssid_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user's Wi-Fi network name"
            android:textColor="@color/philips_blue"
            android:textSize="21sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            layout="@layout/ews_connect_2_network_instruction" />
    </LinearLayout>

</ScrollView>