<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp" >

    <TextView
        android:id="@+id/tv_cancel_wifi_setup_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="10dp"
        android:text="@string/checking_signal_strength_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/philips_blue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_cancel_wifi_setup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cancel_wifi_setup_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10dp"
        android:text="@string/checking_signal_strength_message"
        android:textColor="@color/title_gray"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancel_wifi_yes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_cancel_wifi_setup_message"
        android:layout_below="@+id/tv_cancel_wifi_setup_message"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_button_selector"
        android:textSize="14sp"
        android:text="@string/yes" />

    <Button
        android:id="@+id/btn_cancel_wifi_no"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_cancel_wifi_yes"
        android:layout_alignBottom="@+id/btn_cancel_wifi_yes"
        android:layout_toRightOf="@+id/btn_cancel_wifi_yes"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg_gray"
        android:textSize="14sp"
        android:text="@string/no" />

</RelativeLayout>