                    android:layout_above="@+id/rlXGrid"
                    android:layout_alignRight="@+id/rlXGrid"
                    android:layout_alignTop="@+id/llYAxis"
                    android:layout_toRightOf="@+id/llYAxis"
                    android:background="@android:color/transparent" >
                </com.philips.cl.di.dev.pa.screens.customviews.CustomGraphView>

                <RelativeLayout
                    android:id="@+id/rlXGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
