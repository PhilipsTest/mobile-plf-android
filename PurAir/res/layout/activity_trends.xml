            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rlGraph"
                android:layout_below="@+id/llCenter" >

                <ImageView
                    android:id="@+id/ivHomeLegend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/trend_legend_home" />

                <com.philips.cl.di.dev.pa.customviews.CustomTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/tvHomeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivHomeLegend"
                    android:text="Home"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    custom:fontAssetName="fonts/gillsans.ttf" />

                <ImageView
                    android:id="@+id/ivCityLegend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tvHomeLabel"
                    android:src="@drawable/trend_legend_city" />

                <com.philips.cl.di.dev.pa.customviews.CustomTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/tvCityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivCityLegend"
                    android:text="Shanghai"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    custom:fontAssetName="fonts/gillsans.ttf" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>