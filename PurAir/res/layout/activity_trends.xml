<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/filter_details_bg" >

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/filter_details_header" >

        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Trends"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <ImageView
            android:id="@+id/ivBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/filter_details_back" />

        <ImageView
            android:id="@+id/ivRightDeviceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_device_icon_black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader" >

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trend_bg" >

            <RelativeLayout
                android:id="@+id/rlTopBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.philips.cl.di.dev.pa.customviews.CustomTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/tvDayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="July 7"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    custom:fontAssetName="fonts/gillsans.ttf" />

                <ImageView
                    android:id="@+id/ivHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDayLabel"
                    android:layout_margin="5dp"
                    android:src="@drawable/trend_highlight" />

                <com.philips.cl.di.dev.pa.customviews.CustomTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/tvQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivHighlight"
                    android:layout_centerHorizontal="true"
                    android:text="How much good air did you have?"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    custom:fontAssetName="fonts/gillsanslight.ttf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvQuestion"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:weightSum="3" >

                    <RelativeLayout
                        android:id="@+id/rlDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/trend_day_normal"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <com.philips.cl.di.dev.pa.customviews.CustomTextView
                            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                            android:id="@+id/tvDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Day"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            custom:fontAssetName="fonts/gillsanslight.ttf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlWeek"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/trend_day_normal"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <com.philips.cl.di.dev.pa.customviews.CustomTextView
                            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                            android:id="@+id/tvWeek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Week"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            custom:fontAssetName="fonts/gillsanslight.ttf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/trend_day_normal"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <com.philips.cl.di.dev.pa.customviews.CustomTextView
                            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                            android:id="@+id/tvMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Month"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            custom:fontAssetName="fonts/gillsanslight.ttf" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTopBg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:weightSum="2" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/trend_info_box" >

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsans.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tvHome"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:text="On:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvOnValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvHome"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvOn"
                        android:text="13Hrs"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvAVGPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvOn"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="18dp"
                        android:text="Avg PM2.5:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvAVGPMValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvAVGPM"
                        android:layout_toRightOf="@+id/tvAVGPM"
                        android:text="123"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsans.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvHomePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="72%"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/trend_info_box" >

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Shanghai"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsans.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tvCity"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:text="US Consulate"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvAVGPMOutdoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSource"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="18dp"
                        android:text="Avg PM2.5:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvAVGPMValueOutdoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvAVGPMOutdoor"
                        android:layout_toRightOf="@+id/tvAVGPMOutdoor"
                        android:text="129"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        custom:fontAssetName="fonts/gillsans.ttf" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/tvOutdoorPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="12%"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        custom:fontAssetName="fonts/gillsanslight.ttf" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlLegend"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:id="@+id/llYAxis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/trend_y_axis"
                    android:orientation="vertical"
                    android:weightSum="4" >

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="500" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="375" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="250" />

                    <com.philips.cl.di.dev.pa.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="125" />
                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/pagerGraph"
                    android:layout_width="311dp"
                    android:layout_height="254dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/llYAxis" />
                <!--
                     <com.philips.cl.di.dev.pa.screens.customviews.CustomGraphView
                    android:id="@+id/rlMainGraph"
