<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >
        
        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/step1_off_3"
            android:textColor="@color/title_gray"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step1_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step1_title"
            android:text="@string/step1_instruction"
            android:textColor="@color/philips_blue"
            android:textSize="21sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        
        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step1_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step1_instruction"
            android:text="@string/step1_msg1"
            android:textColor="@color/contain_gray"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        
        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step1_wifi_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step1_message"
            android:text="@string/no_network"
            android:textColor="@color/philips_blue"
            android:textSize="19sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        
        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step1_alert_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step1_wifi_network"
            android:text="@string/step1_alert_msg"
            android:textColor="@color/contain_gray"
            android:textSize="16sp"
            android:lineSpacingExtra="10dp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step1_alert_msg"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ews_step1_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/gray_button_selector"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ews_step1_yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_selector"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        
    </RelativeLayout>

</ScrollView>