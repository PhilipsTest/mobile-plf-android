<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/heading" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head_include" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_ips_system_intro"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_ips_system_subheading"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <!-- Sieving -->

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/sieving_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/sieving"
                android:drawablePadding="8dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_heading_1"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/sieving_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_intro_1"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <!-- Inertial Impaction -->

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/inertial_impaction_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/inertial_impaction"
                android:drawablePadding="8dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_heading_2"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/inertial_impaction_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_intro_2"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <!-- Interception -->

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/interception_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/interception"
                android:drawablePadding="8dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_heading_3"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/interception_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_intro_3"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <!-- Diffusion and Absorbtion -->

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/diffusion_absorbtion_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/diffusion_absorbtion"
                android:drawablePadding="8dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_heading_4"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/diffusion_absorbtion_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_intro_4"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_nanometer_ques"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img_description"
                android:src="@drawable/nanometer_desc" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_performance_subheading"
                android:textColor="@color/blue_title"
                android:textSize="@dimen/title_text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="@string/vistashield_performance_intro"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_small"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/head_include"
        android:background="@drawable/actionbar_shadow" />

</RelativeLayout>