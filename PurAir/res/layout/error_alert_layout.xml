<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <ImageView
        android:id="@+id/iv_goto_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_description"
        android:src="@drawable/ews_question_mark_2x" />

    <ImageView
        android:id="@+id/iv_close_error_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_goto_support"
        android:contentDescription="@string/img_description"
        android:src="@drawable/help_close" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_goto_support"
        android:layout_below="@+id/tv_error_header"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/title_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_error_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_error_message"
        android:layout_below="@+id/iv_goto_support"
        android:lineSpacingExtra="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/philips_blue"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_error_popup"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_close_error_popup"
        android:layout_below="@+id/tv_error_message"
        android:layout_marginRight="16dp"
        android:background="@drawable/blue_button_selector"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>