<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

   

   
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivQuad3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivQuad1"
            android:background="@drawable/quadrant3" />

        <ImageView
            android:id="@+id/ivQuad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivQuad3"
            android:layout_toRightOf="@+id/ivQuad3"
            android:background="@drawable/quadrant2" />

        <ImageView
            android:id="@+id/ivQuad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivQuad3"
            android:background="@drawable/quadrant1" />

        <ImageView
            android:id="@+id/ivQuad4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/quadrant4" />
    </RelativeLayout>
     <ImageView
        android:id="@+id/ivIndoorFullCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/indoorcircle" />
    
     <com.philips.cl.di.dev.pa.screens.customviews.CustomTextView
        android:id="@+id/tvIndoorAQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="400"
        android:textColor="@android:color/white"
        android:textSize="100sp" />

    
    </FrameLayout>
