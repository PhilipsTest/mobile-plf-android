<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
    style="@style/parent_container"
    android:orientation="vertical" >

    <include
        style="@style/titlebar"
        layout="@layout/titlebar_basic" />

    <ListView
        android:id="@+id/promotions_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#CCCCCC"
        android:dividerHeight="1px"
        android:listSelector="#00000000" >
    </ListView>

    <com.philips.cl.di.dev.pa.buyonline.SquareImageView
        android:id="@+id/promotions_banner_iv"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:height_weight="50"
        app:width_weight="320" />

</LinearLayout>