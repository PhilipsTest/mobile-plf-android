<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="20dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/tv_rm_filter_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Filter Status" />

    <TextView
        android:id="@+id/tv_rm_filter_status_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_filter_status_title"
        android:layout_marginTop="5dp"        
        android:text="Remember to clean sensor every 2 months" />

    <TextView
        android:id="@+id/tv_rm_pre_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_filter_status_reminder"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="1 Pre-Filter" />

    <com.philips.cl.di.dev.pa.customviews.FilterStatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_pre_filter"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_pre_filter"
        android:layout_marginTop="4dp"
        android:background="@drawable/filter_details_base" />
    
    <TextView
        android:id="@+id/tv_rm_pre_filter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_pre_filter"
        android:layout_marginTop="4dp"
        android:text="Clean in 10 days" />
    
    <TextView
        android:id="@+id/tv_rm_multi_care_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_pre_filter_status"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="2 Multi-care Filter" />

    <com.philips.cl.di.dev.pa.customviews.FilterStatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_multi_care_filter"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_multi_care_filter"
        android:layout_marginTop="4dp"
        android:background="@drawable/filter_details_base" />
    
    <TextView
        android:id="@+id/tv_rm_multi_care_filter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_multi_care_filter"
        android:layout_marginTop="4dp"
        android:text="Replace in 3 weeks" />
    
    <TextView
        android:id="@+id/tv_rm_active_carbon_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_multi_care_filter_status"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="3 Active Carbon Filter" />

    <com.philips.cl.di.dev.pa.customviews.FilterStatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_active_carbon_filter"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_active_carbon_filter"
        android:layout_marginTop="4dp"
        android:background="@drawable/filter_details_base" />
    
    <TextView
        android:id="@+id/tv_rm_active_carbon_filter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_active_carbon_filter"
        android:layout_marginTop="4dp"
        android:text="Replace in 1.5 months" />
    
    <TextView
        android:id="@+id/tv_rm_hepa_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_active_carbon_filter_status"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="4 HEPA Filter" />

    <com.philips.cl.di.dev.pa.customviews.FilterStatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_hepa_filter"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_rm_hepa_filter"
        android:layout_marginTop="4dp"
        android:background="@drawable/filter_details_base" />
    
    <TextView
        android:id="@+id/tv_rm_hepa_filter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_hepa_filter"
        android:layout_marginTop="4dp"
        android:text="Replace immediatly" />

</RelativeLayout>