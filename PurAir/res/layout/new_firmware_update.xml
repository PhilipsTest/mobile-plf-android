<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <ScrollView
        android:id="@+id/scrollview_firmware"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/new_firmware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="5dp"
                android:padding="16dp"
                android:text="@string/new_firmware"
                android:textColor="@color/philips_blue"
                android:textSize="24sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <ImageView
                android:id="@+id/divider1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/new_firmware"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/separator"
                android:textColor="@color/title_gray" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/firmware_version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:layout_marginTop="3dp"
                android:padding="16dp"
                android:text="@string/firmware_version_txt"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/firmware_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:layout_alignLeft="@+id/firmware_releasedate"
                android:layout_marginTop="3dp"
                android:padding="16dp"
                android:text="@string/firmware_version"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/firmware_version_txt"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/separator"
                android:textColor="@color/title_gray" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/releasedate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="3dp"
                android:padding="16dp"
                android:text="@string/releasedate_txt"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/firmware_releasedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"                
                android:layout_marginTop="3dp"
                android:padding="16dp"
                android:layout_marginRight="20dp"
        		android:layout_alignParentRight="true"
                android:text="@string/firmware_releasedate"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/releasedate_txt"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/separator"
                android:textColor="@color/title_gray" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/release_notes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider3"
                android:padding="16dp"
                android:text="@string/release_notes_txt"
                android:textColor="@color/philips_blue"
                android:textSize="24sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/release_notes_detailedtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release_notes_txt"
                android:lineSpacingExtra="5dp"
                android:padding="16dp"
                android:text="@string/release_notes_detailedtxt"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/release_notes_detailedtxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release_notes_detailedtxt"
                android:lineSpacingExtra="5dp"
                android:padding="16dp"
                android:text="@string/release_notes_detailedtxt2"
                android:textColor="@color/title_gray"
                android:textSize="16sp"
                custom:fontAssetName="fonts/gillsanslight.ttf" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"        
		android:layout_marginRight="16dp"
		android:layout_marginBottom="16dp"
        android:background="@drawable/blue_button_selector"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>