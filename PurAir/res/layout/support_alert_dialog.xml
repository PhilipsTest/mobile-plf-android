<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF"
    >

    <ImageView
        android:id="@+id/iv_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_description"
        android:src="@drawable/ews_question_mark_2x" />

    <ImageView
        android:id="@+id/iv_close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_support"
        android:contentDescription="@string/img_description"
        android:src="@drawable/help_close" />

    <TextView
        android:id="@+id/tv_support_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_support"
        android:layout_marginTop="17dp"
        android:textSize="24sp"
        android:text="@string/support_ts01_title"
        android:textColor="@color/philips_blue"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/iv_support_popup_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_support_popup_title"
        android:contentDescription="@string/img_description"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_support_popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/title_gray"
        android:lineSpacingExtra="10dp"
        android:layout_below="@+id/iv_support_popup_image"
        android:layout_marginTop="45dp"
        android:text="" />

    <Button
        android:id="@+id/btn_support_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_support_popup_message"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:background="@drawable/blue_button_selector"
        android:textSize="14sp"
        android:text="" />
    
    <View
        android:id="@+id/v_alert_margin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_support_button"
        />

</RelativeLayout>