<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- Caution layout -->

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/od_caution_layout" />

    <!-- Weather report -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/weather_bg_color"
        android:orientation="vertical" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/odWeatherHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:text="@string/weather_forecast"
            android:textColor="@color/philips_blue"
            android:textSize="@dimen/title_text_size_medium_dp"
            custom:fontAssetName="fonts/centralesansbook.ttf" />

        <HorizontalScrollView
            android:id="@+id/odTodayWetherReportHSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fadeScrollbars="false"
            android:scrollbarSize="4dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbHorizontal="@drawable/scroll_thumb"
            android:scrollbarTrackHorizontal="@drawable/scrollview_track"
            android:scrollbars="horizontal" >
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp" >

            <ProgressBar
                android:id="@+id/weatherProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/progress_circle" />

            <LinearLayout
                android:id="@+id/odWetherForcastLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/detailsOutdoorSecondMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="@string/detailed_air_quality"
        android:textColor="@color/philips_blue"
        android:textSize="@dimen/title_text_size_medium_dp"
        custom:fontAssetName="fonts/centralesansbook.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/compare_top_three_locations"
            android:textColor="@color/philips_blue"
            android:textSize="16sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <ToggleButton
            android:id="@+id/multi_city_trends_toggle"
            style="@style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/city_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/city_1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical" >

            <com.philips.cl.di.dev.pa.view.ImageRound
                android:id="@+id/city_1_iv"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/city_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/dash_dash"
                android:textColor="@color/gray"
                android:textSize="14sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ProgressBar
                android:id="@+id/city_1_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress_circle"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <com.philips.cl.di.dev.pa.view.ImageRound
                android:id="@+id/city_2_iv"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/city_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/dash_dash"
                android:textColor="@color/philips_dark_green"
                android:textSize="14sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ProgressBar
                android:id="@+id/city_2_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress_circle"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_3_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <com.philips.cl.di.dev.pa.view.ImageRound
                android:id="@+id/city_3_iv"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/city_3_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/dash_dash"
                android:textColor="@color/philips_bright_blue"
                android:textSize="14sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ProgressBar
                android:id="@+id/city_3_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress_circle"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_4_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <com.philips.cl.di.dev.pa.view.ImageRound
                android:id="@+id/city_4_iv"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/city_4_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/dash_dash"
                android:textColor="@color/black"
                android:textSize="14sp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ProgressBar
                android:id="@+id/city_4_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress_circle"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        layout="@layout/dashboard_details_control" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="32dp" >

        <LinearLayout
            android:id="@+id/detailsOutdoorlayoutGraph"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            android:orientation="vertical" >
        </LinearLayout>

        <ProgressBar
            android:id="@+id/outdoorAqiDownloadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_circle" />
    </RelativeLayout>

    <com.philips.cl.di.dev.pa.view.FontButton
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/outdoor_detail_air_quality_analysis_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_button_selector"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/outdoor_aiq_analysis_head1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <LinearLayout
        android:id="@+id/neighbourhoodDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/neighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:text="@string/neighborhood_aqi_data"
            android:textColor="@color/philips_blue"
            android:textSize="@dimen/title_text_size_medium_dp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <LinearLayout
            android:id="@+id/infotabll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/aqitv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/highlight_text_view_bg"
                android:contentDescription="@string/img_description"
                android:gravity="center"
                android:text="@string/aqi"
                android:textColor="@color/white"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/pmtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/normal_text_view_bg"
                android:contentDescription="@string/img_description"
                android:gravity="center"
                android:text="@string/pm_2.5"
                android:textColor="@color/white"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>

        <ListView
            android:id="@+id/outdoor_detail_neighborhood_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Map layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/seperator_line_2x"
        android:contentDescription="@string/img_description" />

    <RelativeLayout
        android:id="@+id/outdoor_detail_map_rl"
        android:layout_width="match_parent"
        android:layout_height="400dp" >

        <LinearLayout
            android:id="@+id/outdoor_detail_map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/gaodeMapZoomImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:contentDescription="@string/img_description"
            android:padding="8dp"
            android:src="@drawable/zoom_arrow_icon_2x" />

        <ImageView
            android:id="@+id/dummy_map_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing_map"
            android:contentDescription="@string/img_description"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>