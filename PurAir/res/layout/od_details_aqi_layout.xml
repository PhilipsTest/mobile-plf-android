<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/od_detail_circle_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/img_description"
        android:src="@drawable/aqi_blue_circle_2x" />
    
    <com.philips.cl.di.dev.pa.customviews.CustomTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/od_detail_aqi_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/od_detail_circle_pointer"
        android:layout_alignLeft="@+id/od_detail_circle_pointer"
        android:layout_alignTop="@+id/od_detail_circle_pointer"
        android:layout_alignRight="@+id/od_detail_circle_pointer"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="70sp" />
    
    
    <com.philips.cl.di.dev.pa.customviews.CustomTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/od_detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/od_detail_circle_pointer"
        android:layout_alignLeft="@+id/od_detail_circle_pointer"
        android:layout_alignRight="@+id/od_detail_circle_pointer"
        android:gravity="center"
        android:text="@string/city_location"
        android:textColor="@color/white"
        android:textSize="12sp" />
    
</RelativeLayout>