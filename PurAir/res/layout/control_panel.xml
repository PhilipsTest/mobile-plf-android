<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/final_layout_border" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Power" />

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:src="@drawable/border_line_left_menu_2x"
        android:scaleType="fitEnd" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Fan Speed" />
    
    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"
        android:text="" />

    <Button
        android:id="@+id/fan_speed_manual_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@id/ref"
        android:paddingLeft="10dp"
        android:background="@drawable/button_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="#ffffff"
        android:text="Manual" />

    <Button
        android:id="@+id/fan_speed_auto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@id/ref"
        android:paddingRight="10dp"
        android:background="@drawable/button_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="Auto" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fan_speed_auto_btn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/border_line_left_menu_2x" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Set Timer" />

    <Button
        android:id="@+id/set_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="Off" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_timer_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/border_line_left_menu_2x" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/ref"
        android:text="Child Lock" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@id/ref"
        android:text="Indicator Light" />

    <ToggleButton
        android:id="@+id/child_lock_btn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:background="@drawable/button_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="Img" />

    <ToggleButton
        android:id="@+id/indicator_light_btn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/child_lock_btn"
        android:layout_alignBottom="@+id/child_lock_btn"
        android:layout_alignRight="@+id/textView5"
        android:background="@drawable/button_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="Img" />

    <ToggleButton
        android:id="@+id/power_toggle_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="ToggleButton" />

</RelativeLayout>