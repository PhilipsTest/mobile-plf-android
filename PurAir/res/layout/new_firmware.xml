<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp">

     <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/new_firmware"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
		android:layout_marginLeft="16dp"
        android:textColor="@color/philips_blue"
        android:textSize="24sp"
		android:text="@string/new_firmware"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

     <ImageView
        android:id="@+id/divider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="16dp"
        android:lineSpacingExtra="5dp"
		android:layout_marginRight="16dp"
		android:textColor="@color/title_gray"
        android:layout_below="@+id/new_firmware"
        android:src="@drawable/separator" />

     <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_version_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/divider1"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:textSize="16sp"
        android:textColor="@color/title_gray"  
		android:padding ="16dp"
		android:text="@string/firmware_version_txt" 
		custom:fontAssetName="fonts/gillsanslight.ttf"/>

      <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/divider1"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:layout_alignLeft="@+id/firmware_releasedate"
        android:textSize="16sp"
        android:textColor="@color/title_gray"  
		android:padding ="16dp"
		android:text="@string/firmware_version" 
		android:visibility="gone"
		custom:fontAssetName="fonts/gillsanslight.ttf"/>


    <ImageView
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_marginTop="6dp"
		android:layout_marginLeft="16dp"
        android:lineSpacingExtra="5dp"
		android:layout_marginRight="16dp"
		android:textColor="@color/title_gray"
        android:layout_below="@+id/firmware_version_txt"
        android:src="@drawable/separator" />

      <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/releasedate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/divider2"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:textSize="16sp"
        android:textColor="@color/title_gray"  
		android:padding ="16dp"
		android:text="@string/releasedate_txt" 
		custom:fontAssetName="fonts/gillsanslight.ttf"/>

      <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_releasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/divider2"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
		android:textSize="16sp"
        android:textColor="@color/title_gray"  
		android:padding ="16dp"
		android:text="@string/firmware_releasedate" 
		android:visibility="gone"
		custom:fontAssetName="fonts/gillsanslight.ttf"/>

     <ImageView
        android:id="@+id/divider3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_marginTop="6dp"
		android:layout_marginLeft="16dp"
        android:lineSpacingExtra="5dp"
		android:layout_marginRight="16dp"
		android:textColor="@color/title_gray"
        android:layout_below="@+id/releasedate_txt"
        android:src="@drawable/separator" />

      <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/release_notes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/divider3"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:textSize="24sp"
        android:textColor="@color/philips_blue"  
		android:padding ="16dp"
		android:text="@string/release_notes_txt" 
		custom:fontAssetName="fonts/gillsanslight.ttf"/>

      <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/release_notes_txt"
        android:textSize="16sp"
        android:textColor="@color/title_gray"  
		android:layout_marginLeft ="16dp"
		android:text="@string/firmware_status" 
		custom:fontAssetName="fonts/gillsanslight.ttf"/>

     <Button
        android:id="@+id/btn_firmware_update"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_button_selector"
		android:layout_alignParentBottom="true"
    	android:layout_alignParentRight="true"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="16dp"
		android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>