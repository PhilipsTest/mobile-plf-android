<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/heading" />
	
    <ScrollView
        android:layout_below="@+id/head_include"
        android:id="@+id/help_documentation_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/app_air_quality_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/air_quality_explain"
                android:gravity="center_vertical"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/list_item_air_quality_explained"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_line_2x"
                android:contentDescription="@string/img_description" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/app_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/tutorials"
                android:gravity="center_vertical"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/subtitle_app_tutorial"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_line_2x"
                android:contentDescription="@string/img_description" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/faq"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/subtitle_FAQ"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/faq_ac4373"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/purifier_ac4373_icon"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/purifier_ac4373"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/faq_ac4375"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/purifier_ac4375_icon"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/purifier_ac4375"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_line_2x"
                android:contentDescription="@string/img_description" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/lbl_user_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/user_manual"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/subtitle_user_manual"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/user_manual_ac4373"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/purifier_ac4373_icon"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/purifier_ac4373"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/user_manual_ac4375"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/purifier_ac4375_icon"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/purifier_ac4375"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_line_2x"
                android:contentDescription="@string/img_description" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/qr_Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:drawableRight="@drawable/qr_code"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="85dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/subtitle_qr_code"
                android:textColor="@color/blue_list_item"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/help_doc_bg_color"
                android:orientation="vertical" >

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_philips_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="85dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:text="@string/subitle_philips_support"
                    android:textColor="@color/blue_title"
                    android:textSize="@dimen/title_text_size_small"
                    custom:fontAssetName="fonts/centralesansbook.ttf" />

                <RelativeLayout
                    android:id="@+id/layout_call_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <ImageView
                        android:id="@+id/call_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lbl_call_us"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/lbl_call_us"
                        android:contentDescription="@string/img_description"
                        android:src="@drawable/call_us_help" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/lbl_call_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/call_icon"
                        android:text="@string/subtitle_call_us"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_medium"
                        custom:fontAssetName="fonts/centralesanslight.ttf" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/phone_number_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/lbl_call_us"
                        android:layout_below="@+id/lbl_call_us"
                        android:background="@drawable/list_item_selector"
                        android:padding="4dp"
                        android:text="@string/contact_philips_support_phone_num"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_small"
                        custom:fontAssetName="fonts/centralesansmedium.ttf" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/phone_number_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_call_us"
                        android:layout_toRightOf="@+id/phone_number_one"
                        android:background="@drawable/list_item_selector"
                        android:padding="4dp"
                        android:text="@string/contact_philips_support_phone_num_2"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_small"
                        custom:fontAssetName="fonts/centralesansmedium.ttf" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <RelativeLayout
                    android:id="@+id/layout_we_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:gravity="center_vertical"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <ImageView
                        android:id="@+id/we_chat_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lbl_we_chat"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/lbl_we_chat"
                        android:contentDescription="@string/img_description"
                        android:src="@drawable/we_chat" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/lbl_we_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/we_chat_icon"
                        android:text="@string/subtitle_we_chat"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_medium"
                        custom:fontAssetName="fonts/centralesanslight.ttf" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/lbl_we_chat"
                        android:layout_below="@+id/lbl_we_chat"
                        android:text="@string/wechat_id"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_small"
                        custom:fontAssetName="fonts/centralesansmedium.ttf" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <RelativeLayout
                    android:id="@+id/layout_email_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:gravity="center_vertical"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lbl_email_us"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/lbl_email_us"
                        android:contentDescription="@string/img_description"
                        android:src="@drawable/email_help" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/lbl_email_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/email_icon"
                        android:text="@string/diagnostics"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_medium"
                        custom:fontAssetName="fonts/centralesanslight.ttf" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/lbl_email_us"
                        android:layout_below="@+id/lbl_email_us"
                        android:text="@string/contact_philips_support_email"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_small"
                        custom:fontAssetName="fonts/centralesansmedium.ttf" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <RelativeLayout
                    android:id="@+id/layout_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:gravity="center_vertical"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <ImageView
                        android:id="@+id/help_call_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lbl_support"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/lbl_support"
                        android:contentDescription="@string/img_description"
                        android:src="@drawable/help_section" />

                    <com.philips.cl.di.dev.pa.view.FontTextView
                        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                        android:id="@+id/lbl_support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/help_call_icon"
                        android:gravity="center_vertical"
                        android:text="@string/subtitle_help_section"
                        android:textColor="@color/blue_list_sub_item"
                        android:textSize="@dimen/text_size_medium"
                        custom:fontAssetName="fonts/centralesanslight.ttf" />
                </RelativeLayout>

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/help_contact_website_ac4373"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawableRight="@drawable/purifier_ac4373_icon"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/purifier_ac4373"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/help_contact_website_ac4375"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawableRight="@drawable/purifier_ac4375_icon"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="85dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/purifier_ac4375"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </LinearLayout>

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/opensource_lb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/list_item_selector"
                android:gravity="right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/subtitle_opensource_lib"
                android:textColor="@color/blue_list_item"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>
    </ScrollView>
    <View 
	    android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:background="@drawable/actionbar_shadow"
        android:layout_below="@+id/head_include"/>

</RelativeLayout>