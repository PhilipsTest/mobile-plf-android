<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rs_main_lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="16dp">

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/rs_daytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/rs_dayimg"
        android:text="@string/sunday"
        android:textColor="@color/title_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        custom:fontAssetName="fonts/gillsanslight.ttf" />
    
    <ImageView
        android:id="@+id/rs_dayimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:enabled="false"
        android:contentDescription="@string/img_description"
        android:src="@drawable/tick"/> 

</RelativeLayout>