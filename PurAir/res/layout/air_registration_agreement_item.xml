<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" 
    android:gravity="center_vertical">

    <ImageView
		android:id="@+id/iv_agreement_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/plus_blue" 
		android:contentDescription="@string/img_description"/>
    
	<com.philips.cl.di.dev.pa.view.FontTextView
		xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
		android:id="@+id/tv_agreement_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:textColor="@color/gray"
		android:textSize="18sp"
		custom:fontAssetName="fonts/gillsans.ttf"/>

</LinearLayout>