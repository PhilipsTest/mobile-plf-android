<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp" >

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_update_successful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:text="@string/firmware_update_successful"
        android:textColor="@color/philips_blue"
        android:textSize="24sp"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_update_successful_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firmware_update_successful"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:text="@string/firmware_update_successful_msg"
        android:textColor="@color/title_gray"
        android:textSize="16sp"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_update_successful_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firmware_update_successful_msg"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:text="@string/firmware_update_successful_msg2"
        android:textColor="@color/title_gray"
        android:textSize="16sp"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <Button
        android:id="@+id/btn_start_app"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firmware_update_successful_msg2"
        android:layout_marginTop="35dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/blue_button_selector"
        android:lineSpacingExtra="5dp"
        android:text="@string/start_app"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/firmware_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="16dp"
        android:text="@string/firmware_current_version"
        android:textColor="@color/title_gray"
        android:textSize="16sp"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

</RelativeLayout>