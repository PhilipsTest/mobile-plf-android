<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingBottom="15dp">
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsans.ttf"
        android:id="@+id/connection_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/connect"
        android:text="@string/connection_status"
        android:textSize="18sp" 
        android:textColor="@color/gray"/>

    <ImageView
        android:id="@+id/iv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connection_status_title"
        android:layout_below="@+id/connection_status_title" 
        android:layout_marginTop="15dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/wifi_icon_lost_connection_2x" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsans.ttf"
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_connection_status"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/connect"
        android:layout_toRightOf="@+id/iv_connection_status"
        android:text="@string/not_connected"
        android:textColor="@color/gray"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/connect"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_connection_status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/gray_button_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="@string/connect" 
        android:textSize="12sp"
        android:visibility="visible"/>

</RelativeLayout>