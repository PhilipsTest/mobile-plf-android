<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/connection_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/connection_status"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/iv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connection_status_title"
        android:layout_below="@+id/connection_status_title" 
        android:layout_marginTop="15dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/wifi_icon_lost_connection_2x" />

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_connection_status"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_connection_status"
        android:text="@string/not_connected" />

    <Button
        android:id="@+id/connect"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_connection_status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/gray_button_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:text="@string/connect" 
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_connection_status"
        android:layout_marginTop="14dp"
        android:src="@drawable/border_line_left_menu_2x"
        android:contentDescription="@string/img_description"
        android:scaleType="fitEnd" />

</RelativeLayout>