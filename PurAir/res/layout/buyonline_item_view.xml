<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/buyonline_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/philips_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/buyonline_item_typename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/buyonline_item_publishtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/buyonline_item_buy_tv"
            style="@style/btn_blue_text"
            android:text="立即购买"
            android:layout_gravity="left"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <com.philips.cl.di.dev.pa.buyonline.SquareImageView
        android:id="@+id/buyonline_item_siv"
        android:layout_width="80dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:height_weight="781"
        app:width_weight="400" />

</LinearLayout>