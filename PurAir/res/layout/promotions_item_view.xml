<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.philips.cl.di.dev.pa.buyonline.SquareImageView
         android:id="@+id/promotions_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:height_weight="311"
        app:width_weight="580" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <com.philips.cl.di.dev.pa.view.FontTextView xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa" custom:fontAssetName="fonts/centralesanslight.ttf" 
            android:id="@+id/promotions_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:textColor="#ff666666"
            android:textSize="14.0dip" />

        <com.philips.cl.di.dev.pa.view.FontTextView xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa" custom:fontAssetName="fonts/centralesanslight.ttf" 
            android:id="@+id/promotions_item_go_tv"
            style="@style/btn_blue_text"
            android:layout_gravity="center_vertical"
            android:text="去看看" />
    </LinearLayout>

</LinearLayout>