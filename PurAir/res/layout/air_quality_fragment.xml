<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/heading" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head_include" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="25dp" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/intro_lbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/air_quality_explained_intro"
                android:textColor="@color/contain_gray"
                android:textSize="@dimen/text_size_medium"
                custom:fontAssetName="fonts/centralesanslight.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/purifier_feature_lbl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="50dp"
                    android:layout_toLeftOf="@+id/purifier_img"
                    android:lineSpacingExtra="2dp"
                    android:paddingLeft="15dp"
                    android:text="@string/purifier_feature_lbl_1"
                    android:textColor="@color/blue_title"
                    android:textSize="@dimen/text_size_medium"
                    custom:fontAssetName="fonts/centralesansbook.ttf" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/purifier_feature_lbl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purifier_feature_lbl_1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/purifier_img"
                    android:lineSpacingExtra="2dp"
                    android:paddingLeft="15dp"
                    android:text="@string/purifier_feature_lbl_2"
                    android:textColor="@color/blue_title"
                    android:textSize="@dimen/text_size_medium"
                    custom:fontAssetName="fonts/centralesansbook.ttf" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/purifier_feature_lbl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purifier_feature_lbl_2"
                    android:layout_toLeftOf="@+id/purifier_img"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:text="@string/purifier_feature_lbl_3"
                    android:textColor="@color/blue_title"
                    android:textSize="@dimen/text_size_medium"
                    custom:fontAssetName="fonts/centralesansbook.ttf" />

                <ImageView
                    android:id="@+id/purifier_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/img_description"
                    android:src="@drawable/large_purifier" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_line_2x"
                android:contentDescription="@string/img_description" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_indoor_pollutant"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/list_item_selector"
                    android:drawableLeft="@drawable/indoor_pollutants"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_arrow_list_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/indoor_pollutants"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_vistashield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:drawableLeft="@drawable/vistashield"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_arrow_list_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/vistashield_ips_system"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_outdoor_colors_explained"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:drawableLeft="@drawable/outdoor_air_quality"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_arrow_list_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/outdoor_colors_explained"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_indoor_colors_explained"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:drawableLeft="@drawable/indoor_air_quality"
                    android:drawableRight="@drawable/right_arrow_list_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/indoor_colors_explained"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/lbl_guard_environment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:drawableLeft="@drawable/guard_environment"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_arrow_list_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/guards_environment"
                    android:textColor="@color/blue_list_item"
                    android:textSize="@dimen/text_size_small"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/seperator_line_2x"
                    android:contentDescription="@string/img_description" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/head_include"
        android:background="@drawable/actionbar_shadow" />

</RelativeLayout>