<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parent_container"
    android:orientation="vertical" >

    <include
        android:id="@+id/about_heading_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/heading" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/share_menu_1"
                style="@style/menu_item"
                android:background="@drawable/list_item_selector"
                android:clickable="true" >

                <ImageView
                    style="@style/sharemenu_item_icon"
                    android:src="@drawable/share_weixin_circle" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    style="@style/menu_item_text"
                    android:text="@string/wechat_moments"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </LinearLayout>

            <View style="@style/line_solid_horizontal" />

            <LinearLayout
                android:id="@+id/share_menu_2"
                style="@style/menu_item"
                android:background="@drawable/list_item_selector"
                android:clickable="true" >

                <ImageView
                    style="@style/sharemenu_item_icon"
                    android:src="@drawable/share_weinxin" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    style="@style/menu_item_text"
                    android:text="@string/wechat_friends"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </LinearLayout>

            <View style="@style/line_solid_horizontal" />

            <LinearLayout
                android:id="@+id/share_menu_3"
                style="@style/menu_item"
                android:background="@drawable/list_item_selector"
                android:clickable="true" >

                <ImageView
                    style="@style/sharemenu_item_icon"
                    android:src="@drawable/share_weibo" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    style="@style/menu_item_text"
                    android:text="@string/sina_weibo"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </LinearLayout>

            <View style="@style/line_solid_horizontal" />

            <LinearLayout
                android:id="@+id/share_menu_4"
                style="@style/menu_item"
                android:background="@drawable/list_item_selector"
                android:clickable="true" >

                <ImageView
                    style="@style/sharemenu_item_icon"
                    android:src="@drawable/share_email" />

                <com.philips.cl.di.dev.pa.view.FontTextView
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    style="@style/menu_item_text"
                    android:text="@string/mail"
                    custom:fontAssetName="fonts/centralesanslight.ttf" />
            </LinearLayout>

            <View style="@style/line_solid_horizontal" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>