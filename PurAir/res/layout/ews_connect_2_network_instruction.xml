<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp" >

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message3_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/blue_alpha_a"
            android:gravity="center"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ews_connect_2_your_network_message3_index"
            android:layout_toRightOf="@+id/ews_connect_2_your_network_message3_index"
            android:text="@string/connect_2_network_msg3"
            android:textColor="@color/philips_blue"
            android:textSize="16sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" >

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message4_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/blue_alpha_b"
            android:gravity="center"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ews_connect_2_your_network_message4_index"
            android:layout_toRightOf="@+id/ews_connect_2_your_network_message4_index"
            android:text="@string/connect_2_network_msg4"
            android:textColor="@color/philips_blue"
            android:textSize="16sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message5_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/blue_alpha_c"
            android:gravity="center"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView android:lineSpacingExtra="2dp"
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_connect_2_your_network_message5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ews_connect_2_your_network_message5_index"
            android:layout_toRightOf="@+id/ews_connect_2_your_network_message5_index"
            android:text="@string/connect_2_network_msg5"
            android:textColor="@color/philips_blue"
            android:textSize="16sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/wifi_setting_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_description"
        android:paddingTop="24dp"
        android:src="@drawable/wifi_setting" />

</LinearLayout>