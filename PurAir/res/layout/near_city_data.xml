<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:background="@color/white" >

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/near_city_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/blue_list_item"
        android:textSize="@dimen/text_size_small"
        custom:fontAssetName="fonts/centralesanslight.ttf" />
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/near_city_data_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rounder_corner"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

</LinearLayout>