<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ToggleButton
        android:id="@+id/btn_current_location"
        style="@style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_lm_outdoor_locations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_current_location"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/btn_current_location"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/title_text_size_medium"
        android:text="@string/current_location" 
        android:textColor="@color/subtitle_gray"/>

    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/outdoor_locations_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_lm_outdoor_locations_title"
        android:layout_below="@+id/btn_current_location" >
    </com.mobeta.android.dslv.DragSortListView>

</RelativeLayout>