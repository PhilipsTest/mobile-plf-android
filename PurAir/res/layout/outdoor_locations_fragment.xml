<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:paddingTop="8dp" >

    <LinearLayout
        android:id="@+id/current_location_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/tv_lm_outdoor_locations_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:text="@string/current_location"
            android:textColor="@color/subtitle_gray"
            android:textSize="@dimen/title_text_size_medium"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <ProgressBar
            android:id="@+id/outdoor_current_location_progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:indeterminateDrawable="@drawable/progress_circle"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/btn_current_location"
            style="@style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_location_lyt"
        >

        <com.philips.cl.di.dev.pa.view.AlphabeticalListView
            android:id="@+id/letterlistview"
            android:layout_width="35dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/dictionary_background_color"
            android:visibility="gone" />

        <ListView
            android:id="@+id/outdoor_locations_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@id/letterlistview"
            android:background="@color/white"
            android:cacheColorHint="@color/white"
            android:divider="@drawable/seperator_line_2x"
        	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:dividerHeight="0dp" >
        </ListView>
        </RelativeLayout>
</RelativeLayout>