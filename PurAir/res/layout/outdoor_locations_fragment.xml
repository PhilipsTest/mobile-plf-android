<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/tv_lm_outdoor_locations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="17dp"
        android:text="Current Location" />

    <TextView
        android:id="@+id/tv_lm_outdoor_locations_list_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_lm_outdoor_locations_title"
        android:layout_below="@+id/tv_lm_outdoor_locations_title"
        android:layout_marginTop="20dp"
        android:text="List of possible locations" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_lm_outdoor_locations_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="Swith on/off" />

</RelativeLayout>