<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/ews_nav_bar_2x">
    
    <ImageView 
        android:id="@+id/left_menu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/img_description"
        android:clickable="true"
        android:background="@drawable/clickable_image_bg_selector"
        android:src="@drawable/left_slidermenu_icon_2x" />
    
    <ImageView 
        android:id="@+id/back_to_home_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:contentDescription="@string/img_description"
        android:clickable="true"
        android:visibility="invisible"
        android:background="@drawable/clickable_image_bg_selector"
        android:src="@drawable/lef_arrow_blue_2x" />
    
    
	<com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
       	android:id="@+id/action_bar_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_toLeftOf="@+id/right_menu_img"
        android:layout_toRightOf="@+id/left_menu_img"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/dashboard_title"
        android:textSize="24sp"
        custom:fontAssetName="fonts/gillsanslight.ttf"
        android:textColor="@color/philips_blue" />
	
	<ImageView 
        android:id="@+id/right_menu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/img_description"
        android:clickable="true"
        android:background="@drawable/clickable_image_bg_selector"
        android:src="@drawable/right_bar_icon_blue_2x" />
	
	<ImageView 
        android:id="@+id/add_location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/img_description"
        android:clickable="true"
        android:visibility="invisible"
        android:background="@drawable/clickable_image_bg_selector"
        android:src="@drawable/plus_blue" />
	
</RelativeLayout>