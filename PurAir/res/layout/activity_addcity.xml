<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/rlTopNavigation"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/ivAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/title" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/settings" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTopNavigation"
        android:src="@drawable/horizontal_line" />

    <RelativeLayout
        android:id="@+id/rlAddCity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLine" >

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCity"
            android:layout_centerHorizontal="true"
            android:entries="@array/cities" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spCity"
            android:layout_centerHorizontal="true"
            android:text="Province"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spProvince"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProvince"
            android:layout_centerHorizontal="true"
            android:entries="@array/countries" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spProvince"
            android:layout_centerHorizontal="true"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <DatePicker
            android:id="@+id/dpDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_centerHorizontal="true" >
        </DatePicker>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvAQI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpDate"
            android:layout_centerHorizontal="true"
            android:text="Air Quality Index"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/etAQIValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAQI"
            android:maxLength="3"
            android:layout_centerHorizontal="true"
            android:inputType="number" >
        </EditText>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAQIValue"
            android:layout_centerHorizontal="true"
            android:text="Submit" />
    </RelativeLayout>

</RelativeLayout>