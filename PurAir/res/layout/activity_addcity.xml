<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/rlAddCity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCity"
            android:layout_centerHorizontal="true"
            android:entries="@array/cities" />

        <TextView
            android:id="@+id/tvProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spCity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Province"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spProvince"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProvince"
            android:layout_centerHorizontal="true"
            android:entries="@array/countries" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spProvince"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <DatePicker
            android:id="@+id/dpDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_centerHorizontal="true" >
        </DatePicker>

        <TextView
            android:id="@+id/tvAQI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Air Quality Index"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/etAQIValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAQI"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:maxLength="3" >
        </EditText>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAQIValue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit" />
    </RelativeLayout>

</RelativeLayout>