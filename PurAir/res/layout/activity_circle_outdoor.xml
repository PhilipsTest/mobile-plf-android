<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleX=".45"
    android:scaleY=".45" >

    <ImageView
        android:id="@+id/ivIndoorFullCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/indoorcircle" />

    <com.philips.cl.di.dev.pa.screens.customviews.CustomTextView
        android:id="@+id/tvIndoorAQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="400"
        android:textColor="@android:color/white"
        android:textSize="100sp" />

</FrameLayout>