<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleX=".45"
    android:scaleY=".45" >

    <ImageView
        android:id="@+id/ivOutdoorFullCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/indoorcircle" />
    <RelativeLayout  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

    <com.philips.cl.di.dev.pa.screens.customviews.CustomTextView
        android:id="@+id/tvOutdoorAQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="400"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="100sp" />
     <com.philips.cl.di.dev.pa.screens.customviews.CustomTextView
        android:id="@+id/tvOutdoorPM"
        android:layout_below="@+id/tvOutdoorAQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="PM2.5"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
     </RelativeLayout>

</FrameLayout>