<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >
        
        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/step2_off_3"
            android:textColor="@color/title_gray"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step2_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step2_title"
            android:text="@string/step2_instruction"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/philips_blue"
            android:textSize="21sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        
        <ImageView
            android:id="@+id/ews_step2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ews_step2_instruction"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/img_description"
            android:layout_marginTop="32dp"
            android:src="@drawable/ews_help_bg4_2x" />
        
        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step2_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_alignParentLeft="true"
             android:layout_below="@+id/ews_step2_img"
            android:text="@string/step2_msg1"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/contain_gray"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />
        
        <com.philips.cl.di.dev.pa.customviews.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/ews_step2_message2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step2_message1"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/step2_msg2"
            android:textColor="@color/contain_gray"
            android:textSize="16sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ews_step2_message2"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ews_step2_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/gray_button_selector"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ews_step2_yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_selector"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        
        
    </RelativeLayout>

</ScrollView>