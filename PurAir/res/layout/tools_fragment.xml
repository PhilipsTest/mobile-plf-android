<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" 
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/tv_lm_tools_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="IPAddress" />

    <EditText
        android:id="@+id/tvipaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lm_tools_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_lm_tools_title"
        android:layout_below="@+id/tvipaddress"
        android:layout_marginTop="33dp"
        android:text="Submit" />
    
    <TextView
        android:id="@+id/tv_cpp_title_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:text="Please enter Registration ID" />

    <EditText
        android:id="@+id/tv_cpp_regId_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cpp_title_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:maxLength="5"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/get_cpp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_cpp_title_label"
        android:layout_below="@+id/tv_cpp_regId_txt"
        android:layout_marginTop="33dp"
        android:text="Sign On" />
    
    <TextView android:id="@+id/tv_cpp_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/tv_cpp_title_label"
        android:layout_below="@+id/tv_cpp_regId_txt"
        android:layout_marginTop="33dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_diagnostics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_cpp_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/diagnostics" />
    
</RelativeLayout>