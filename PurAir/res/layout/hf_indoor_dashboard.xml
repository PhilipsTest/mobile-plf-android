<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hf_indoor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_indoor_bg_2x" >
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_indoor_fan_mode_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/fan_icon_white_2x"
        android:drawablePadding="4dp"
        android:text="@string/mode"
        android:textSize="14sp"
        custom:fontAssetName="fonts/gillsanslight.ttf"
        android:textColor="@color/white" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsanslight.ttf"
        android:id="@+id/hf_indoor_filter_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/filter_icon_2x"
        android:text="@string/filters"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsanslight.ttf"
        android:id="@+id/hf_indoor_purifier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="21sp"
        android:textColor="@color/white" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsans.ttf"
        android:id="@+id/hf_indoor_fan_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hf_indoor_filter_lb"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        custom:fontAssetName="fonts/gillsans.ttf"
        android:id="@+id/hf_indoor_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hf_indoor_fan_mode_lb"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/hf_indoor_circle_layt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_indoor_filter"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/hf_indoor_circle_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/all_colour_circle_2x" />

        <ImageView
            android:id="@+id/hf_indoor_circle_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/blue_circle_with_arrow_2x" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        	custom:fontAssetName="fonts/gillsans.ttf"
        	android:textSize="22sp"
            android:id="@+id/hf_indoor_aqi_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
       	custom:fontAssetName="fonts/gillsans.ttf"
        android:textSize="11sp"
        android:id="@+id/hf_indoor_aqi_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hf_indoor_circle_layt"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />
    
    <LinearLayout
        android:id="@+id/firmware_update_available"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#FFF"
        android:padding="0.5dp"
        android:visibility="gone" >

       <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa" 
            android:id="@+id/lbl_firmware_update_available"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/philips_blue"
            android:gravity="left|center_vertical"           
            android:paddingLeft="15dp" 
            android:text="@string/lbl_firmware_update_available"
            android:textColor="#FFF" 
            android:textSize="18sp"
            custom:fontAssetName="fonts/gillsanslight.ttf" />

        <ImageButton
            android:id="@+id/btn_firmware_update_available"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/philips_blue"
            android:contentDescription="@string/img_description"
            android:src="@drawable/help_close" />
    </LinearLayout>

</RelativeLayout>