<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hf_indoor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_indoor_bg_2x" >

    <RelativeLayout
        android:id="@+id/hf_indoor_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.philips.cl.di.dev.pa.view.FontButton
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/controls"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="2dp"
            android:minWidth="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/img_description"
            android:text="@string/controls"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:background="@drawable/button_border"
            android:textSize="@dimen/text_size_medium_dp"
            custom:fontAssetName="fonts/centralesansxbold.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/hf_indoor_purifier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/filters"
            android:layout_toRightOf="@+id/controls"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size_medium_dp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />
        
         <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/hf_indoor_purifier_eui64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size_medium_dp"
            custom:fontAssetName="fonts/centralesanslight.ttf"
            android:visibility="invisible" />

        <com.philips.cl.di.dev.pa.view.FontButton
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/filters"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="30dp"
            android:minWidth="80dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/img_description"
            android:textColor="@color/white"
            android:text="@string/filters"
            android:visibility="invisible"
            android:background="@drawable/button_border"
            android:textSize="@dimen/text_size_medium_dp"
            android:layout_alignParentRight="true"
            custom:fontAssetName="fonts/centralesansxbold.ttf" />

        <ImageButton
            android:id="@+id/connecting_info_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/image_btn_bg"
            android:contentDescription="@string/img_description"
            android:src="@drawable/info"
            android:visibility="visible"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hf_indoor_circle_layt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_indoor_control_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" >

        <ImageView
            android:id="@+id/hf_indoor_circle_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/all_colour_circle_2x"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/hf_indoor_circle_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/grey_circle_2x" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/hf_indoor_aqi_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="@string/not_connected"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_dp"
            custom:fontAssetName="fonts/centralesansmedium.ttf" />
    </RelativeLayout>

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_indoor_aqi_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/hf_indoor_circle_layt"
        android:layout_marginRight="32dp"
         android:layout_marginLeft="16dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <RelativeLayout
        android:id="@+id/firmware_update_available"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/philips_blue"
        android:minHeight="30dp"
        android:padding="5dp"
        android:visibility="gone" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/lbl_firmware_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="@string/i"
            android:textColor="@color/philips_blue"
            android:textSize="24sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/lbl_firmware_update_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/philips_blue"
            android:text="@string/lbl_firmware_update_available"
            android:textColor="#FFF"
            android:textSize="18sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <ProgressBar
            android:id="@+id/firmware_update_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="6dp"
            android:layout_below="@+id/lbl_firmware_update_available"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:progressDrawable="@drawable/download_progress_bar" />
    </RelativeLayout>

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_indoor_dashboard_cover_missing_alart_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/philips_blue"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:minHeight="30dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large_dp"
        android:visibility="gone"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

</RelativeLayout>