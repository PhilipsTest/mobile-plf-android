<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:clipChildren="false"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_updated_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true" 
        android:text="@string/updated" />
    
    <TextView 
        android:id="@+id/tv_updated_at_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:lineSpacingExtra="3dp"
        android:layout_below="@id/tv_updated_title"
        android:paddingLeft="10dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/city_shanghai" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location_city"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:text="@string/city_location" />
    
    <ImageView
        android:id="@+id/iv_outdoor_weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/star_icon_2x" />

    <TextView
        android:id="@+id/tv_outdoor_weather_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_outdoor_weather_image"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="" />

</RelativeLayout>