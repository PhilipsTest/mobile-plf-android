<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/hf_indoor_dashboard_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_indoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="2dp" />

        <RelativeLayout
            android:id="@+id/hf_indoor_dashboard_rl_no_purifier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_purifier_indoor"
            android:visibility="visible" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="@string/healthy_air_always"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.philips.cl.di.dev.pa.view.FontButton
                    xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                    android:id="@+id/hf_indoor_dashboard_btn_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/philips_blue_btn"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/connect_your_purifier"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    custom:fontAssetName="fonts/gillsanslight.ttf" />

                <ImageView
                    android:id="@+id/hf_indoor_dashboard_btn_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/img_description"
                    android:src="@drawable/air_intro_play_2x" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/hf_outdoor_dashboard_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_outdoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="2dp"/>

        <LinearLayout
            android:id="@+id/take_tour_prompt_drawer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:minHeight="30dp"
            android:padding="0.5dp"
            android:visibility="gone" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                android:id="@+id/lbl_take_tour"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/philips_blue"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="@string/prompt_take_tour"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_close_tour_layout"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/philips_blue"
                android:contentDescription="@string/img_description"
                android:src="@drawable/help_close" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>