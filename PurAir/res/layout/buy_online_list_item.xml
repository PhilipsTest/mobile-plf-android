<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:paddingBottom="30dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp" >

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_buy_online"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_description"
        android:src="@drawable/purifier" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/lbl_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/product_img"
        android:textColor="@color/subtitle_gray"
        android:textSize="@dimen/title_text_size_medium"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/lbl_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_product_name"
        android:layout_alignRight="@+id/lbl_product_name"
        android:layout_below="@+id/lbl_product_name"
        android:textColor="@color/subtitle_gray"
        android:textSize="21sp"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/lbl_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_product_price"
        android:layout_alignRight="@+id/lbl_product_price"
        android:layout_below="@+id/lbl_product_price"
        android:layout_marginTop="20dp"
        android:textColor="@color/subtitle_gray"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontButton
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/btn_buy_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_availability"
        android:layout_below="@+id/lbl_availability"
        android:layout_marginTop="19dp"
        android:background="@drawable/blue_button_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/buy_online_lbl"
        android:textColor="#F9F9F9"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FilterStatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/seekbar_filter"
        android:layout_width="236dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/lbl_availability"
        android:layout_below="@+id/btn_buy_online"
        android:layout_marginTop="25dp"
        android:background="@drawable/process_light_black_bar" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/txt_filter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_availability"
        android:layout_below="@+id/seekbar_filter"
        android:text=""
        android:textColor="@color/subtitle_gray"
        custom:fontAssetName="fonts/gillsanslight.ttf" />

</RelativeLayout>