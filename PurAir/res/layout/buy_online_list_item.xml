<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#FFF"
    android:padding="16dp">
    
    <ImageView
        android:id="@+id/product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_buy_online"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_description"
        android:src="@drawable/purifier" />

    <TextView
        android:id="@+id/lbl_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/product_img"
        android:textSize="21sp"
        android:textColor="@color/dimgray"/>

    <TextView
        android:id="@+id/lbl_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_product_name"
        android:layout_alignRight="@+id/lbl_product_name"
        android:layout_below="@+id/lbl_product_name"
        android:textSize="21sp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/lbl_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_product_price"
        android:layout_alignRight="@+id/lbl_product_price"
        android:layout_below="@+id/lbl_product_price"
        android:layout_marginTop="20dp"
        android:textColor="@color/dimgray"/>

    <Button
        android:id="@+id/btn_buy_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_availability"
        android:layout_below="@+id/lbl_availability"
        android:layout_marginTop="19dp"
        android:text="@string/buy_online_lbl" 
        android:textColor="#F9F9F9"
        android:gravity="center"
        android:background="@drawable/button_bg_gray"
        android:focusable="false"
        android:focusableInTouchMode="false"/>    

</RelativeLayout>
