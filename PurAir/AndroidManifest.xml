<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philips.cl.di.dev.pa"
    android:versionCode="003"
    android:versionName="SmartAir_0.0.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/purair_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".pureairui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.philips.cl.di.dev.pa.screens.SettingsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.philips.cl.di.dev.pa.screens.FilterDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.philips.cl.di.dev.pa.screens.TrendsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.philips.cl.di.dev.pa.screens.AirTutorialActivity"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>