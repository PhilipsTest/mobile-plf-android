<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hf_outdoor_root_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/air_dashboard_outdoor_generic_city_50" >

    <LinearLayout
        android:id="@+id/top_llayt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/hf_outdoor_time_update_lb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/updated"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_very_small_dp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hf_my_loc_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:contentDescription="@string/img_description"
                android:src="@drawable/my_loc_arrow"
                android:visibility="gone" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/hf_outdoor_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size_medium_dp"
                android:text="@string/dash_dash"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="3"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hf_outdoor_weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_description" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/hf_outdoor_weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_dash"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium_dp"
                custom:fontAssetName="fonts/centralesanslight.ttf" />
        </LinearLayout>
    </LinearLayout>

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_city_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_llayt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size_large_dp"
        android:visibility="invisible"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_time_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_llayt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="@string/dash_dash"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        custom:fontAssetName="fonts/centralesansbold.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_llayt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_very_small_dp"
        custom:fontAssetName="fonts/centralesansbold.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_temprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top_llayt"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        android:text="@string/dash_dash"
        custom:fontAssetName="fonts/centralesansbold.ttf" />

    <RelativeLayout
        android:id="@+id/hf_outdoor_circle_layt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_outdoor_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" >

        <ImageView
            android:id="@+id/hf_outdoor_circle_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/outdoor_meter"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/hf_outdoor_circle_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_description"
            android:src="@drawable/grey_circle_small" />

        <com.philips.cl.di.dev.pa.view.FontTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/hf_outdoor_aqi_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="2dp"
            android:text="@string/no_data"
            android:textColor="@color/white"
            android:textSize="@dimen/outdoor_circle_text_size_dp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <LinearLayout
            android:id="@+id/pm_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hf_outdoor_circle_pointer"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/hf_outdoor_pm_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pm_2.5"
                android:textColor="@color/transparent_white"
                android:textSize="@dimen/text_size_very_small_dp"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />

            <com.philips.cl.di.dev.pa.view.FontTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
                android:id="@+id/hf_outdoor_pm_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small_dp"
                custom:fontAssetName="fonts/centralesansmedium.ttf" />
        </LinearLayout>
    </RelativeLayout>

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_aqi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_outdoor_circle_layt"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size_large_dp"
        custom:fontAssetName="fonts/centralesansbold.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_aqi_summary1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_outdoor_aqi_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/hf_outdoor_aqi_summary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hf_outdoor_aqi_summary1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_dp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

</RelativeLayout>