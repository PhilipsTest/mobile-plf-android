<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp" >

    <com.philips.cl.di.dev.pa.view.FontTextView 
        android:lineSpacingExtra="2dp"
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_cancel_wifi_setup_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/cancel_wifi_setup_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/philips_blue"
        android:textSize="24sp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <com.philips.cl.di.dev.pa.view.FontTextView 
        android:lineSpacingExtra="2dp"
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/tv_cancel_wifi_setup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cancel_wifi_setup_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/cancel_wifi_setup_message"
        android:textColor="@color/title_gray"
        android:textSize="16sp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cancel_wifi_setup_message"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="16dp" >

        <com.philips.cl.di.dev.pa.view.FontButton
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/btn_cancel_wifi_no"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_button_selector"
            android:text="@string/no"
            android:textColor="@color/white"
            android:textSize="14sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />

        <com.philips.cl.di.dev.pa.view.FontButton
            xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
            android:id="@+id/btn_cancel_wifi_yes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_selector"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:textSize="14sp"
            custom:fontAssetName="fonts/centralesanslight.ttf" />
    </LinearLayout>

</RelativeLayout>