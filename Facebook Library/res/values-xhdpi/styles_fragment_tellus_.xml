<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
    <!-- HDPI Screens -->
    <style name="tellus_app_review_phone">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
    </style>

    <style name="tellus_app_sign_philips">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    
    
    <style name="tellus_app_playstorereview_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    
    <style name="tellus_app_philipsreview_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="tellus_app_playstorereview_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>

</resources>