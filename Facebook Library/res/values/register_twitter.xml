<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="twitterEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/prod_reg_btn_height</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/twitter_edit_text</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>
    
    <style name="twitterMainHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>
    
    <style name="twitterFromMainHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>
    
    
    <style name="twitteroptouttext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/text_sub_header_color</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>
    
</resources>
