<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/odDayWeatherForcast"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_margin="8dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        custom:fontAssetName="fonts/gillsans.ttf" />
    
    <ImageView
        android:id="@+id/odWeatherForcastImg"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_description"
        android:src="@drawable/wifi_connected" />
    
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/odWeatherForcastMaxTemp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        custom:fontAssetName="fonts/gillsans.ttf" />

    
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/odWeatherForcastMinTemp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/lightgrey"
        android:textSize="14sp"
        android:textStyle="bold"
        custom:fontAssetName="fonts/gillsans.ttf" />
    
    
    
    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/odWeatherForcastWind"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        custom:fontAssetName="fonts/gillsans.ttf" />
    
    <ImageView
        android:id="@+id/odWeatherForcastWindImg"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_description"
        android:src="@drawable/wifi_connected" />

</LinearLayout>
