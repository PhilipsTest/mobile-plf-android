<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <com.philips.cl.di.dev.pa.view.FontTextView
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/sch_edit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:background="@drawable/save"
        android:gravity="center"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="16sp" 
        custom:fontAssetName="fonts/gillsanslight.ttf" />

    <ImageView
        android:id="@+id/sch_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"        
        android:contentDescription="@string/img_description"
        android:scaleType="centerCrop"
        android:src="@drawable/plus_blue"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/event_scheduler_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:divider="#E4E4E4"
        android:layout_below="@+id/sch_edit" >
    </ListView>

</RelativeLayout>