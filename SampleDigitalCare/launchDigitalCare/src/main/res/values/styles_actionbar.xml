<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="sampleactionbarIconHomeImageView" parent="actionbar_hamburger_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingLeft">@dimen/actionbar_icon_padding_left</item>
    </style>

    <style name="sampleactionbarIconArrowImageView" parent="actionbar_back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingLeft">@dimen/actionbar_icon_padding_left</item>
    </style>

    <style name="sampleactionbarFontTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/actionbar_title_support</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:layout_toRightOf">@+id/back_to_home_img</item>
    </style>

</resources>