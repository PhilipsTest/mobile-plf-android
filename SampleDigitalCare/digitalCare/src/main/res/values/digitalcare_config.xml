<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="UnusedResources">

    <!-- UiTheme Start -->


    <!-- Activity -->
    <color name="activity_background_color">#FFFFFF</color>

    <!-- Actionbar related -->
    <color name="actionbar_background_start_color">#003478</color>
    <color name="actionbar_background_end_color">#0066A1</color>
    <color name="actionbar_title_color">#FFFFFF</color>

    <!-- Action bar back arrow button -->
    <style name="actionbar_back_button">
        <item name="android:src">@drawable/actionbar_back_arrow_white</item>
    </style>

    <!-- Action bar hamburger menu icon -->
    <style name="actionbar_hamburger_menu">
        <item name="android:src">@drawable/actionbar_home_icon_white_1x</item>
    </style>

    <bool name="actionbar_title_required">true</bool>

    <!-- Text color -->
    <color name="text_header_color">@color/button_background</color>
    <color name="text_sub_header_color">#2E5F94</color>

    <!-- Standard Button. Common buttons used through out the component -->
    <color name="button_text_color">@color/actionbar_title_color</color>
    <color name="button_background">#003478</color>
    <color name="button_background_pressed">#005A8B</color>

    <!-- Register Button -->
    <color name="button_register_background">#005AAB</color>
    <color name="button_register_background_pressed">#005AAB</color>

    <!-- UiTheme End -->

    <!--
        &lt;!&ndash; List of default features supported by library, verticals can add/delete/modify this list by adding localised resource key name which contains title text, please follow naming conventions &ndash;&gt; -->
    <array name="main_menu_title">
        <item>@string/view_product_details</item>
        <item>@string/view_faq</item>
        <item>@string/contact_us</item>
        <item>@string/find_philips_near_you</item>
        <item>@string/feedback</item>
        <item>@string/sign_into_my_philips</item>
    </array>

    <!--
        &lt;!&ndash; List of main menu image names, please follow naming conventions &ndash;&gt;
    -->
    <array name="main_menu_resources">
        <item>@drawable/view_product_details</item>
        <item>@drawable/view_faq</item>
        <item>@drawable/contact_us</item>
        <item>@drawable/find_philips_near_you</item>
        <item>@drawable/feedback</item>
        <item>@drawable/philips_logo</item>
    </array>

    <!-- List of product menu localised resource keys, please follow naming conventions -->
    <string-array name="product_menu_title" translatable="false">
        <item>@string/product_open_manual</item>
        <item>@string/product_download_manual</item>
        <item>@string/product_information</item>
    </string-array>

    <!-- List of social service providers localised resource keys, please follow naming conventions -->
    <string-array name="social_service_provider_menu_title" translatable="false">
        <item>@string/twitter</item>
        <item>@string/facebook</item>
    </string-array>

    <!-- List of social service providers image names, please follow naming conventions -->
    <string-array name="social_service_provider_menu_resources" translatable="false">
        <item>@drawable/dc_twitter</item>
        <item>@drawable/dc_facebook</item>
    </string-array>

    <!-- Facebook product support page -->
    <string name="facebook_product_page" translatable="false">PhilipsHomeLiving</string>
    <string name="facebook_product_pageID" translatable="false">177538492375159</string>

    <!-- Twitter product support page -->
    <string name="twitter_page" translatable="false">PhilipsCare</string>

    <!-- Do you want Live Chat Option -->
    <bool name="live_chat_required">false</bool>

    <!-- email id for philips support -->
    <string name="support_email_id" translatable="false">philipscare@philips.com</string>

</resources>