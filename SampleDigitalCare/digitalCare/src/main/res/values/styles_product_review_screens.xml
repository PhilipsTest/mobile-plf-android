<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="productreview_header_textone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
        <item name="android:text">Before we begin, please read our guidlines</item>
    </style>


    <style name="productreview_header_texttwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
        <item name="android:text">We want to publish your review, so please follow these guidlines
        </item>
    </style>


    <style name="productreview_expandable_contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>


    <!-- Your Review Fragment-->
    <style name="productyoureview_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_largest</item>
        <item name="android:text">Is everything correct?</item>
    </style>


    <style name="your_product_review_rating_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>

    <style name="your_product_review_rating_ratingbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/your_product_review_rating_header_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="your_product_review_userdefined_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>


</resources>