<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/product_review_thankyou_Parent_container_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/activity_background_color"
            android:fillViewport="false">


            <RelativeLayout
                android:id="@+id/product_review_thankyou_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/your_productreview_header"
                    style="@style/your_product_review_thankyou_header">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            </RelativeLayout>


            <View
                android:id="@+id/your_product_review_thankyou_devider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/product_review_thankyou_header"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="#cccccc" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/your_product_review_thankyou_description"
                style="@style/your_product_review_thankyou_description"
                android:layout_below="@+id/your_product_review_thankyou_devider"
                android:text="Thank you for taking the time to write this review! We will review it and let you knwo once it's online!" />


            <RelativeLayout
                android:id="@+id/your_product_review_thankyou_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/your_product_review_thankyou_button"
                    style="@style/fontButton"
                    android:text="Back to support" />
            </RelativeLayout>

            <View
                android:id="@+id/your_product_review_thankyou_devider_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignTop="@+id/your_product_review_thankyou_button_container"
                android:layout_marginBottom="25dp"
                android:background="#cccccc" />


        </RelativeLayout>
    </LinearLayout>


    <!-- Phone Portrait-->
    <LinearLayout
        android:id="@+id/product_review_thankyou_Parent_container_phoneportriat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/activity_background_color"
            android:fillViewport="false">


            <RelativeLayout
                android:id="@+id/product_review_thankyou_header_phoneportriat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin">


                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/your_productreview_header_phoneportriat"
                    style="@style/your_product_review_thankyou_header">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            </RelativeLayout>


            <View
                android:id="@+id/your_product_review_thankyou_devider_phoneportriat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/product_review_thankyou_header_phoneportriat"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="#cccccc" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/your_product_review_thankyou_description_phoneportriat"
                style="@style/your_product_review_thankyou_description"
                android:layout_below="@+id/your_product_review_thankyou_devider_phoneportriat"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin"
                android:text="Thank you for taking the time to write this review! We will review it and let you knwo once it's online!" />


            <RelativeLayout
                android:id="@+id/your_product_review_thankyou_button_container_phoneportriat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/your_product_review_thankyou_button_phoneportriat"
                    style="@style/fontButton"
                    android:text="Back to support"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
            </RelativeLayout>

            <View
                android:id="@+id/your_product_review_thankyou_devider_bottom_phoneportriat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignTop="@+id/your_product_review_thankyou_button_container_phoneportriat"
                android:layout_marginBottom="25dp"
                android:background="#cccccc" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>