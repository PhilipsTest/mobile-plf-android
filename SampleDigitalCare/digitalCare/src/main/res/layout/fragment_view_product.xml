<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_background_color" >

    <LinearLayout
        android:id="@+id/products_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/toplayout"
            style="@style/viewProductDetails_TopContainer"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" >

            <ImageView
                android:id="@+id/productimage"
                android:visibility="gone"
                android:layout_width="110dp"
                android:layout_height="120dp"
                style="@style/viewProductDetails_ProdImage"
                 />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/name"
                style="@style/viewProductDetails_Product_Header"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/variant"
                style="@style/viewProductDetails_Product_Variant"
                android:layout_toRightOf="@id/productimage"
                android:layout_below="@id/name"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf"/>

            <ImageView
                android:id="@+id/productImageTablet"
                android:layout_below="@id/variant"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="130dp"
                style="@style/viewProductDetails_ProdImage"
                />
        </RelativeLayout>

        <View
            android:id="@+id/topline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/prodbuttonsParent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:orientation="vertical">

        </LinearLayout>

        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
            android:id="@+id/productVideoText"
            style="@style/viewProductDetails_Product_Header"
            android:text="@string/product_view_videos"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoScrollView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/videoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>