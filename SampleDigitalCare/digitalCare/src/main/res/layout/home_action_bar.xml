<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar_lyt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@drawable/actionbar_shape_gradient_bg">

    <RelativeLayout
        android:id="@+id/action_bar_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/home_icon"
            style="@style/actionbarIconHomeImageView"
            android:contentDescription="@string/img_description"/>

        <ImageView
            android:id="@+id/back_to_home_img"
            style="@style/actionbarIconArrowImageView"
            android:contentDescription="@string/img_description" />
    </RelativeLayout>

    <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
        android:id="@+id/action_bar_title"
        style="@style/actionbarFontTextView"
        android:layout_toRightOf="@+id/action_bar_icon_parent"
        custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Light.otf" />
</RelativeLayout>
