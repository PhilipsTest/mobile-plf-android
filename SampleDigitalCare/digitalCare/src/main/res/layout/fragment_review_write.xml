<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_background_color"
    android:fillViewport="false">

    <!-- Write Product Review custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" -->
    <LinearLayout
        android:id="@+id/write_product_review_include_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_background_color"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/review_write_rate_productimage"
                style="@style/write_product_review_ProdImage"
                android:contentDescription="@string/product_name"
                android:src="@drawable/viewproduct_productimage" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/review_write_rate_name"
                style="@style/write_product_review_Product_Header"
                android:layout_alignTop="@id/review_write_rate_productimage"
                android:text="Norelco Shaver 9700 Series 9000 wet and dry electric shaver"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/review_write_rate_variant"
                style="@style/write_product_review_Product_Variant"
                android:text="S9721"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </RelativeLayout>


        <!-- Productname descriptions-->


        <LinearLayout
            android:id="@+id/review_write_rate_product_ratingview_verticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                android:id="@+id/review_write_rate_product_header"
                style="@style/write_product_review_header_styles"
                android:text="@string/bazzarvoice_productreview_writescreen_ratethisproduct_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

            </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            <RatingBar
                android:id="@+id/review_write_rate_product_ratingBar"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_write_rate_product_ratingview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">


            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                android:id="@+id/review_write_rate_product_header_horizontal"
                style="@style/write_product_review_header_styles"
                android:layout_width="160dp"
                android:text="@string/bazzarvoice_productreview_writescreen_ratethisproduct_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

            </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            <RatingBar
                android:id="@+id/review_write_rate_product_ratingBar_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fitsSystemWindows="true" />
        </LinearLayout>


        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

            android:id="@+id/review_write_rate_product_header"
            style="@style/write_product_review_header_styles"
            android:text="@string/bazzarvoice_productreview_writescreen_yourreview_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <EditText
            android:id="@+id/review_write_rate_product_header_summary"
            style="@style/write_product_review_edittext"
            android:layout_marginTop="10dp"
            android:hint="@string/bazzarvoice_productreview_writescreen_Summary_hint"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/review_write_rate_product_header_description"
                style="@style/write_product_review_edittext"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:hint="@string/bazzarvoice_productreview_writescreen_descriptionhint"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:orientation="horizontal">

            </LinearLayout>

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/write_textcount_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/write_textcount_minmum"
                android:text="0"
                android:textColor="@color/text_header_color"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/write_textcount_minmum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="/50+"
                android:textColor="#cccccc"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        </RelativeLayout>


        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

            android:id="@+id/review_write_rate_product_nickname_header"
            style="@style/write_product_review_header_styles"
            android:layout_marginTop="20dp"
            android:text="@string/bazzarvoice_productreview_writescreen_pickname_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <EditText
            android:id="@+id/review_write_rate_product_nickname_header_value"
            style="@style/write_product_review_edittext"
            android:layout_marginTop="10dp"
            android:hint="@string/bazzarvoice_productreview_writescreen_pickname_hint_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

            android:id="@+id/review_write_rate_product_email_header"
            style="@style/write_product_review_header_styles"
            android:text="@string/bazzarvoice_productreview_writescreen_email_header_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <EditText
            android:id="@+id/review_write_rate_product_email_header_value"
            style="@style/write_product_review_edittext"
            android:layout_marginTop="10dp"
            android:hint="@string/bazzarvoice_productreview_writescreen_email_hint_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />


        <View
            android:id="@+id/your_product_review_divider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/your_product_review_parent_one"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="#cccccc" />


        <!-- Terms and Condition-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/review_write_rate_product_terms"
                    style="@style/write_product_review_header_styles"
                    android:text="@string/bazzarvoice_productreview_writescreen_termsandconditions_text"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>


                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/review_write_rate_product_terms_termstext"
                    style="@style/write_product_review_header_styles"
                    android:layout_marginTop="0dp"
                    android:text="@string/bazzarvoice_productreview_writescreen_termsandconditions_text_two"
                    android:textColor="#4888B3"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            </LinearLayout>

            <Switch
                android:id="@+id/review_write_rate_product_terms_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_text_size_medium"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="3.0" />
        </LinearLayout>


        <View
            android:id="@+id/your_product_review_divider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/your_product_review_parent_one"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/actionbar_height"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">


            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/your_product_review_cancel_button"
                style="@style/fontButton"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_no_thanks_button_bg"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textColor="@color/button_background"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />


            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/your_product_review_send_button"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/marginTopButton"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/bazzarvoice_productreview_writescreen_previewButtonText"
                android:textAlignment="center"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>