<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.philips.platform.catalogapp.fragments.NotificationBarFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/show_hide_notification"
            style="@style/UIDExtraWideButton"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/notification_bar_notification_show"
            android:onClick="@{(v) -> fragment.alterPopUpState()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>