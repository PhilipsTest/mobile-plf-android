<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.philips.platform.catalogapp.DataHolder"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_recyclerview_item_two_lines_height"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.ListViewMultipleItemTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
            android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
            android:text="@{data.text}"/>

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.ListViewItemDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
            android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
            android:text="@{data.description}"/>
    </LinearLayout>
</layout>