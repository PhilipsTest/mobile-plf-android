<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white">




<HorizontalScrollView
    android:id="@+id/scrollView_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon"
            android:layout_margin="20dp"
            android:text="@string/uikit_fonticon_twitter"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon"
            android:text="@string/uikit_fonticon_linkedin"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon"
            android:text="@string/uikit_fonticon_youtube"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon"
            android:text="@string/uikit_fonticon_pininterest"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon"
            android:text="@string/uikit_fonticon_facebook"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</HorizontalScrollView>

<HorizontalScrollView
    android:id="@+id/scrollview_two"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/scrollView_top"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon.Small"
            android:layout_margin="20dp"
            android:text="@string/uikit_fonticon_twitter"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon.Small"
            android:text="@string/uikit_fonticon_linkedin"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon.Small"
            android:text="@string/uikit_fonticon_youtube"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon.Small"
            android:text="@string/uikit_fonticon_pininterest"
            android:layout_margin="20dp"
            />
        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontIcon.Small"
            android:text="@string/uikit_fonticon_facebook"
            android:layout_margin="20dp"
            />


    </LinearLayout>
</HorizontalScrollView>

<HorizontalScrollView
    android:id="@+id/scrollView_three"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_below="@+id/scrollview_two"
    android:layout_margin="20dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>
</HorizontalScrollView>

<HorizontalScrollView
    android:id="@+id/scrollViewfour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_below="@+id/scrollView_three"
    android:layout_margin="20dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">


    </LinearLayout>
</HorizontalScrollView>
</RelativeLayout>