<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/notification_badge_small_view_margin_top_right"
        android:layout_marginTop="@dimen/notification_badge_small_view_margin_top_right"
        android:gravity="center|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_email_icon"
       />


    <com.philips.platform.uid.view.widget.NotificationBadge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uid_text_small"
        style="@style/NotificationLabel.Small"
        android:gravity="center|center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"
        />
</android.support.constraint.ConstraintLayout>