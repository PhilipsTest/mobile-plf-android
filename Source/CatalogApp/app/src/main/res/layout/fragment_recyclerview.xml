<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.RecyclerViewFragment"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/ButtonsCategoryStyle"
            android:onClick="@{(v) -> frag.showRecyclerViewSettingsFragment()}"
            android:orientation="horizontal">

            <TextView
                style="@style/ButtonsCategoryStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/recyclerview_settings"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:gravity="center"
                app:srcCompat="@drawable/ic_right_arrow_show_more"/>
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.RecyclerView
            android:id="@+id/recyclerview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>