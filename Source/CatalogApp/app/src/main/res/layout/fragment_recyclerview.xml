<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.RecyclerViewFragment"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_recyclerview_item_one_line_height"
            android:onClick="@{(v) -> frag.showRecyclerViewSettingsFragment()}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
                android:text="@string/recyclerview_settings"
                android:textSize="@dimen/uid_recyclerview_item_title_text_size"
                android:textColor="?attr/uidTextPrimaryColor"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
                android:clickable="false"
                android:gravity="center"
                app:srcCompat="@drawable/ic_right_arrow_show_more"/>
        </RelativeLayout>

        <include
            android:id="@+id/divider"
            layout="@layout/uid_horizontal_separator"/>

        <include
            layout="@layout/uid_recyclerview"
            android:id="@+id/recyclerview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>