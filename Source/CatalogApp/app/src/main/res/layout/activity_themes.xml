<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/app_top_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.philips.cdp.ui.catalog.activity.ThemesActivity">


    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:onClick="changeBackground"
        android:layout_gravity="center_horizontal"
        android:text="@string/change_theme"
        android:id="@+id/change_theme"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:onClick="changeBackground"
        android:layout_gravity="center_horizontal"
        android:text="@string/blue_theme"
        android:layout_marginTop="10dp"
        android:id="@+id/blue_theme"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:onClick="changeBackground"
        android:layout_gravity="center_horizontal"
        android:text="@string/orange_theme"
        android:layout_marginTop="10dp"
        android:id="@+id/orange_theme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/color_background"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/colorSwitch"/>

    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/radio_group"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solid"
            android:id="@+id/solid"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image"
            android:id="@+id/image"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gradient"
            android:id="@+id/gradient"/>
    </RadioGroup>


</LinearLayout>
