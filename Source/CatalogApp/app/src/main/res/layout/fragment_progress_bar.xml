<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.ProgressBarFragment"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/progress_bar_margin_top">

            <LinearLayout
                style="@style/BaseLayoutMargins.Dimens"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/progress_bar_margin_left_right"
                    android:text="@string/display_labels"/>

                <com.philips.platform.uid.view.widget.Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/layout_margin_left_right"
                    android:layout_weight="1"
                    android:checked="@{frag.showLabels}"
                    android:gravity="center_vertical|end"
                    android:onCheckedChanged="@{(v, isChecked) -> frag.toggleLabels(isChecked)}"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_seekbar_area_height"
                android:layout_marginEnd="@dimen/progress_bar_margin_left_right"
                android:layout_marginStart="@dimen/progress_bar_margin_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_bar_scale"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="@integer/progress_bar_scale_bar_max"
                    android:onProgressChanged="@{(v, progress, frmUser) -> frag.setCircularProgresSize(progress, frmUser)}"
                    android:progress="@{frag.progress}"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_seekbar_area_height"
                android:layout_marginEnd="@dimen/progress_bar_margin_left_right"
                android:layout_marginStart="@dimen/progress_bar_margin_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_bar_value"/>

                <SeekBar
                    android:id="@+id/progress_bar_seekbar_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onProgressChanged="@{(v, progress, frmUser) -> frag.setProgress(progress, frmUser)}"
                    android:progress="@{frag.progress}"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <com.philips.platform.uid.view.widget.Label
                style="@style/ButtonsCategoryStyle"
                android:text="@string/progress_bar_circular_subtitle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="@{frag.showLabels ? View.GONE : View.VISIBLE}"
                android:layout_marginTop="@dimen/progress_bar_circular_area_margin_top"
                android:layout_marginBottom="@dimen/progress_bar_circular_area_margin_bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularIndeterminateSmall"
                        android:visibility="@{frag.circularProgressBarSize == 0 ? View.VISIBLE : View.GONE}"/>

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularIndeterminateMiddle"
                        android:visibility="@{frag.circularProgressBarSize == 1 ? View.VISIBLE : View.GONE}"/>

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularIndeterminateBig"
                        android:visibility="@{frag.circularProgressBarSize == 2 ? View.VISIBLE : View.GONE}"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularDeterminateSmall"
                        android:progress="@{frag.progress}"
                        android:visibility="@{frag.circularProgressBarSize == 0 ? View.VISIBLE : View.GONE}"/>

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularDeterminateMiddle"
                        android:progress="@{frag.progress}"
                        android:visibility="@{frag.circularProgressBarSize == 1 ? View.VISIBLE : View.GONE}"/>

                    <com.philips.platform.uid.view.widget.ProgressBar
                        style="@style/UIDProgressBarCircularDeterminateBig"
                        android:progress="@{frag.progress}"
                        android:visibility="@{frag.circularProgressBarSize == 2 ? View.VISIBLE : View.GONE}"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:visibility="@{frag.showLabels ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="@dimen/progress_bar_circular_area_margin_top"
                android:layout_marginBottom="@dimen/progress_bar_circular_area_margin_bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{frag.circularProgressBarSize == 0 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="SMALL"
                        app:uidIsIndeterminateProgressIndicator="true"/>

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{frag.circularProgressBarSize == 1 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="MIDDLE"
                        app:uidIsIndeterminateProgressIndicator="true"/>

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Label"
                        android:visibility="@{frag.circularProgressBarSize == 2 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="BIG"
                        app:uidIsIndeterminateProgressIndicator="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="@{frag.progress}"
                        android:text="Label"
                        android:visibility="@{frag.circularProgressBarSize == 0 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="SMALL"

                        app:uidLabelPosition="BOTTOM_CENTER"/>

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="@{frag.progress}"
                        android:text="Label"
                        android:visibility="@{frag.circularProgressBarSize == 1 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="MIDDLE"
                        app:uidLabelPosition="BOTTOM_CENTER"/>

                    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="@{frag.progress}"
                        android:text="Label"
                        android:visibility="@{frag.circularProgressBarSize == 2 ? View.VISIBLE : View.GONE}"
                        app:uidCircularProgressBarSize="BIG"
                        app:uidLabelPosition="BOTTOM_CENTER"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <com.philips.platform.uid.view.widget.Label
                style="@style/ButtonsCategoryStyle"
                android:text="@string/progress_bar_linear_subtitle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_layout_divider"
                android:background="?attr/uidApplicationBackground"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{frag.showLabels ? View.GONE : View.VISIBLE}">

                <com.philips.platform.uid.view.widget.IndeterminateLinearProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/uid_progress_bar_margin_left"
                    android:layout_marginRight="@dimen/uid_progress_bar_margin_left"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"/>

                <com.philips.platform.uid.view.widget.ProgressBar
                    style="@style/UIDProgressBarHorizontalDeterminateWithMargins"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"/>

                <com.philips.platform.uid.view.widget.ProgressBar
                    style="@style/UIDProgressBarHorizontalDeterminateWithMargins"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"
                    android:secondaryProgress="@{frag.secondaryProgress}"/>

                <com.philips.platform.uid.view.widget.ProgressBar
                    style="@style/UIDProgressBarHorizontalDeterminate"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"
                    android:secondaryProgress="@{frag.secondaryProgress}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{frag.showLabels ? View.VISIBLE : View.GONE}">

                <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/uid_progress_bar_margin_left"
                    android:layout_marginRight="@dimen/uid_progress_bar_margin_left"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:text="Label left top"
                    app:uidIsIndeterminateProgressIndicator="true"
                    app:uidLabelPosition="TOP_LEFT"
                    app:uidLinearProgressBar="true"/>

                <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                    style="@style/UIDProgressBarHorizontalDeterminateWithMargins"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"
                    android:text="Label right top"
                    app:uidLabelPosition="TOP_RIGHT"
                    app:uidLinearProgressBar="true"/>

                <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                    style="@style/UIDProgressBarHorizontalDeterminateWithMargins"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"
                    android:secondaryProgress="@{frag.secondaryProgress}"
                    android:text="Label left bottom"
                    app:uidLabelPosition="BOTTOM_LEFT"
                    app:uidLinearProgressBar="true"/>

                <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                    style="@style/UIDProgressBarHorizontalDeterminateWithMargins"
                    android:layout_marginTop="@dimen/progress_bar_margin_top"
                    android:progress="@{frag.progress}"
                    android:secondaryProgress="@{frag.secondaryProgress}"
                    android:text="Label right bottom"
                    app:uidLabelPosition="BOTTOM_RIGHT"
                    app:uidLinearProgressBar="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>