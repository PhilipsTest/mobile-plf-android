<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/progress_bar_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/progress_bar_margin_left_right"
            android:layout_marginStart="@dimen/progress_bar_margin_left_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_bar_scale"/>

            <SeekBar
                android:id="@+id/progress_bar_seekbar_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/progress_bar_margin_left_right"
                android:max="2"
                android:progress="0"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/progress_bar_margin_left_right"
            android:layout_marginStart="@dimen/progress_bar_margin_left_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_bar_value"/>

            <SeekBar
                android:id="@+id/progress_bar_seekbar_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/progress_bar_margin_left_right"
                android:progress="@integer/progress_bar_default_progress"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:layout_height="32dp"
            android:text="@string/progress_bar_circular_subtitle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.philips.platform.uit.view.widget.ProgressBar
                android:id="@+id/progress_bar_indeterminate_circular"
                style="@style/UIDProgressBarCircularSmall"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                app:uid_linear_progress_bar="false"/>

            <com.philips.platform.uit.view.widget.ProgressBar
                android:id="@+id/progress_bar_determinate_circular"
                style="@style/UIDProgressBarCircularBig"
                android:progress="@integer/progress_bar_default_progress"
                app:uid_linear_progress_bar="false"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:layout_height="32dp"
            android:text="@string/progress_bar_linear_subtitle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_indeterminate"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            app:uid_linear_progress_bar="true"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            android:progress="@integer/progress_bar_default_progress"
            app:uid_linear_progress_bar="true"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_secondary"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            android:progress="@integer/progress_bar_default_progress"
            android:secondaryProgress="@integer/progress_bar_default_secondary_progress"
            app:uid_linear_progress_bar="true"
            app:uid_secondary_progress="true"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_wide"
            style="@style/UIDProgressBarHorizontal"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            android:progress="@integer/progress_bar_default_progress"
            android:secondaryProgress="@integer/progress_bar_default_secondary_progress"
            app:uid_linear_progress_bar="true"
            app:uid_secondary_progress="true"/>
    </LinearLayout>
</ScrollView>