<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/uid_progress_bar_margin_left"
            android:layout_marginEnd="@dimen/uid_progress_bar_margin_right"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_bar_value"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uid_progress_bar_margin_left"
                android:id="@+id/progress_bar_seekbar_value"
                android:progress="50"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:text="@string/progress_bar_linear_subtitle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_divider"
            android:background="?attr/uitApplicationBackground"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_indeterminate"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_secondary"
            style="@style/UIDProgressBarHorizontalWithMargins"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            app:uit_secondary_progress="true"/>

        <com.philips.platform.uit.view.widget.ProgressBar
            android:id="@+id/progress_bar_wide"
            style="@style/UIDProgressBarHorizontal"
            android:layout_marginTop="@dimen/progress_bar_margin_top"
            app:uit_secondary_progress="true"/>
    </LinearLayout>
</ScrollView>