<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/trigger_gridview_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_recyclerview_item_one_line_height"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.GridViewSettingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
            android:text="@string/page_title_gridview_settings"/>

        <com.philips.platform.uid.view.widget.ImageButton
            android:id="@+id/show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:gravity="center"
            app:srcCompat="@drawable/ic_right_arrow_show_more"
            app:uidImageButtonColorList="@null"
            app:uidImageButtonDrawableHeight="@dimen/show_more_icon_size"
            app:uidImageButtonDrawableWidth="@dimen/show_more_icon_size"/>
    </RelativeLayout>

    <include
        android:id="@+id/divider"
        layout="@layout/uid_horizontal_separator"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_gridview_header"
        style="@style/UIDLabel.GridViewHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/gridview_header"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:columnWidth="@dimen/grid_column_width"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />
</LinearLayout>

