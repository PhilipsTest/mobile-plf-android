<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.philips.cdp.uikit.costumviews.BaseSlider
        android:id="@+id/baseslider"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:enableBubbleIndictor="false">
    </com.philips.cdp.uikit.costumviews.BaseSlider>

    <com.philips.cdp.uikit.costumviews.IndicatorSlider
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:enableBubbleIndictor="true">
    </com.philips.cdp.uikit.costumviews.IndicatorSlider>

    <com.philips.cdp.uikit.costumviews.DiscreteSlider
        android:id="@+id/discreteslider"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:discreteValue="7">
    </com.philips.cdp.uikit.costumviews.DiscreteSlider>



</LinearLayout>




