<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/sidebar_right_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sidebar_right_avatar"
        android:layout_marginTop="@dimen/sidebar_right_avatar_top_bottom_margin"
        android:contentDescription="@string/sidebar_right_header_avatar"/>

    <com.philips.platform.uid.view.widget.Label
        style="@style/UIDLabel.SidebarHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sidebar_text_height"
        android:text="@string/sidebar_header_item"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/sidebar_right_avatar_top_bottom_margin"/>

    <include
        layout="@layout/uid_horizontal_separator" />

</LinearLayout>