<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/app_top_margin"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnCircleArrow"
                style="@style/Philips.ActionButton.Circle.Arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />


            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnCirclePlus"
                style="@style/Philips.ActionButton.Circle.Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />

            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnCircleMinus"
                style="@style/Philips.ActionButton.Circle.Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />

            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnCircleQuestionMark"
                style="@style/Philips.ActionButton.Circle.QuestionMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp"
                />

            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnSquareArrow"
                style="@style/Philips.ActionButton.Square.Arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />


            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnSquarePlus"
                style="@style/Philips.ActionButton.Square.Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />

            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnSquareMinus"
                style="@style/Philips.ActionButton.Square.Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />


            <com.philips.cdp.uikit.customviews.PhilipsActionButton
                android:id="@+id/miscBtnSquareCrossMark"
                style="@style/Philips.ActionButton.Square.CrossMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/philips_action_button_margin"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.philips.cdp.uikit.customviews.PuiSwitch
        android:id="@+id/uikit_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:checked="false" />

    <com.philips.cdp.uikit.customviews.PhilipsBadgeView
        android:id="@+id/badge_view_circle_medium"
        style="@style/NotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="3" />

    <com.philips.cdp.uikit.customviews.PhilipsBadgeView
        android:id="@+id/badge_view_square_medium"
        style="@style/NotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="22" />

</LinearLayout>
