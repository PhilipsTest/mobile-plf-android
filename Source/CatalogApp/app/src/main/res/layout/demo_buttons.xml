<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/button_layout_padding"
        android:layout_marginEnd="@dimen/button_layout_padding"
        android:paddingTop="@dimen/button_layout_padding">

        <com.philips.platform.uit.view.widget.Button
            android:id="@+id/primary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_primary_button"/>

        <!--Icon only buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_layout_padding"
                android:background="@android:color/darker_gray"
                android:text="@string/buttons_with_icons"
                android:textColor="@android:color/black"/>

            <com.philips.platform.uit.view.widget.ImageButton
                android:id="@+id/demo_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/share"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>