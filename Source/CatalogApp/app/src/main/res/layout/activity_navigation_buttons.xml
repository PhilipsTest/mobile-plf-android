<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:id="@+id/miscButtonSquareGreater"
                style="@style/Misc.button.square.greater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
               />


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:id="@+id/button3"
                style="@style/Misc.button.square.crossMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.square.minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.square.plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.circle.greater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.circle.questionMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.circle.crossMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Misc.button.circle.minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/philips_msc_button_margin"
                />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
