<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:id="@+id/bt1"
                style="@style/Philips.button.square.greater"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                android:id="@+id/bt2"
                android:onClick="onClick"
                style="@style/Philips.button.square.questionMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.square.crossMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.square.minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.square.plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.circle.greater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.circle.questionMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.circle.crossMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.circle.minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.philips.cdp.uikit.CustomButton.PhilipsMscButton
                style="@style/Philips.button.circle.plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
