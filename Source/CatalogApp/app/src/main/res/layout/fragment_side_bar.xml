<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.SideBarFragment"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/show_sidebar"
            style="@style/UIDExtraWideButton"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:onClick="@{(v) -> frag.showSideBar()}"
            android:text="@string/show_side_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </LinearLayout>
</layout>