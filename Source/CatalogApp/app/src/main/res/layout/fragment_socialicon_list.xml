<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="fragment"
            type="com.philips.platform.catalogapp.fragments.SocialIconsListFragment"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDHeader"
            android:text="@string/primary_social_media_icons"/>

        <GridView
            android:id="@+id/primary_social_icons_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:columnWidth="75dp"
            android:horizontalSpacing="2dp"
            android:numColumns="5"
            android:verticalSpacing="2dp">
        </GridView>

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDHeader"
            android:text="@string/white_social_media_icons"
            android:visibility="@{fragment.supportsWhiteSocialIcons()? View.VISIBLE : View.GONE}"/>

        <GridView
            android:id="@+id/white_social_icons_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:columnWidth="75dp"
            android:horizontalSpacing="2dp"
            android:numColumns="5"
            android:verticalSpacing="2dp"
            android:visibility="@{fragment.supportsWhiteSocialIcons()? View.VISIBLE : View.GONE}"/>

    </LinearLayout>
</layout>