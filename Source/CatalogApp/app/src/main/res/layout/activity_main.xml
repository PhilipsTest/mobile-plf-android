<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/sidebar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.philips.platform.uid.view.widget.NavigationContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <include
                    layout="@layout/uid_toolbar_layout"/>
            </android.support.design.widget.AppBarLayout>


            <FrameLayout
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            </FrameLayout>
        </LinearLayout>
    </com.philips.platform.uid.view.widget.NavigationContainer>

    <!--    <include
            android:id="@+id/sidebar_recyclerview"
            layout="@layout/uid_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start" />-->

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxWidth="320dp"
            android:layout_gravity="start"
            android:background="@color/uidColorWhite">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sidebar_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
</layout>