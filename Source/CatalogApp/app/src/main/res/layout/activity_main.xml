                android:fillViewport="true"
                android:overScrollMode="never">

                <RelativeLayout
                    android:id="@+id/sidebar_right_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/sidebar_right_header_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/sidebar_right_header_layout"
