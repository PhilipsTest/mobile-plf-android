        android:fitsSystemWindows="true">

        <com.philips.platform.uid.view.widget.NavigationContainer
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp">

                    <include
                        layout="@layout/uid_toolbar_layout"/>
                </android.support.design.widget.AppBarLayout>


                <FrameLayout
                    android:id="@+id/mainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                </FrameLayout>
            </LinearLayout>
        </com.philips.platform.uid.view.widget.NavigationContainer>

        <LinearLayout
            android:id="@+id/sidebar_left_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <com.philips.platform.uid.utils.SidebarFrameLayoutContainer
                android:id="@+id/sidebar_content_themed_left_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:uidSidebarContextType="Content"
                android:background="?attr/uidContentPrimaryBackgroundColor">

                <include

                layout="@layout/sidebar_left_container" />

            </com.philips.platform.uid.utils.SidebarFrameLayoutContainer>

            <com.philips.platform.uid.utils.SidebarFrameLayoutContainer
                android:id="@+id/sidebar_navigation_themed_left_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:uidSidebarContextType="Navigation"
                android:background="?attr/uidNavigationPrimaryBackgroundColor">

                <include

                    layout="@layout/sidebar_navigation_themed_left_container" />

            </com.philips.platform.uid.utils.SidebarFrameLayoutContainer>

            </LinearLayout>

