<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.GridViewSettingsFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/BaseLayoutMargins.Dimens"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.TestButtonTexts"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/secondary_action" />

            <com.philips.platform.uid.view.widget.Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_margin_left_right"
                android:layout_weight="1"
                android:checked="@={frag.isSecondaryActionEnabled}"
                android:onCheckedChanged="@{(v, isChecked) -> frag.setSecondaryActionEnabled(isChecked)}" />
        </LinearLayout>

            <include layout="@layout/divider_layout"/>

            <LinearLayout
            style="@style/BaseLayoutMargins.Dimens"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.TestButtonTexts"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/dark_background" />

            <com.philips.platform.uid.view.widget.Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_margin_left_right"
                android:layout_weight="1"
                android:checked="@={frag.isDarkBackroungEnabled}"
                android:onCheckedChanged="@{(v, isChecked) -> frag.setDarkBackgroundEnabled(isChecked)}" />
        </LinearLayout>

            <include layout="@layout/divider_layout"/>

            <LinearLayout
            style="@style/BaseLayoutMargins.Dimens"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.TestButtonTexts"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/enlarged_gutter" />

            <com.philips.platform.uid.view.widget.Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_margin_left_right"
                android:layout_weight="1"
                android:checked="@={frag.isEnlargedGutterEnabled}"
                android:onCheckedChanged="@{(v, isChecked) -> frag.setEnlargedGutterEnabled(isChecked)}" />
        </LinearLayout>

            <include layout="@layout/divider_layout"/>
        <LinearLayout
            style="@style/BaseLayoutMargins.Dimens"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.TestButtonTexts"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/grid_disabled" />

            <com.philips.platform.uid.view.widget.Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_margin_left_right"
                android:layout_weight="1"
                android:checked="@={frag.isGridDisableEnabled}"
                android:onCheckedChanged="@{(v, isChecked) -> frag.setGridDisableEnabled(isChecked)}" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_recyclerview_item_one_line_height"
            android:background="?attr/uidContentTertiary"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.RecyclerViewHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/template_selection"/>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioGroupTemplates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin_left_right"
            android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/without_secondary_content"
                style="@style/RecyclerViewRadioButton"
                android:checked="@{frag.templateSelection == 1 ? true :( (frag.templateSelection ==3) ? (frag.isDarkBackroungEnabled? true : false): false)}"
                android:text="@string/without_secondary_content"/>

            <RadioButton
                android:id="@+id/double_line_footer"
                style="@style/RecyclerViewRadioButton"
                android:checked="@{frag.templateSelection == 2 ? true : false}"
                android:text="@string/double_line_footer"/>

            <RadioButton
                android:id="@+id/single_line_header"
                style="@style/RecyclerViewRadioButton"
                android:alpha="@{frag.isDarkBackroungEnabled ? (float)0.3 : 1}"
                android:checked="@{frag.templateSelection == 3 ? true : false}"
                android:enabled="@{!frag.isDarkBackroungEnabled}"
                android:text="@string/single_line_header"
                />
        </RadioGroup>
    </LinearLayout>
    </ScrollView>
</layout>