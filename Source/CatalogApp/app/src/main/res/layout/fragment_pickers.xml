<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.platform.catalogapp.fragments.PickersFragment"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:text="@string/date_time_picker"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_listview_row_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/uid_date_picker_margin_left_right"
            android:paddingStart="@dimen/uid_date_picker_margin_left_right">

            <ImageView
                android:id="@+id/calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/date_time_picker"
                app:srcCompat="@drawable/uid_icon_calender"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uid_date_margin_start"
                android:onClick="@{(v) ->fragment.showDatePicker()}"
                android:text="@{fragment.updatedDate}"
                android:textColor="?attr/uidTextPrimary"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:onClick="@{(v) ->fragment.showTimePicker()}"
                android:text="@{fragment.updatedTime}"
                android:textColor="?attr/uidTextPrimary"/>
        </LinearLayout>

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:text="@string/range_picker"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_listview_row_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/uid_date_picker_margin_left_right"
            android:paddingStart="@dimen/uid_date_picker_margin_left_right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/date_time_picker"
                app:srcCompat="@drawable/uid_icon_calender"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/startDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uid_date_margin_start"
                android:onClick="@{(v) ->fragment.showDatePicker()}"
                android:text="@{fragment.updatedDate}"
                android:textColor="?attr/uidTextPrimary"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/startTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:onClick="@{(v) ->fragment.showTimePicker()}"
                android:text="@{fragment.updatedTime}"
                android:textColor="?attr/uidTextPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_listview_row_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/uid_date_picker_margin_left_right"
            android:paddingStart="@dimen/uid_date_picker_margin_left_right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/date_time_picker"
                app:srcCompat="@drawable/uid_icon_calender"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/endDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uid_date_margin_start"
                android:onClick="@{(v) ->fragment.showDatePicker()}"
                android:text="@{fragment.updatedDate}"
                android:textColor="?attr/uidTextPrimary"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/endTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:onClick="@{(v) ->fragment.showTimePicker()}"
                android:text="@{fragment.updatedTime}"
                android:textColor="?attr/uidTextPrimary"/>
        </LinearLayout>

        <TextView
            style="@style/ButtonsCategoryStyle"
            android:text="@string/timeslot_picker"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_listview_row_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/uid_date_picker_margin_left_right"
            android:paddingStart="@dimen/uid_date_picker_margin_left_right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/date_time_picker"
                app:srcCompat="@drawable/ic_query"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uid_date_margin_start"
                android:text="@string/start"
                android:textColor="?attr/uidTextPrimary"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/timeslotPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:onClick="@{(v) ->fragment.showTimePicker()}"
                android:text="@{fragment.updatedTime}"
                android:textColor="?attr/uidTextPrimary"/>
        </LinearLayout>


    </LinearLayout>
</layout>