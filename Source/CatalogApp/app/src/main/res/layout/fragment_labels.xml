<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="labelFrag"
            type="com.philips.platform.catalogapp.fragments.LabelFragment"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/ButtonsCategoryStyle"
                android:text="@string/label_title_text"/>

            <com.philips.platform.uit.view.widget.Label
                style="@style/UIDLabel.Top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/label_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabelDescription.ControlLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_item_text"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_left_right"
                    android:checked="true"/>

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabelDescription.ControlLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_item_text"/>
            </LinearLayout>

            <!--Label text top [START]-->
            <com.philips.platform.uit.view.widget.Label
                style="@style/UIDLabel.Top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/label_text"/>

            <com.philips.platform.uit.view.widget.TextEditBox
                android:id="@+id/tb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/component_bottom_spacing"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginRight="@dimen/layout_margin_left_right"
                android:hint="@string/label_input_text"/>
            <!--Label text top [END]-->

            <!--Horizontal text box [START]-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/component_bottom_spacing"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginRight="@dimen/layout_margin_left_right">

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabel.Left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_text"/>

                <com.philips.platform.uit.view.widget.TextEditBox
                    android:id="@+id/tb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_input_text"
                    android:inputType="text"/>
            </LinearLayout>
            <!--Horizontal text box [END]-->

            <!--Audio buttons group [START[-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginRight="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:orientation="horizontal">

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabel.Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/label_label_left"/>

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabel.Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="@string/label_label_right"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginRight="@dimen/layout_margin_left_right"
                android:layout_marginBottom="@dimen/component_bottom_spacing"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/label_slider_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_margin_left_right"
                    android:layout_marginRight="@dimen/layout_margin_left_right"
                    android:onProgressChanged="@{(v, progress, frmUser) -> labelFrag.setSoundProgress(progress, frmUser)}"
                    android:progress="@{labelFrag.soundProgress}"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{(v)-> labelFrag.incrementSound()}"
                    app:srcCompat="@drawable/high_audio"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{(v)-> labelFrag.decrementSound()}"
                    app:srcCompat="@drawable/low_audio"/>
            </RelativeLayout>
            <!--Audio buttons group [END[-->

            <!--Slider group [START]-->
            <TextView
                style="@style/ButtonsCategoryStyle"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="Description label"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:orientation="horizontal">

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_description"/>

                <com.philips.platform.uit.view.widget.Label
                    style="@style/UIDLabelDescription.Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_left_right"
                    android:text="@{labelFrag.description}"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/label_slider_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_left_right"
                android:layout_marginLeft="@dimen/layout_margin_left_right"
                android:layout_marginRight="@dimen/layout_margin_left_right"
                android:onProgressChanged="@{(v, progress, frmUser) -> labelFrag.setProgress(progress)}"/>
            <!--Slider group [END]-->
        </LinearLayout>
    </ScrollView>
</layout>