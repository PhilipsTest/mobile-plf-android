<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.RatingBarFragment"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                style="@style/ButtonsCategoryStyle"
                android:text="@string/ratingbar_input"/>

            <com.philips.platform.uid.view.widget.RatingBar
                android:id="@+id/rating_input"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/reset_rating"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratingbar_reset"
                android:enabled="@{!frag.isRatingZero}"
                android:onClick="@{(v) -> frag.inputRatingBar.setRating(0)}"
                />

            <com.philips.platform.uid.view.widget.Label
                style="@style/ButtonsCategoryStyle"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:text="@string/ratingbar_display"/>

            <com.philips.platform.uid.view.widget.RatingBar
                android:id="@+id/rating_display_default"
                android:layout_marginStart="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                android:rating="4.5"
                android:text="@string/ratingbar_rating_text"
                />
            <com.philips.platform.uid.view.widget.RatingBar
                android:id="@+id/rating_display_star_only"
                android:layout_marginStart="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                android:rating="4.5"
                />

            <com.philips.platform.uid.view.widget.Label
                style="@style/ButtonsCategoryStyle"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:text="@string/ratingbar_mini_display"/>

            <com.philips.platform.uid.view.widget.RatingBar
                android:id="@+id/rating_display_mini"
                android:layout_marginStart="@dimen/layout_margin_left_right"
                android:layout_marginTop="@dimen/layout_margin_left_right"
                android:layout_marginBottom="@dimen/layout_margin_left_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="1"
                android:stepSize="0.1"
                android:rating="1"
                android:text="4.5"
                />

            <include
                android:id="@+id/divider"
                layout="@layout/uid_horizontal_separator"/>

        </LinearLayout>
    </ScrollView>

</layout>