<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/uid_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/notification_badge_default_view_margin_top_right"
        android:layout_marginTop="@dimen/notification_badge_default_view_margin_top_right"
        android:gravity="center|center_horizontal"
        android:text="E-mail"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.philips.platform.uid.view.widget.NotificationBadge
        android:id="@+id/uid_text_default"
        style="@style/NotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:uidNotificationBadgeTheme="true" />

    <com.philips.platform.uid.view.widget.NotificationBadge
        android:id="@+id/uid_text_Option"
        style="@style/NotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:uidNotificationBadgeTheme="false" />
</android.support.constraint.ConstraintLayout>
