<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:inputText="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:animateLayoutChanges="true"
                android:id="@+id/input_field_container">

    <com.philips.cdp.uikit.PuiEditText
        android:id="@+id/input_field_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        inputText:hintText="@string/enter_text_here"
        inputText:errorText="@string/hello_world"
        android:animateLayoutChanges="true"/>

    <com.philips.cdp.uikit.PuiEditText
        android:id="@+id/input_field_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_field_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        inputText:hintText="@string/enter_text_here"
        inputText:errorText="Invalid password format"
        android:animateLayoutChanges="true"/>
</RelativeLayout>