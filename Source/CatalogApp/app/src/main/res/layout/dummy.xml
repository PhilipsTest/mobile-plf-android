<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/uikit_philips_bright_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="@color/uikit_philips_very_light_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/image_layout"
            android:layout_height="wrap_content"
            android:background="@color/uikit_philips_dark_blue">
            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:tint="?attr/baseColor"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:src="@drawable/call"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/image_layout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_layout"
            android:layout_height="wrap_content"
            android:background="@color/uikit_philips_Red">

            <TextView
                android:id="@+id/text"
                android:text="Eget Odeo"
                android:layout_marginRight="90dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@drawable/uikit_list_text_selector_blue"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                fontPath="fonts/centralesansbook.ttf"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/text_description"
                android:text="Eget Odeo uu  kkdkd d dkd v kl  kkd  dkld dv l  df vf uu  kkdkd d dkd v kl  kkd  dkld dv l  df vf uu  kkdkd d dkd v kl  kkd  dkld dv l  df vf uu  kkdkd d dkd v kl  kkd  dkld dv l  df vf"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="@drawable/uikit_list_text_selector_blue"
                android:layout_width="wrap_content"
                fontPath="fonts/centralesansbook.ttf"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/image_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:background="@color/uikit_philips_bright_pink">


            <com.philips.cdp.uikit.customviews.PuiSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_button"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text=" Off "
                android:id="@+id/off_on"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/arrow"
                android:layout_gravity="center_vertical"
                android:textColor="@drawable/uikit_list_text_selector_blue"
                android:layout_alignTop="@+id/image"

                android:includeFontPadding="false"
                android:padding="0dp"
                fontPath="fonts/centralesanslight.ttf"
                android:layout_height="wrap_content" />

            <com.philips.cdp.uikit.customviews.PhilipsBadgeView
                style="@style/NotificationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/arrow"
                android:id="@+id/notification_badge"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="22"
                android:padding="0dp"/>

            <com.shamanland.fonticon.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                style="@style/FontIcon.Small"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:text="@string/uikit_fonticon_arrow_right"
                android:padding="0dp"
                />

        </LinearLayout>

        </RelativeLayout>

</LinearLayout>