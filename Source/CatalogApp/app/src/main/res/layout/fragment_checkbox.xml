<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.CheckBoxFragment"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--With Icon layout-->
            <LinearLayout
                style="@style/BaseLayoutMargins.Dimens"
                android:orientation="horizontal">

                <TextView
                    style="@style/TestButtonTexts"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/disabled"/>

                <com.philips.platform.uid.view.widget.Switch
                    android:id="@+id/toggleicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/layout_margin_left_right"
                    android:gravity="center_vertical|end"
                    android:onCheckedChanged="@{(v, isChecked) -> frag.setEnabled(isChecked)}"/>
            </LinearLayout>

            <include layout="@layout/divider_layout"/>

            <TextView
                style="@style/ButtonsCategoryStyle"
                android:text="@string/checkbox_check_box"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/checkbox_list_margin_top_bottom"
                android:layout_marginEnd="@dimen/checkbox_list_margin_left_right"
                android:layout_marginStart="@dimen/checkbox_list_margin_left_right"
                android:layout_marginTop="@dimen/checkbox_list_margin_top_bottom"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.CheckBox
                    android:id="@+id/checkbox_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/checkbox_app_design"
                    />

                <include layout="@layout/divider_layout"/>

                <com.philips.platform.uid.view.widget.CheckBox
                    android:id="@+id/checkbox_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/checkbox_client_meeting"
                    />

                <include layout="@layout/divider_layout"/>

                <com.philips.platform.uid.view.widget.CheckBox
                    android:id="@+id/checkbox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/checkbox_update_presentation"
                    />

                <include layout="@layout/divider_layout"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>

