<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseLayoutMargins">
        <item name="android:layout_marginLeft">@dimen/layout_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_left_right</item>
        <item name="android:background">?attr/uitContentPrimaryColor</item>
    </style>
    <style name="BaseLayoutMargins.Dimens">
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TestButtonTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uitColorLevel75</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/button_toggle_text_size</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ButtonsCategoryStyle">
        <item name="android:layout_height">@dimen/button_category_divider_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/uitColorLevel75</item>
        <item name="android:textSize">@dimen/button_category_text_size</item>
        <item name="android:background">?attr/uitColorLevel05</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_margin_left_right</item>
    </style>
</resources>
