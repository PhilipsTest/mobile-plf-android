<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeSettingsHeader1Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>

    <style name="ThemeSettingsHeader2Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>

    <style name="ThemeSettingsLabelText">
        <item name="android:textColor">@drawable/colorselector</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>
</resources>
