<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.philips.platform.catalogapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".CatalogApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/catalog_app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Philips">

        <activity
            android:name="com.philips.platform.catalogapp.MainActivity"
            android:label="@string/catalog_app_name"
            android:theme="@style/Theme.Philips.GroupBlue.VeryDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".themesettings.PreviewActivity"
            android:parentActivityName="com.philips.platform.catalogapp.MainActivity"
            android:theme="@style/Theme.Philips.GroupBlue.VeryDark"/>
    </application>
</manifest>