<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="centralesansBookFont">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="centralesansBoldFont">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="centralesansLightFont">
        <item name="fontPath">fonts/centralesanslight.ttf</item>
    </style>
    <style name="tvBoldTitle">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
