<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/selectfile"
        android:text="File Upload API"
        style="@style/tvBoldTitle"
        android:textSize="18sp" />


    <com.philips.cdp.uikit.customviews.CircularProgressbar
        android:id="@+id/settings_progress_bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/browse"
        android:layout_below="@id/selectfile"
        android:text="Browse" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Upload"
        android:enabled="false"
        android:layout_below="@id/selectfile"
        android:layout_toRightOf="@id/browse"
        />
    
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:background="?attr/uikit_listDividerColor"
        android:layout_below="@id/browse"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/donloadfile"
        android:text="File Download API"
        style="@style/tvBoldTitle"
        android:layout_below="@id/divider"
        android:textSize="18sp" />

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Download"
        android:layout_below="@id/donloadfile"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fetch"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/upload"
        android:text="Fetch" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_blob_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/download"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:divider="?attr/uikit_listDividerColor"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false"
        android:listSelector="?attr/uikit_listSelectorBackground"
        android:overScrollFooter="@android:color/transparent"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>