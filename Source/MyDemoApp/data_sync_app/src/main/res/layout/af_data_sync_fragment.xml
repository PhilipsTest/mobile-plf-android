<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/data_sync_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/reg_circle" android:clickable="true"
            android:src="@android:drawable/ic_input_add"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_settings"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:divider="?attr/uikit_listDividerColor"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false"
            android:listSelector="?attr/uikit_listSelectorBackground"
            android:overScrollFooter="@android:color/transparent"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>


    <TextView
        android:text="@string/set_characteristics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_above="@+id/tv_set_consents"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_set_characteristics" />

    <TextView
        android:text="User Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_above="@+id/tv_set_characteristics"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_settings" />

    <TextView
        android:text="@string/insights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_above="@id/tv_settings"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_insights" />

    <TextView
        android:text="@string/consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="end"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_set_consents" />




</RelativeLayout>
