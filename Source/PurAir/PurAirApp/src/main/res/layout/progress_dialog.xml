<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp" >

    <ProgressBar
        android:id="@+id/pbd_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:indeterminateDrawable="@drawable/progress_circle" />

    <com.philips.cl.di.dev.pa.view.FontTextView 
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/pbd_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pbd_progressBar"
        android:layout_alignTop="@+id/pbd_progressBar"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/pbd_progressBar"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/please_wait"
        android:textColor="@color/philips_blue"
        android:textSize="18sp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

</RelativeLayout>