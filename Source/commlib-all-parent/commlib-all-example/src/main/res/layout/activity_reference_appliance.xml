<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/last_result"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/count_0"
        android:textSize="18sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Time value"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/timeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/btnGetTime"
            tools:ignore="ButtonStyle"/>

        <Button
            android:id="@+id/btnSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/btnSetTime"
            tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <Switch
        android:id="@+id/switchLoopGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="8dp"
        android:text="@string/switchLoopGet"/>

    <Switch
        android:id="@+id/switchSubscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="8dp"
        android:text="@string/switchSubscription"/>

    <Switch
        android:id="@+id/switchStayConnected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="8dp"
        android:text="@string/switchStayConnected"/>

    <Button
        android:id="@+id/btnFirmwareUpgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/firmware_upgrade"/>

</LinearLayout>
