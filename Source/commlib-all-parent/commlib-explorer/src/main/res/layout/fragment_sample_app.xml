<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sample_app_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/sample_app_fragment_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample_app_fragment_title"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        tools:text="subtitle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sample_app_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sample_app_fragment_subtitle"
        android:layout_marginTop="8dp" />

</RelativeLayout>