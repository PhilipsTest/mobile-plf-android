<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_screen_side_margin"
                android:layout_marginEnd="@dimen/default_screen_side_margin"
                android:layout_marginTop="@dimen/default_body_labels_margin">

    <com.philips.platform.csw.permission.uielemen.SilenceableSwitch
            android:id="@+id/toggleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:checked="false"
            android:gravity="center_vertical|end"/>

    <com.philips.platform.uid.view.widget.Label
            android:id="@+id/consentText"
            style="@style/TestButtonTexts"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_toStartOf="@id/toggleicon"
            android:textAlignment="viewStart"
            android:maxWidth="@dimen/csw_label_max_width"
            tools:text="ConsentText"/>

    <com.philips.platform.uid.view.widget.Label
            android:id="@+id/consentHelp"
            style="@style/TestButtonTexts"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/consentText"
            android:layout_marginBottom="@dimen/default_body_labels_margin"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_toStartOf="@id/toggleicon"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="viewStart"
            android:paddingTop="@dimen/csw_top_padding"
            android:text="@string/csw_consent_help_label"
            android:textColor="@color/reg_hyperlink_highlight_color"/>

</RelativeLayout>