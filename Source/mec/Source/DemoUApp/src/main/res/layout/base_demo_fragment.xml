<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:background="@color/uidColorWhite">






                <LinearLayout
                    android:id="@+id/ll_ctn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:weightSum="1">

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/btn_add_ctn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:text="Add" />

                    <com.philips.platform.uid.view.widget.EditText
                        android:id="@+id/et_add_ctn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:hint="Enter CTN" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_ctn"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:weightSum="1">

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/btn_add_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:text="Voucher Add" />

                    <com.philips.platform.uid.view.widget.EditText
                        android:id="@+id/et_add_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:hint="Enter Voucher" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_enter_proposition_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_voucher"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:weightSum="1">

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/btn_set_proposition_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:text="Set" />

                    <com.philips.platform.uid.view.widget.EditText
                        android:id="@+id/et_add_proposition_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:hint="Enter Propositon ID" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_maxCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_enter_proposition_id"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/btn_set_max_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:text="Set" />

                    <com.philips.platform.uid.view.widget.EditText
                        android:id="@+id/et_max_cart_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.75"
                        android:hint="enter max count"
                        android:inputType="number" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_mocking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_maxCount"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ToggleButton
                        android:id="@+id/toggleHybris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_maxCount"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:checked="true"
                        android:enabled="true"
                        android:gravity="center"
                        android:textOff="Hybris OFF"
                        android:textOn="Hybris ON"
                        android:textSize="15sp" />

                    <ToggleButton
                        android:id="@+id/toggleMock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textOff="Mock OFF"
                        android:textOn="Mock ON"
                        android:textSize="15sp" />

                    <ToggleButton
                        android:id="@+id/toggleBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:checked="false"
                        android:textOff="Banner OFF"
                        android:textOn="Banner ON"
                        android:textSize="15sp" />

                    <ToggleButton
                        android:id="@+id/toggleListener"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:checked="false"
                        android:textOff="Listener OFF"
                        android:textOn="Listener ON"
                        android:textSize="15sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/product_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:visibility="gone" />

                <RadioGroup
                    android:id="@+id/rg_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_mocking"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nullify Voucher" />

                    <RadioButton
                        android:id="@+id/rb_enabble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable" />

                    <RadioButton
                        android:id="@+id/rb_disable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disable" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="@dimen/border8_margin"
                    android:layout_marginRight="@dimen/border8_margin"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Launch as Activity" />

                    <RadioButton
                        android:id="@+id/rb_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Launch as Fragment" />

                </RadioGroup>


        <CheckBox
            android:id="@+id/bv_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/reg_dimen_8dp"
            android:text="BazaarVoice Production" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@android:color/darker_gray" />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_categorized_shop_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/categorized_shop_now" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_launch_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/launch_product_detail" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_shop_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/shop_now" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_purchase_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/order_history" />

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/register" />









                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/btn_buy_direct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:enabled="false"
                    android:text="@string/buy_direct"
                    android:visibility="gone" />

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/btn_categorized_shop_now_with_ignore_retailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/categorized_shop_now_ignore_retailer"
                    android:visibility="gone" />


    </LinearLayout>
</ScrollView>