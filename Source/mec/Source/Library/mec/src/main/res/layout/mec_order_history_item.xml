<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ecsOrders"
            type="com.philips.cdp.di.ecs.model.orders.ECSOrders" />

        <variable
            name="service"
            type="com.philips.platform.mec.screens.history.MECOrderHistoryService" />

    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_time"
            style="@style/mec_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@{service.getFormattedDate(ecsOrders.placed)}"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/border16_margin_left_right"
        android:paddingEnd="@dimen/border16_margin_left_right"
        android:paddingStart="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border16_margin_left_right">

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/iap_product_ctn_12"
            android:background="@drawable/mec_info_image"
            android:scaleType="fitXY" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_state"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/iap_margin_4dp"
            android:layout_toRightOf="@+id/iv_info"
            android:text= "@{String.format(@string/mec_order_state, ecsOrders.statusDisplay.substring(0, 1).toUpperCase() + ecsOrders.statusDisplay.substring(1))}"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_number"
            style="@style/mecCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_state"
            android:text="@{String.format(@string/mec_order_state,ecsOrders.code)}"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_12" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="@drawable/uid_shadow_level_two" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:mecEntriesModel="@{ecsOrders.orderDetail.entries}"
             />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/arrow"
            style="@style/mec_right_arrow_product_catalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:gravity="center"
            android:paddingEnd="@dimen/border16_margin_left_right"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="@drawable/uid_shadow_level_two" />

    <RelativeLayout
        android:id="@+id/quantity_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/border16_margin_left_right"
        android:paddingEnd="@dimen/border16_margin_left_right"
        android:paddingStart="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border16_margin_left_right">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/total_item_text"
            style="@style/mecCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/mec_cart_total"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_total_price"
            style="@style/iapCentralesansMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:text="@{ecsOrders.total.formattedValue}"
            android:textSize="@dimen/header" />
    </RelativeLayout>

</LinearLayout>
</layout>