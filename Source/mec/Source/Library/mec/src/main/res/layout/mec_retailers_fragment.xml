<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="retailerList"
            type="com.philips.platform.ecs.model.retailers.ECSRetailerList" />

        <variable
            name="itemClickListener"
            type="com.philips.platform.mec.common.ItemClickListener" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dip"
        app:behavior_hideable="false"
        app:behavior_peekHeight="320dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <RelativeLayout
            android:id="@+id/rLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/uidContentSecondaryNeutralBackgroundColor">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_online_retailers_lebel"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="10dp"
                android:text="@string/mec_online_retailers"
                android:paddingTop="10dp"
                android:paddingStart="16dp"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:textSize="14dp" />

            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/retailer_recycler_view"
            android:layout_below="@+id/lLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:retailers="@{retailerList}"
            app:listener="@{itemClickListener}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>
    </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>