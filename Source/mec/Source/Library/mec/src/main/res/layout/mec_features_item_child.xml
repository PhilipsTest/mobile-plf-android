<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="featureItem"
            type="com.philips.cdp.prxclient.datamodels.features.FeatureItem" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:paddingLeft="@dimen/border16_margin_left_right"
        >

        <LinearLayout
            android:id="@+id/ll_lebel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/border8_margin"
            android:paddingTop="@dimen/border8_margin"
            android:background="?attr/uidContentPrimaryBackgroundColor"
            >

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/iapCentralesansBoldFont"
                android:textSize="14sp"
                android:singleLine="false"
                android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
                android:text='@{ featureItem.featureLongDescription ?? ""}' />

            <com.android.volley.toolbox.NetworkImageView
                android:layout_marginTop="10sp"
                android:id="@+id/network_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:nullable_image_url="@{featureItem.singleFeatureImage}"
                />

            <com.philips.platform.uid.view.widget.Label
                android:layout_marginTop="10sp"
                style="@style/mecCentralesansBookFont"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:lineSpacingExtra="6dp"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text='@{ featureItem.featureGlossary ?? ""}' />

        </LinearLayout>

    </RelativeLayout>
</layout>