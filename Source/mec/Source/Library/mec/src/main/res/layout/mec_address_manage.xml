<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mecAddresses"
            type="com.philips.cdp.di.mec.screens.address.MECAddresses" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/uidContentPrimaryBackgroundColor"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                style="@style/mec_address_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/iap_margin_10dp"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right"
                android:text="Manage Shipping Addresses" />

        </LinearLayout>

        <com.philips.platform.uid.view.widget.Label
            style="@style/mec_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_margin_10dp"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="Please select a shipping address from below list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/iap_margin_10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:mecAddresses="@{mecAddresses}"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mec_continue_checkout_btn"
        style="@style/mecCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:layout_above="@+id/mec_continue_shopping_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
        android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
        android:text="Set default Address"
        android:textColor="?attr/uidButtonPrimaryNormalTextColor"
        android:textSize="16dp"
        app:uidComponentType="Primary" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mec_continue_shopping_btn"
        style="@style/mecCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_shopping_cart_btn_margin"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
        android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:textColor="?attr/uidButtonSecondaryNormalTextColor"
        android:text="Delete"
        android:textSize="16dp"
        app:uidComponentType="Secondary" />

    </LinearLayout>


</layout>