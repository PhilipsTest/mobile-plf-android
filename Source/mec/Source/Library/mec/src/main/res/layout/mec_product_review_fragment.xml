<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.detail.MECProductReviewsFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/mec_ll_layout"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_productCatalog_emptyProductCatalogText_lebel"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mec_no_reviews_available"
            android:textSize="@dimen/iap_product_ctn_12"
            android:visibility="gone" />

    </RelativeLayout>

</layout>