<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.platform.mec.screens.detail.MECProductReviewsFragment" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/mec_nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mec_bv_trustmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="?attr/uidContentTertiaryBackgroundColor">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/iap_text_size_16sp"
                android:src="@drawable/mec_bv_trustmark" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_bazaarvoice_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:padding="@dimen/iap_margin_10dp"
                android:textColor="?attr/uidLabelRegularNormalTextColor"
                android:linksClickable="true"
                android:text="link" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/mec_bv_trustmark"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_productReview_empty_label"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/mec_no_review_available"
            android:textSize="@dimen/iap_product_ctn_12"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mec_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true">

            <com.philips.platform.uid.view.widget.ProgressBar
                android:id="@+id/progressBar"
                style="@style/UIDProgressBarCircularIndeterminateSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</layout>