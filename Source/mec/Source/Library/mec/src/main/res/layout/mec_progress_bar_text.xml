<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.detail.MECProductDetailsFragment" />

    </data>

<FrameLayout
    android:id="@+id/mec_progress_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
        style="@style/UIDProgressBarCircularIndeterminateMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading cart..."
        android:layout_gravity="center|center_horizontal"
        app:uidCircularProgressBarSize="middle"
        app:uidIsIndeterminateProgressIndicator="true"
        app:uidLabelPosition="bottom_center" />

</FrameLayout>

</layout>
