<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

    <import type="android.view.View" />

        <variable
            name="ecsAddressShipping"
            type="com.philips.cdp.di.ecs.model.address.ECSAddress" />

        <variable
            name="mecDeliveryFragment"
            type="com.philips.cdp.di.mec.screens.address.MECDeliveryFragment" />

    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="@dimen/iap_margin_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/uidColorWhite"
                android:background="@color/colorPrimary"
                android:layout_height="24dp"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/border8_margin"
                android:layout_width="70dp"
                android:textColor="@color/uidColorBlack"
                android:text="Delivery"
                android:gravity="center"
                android:layout_height="20dp"/>

        </LinearLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:layout_gravity="center_horizontal"
                android:background="@color/mec_address_text_color"
                android:textColor="@color/uidColorWhite"
                android:text="2"
                android:gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/border8_margin"
                android:textColor="@color/mec_address_text_color"
                android:text="Checkout"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="20dp"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_shipping_address"
            style="@style/mec_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:textSize="20sp"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="@string/mec_shipping_address" />



            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_shipping_address_name"
                style="@style/mec_address_header"
                android:layout_marginLeft="@dimen/border16_margin_left_right"
                android:layout_marginRight="@dimen/border16_margin_left_right"
                android:layout_marginTop="@dimen/border12_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:layout_weight="1.2"
                android:padding="@dimen/iap_margin_4dp"
                android:text="@{ecsAddressShipping.firstName}" />


        <com.philips.platform.uid.view.widget.Label
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/border8_margin"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:textColor="@color/mec_address_text_color"
            app:shippingAddress="@{ecsAddressShipping}"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>

</layout>
