<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.detail.MECProductDetailsFragment" />

    </data>

    <FrameLayout
        android:id="@+id/mec_progress_bar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/mec_progress_bar"
            style="@style/UIDProgressBarCircularIndeterminateMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:background="@android:color/transparent" />

    </FrameLayout>

</layout>
