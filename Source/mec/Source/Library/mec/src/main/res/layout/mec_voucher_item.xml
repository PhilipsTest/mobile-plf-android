<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.shoppingCart.MECShoppingCartFragment" />

        <variable
            name="itemClickListener"
            type="com.philips.cdp.di.mec.common.ItemClickListener" />

        <variable
            name="voucher"
            type="com.philips.cdp.di.ecs.model.cart.AppliedVoucherEntity" />

    </data>

    <RelativeLayout
        android:id="@+id/iap_applied_vocuher_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/uidListItemDefaultNormalOnBackgroundColor"
        >

        <LinearLayout
            android:id="@+id/mec_voucherItem_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/border16_margin_left_right"
            android:padding="@dimen/border16_margin_left_right"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_voucherItem_label"
                style="@style/mecCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text='@{"Gift code: " + voucher.voucherCode ?? "" }'
                android:textSize="@dimen/iap_text_size_16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_discountedPrecentage_label"
                style="@style/mecCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iap_margin_4dp"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:text='@{voucher.appliedValue.formattedValue + " discount | " +  voucher.valueFormatted?? ""}'
                android:textSize="@dimen/iap_text_size_12"
                />

        </LinearLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_cross"
            android:layout_marginEnd="@dimen/border16_margin_left_right"
            style="@style/mec_right_arrow_product_catalog"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/iap_text_size_16sp"
            fontPath="fonts/iconfont.ttf"
            android:onClick="@{(view) -> itemClickListener.onItemClick(voucher)}"
            android:textColor="?attr/uidButtonQuietDefaultNormalIconColor"
            android:text="@string/dls_cross_bold"/>

        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/border8_margin"
            style="@style/mec_button_border"
            android:layout_below="@+id/mec_voucherItem_layout"
            />


    </RelativeLayout>





</layout>
