<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="keyBenefitAreaItem"
            type="com.philips.cdp.prxclient.datamodels.features.KeyBenefitAreaItem" />

        <variable
            name="featureModel"
            type="com.philips.cdp.prxclient.datamodels.features.FeaturesModel" />

    </data>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.philips.platform.uid.view.widget.Label
        style="@style/iapCentralesansBoldFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/border8_margin"
        android:paddingBottom="@dimen/border8_margin"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="16sp"
        android:text='@{ keyBenefitAreaItem.keyBenefitAreaName ?? ""}'
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:featureItems="@{keyBenefitAreaItem.feature}"
       />

</LinearLayout>


</layout>