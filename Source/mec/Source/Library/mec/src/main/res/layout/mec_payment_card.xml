<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mecPayment"
            type="com.philips.cdp.di.mec.payment.MECPayment" />

        <import type="android.view.View" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/mec_address_card_view"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/iap_margin_10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/iap_margin_10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/ll_rl_address"
            android:layout_width="160dp"
            android:layout_height="180dp">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_address_edit_icon"
                fontPath="fonts/iconfont.ttf"
                android:layout_width="@dimen/border_margin_32dp"
                android:layout_height="@dimen/border_margin_32dp"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/iap_margin_4dp"
                android:text="@string/dls_edit"
                android:textColor="?attr/uidButtonQuietEmphasisNormalTextColor"
                android:textSize="20sp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_payment_method"
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/iap_margin_10dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:gravity="start"
                    app:cardDetail="@{mecPayment}" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_payment_valid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:textSize="12sp"
                    android:visibility="@{mecPayment.ecsPayment.expiryMonth !=null ? View.VISIBLE : View.GONE, default = gone }"
                    app:cardValidityDetail="@{mecPayment}" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_name"
                    style="@style/mec_address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/border12_margin"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{mecPayment.ecsPayment.billingAddress.firstName + @string/mec_empty_space  + mecPayment.ecsPayment.billingAddress.lastName}"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor" />


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:ellipsize="end"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="12sp"
                    app:shippingAddress="@{mecPayment.ecsPayment.billingAddress}" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_billing_address_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/border8_margin"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:text="@string/mec_new_payment_disclaimer"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</layout>