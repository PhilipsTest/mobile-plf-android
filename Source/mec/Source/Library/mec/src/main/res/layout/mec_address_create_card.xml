<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ecsAddress"
            type="com.philips.platform.ecs.model.address.ECSAddress" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/mec_address_card_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/iap_margin_10dp"
        android:textDirection="locale"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                fontPath="fonts/centralesansbold.ttf"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mec_pros_plus"
                android:textSize="56sp" />

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mec_add_new_address"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>