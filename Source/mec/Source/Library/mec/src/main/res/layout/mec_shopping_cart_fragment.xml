<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.shoppingCart.MECShoppingCartFragment" />


        <variable
            name="shoppingCart"
            type="com.philips.cdp.di.ecs.model.cart.ECSShoppingCart" />

    </data>
<RelativeLayout
    android:id="@+id/parent_layout"
    android:layout_width="@dimen/iap_match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/mec_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <ScrollView
        android:id="@+id/mec_sv_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/price_button_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_cart_Summary"
            style="@style/mec_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="@string/mec_cart_summary" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mec_cart_summary_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mec_cart_Summary"
            android:nestedScrollingEnabled="false"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_gift_code"
            style="@style/mec_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mec_cart_summary_recycler_view"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="@string/mec_add_gift_codes" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/enter_voucher_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/mecCentralesansBookFont"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:layout_below="@+id/mec_gift_code"
            android:textColor="?attr/uidLabelDescriptorNormalTextColor"
            android:text="@string/mec_add_gift_code"
            />

        <LinearLayout
            android:id="@+id/mec_gift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_voucher_label"
            android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/mec_voucher_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/uidTextBoxDefaultPressedBackgroundColor"
            android:layout_marginTop="4dp"
            android:afterTextChanged="@{(edtitable)->fragment.afterUserNameChange(edtitable)}"
            android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginRight="@dimen/border8_margin"
            />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/mec_voucher_btn"
            style="@style/mecCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
            android:enabled="true"
            android:text="@string/mec_add"
            android:onClick="@{() -> fragment.onClickAddVoucher()}"
            android:textSize="@dimen/iap_text_size_16sp"
            android:textColor="?attr/uidButtonSecondaryNormalTextColor"
            app:uidComponentType="Secondary" />

        </LinearLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_accepted_code"
            style="@style/mec_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:layout_below="@+id/mec_gift_layout"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:visibility="visible"
            android:text="@string/mec_accepted_codes" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mec_accepted_code_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/price_button_view"
        android:layout_above="@+id/priceLayout"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="?attr/uidContentItemTertiaryNormalTextColor" />


        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mec_vat"
            android:backgroundTint="#FFFFFF"
            android:background="?attr/uidBottomSheetDefaultBackgroundColor"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_total_products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total (3 Products)"
                android:textSize="@dimen/iap_text_size_16sp"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                style="@style/mecCentralesansBookFont"
                />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_total_price"
                style="@style/mecCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text="5000"
                android:textSize="@dimen/iap_margin_20dp"
                />

        </LinearLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_vat"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginEnd="@dimen/iap_shopping_cart_btn_margin"
            android:layout_above="@+id/mec_continue_checkout_btn"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:text="Price including 20% vat"
            android:textSize="12dp"
            />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/mec_continue_checkout_btn"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_above="@+id/mec_continue_shopping_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
            android:text="@string/mec_continue_checkout"
            android:onClick="@{() -> fragment.onCheckOutClick()}"
            android:textColor="?attr/uidButtonPrimaryNormalTextColor"
            android:textSize="16dp"
            app:uidComponentType="Primary" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/mec_continue_shopping_btn"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
            android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
            android:enabled="true"
            android:layout_alignParentBottom="true"
            android:textColor="?attr/uidButtonSecondaryNormalTextColor"
            android:text="@string/mec_continue_shopping"
            android:textSize="16dp"
            app:uidComponentType="Secondary" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mec_empty_result"
        android:layout_width="@dimen/iap_match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/uidContentPrimaryBackgroundColor">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/extra_option"
            style="@style/mec_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="@string/mec_product_title" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/uidColorWhite"
            android:orientation="vertical"
            android:paddingBottom="@dimen/border16_margin_left_right"
            android:paddingEnd="@dimen/border16_margin_left_right"
            android:paddingStart="@dimen/border16_margin_left_right"
            android:paddingTop="@dimen/border16_margin_left_right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/iap_product_ctn_12"
                    android:background="@drawable/mec_info_image"
                    android:scaleType="fitXY" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/product_name_view"
                    style="@style/iapCentralesansBoldFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/mec_nothing_in_cart"
                    android:textSize="@dimen/iap_text_size_16sp" />
            </LinearLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/empty_cart"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/border16_margin_left_right"
                android:layout_height="wrap_content"
                android:text="@string/mec_empty_cart"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/title" />

        </LinearLayout>

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_continue_shopping"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border16_margin_left_right"
            android:enabled="true"
            android:text="@string/mec_continue_shopping" />
    </LinearLayout>

</RelativeLayout>

    </layout>
