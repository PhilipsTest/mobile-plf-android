<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="com.philips.cdp.di.ecs.model.products.ECSProduct" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:paddingLeft="5dp"
    android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
    tools:context=".screens.Detail.MECProductInfoFragment">



        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_product_description"
            style="@style/mecCentralesansBoldFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
            android:text="@{product.summary.marketingTextHeader}"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_product_disclaimer"
            style="@style/UIDLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mec_product_description"
            android:includeFontPadding="false"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            app:setDisclaimer="@{product}"
            android:textSize="12sp"
            android:visibility="visible"
            android:layout_marginTop="30dp"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_productCatalog_empty_label"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mec_no_reviews_available"
        android:textSize="@dimen/iap_product_ctn_12"
        android:visibility="gone" />



</RelativeLayout>

</layout>