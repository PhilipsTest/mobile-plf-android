<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_margin_20dp"
        android:layout_marginTop="@dimen/iap_margin_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- <com.philips.platform.uid.view.widget.ProgressBar
                 android:id="@+id/progressBar"
                 style="@style/UIDProgressBarCircularIndeterminateMiddle"
                 android:visibility="visible" />-->

            <com.philips.platform.uid.view.widget.ProgressBarWithLabel
                style="@style/UIDProgressBarCircularIndeterminateMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mec_please_wait"
                android:visibility="visible"
                app:uidCircularProgressBarSize="middle"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidLabelPosition="bottom_center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>