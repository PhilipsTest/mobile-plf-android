<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
        name="fragment"
        type="com.philips.cdp.di.mec.screens.catalog.MECProductCatalogFragment" />

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
        android:paddingBottom="8dp">


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_list"
            style="@style/mec_dls_list"

            />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_grid"
            style="@style/mec_dls_grid"

             />


        <com.philips.platform.uid.view.widget.SearchBox
            android:id="@+id/mec_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/uidContentItemTertiaryNormalTextColor" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_banner_place_holder"
        android:layout_below="@+id/view"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/border8_margin"
        android:layout_marginEnd="@dimen/border16_margin_left_right"
        android:layout_marginStart="@dimen/border16_margin_left_right"
        android:layout_marginTop="@dimen/border8_margin"
        android:paddingBottom="@dimen/border8_margin"
        app:addView="@{fragment.totalPages }"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_catalog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_banner_place_holder"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/mec_progress_layout"
        android:clipToPadding="false"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/mec_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progressBar"
            style="@style/UIDProgressBarCircularIndeterminateSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <View
            android:id="@+id/mec_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/mec_privacyLayout"
            android:visibility="gone"
            android:background="@drawable/uid_shadow_level_two" />

        <LinearLayout
            android:id="@+id/mec_privacyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/uidContentPrimaryBackgroundColor"
            android:layout_below="@+id/mec_progress_layout"
            android:padding="15dp"
            android:visibility="gone">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mecPrivacy"
                style="@style/iapCentralesansMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:visibility="visible"
                android:text="read"
                android:textColor="?attr/uidLabelRegularNormalTextColor"
                android:textSize="@dimen/iap_product_original_price" />

        </LinearLayout>

    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_productCatalog_emptyText_label"
        style="@style/mecCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mec_no_product_available"
        android:visibility="gone"
        android:textSize="@dimen/iap_product_ctn_12"/>


</RelativeLayout>

</layout>