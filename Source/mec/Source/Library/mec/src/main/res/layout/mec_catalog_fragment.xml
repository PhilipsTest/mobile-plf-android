<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.catalog.MECProductCatalogFragment" />

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:background="#DCDCDC">

    <ImageView
        android:id="@+id/mec_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:background="#ffffff"
        android:src="@drawable/mec_list"/>

        <ImageView
            android:id="@+id/mec_grid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:src="@drawable/mec_grid" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iap_ll_search_box"
        android:layout_below="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <com.philips.platform.uid.view.widget.SearchBox
            android:id="@+id/mec_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/border8_margin"
            android:paddingTop="@dimen/border8_margin" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/iap_ll_search_box"
        android:layout_margin="20dp"
        android:id="@+id/product_catalog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />


   <!-- "@{age > 13 ? View.GONE : View.VISIBLE}"
 app:layoutManager="@{catalog.checked ? android.support.v7.widget.GridLayoutManager : android.support.v7.widget.LinearLayoutManager}"
    "@{user.displayName != null ? user.displayName : user.lastName}"-->



</RelativeLayout>

</layout>