<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.catalog.MECProductCatalogFragment" />

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mec_list"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:clickable="true"
            android:background="#DCDCDC"
            android:layout_marginBottom="@dimen/border12_margin"
            android:layout_marginTop="@dimen/border12_margin"
            android:src="@drawable/mec_list"/>

        <ImageView
            android:id="@+id/mec_grid"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:layout_marginBottom="@dimen/border12_margin"
            android:layout_marginTop="@dimen/border12_margin"
            android:src="@drawable/mec_grid" />

        <com.philips.platform.uid.view.widget.SearchBox
            android:id="@+id/mec_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/uidContentItemTertiaryNormalTextColor" />


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/mec_ll_layout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/product_catalog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_productCatalog_emptyText_label"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mec_no_product_available"
        android:textSize="@dimen/iap_product_ctn_12"
        android:visibility="gone" />


</RelativeLayout>

</layout>