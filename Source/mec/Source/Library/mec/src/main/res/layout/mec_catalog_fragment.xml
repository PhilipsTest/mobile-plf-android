<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
        name="fragment"
        type="com.philips.cdp.di.mec.screens.catalog.MECProductCatalogFragment" />

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/mec_list"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:background="#DCDCDC"
            android:src="@drawable/mec_list"/>

        <ImageView
            android:id="@+id/mec_grid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:src="@drawable/mec_grid" />

        <com.philips.platform.uid.view.widget.SearchBox
            android:id="@+id/mec_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/mec_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/uidContentItemTertiaryNormalTextColor" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_banner_place_holder"
        android:layout_below="@+id/view"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/border8_margin"
        android:layout_marginEnd="@dimen/border16_margin_left_right"
        android:layout_marginStart="@dimen/border16_margin_left_right"
        android:layout_marginTop="@dimen/border8_margin"
        android:paddingBottom="@dimen/border8_margin"
        app:addView="@{fragment.totalPages }"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/ll_banner_place_holder"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/product_catalog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_productCatalog_emptyText_label"
        style="@style/mecCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mec_no_product_available"
        android:visibility="gone"
        android:textSize="@dimen/iap_product_ctn_12"/>


</RelativeLayout>

</layout>