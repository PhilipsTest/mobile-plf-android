<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.orderSummary.MECOrderSummaryFragment" />


        <variable
            name="shoppingCart"
            type="com.philips.cdp.di.ecs.model.cart.ECSShoppingCart" />

        <variable
            name="ecsAddressShipping"
            type="com.philips.cdp.di.ecs.model.address.ECSAddress" />

        <variable
            name="ecsPaymentMode"
            type="com.philips.cdp.di.ecs.model.payment.ECSPayment" />

        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="@dimen/iap_match_parent"
        android:layout_height="match_parent"
        android:background="@color/uidColorWhite"
        android:textDirection="locale">

        <RelativeLayout
            android:id="@+id/mec_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ScrollView
                android:id="@+id/mec_sv_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/price_button_view"
                android:layout_alignParentTop="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/mec_delivery_status"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="@dimen/iap_margin_10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <com.philips.platform.uid.view.widget.Label
                                style="@style/mecCentralesansBoldFont"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/mec_circular"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="?attr/uidTokenDefaultNormalCircleTextColor"
                                android:textSize="16sp" />

                            <com.philips.platform.uid.view.widget.Label
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/border8_margin"
                                android:gravity="center"
                                android:text="@string/mec_delivery"
                                android:textColor="@color/mec_address_text_color"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:layout_gravity="top"
                            android:layout_marginTop="16dp"
                            android:background="?attr/uidTokenDefaultNormalBackgroundColor" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <com.philips.platform.uid.view.widget.Label
                                style="@style/mecCentralesansBoldFont"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/mec_circular_grey"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="?attr/uidTokenDefaultNormalCircleTextColor"
                                android:textSize="16sp" />

                            <com.philips.platform.uid.view.widget.Label
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/border8_margin"
                                android:gravity="center"
                                android:text="@string/mec_checkout"
                                android:textColor="@color/uidColorBlack"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mec_order_Summary_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mec_delivery_status"
                        android:background="?attr/uidContentPrimaryBackgroundColor"
                        android:orientation="vertical">


                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/tv_shipping_address"
                            style="@style/mec_header"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:paddingStart="@dimen/border16_margin_left_right"
                            android:paddingEnd="@dimen/border16_margin_left_right"
