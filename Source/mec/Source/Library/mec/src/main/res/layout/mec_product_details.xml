<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.detail.MECProductDetailsFragment" />


        <variable
            name="product"
            type="com.philips.cdp.di.ecs.model.products.ECSProduct" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="@dimen/border16_margin_left_right"
        android:paddingStart="@dimen/border16_margin_left_right"
        android:layout_marginBottom="50dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iap_product_detail_image_height"
                >

                <ProgressBar
                    android:id="@+id/progress_image"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iap_product_detail_image_height"
                    app:assets="@{product.assets.asset}"/>
            </FrameLayout>
            <com.philips.platform.uid.view.widget.Label
                android:background="@drawable/mec_semi_circular"
                android:id="@+id/mecPriceDetailId"
                android:paddingRight="5dp"
                android:gravity="end|center_vertical"
                android:minWidth="152dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="?attr/uidTokenDefaultNormalTextColor"
                android:textSize="16sp"
                style="@style/mecCentralesansBoldFont"
                android:layout_alignBottom="@+id/framelayout"/>

            <com.philips.platform.uid.view.widget.Label
                android:background="@drawable/mec_circular"
                android:id="@+id/mec_priceDetailIcon"
                android:gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"
                android:text="$"
                android:textColor="?attr/uidTokenDefaultNormalCircleTextColor"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/framelayout"/>

            <com.philips.platform.uid.view.widget.Label
                android:background="@drawable/mec_semi_circular_orange"
                android:id="@+id/mec_priceDiscount"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="70dp"
                android:textColor="?attr/uidTokenDefaultNormalTextColor"
                style="@style/mecCentralesansBoldFont"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/framelayout"/>

            <com.philips.platform.uid.view.widget.Label
                android:background="@drawable/mec_circular_orange"
                android:id="@+id/mec_priceDiscountIcon"
                android:gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="70dp"
                android:text="%"
                android:textColor="?attr/uidTokenDefaultNormalCircleTextColor"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/framelayout"/>


            <com.philips.platform.uid.view.widget.DotNavigationIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/framelayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/border24_margin"
                android:paddingTop="@dimen/border24_margin" />

            <LinearLayout
                android:id="@+id/mec_retailerItem_product_layout"
                android:layout_below="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_retailerItem_productName_lebel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/mecCentralesansBoldFont"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:text="@{product.summary.productTitle}"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_4dp">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_rating_lebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mec_rating_color"
                        android:text="4"
                        android:textSize="@dimen/iap_product_original_price" />

                    <com.philips.platform.uid.view.widget.RatingBar
                        android:id="@+id/mec_rating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_review_lebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mec_rating_color"
                        android:text=" (3 reviews)"
                        android:textSize="@dimen/iap_product_original_price" />

                </LinearLayout>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_retailerItem_ctn_lebel"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/iap_margin_4dp"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:text="@{product.code}"/>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_product_detail_stock_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/iap_margin_4dp"
                    app:setStockInfo="@{ product}"
                   />

            </LinearLayout>



            <android.support.design.widget.TabLayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/tabs_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/mec_retailerItem_product_layout" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_main"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/tabs_main"/>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        >
        <com.philips.platform.uid.view.widget.Button
            style="@style/UIDDefaultButton.UIDImageTextButton"
            android:id="@+id/mec_find_retailer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            app:uidComponentType="Secondary"
            android:text="@string/mec_view_retailers"
            android:textSize="14sp"

            />

        <com.philips.platform.uid.view.widget.Button
            style="@style/UIDDefaultButton.UIDImageTextButton"
            android:id="@+id/mec_add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            app:uidComponentType="Primary"
            android:text="@string/mec_add_to_cart"
            android:textSize="14sp"
            />

    </LinearLayout>

</RelativeLayout>
</layout>