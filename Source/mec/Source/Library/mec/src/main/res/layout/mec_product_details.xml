<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.platform.mec.screens.detail.MECProductDetailsFragment" />


        <variable
            name="product"
            type="com.philips.platform.ecs.microService.model.product.ECSProduct" />

        <import type="android.view.View" />

        <variable
            name="mecDataHolder"
            type="com.philips.platform.mec.utils.MECDataHolder" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/details_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_parent_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_button"
                    android:layout_gravity="center_horizontal"
                    android:fadeScrollbars="true"
                    android:scrollbarSize="0dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <FrameLayout
                            android:id="@+id/framelayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/iap_product_detail_image_height"
                            android:layout_marginStart="@dimen/border16_margin_left_right"
                            android:layout_marginEnd="@dimen/border16_margin_left_right">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/pager"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/iap_product_detail_image_height"
                                app:assets="@{product.assets.validPRXImageAssets}" />
                        </FrameLayout>

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/mecPriceDetailId"
                            style="@style/mecCentralesansBoldFont"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@+id/framelayout"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/mec_semi_circular"
                            android:gravity="end|center_vertical"
                            android:paddingStart="34dp"
                            android:paddingEnd="5dp"
                            android:textColor="?attr/uidTokenDefaultNormalTextColor"
                            android:textSize="16sp" />

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/mec_priceDetailIcon"
                            style="@style/mecCentralesansBoldFont"
                            fontPath="fonts/mec_iconfont.ttf"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@+id/framelayout"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/mec_circular"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:text="@string/dls_currency"
                            android:textAlignment="center"
                            android:textColor="?attr/uidTokenDefaultNormalCircleTextColor"
                            android:textSize="18sp" />

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/mec_priceDiscount"
                            style="@style/mecCentralesansBoldFont"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@+id/framelayout"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="70dp"
                            android:background="@drawable/mec_semi_circular_orange"
                            android:gravity="end|center_vertical"
                            android:minWidth="100dp"
                            android:paddingStart="34dp"
                            android:paddingEnd="5dp"
                            android:textColor="?attr/uidTokenDefaultNormalTextColor"
                            android:textSize="16sp" />

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/mec_priceDiscountIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@+id/framelayout"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="70dp"
                            android:background="@drawable/mec_circular_orange"
                            android:gravity="center"
                            android:text="%"
                            android:textAlignment="center"
                            android:textColor="?attr/uidTokenDefaultNormalCircleTextColor" />


                        <com.philips.platform.uid.view.widget.DotNavigationIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/framelayout"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/border24_margin"
                            android:paddingBottom="@dimen/border24_margin" />

                        <LinearLayout
                            android:id="@+id/mec_retailerItem_product_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/indicator"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/border16_margin_left_right"
                            android:layout_marginEnd="@dimen/border16_margin_left_right"
                            android:orientation="vertical">

                            <com.philips.platform.uid.view.widget.Label
                                android:id="@+id/mec_retailerItem_productName_lebel"
                                style="@style/mecCentralesansBoldFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='@{product.summary.productTitle ?? ""}'
                                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                                android:textSize="@dimen/iap_text_size_20sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/iap_margin_10dp">

                                <com.philips.platform.uid.view.widget.Label
                                    android:id="@+id/mec_rating_lebel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/uidContentItemSignalNormalTextWarningColor"
                                    android:textSize="@dimen/iap_product_original_price" />

                                <com.philips.platform.uid.view.widget.RatingBar
                                    android:id="@+id/mec_detail_rating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="1"
                                    android:numStars="5"
                                    android:stepSize="0.01" />

                                <com.philips.platform.uid.view.widget.Label
                                    android:id="@+id/mec_review_lebel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:textColor="?attr/uidContentItemSignalNormalTextWarningColor"
                                    android:textSize="@dimen/iap_product_original_price" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mec_ctn_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mec_retailerItem_product_layout"
                            android:layout_marginStart="@dimen/border16_margin_left_right"
                            android:layout_marginTop="@dimen/iap_margin_10dp"
                            android:layout_marginEnd="@dimen/border16_margin_left_right"
                            android:orientation="horizontal">

                            <com.philips.platform.uid.view.widget.Label
                                android:id="@+id/mec_retailerItem_ctn_lebel"
                                style="@style/mecCentralesansBookFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:text='@{product.ctn ?? ""}'
                                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                                android:textSize="12sp" />

                            <com.philips.platform.uid.view.widget.Label
                                android:id="@+id/mec_product_detail_stock_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs_main"
                            style="@style/MecTabStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/mec_ctn_label"
                            android:layout_marginTop="8dp"
                            app:tabTextAppearance="@style/CustomTextAppearanceTab" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager_main"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_below="@+id/tabs_main" />


                    </RelativeLayout>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/ll_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/mec_find_retailer_button_primary"
                        style="@style/MecRetailersButton"
                        fontPath="fonts/iconfont.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center"
                        android:onClick="@{() -> fragment.onBuyFromRetailerClick()}"
                        android:text="@{@string/dls_listview + @string/mec_empty_space + @string/mec_buy_from_retailers}"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:uidComponentType="Primary" />

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/mec_find_retailer_button_secondary"
                        style="@style/MecRetailersButton"
                        fontPath="fonts/iconfont.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center"
                        android:onClick="@{() -> fragment.onBuyFromRetailerClick()}"
                        android:text="@{@string/dls_listview + @string/mec_empty_space + @string/mec_buy_from_retailers}"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:uidComponentType="Secondary" />

                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/mec_add_to_cart_button"
                        style="@style/MecAddToCartButton"
                        fontPath="fonts/mec_iconfont.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:onClick="@{() -> fragment.addToCartClick()}"
                        android:text="@{@string/dls_cart + @string/mec_empty_space + @string/mec_add_to_cart}"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:uidComponentType="Primary" />

                </LinearLayout>
            </RelativeLayout>

            <include
                android:id="@+id/mec_progress"
                layout="@layout/mec_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

        </RelativeLayout>


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_productDetails_emptyText_label"
            style="@style/mecCentralesansBoldFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/mec_no_product_available"
            android:textSize="@dimen/iap_product_ctn_12"
            android:visibility="gone" />
    </LinearLayout>
</layout>