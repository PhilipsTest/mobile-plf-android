<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.philips.cdp.di.mec.screens.detail.MECProductDetailsFragment" />

        <variable
            name="detail"
            type="com.philips.cdp.di.mec.screens.detail.MECProductDetail" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="@dimen/border16_margin_left_right"
        android:paddingStart="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border24_margin"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iap_product_detail_image_height"
                android:layout_marginTop="@dimen/border24_margin">

                <ProgressBar
                    android:id="@+id/progress_image"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iap_product_detail_image_height"
                    app:assets="@{detail.assets}"/>
            </FrameLayout>

            <com.philips.platform.uid.view.widget.DotNavigationIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/framelayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/border24_margin"
                android:paddingTop="@dimen/border24_margin" />

            <LinearLayout
                android:id="@+id/mec_retailerItem_product_layout"
                android:layout_below="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_retailerItem_productName_lebel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:text="Avance Collection Blender with high speed"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_4dp">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_rating_lebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D2691E"
                        android:text="4"
                        android:textSize="@dimen/iap_product_original_price" />

                    <RatingBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numStars="1"
                        style="?android:attr/ratingBarStyleSmall"
                        android:isIndicator="false"
                        android:theme="@style/RatingBar"/>

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_review_lebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D2691E"
                        android:text=" (3 reviews)"
                        android:textSize="@dimen/iap_product_original_price" />

                </LinearLayout>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_retailerItem_ctn_lebel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_4dp"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:text="Philips 65PUS8901"/>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_out_of_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/iap_margin_4dp"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:text="Out of stock"/>

            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab_selector"
                android:background="@color/colorPrimary"
                app:tabSelectedTextColor="?attr/uidContentItemTertiaryNormalTextColor"
                app:tabTextColor="@android:color/white"
                android:layout_below="@+id/mec_retailerItem_product_layout">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info"/>

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"/>

            </android.support.design.widget.TabLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
</layout>