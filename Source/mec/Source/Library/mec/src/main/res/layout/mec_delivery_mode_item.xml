<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="deliveryMode"
            type="com.philips.platform.ecs.model.address.ECSDeliveryMode" />


        <!--    <variable
                name="mecDeliveryFragment"
                type="com.philips.platform.mec.screens.address.MECDeliveryFragment" />-->

    </data>

    <RelativeLayout
        android:id="@+id/mec_delivery_mode_item_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/border16_margin_left_right"
        android:layout_marginEnd="@dimen/border16_margin_left_right"
        android:textDirection="locale">

        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/mec_delivery_mode_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/border16_margin_left_right"
            android:gravity="center" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_delivery_mode_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border12_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/mec_delivery_mode_radio_button"
            android:text='@{deliveryMode.name }'

            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_delivery_mode_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mec_delivery_mode_Title"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/border12_margin"
            android:layout_toEndOf="@+id/mec_delivery_mode_radio_button"
            android:lines="1"
            android:maxLines="2"
            android:text='@{ deliveryMode.description!=null ?  deliveryMode.deliveryCost.formattedValue + " | " + deliveryMode.description  : deliveryMode.deliveryCost.formattedValue }'
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_12" />

        <View
            android:id="@+id/line"
            style="@style/mec_button_border"
            android:layout_below="@+id/mec_delivery_mode_description"
            android:layout_marginTop="@dimen/border8_margin" />

    </RelativeLayout>
</layout>