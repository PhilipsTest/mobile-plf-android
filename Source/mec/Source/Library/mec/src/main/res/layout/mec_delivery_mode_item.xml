<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

       <variable
           name="deliveryMode"
           type="com.philips.cdp.di.ecs.model.address.ECSDeliveryMode"
           />


    <!--    <variable
            name="mecDeliveryFragment"
            type="com.philips.cdp.di.mec.screens.address.MECDeliveryFragment" />-->

    </data>
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.philips.platform.uid.view.widget.RadioButton
        android:id="@+id/mec_delivery_mode_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_delivery_mode_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text='@{deliveryMode.name }'
        android:layout_toEndOf="@+id/mec_delivery_mode_radio_button"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mec_delivery_mode_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='@{deliveryMode.description }'
        android:layout_toEndOf="@+id/mec_delivery_mode_radio_button"
        android:layout_below="@+id/mec_delivery_mode_Title"
        />


</RelativeLayout>
</layout>