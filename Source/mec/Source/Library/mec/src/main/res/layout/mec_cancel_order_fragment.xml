<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="contactPhone"
            type="com.philips.cdp.prxclient.datamodels.contacts.ContactPhone" />

        <variable
            name="orderNumber"
            type="String" />

    </data>


    <LinearLayout
        android:layout_width="@dimen/iap_match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:orientation="vertical"
        android:textDirection="locale"
        android:paddingStart="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:paddingEnd="@dimen/border16_margin_left_right"
        android:paddingBottom="@dimen/border16_margin_left_right">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_cancel_order_history_title"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/mec_cancel_order_number + @string/mec_empty_space+ orderNumber}"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/header" />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_cancel_order"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/border16_margin_left_right"
            android:text="@string/mec_cancel_order_dls_msg"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mec_cancel_order_ref"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/border16_margin_left_right"
            android:lineSpacingExtra="2dp"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{contactPhone.phoneNumber!=null ? View.VISIBLE : View.GONE, default = gone}"
            >

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_order_summary_detail_opening_timings_weekdays"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border12_margin"
                android:text="@{contactPhone!=null ? contactPhone.openingHoursWeekdays:null}"
                android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_order_summary_detail_opening_timings_holiday"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border12_margin"
                android:text="@{contactPhone!=null ? contactPhone.openingHoursSaturday:null}"
                android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp" />


            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/mec_cancel_order_call_btn"
                style="@style/mecCentralesansBookFont"
                android:layout_marginTop="@dimen/border18_margin_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text='@{@string/mec_call + @string/mec_empty_space + contactPhone.phoneNumber?? ""}'
                app:uidComponentType="Primary" />
        </LinearLayout>

    </LinearLayout>


</layout>
