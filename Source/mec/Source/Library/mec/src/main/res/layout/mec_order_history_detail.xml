<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="ecsOrders"
            type="com.philips.platform.ecs.model.orders.ECSOrders" />

        <variable
            name="mECOrderHistoryService"
            type="com.philips.platform.mec.screens.history.MECOrderHistoryService" />

        <variable
            name="contactPhone"
            type="com.philips.cdp.prxclient.datamodels.contacts.ContactPhone" />



        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="@dimen/iap_match_parent"
        android:layout_height="match_parent"
        android:background="@color/uidColorWhite"
        android:textDirection="locale">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/mec_order_detail_button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_time"
                    style="@style/mec_history_list_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/border16_margin_left_right"
                    android:text="@{mECOrderHistoryService.getFormattedDate(ecsOrders.placed)}"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/border16_margin_left_right"
                    android:layout_marginRight="@dimen/border16_margin_left_right">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/iv_order_state"
                        fontPath="fonts/iconfont.ttf"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/iap_margin_4dp"
                        android:gravity="start|center_vertical"
                        android:text="@string/dls_exclamationcircle"
                        android:textColor="?attr/uidContentItemSignalNormalTextInfoColor"
                        android:textSize="@dimen/iap_text_size_16sp" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/tv_order_state"
                        style="@style/mecCentralesansBoldFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/iap_margin_4dp"
                        android:layout_toEndOf="@+id/iv_order_state"
                        android:text="@{String.format(@string/mec_order_state, ecsOrders.statusDisplay.substring(0, 1).toUpperCase() + ecsOrders.statusDisplay.substring(1))}"
                        android:textColor="?attr/uidContentItemSignalNormalTextInfoColor"
                        android:textSize="@dimen/title" />


                </RelativeLayout>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_order_number"
                    style="@style/mecCentralesansBookFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/border12_margin"
                    android:layout_marginRight="@dimen/border16_margin_left_right"
                    android:layout_marginBottom="@dimen/border12_margin"
                    android:text="@{String.format(@string/mec_order_state,ecsOrders.code)}"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="@dimen/iap_product_ctn_12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{contactPhone.phoneNumber!=null ? View.VISIBLE : View.GONE, default = gone}"
                    >
                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/tv_shipping_status_message"
                        style="@style/mecCentralesansBookFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/border16_margin_left_right"
                        android:singleLine="false"
                        android:lineSpacingExtra="2dp"
                        android:text='@{@string/mec_contact_consumer_care_for_support + @string/mec_empty_space + contactPhone.phoneNumber?? ""}'
                        android:textSize="@dimen/title" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_order_summary_detail_opening_timings_weekdays"
                        style="@style/mecCentralesansBookFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/border16_margin_left_right"
                        android:layout_marginTop="@dimen/border12_margin"
                        android:layout_marginEnd="@dimen/border16_margin_left_right"
                        android:text="@{contactPhone!=null ? contactPhone.openingHoursWeekdays:null}"
                        android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
                        android:textSize="@dimen/iap_text_size_16sp" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_order_summary_detail_opening_timings_holiday"
                        style="@style/mecCentralesansBookFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/border16_margin_left_right"
                        android:layout_marginTop="@dimen/border12_margin"
                        android:layout_marginEnd="@dimen/border16_margin_left_right"
                        android:text="@{contactPhone!=null ? contactPhone.openingHoursSaturday:null}"
                        android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
                        android:textSize="@dimen/iap_text_size_16sp" />


                    <com.philips.platform.uid.view.widget.Button
                        android:id="@+id/mec_order_history_detail_call_btn"
                        style="@style/mecCentralesansBookFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/border16_margin_left_right"
                        android:clickable="true"
                        android:text='@{@string/mec_call_us + @string/mec_empty_space + contactPhone.phoneNumber?? ""}'
                        app:uidComponentType="Primary" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mec_order_Summary_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/uidContentPrimaryBackgroundColor"
                android:orientation="vertical">


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_shipping_address"
                    style="@style/mec_header"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/border16_margin_left_right"
                    android:paddingEnd="@dimen/border16_margin_left_right"
                    android:text="@string/mec_order_summary_shipping" />


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_shipping_address_name"
                    android:layout_below="@+id/tv_shipping_address"
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/iap_margin_10dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:layout_weight="1.2"
                    android:gravity="start"
                    android:visibility="@{ecsOrders.orderDetail!=null ? View.VISIBLE : View.GONE, default = gone }"
                    android:text="@{ecsOrders.orderDetail.deliveryAddress.firstName + @string/mec_empty_space  +ecsOrders.orderDetail.deliveryAddress.lastName}" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_shipping_address_detail"
                    android:layout_below="@+id/tv_shipping_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="50dp"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:textSize="12sp"
                    android:visibility="@{ecsOrders.orderDetail!=null ? View.VISIBLE : View.GONE, default = gone }"
                    app:shippingAddress="@{ecsOrders.orderDetail.deliveryAddress}" />

                <View
                    android:id="@+id/mec_divider_shipping_address"
                    android:layout_below="@+id/tv_shipping_address_detail"
                    style="@style/mec_button_border"
                    android:layout_marginTop="@dimen/border8_margin" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_delivery_mode_Title"
                    android:layout_below="@+id/mec_divider_shipping_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/border12_margin"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="@{ecsOrders.orderDetail.deliveryMode.name}"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="@dimen/iap_text_size_16sp" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_delivery_mode_description"
                    android:layout_below="@+id/mec_delivery_mode_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="@dimen/border12_margin"
                    android:lines="1"
                    android:maxLines="2"
                    android:text='@{ ecsOrders.orderDetail.deliveryMode.description!=null ?  ecsOrders.orderDetail.deliveryMode.deliveryCost.formattedValue + " | " + ecsOrders.orderDetail.deliveryMode.description  : ecsOrders.orderDetail.deliveryMode.deliveryCost.formattedValue }'
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:textSize="@dimen/iap_text_size_12" />


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_payment_method_Summary"
                    android:layout_below="@+id/mec_delivery_mode_description"
                    style="@style/mec_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/border16_margin_left_right"
                    android:paddingRight="@dimen/border16_margin_left_right"
                    android:visibility="@{ecsOrders.orderDetail.paymentInfo !=null ? View.VISIBLE : View.GONE, default = gone }"
                    android:text="@string/mec_payment_method" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_payment_method"
                    android:layout_below="@+id/mec_payment_method_Summary"
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/iap_margin_10dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:gravity="start"
                    android:visibility="@{ecsOrders.orderDetail.paymentInfo !=null ? View.VISIBLE : View.GONE, default = gone }"
                     />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_payment_valid"
                    android:layout_below="@+id/tv_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:gravity="start"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:textSize="12sp"
                    android:visibility="@{ecsOrders.orderDetail.paymentInfo.expiryMonth !=null ? View.VISIBLE : View.GONE, default = gone }"
                    />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_billing_address_name"
                    android:layout_below="@+id/tv_payment_valid"
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="@dimen/iap_margin_4dp"
                    android:layout_marginEnd="@dimen/border16_margin_left_right"
                    android:gravity="start"
                    android:text="@{ecsOrders.orderDetail.paymentInfo.billingAddress.firstName +@string/mec_empty_space+ ecsOrders.orderDetail.paymentInfo.billingAddress.lastName}"
                    android:visibility="@{ecsOrders.orderDetail.paymentInfo !=null ? View.VISIBLE : View.GONE, default = gone }" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_payment_label"
                    android:layout_below="@+id/tv_billing_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/border16_margin_left_right"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="@dimen/iap_margin_4dp"
                    android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                    android:textSize="12sp"
                    android:visibility="@{ecsOrders.orderDetail.paymentInfo !=null ? View.VISIBLE : View.GONE, default = gone }"
                    app:shippingAddress="@{ecsOrders.orderDetail.paymentInfo.billingAddress}" />


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_applied_voucher_address"
                    android:layout_below="@+id/mec_payment_label"
                    style="@style/mec_header"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/border16_margin_left_right"
                    android:paddingEnd="@dimen/border16_margin_left_right"
                    android:text="@string/mec_accepted_codes"
                    android:visibility="@{ecsOrders.orderDetail.appliedVouchers.size() > 0 ? View.VISIBLE : View.GONE, default = gone}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mec_accepted_code_recycler_view"
                    android:layout_below="@+id/tv_applied_voucher_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="@{ecsOrders.orderDetail.appliedVouchers.size() > 0 ? View.VISIBLE : View.GONE, default = gone}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_cart_Summary"
                    android:layout_below="@+id/mec_accepted_code_recycler_view"
                    style="@style/mec_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/border16_margin_left_right"
                    android:paddingRight="@dimen/border16_margin_left_right"
                    android:text="@string/mec_order_summary" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mec_cart_summary_recycler_view"
                    android:layout_below="@+id/mec_cart_Summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mec_price_summary_recycler_view"
                    android:layout_below="@+id/mec_cart_summary_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/mec_order_detail_button_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <View
                android:id="@+id/price_button_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

            <LinearLayout
                android:id="@+id/mecPriceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginTop="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
                android:background="?attr/uidBottomSheetDefaultBackgroundColor"
                android:backgroundTint="#FFFFFF"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_total_products"
                    style="@style/mecCentralesansBookFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text='@{@string/mec_cart_total + @string/mec_empty_space + "("+ ecsOrders.orderDetail.totalItems + @string/mec_empty_space + @string/mec_product_title + ")" ?? ""}'
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="@dimen/iap_text_size_16sp" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_total_price"
                    style="@style/mecCentralesansBoldFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{ecsOrders.orderDetail.totalPriceWithTax.formattedValue ?? ""}'
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="@dimen/iap_text_size_20sp" />

            </LinearLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mec_vat"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginEnd="@dimen/iap_shopping_cart_btn_margin"
                android:text="@{String.format(@string/mec_cart_tax_message, ecsOrders.orderDetail.totalTax.formattedValue)}"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_12" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/mec_order_history_cancel_order_btn"
                style="@style/mecCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginTop="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginRight="@dimen/iap_shopping_cart_btn_margin"
                android:layout_marginBottom="@dimen/iap_shopping_cart_btn_margin"
                android:enabled="true"
                android:clickable="true"
                android:text="@string/mec_cancel_order"
                android:textColor="?attr/uidButtonPrimaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp"
                app:uidComponentType="Secondary" />

        </LinearLayout>

    </RelativeLayout>

</layout>