<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ecsOrders"
            type="com.philips.platform.ecs.model.orders.ECSOrders" />
        <variable
            name="contact"
            type="com.philips.cdp.prxclient.datamodels.contacts.ContactsModel" />

    </data>

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_time"
            style="@style/mec_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/border16_margin_left_right"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingTop="@dimen/border16_margin_left_right" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border16_margin_left_right">

            <ImageView
                android:id="@+id/iv_order_state"
                android:layout_width="@dimen/border24_margin"
                android:layout_height="@dimen/border24_margin"
                android:gravity="center"
                android:layout_marginEnd="@dimen/iap_product_ctn_12"
                android:background="@drawable/mec_info_image"
                android:scaleType="fitXY" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_order_state"
                style="@style/tvBoldTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text= "@{String.format(@string/mec_order_state, ecsOrders.statusDisplay.substring(0, 1).toUpperCase() + ecsOrders.statusDisplay.substring(1))}"
                android:layout_marginStart="@dimen/iap_margin_4dp"
                android:layout_toEndOf="@+id/iv_order_state"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/title" />


        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_number"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border12_margin"
            android:text="@{String.format(@string/mec_order_state,ecsOrders.code)}"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_product_ctn_12" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_shipping_status_message"
            style="@style/mecCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border16_margin_left_right"
            android:gravity="center_vertical"
            android:text="@string/mec_contact_consumer_care_for_support"
            android:textSize="@dimen/title" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_opening_timings"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border24_margin"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_call"
            style="@style/mecCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border24_margin"
            android:enabled="false"
            android:text="@string/mec_call_us"
            app:uidComponentType="Primary" />

    </LinearLayout>

    </LinearLayout>

</layout>