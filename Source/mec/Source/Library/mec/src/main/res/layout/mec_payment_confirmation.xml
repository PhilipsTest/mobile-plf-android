<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    <variable
        name="fragment"
        type="com.philips.cdp.di.mec.screens.payment.MECPaymentConfirmationFragment" />

        <variable
            name="isPaymentCompleted"
            type="java.lang.Boolean" />

        <variable
            name="orderNumber"
            type="String" />

    </data>

<ScrollView
    android:layout_width="@dimen/iap_match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:animateLayoutChanges="true"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/extra_option_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_mec_thank_for_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            style="@style/iapCentralesansBoldFont20"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:text="@{isPaymentCompleted? @string/mec_thank_for_order : @string/mec_payment_pending}"
           />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_mec_your_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            fontPath="@fonts/centralesansbook.ttf"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
            android:text="@{isPaymentCompleted? @string/mec_your_order_number: @string/mec_thank_for_order}"
            android:visibility="gone"
            android:textSize="18sp"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_number_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{isPaymentCompleted? orderNumber: @string/mec_empty_space}"
            style="@style/iapCentralesansBoldFont"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
           />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_mec_confirmation_email_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            fontPath="@fonts/centralesansbook.ttf"
            android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp"/>

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/button_mec_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:enabled="true"
            android:onClick="@{()->fragment.onClickOk()}"
            android:text="@string/mec_ok"
            app:uidComponentType="Primary" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reg_scroll_margin" />
    </LinearLayout>
</ScrollView>
</layout>