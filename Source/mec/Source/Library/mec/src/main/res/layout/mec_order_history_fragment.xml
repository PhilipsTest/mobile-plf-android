<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mec_order_history_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/uidContentPrimaryBackgroundColor">

        <include
            android:id="@+id/mec_empty_history"
            layout="@layout/mec_empty_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_order_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mec_progress_layout"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/mec_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="gone">

            <com.philips.platform.uid.view.widget.ProgressBar
                android:id="@+id/pagination_progressBar"
                style="@style/UIDProgressBarCircularIndeterminateSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <include
            android:id="@+id/mec_order_history_progress"
            layout="@layout/mec_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </RelativeLayout>

</layout>