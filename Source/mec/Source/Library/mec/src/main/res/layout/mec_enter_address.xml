<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pattern"
            type="com.philips.cdp.di.mec.screens.address.MECRegexPattern" />

        <variable
            name="mecRegions"
            type="com.philips.cdp.di.mec.screens.address.MECRegions" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/border16_margin_left_right"
    android:paddingRight="@dimen/border16_margin_left_right">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/uidContentPrimaryBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/iap_margin_20dp"
        android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_shipping_address"
        style="@style/mec_address_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Detail"
        />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_salutation"
            style="@style/AddressItemLabel"
            android:text="Title"
            android:layout_marginTop="@dimen/border12_margin"
            />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_salutation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="Invalid input field">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_salutation"
                style="@style/mec_address_validation_text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Select"
                android:inputType="none"
                android:maxLines="1"
                app:dropDownData="@{pattern.dROP_DOWN_DATA}"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>



      <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_first_name"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="First Name" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="@string/ECSfirstName">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_first_name"
                style="@style/mec_address_validation_text"
                android:hint="First Name"
                app:firstName="@{null}"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:maxLength="17"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>


   <com.philips.platform.uid.view.widget.Label
        android:id="@+id/lable_last_name"
        style="@style/AddressItemLabel"
        android:layout_marginTop="@dimen/iap_margin_20dp"
        android:text="Last Name" />

    <com.philips.platform.uid.view.widget.InputValidationLayout
        android:id="@+id/ll_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:emptyValidator="@{null}"
        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
        app:uidTextBoxValidationErrorText="@string/ECSlastName">

        <com.philips.platform.uid.view.widget.ValidationEditText
            android:id="@+id/et_last_name"
            style="@style/mec_address_validation_text"
            android:hint="Last name"
            app:lastName="@{null}"
            android:inputType="textCapSentences"
            android:maxLength="17"
            android:maxLines="1"
            app:uidInputTextWithClearButton="true" />
    </com.philips.platform.uid.view.widget.InputValidationLayout>

    </LinearLayout>

<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="@dimen/border24_margin"
  android:orientation="vertical">

  <com.philips.platform.uid.view.widget.Label
      style="@style/mec_address_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Contact Details" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/border12_margin"
      android:orientation="vertical">


      <com.philips.platform.uid.view.widget.Label
          android:id="@+id/label_phone"
          style="@style/AddressItemLabel"
          android:text="Phone" />

      <com.philips.platform.uid.view.widget.InputValidationLayout
          android:id="@+id/ll_phone1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:phoneNumberRegex = "@{pattern.pHONE_NUMBER_PATTERN}"
          app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
          app:uidTextBoxValidationErrorText="Phone">

          <com.philips.platform.uid.view.widget.ValidationEditText
              android:id="@+id/et_phone1"
              style="@style/mec_address_validation_text"
              android:hint="Phone"
              android:inputType="phone"
              android:maxLines="1"
              app:uidInputTextWithClearButton="true" />
      </com.philips.platform.uid.view.widget.InputValidationLayout>

  </LinearLayout>
</LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/border24_margin"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        style="@style/mec_address_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address" />


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_house_no"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/border12_margin"
            android:text="House number" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_house_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="House number">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_house_no"
                style="@style/mec_address_validation_text"
                android:hint="House number"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:maxLength="35"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_address1"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="Address Line" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_address_line_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="Address Line">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_address_line_one"
                style="@style/mec_address_validation_text"
                android:layout_height="wrap_content"
                android:hint="Address Line"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:maxLength="35"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>

      <com.philips.platform.uid.view.widget.Label
          android:id="@+id/label_address2"
          style="@style/AddressItemLabel"
          android:layout_marginTop="@dimen/iap_margin_20dp"
          android:text="Address Line " />

      <com.philips.platform.uid.view.widget.InputValidationLayout
          android:id="@+id/ll_address_line_two"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:emptyValidator="@{null}"
          app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
          app:uidTextBoxValidationErrorText="Address Line">

          <com.philips.platform.uid.view.widget.ValidationEditText
              android:id="@+id/et_address_line_two"
              style="@style/mec_address_validation_text"
              android:layout_height="wrap_content"
              android:hint="Address Line 2"
              android:maxLines="1"
              android:inputType="textCapWords"
              android:maxLength="35"
              app:uidInputTextWithClearButton="true" />
      </com.philips.platform.uid.view.widget.InputValidationLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_town"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="town" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="town">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_town"
                style="@style/mec_address_validation_text"
                android:hint="town"
                android:inputType="textCapWords"
                android:maxLength="35"
                android:maxLines="1"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_postal_code"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="Postal Code" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="@string/ECSpostalCode">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_postal_code"
                style="@style/mec_address_validation_text"
                android:hint="@string/ECSpostalCode"
                android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                android:maxLength="10"
                android:maxLines="1"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/lebel_state"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="State" />

        <com.philips.platform.uid.view.widget.InputValidationLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyValidator="@{null}"
            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
            app:uidTextBoxValidationErrorText="State">

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/et_state"
                style="@style/mec_address_validation_text"
                android:hint="State"
                app:dropDownData="@{mecRegions.regionNames}"
                android:inputType="text"
                android:maxLines="1"
                app:uidInputTextWithClearButton="true" />
        </com.philips.platform.uid.view.widget.InputValidationLayout>


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/label_country"
            style="@style/AddressItemLabel"
            android:layout_marginTop="@dimen/iap_margin_20dp"
            android:text="Country" />

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/et_country"
                android:enabled="false"
                style="@style/mec_address_validation_text"
                android:inputType="textCapCharacters|textNoSuggestions|textVisiblePassword"
                android:text="India"
                android:maxLines="1"
                app:uidInputTextWithClearButton="true" />

  </LinearLayout>
</LinearLayout>

</ScrollView>

</layout>