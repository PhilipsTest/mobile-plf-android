<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="pattern"
            type="com.philips.cdp.di.mec.screens.address.MECRegexPattern" />

        <variable
            name="mecRegions"
            type="com.philips.cdp.di.mec.screens.address.MECRegions" />

        <variable
            name="addressFieldEnabler"
            type="com.philips.cdp.di.mec.screens.address.MECAddressFieldEnabler" />

        <variable
            name="ecsAddress"
            type="com.philips.cdp.di.ecs.model.address.ECSAddress" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_shipping_address"
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mec_personal_details" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
                    android:orientation="vertical"
                    android:padding="@dimen/border16_margin_left_right">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/border12_margin"
                        android:orientation="vertical"
                        android:visibility="@{addressFieldEnabler.salutationEnabled ? View.VISIBLE : View.GONE, default = visible}">

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/tv_salutation"
                            style="@style/AddressItemLabel"
                            android:text="@string/mec_title" />

                        <com.philips.platform.uid.view.widget.InputValidationLayout
                            android:id="@+id/ll_salutation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/iap_margin_4dp"
                            app:emptyValidator="@{null}"
                            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                            app:uidTextBoxValidationErrorText="@string/mec_title">

                            <com.philips.platform.uid.view.widget.ValidationEditText
                                android:id="@+id/et_salutation"
                                style="@style/mec_address_validation_text"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/mec_title"
                                android:text="@={ecsAddress.titleCode}"
                                android:inputType="none"
                                android:maxLines="1"
                                app:dropDownData="@{pattern.dROP_DOWN_DATA}"
                                app:uidInputTextWithClearButton="true" />
                        </com.philips.platform.uid.view.widget.InputValidationLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_20dp"
                        android:orientation="vertical"
                        android:visibility="@{addressFieldEnabler.firstNameEnabled ? View.VISIBLE : View.GONE, default = visible}">

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/label_first_name"
                            style="@style/AddressItemLabel"
                            android:text="@string/mec_first_name" />

                        <com.philips.platform.uid.view.widget.InputValidationLayout
                            android:id="@+id/ll_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/iap_margin_4dp"
                            app:emptyValidator="@{null}"
                            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                            app:uidTextBoxValidationErrorText="@string/mec_first_name_error">

                            <com.philips.platform.uid.view.widget.ValidationEditText
                                android:id="@+id/et_first_name"
                                style="@style/mec_address_validation_text"
                                android:hint="@string/mec_first_name_hint"
                                android:text="@={ecsAddress.firstName}"
                                android:inputType="textCapSentences"
                                android:maxLength="17"
                                android:maxLines="1"
                                app:uidInputTextWithClearButton="true" />
                        </com.philips.platform.uid.view.widget.InputValidationLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_20dp"
                        android:orientation="vertical"
                        android:visibility="@{addressFieldEnabler.lastNmeEnabled ? View.VISIBLE : View.GONE, default = visible}">

                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/lable_last_name"
                            style="@style/AddressItemLabel"
                            android:text="@string/mec_last_name" />

                        <com.philips.platform.uid.view.widget.InputValidationLayout
                            android:id="@+id/ll_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/iap_margin_4dp"
                            app:emptyValidator="@{null}"
                            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                            app:uidTextBoxValidationErrorText="@string/mec_last_name_error">

                            <com.philips.platform.uid.view.widget.ValidationEditText
                                android:id="@+id/et_last_name"
                                style="@style/mec_address_validation_text"
                                android:hint="@string/mec_last_name_hint"
                                android:text="@={ecsAddress.lastName}"
                                android:inputType="textCapSentences"
                                android:maxLength="17"
                                android:maxLines="1"
                                app:uidInputTextWithClearButton="true" />
                        </com.philips.platform.uid.view.widget.InputValidationLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/border12_margin"
                        android:orientation="vertical"
                        android:visibility="@{addressFieldEnabler.phoneEnabled ? View.VISIBLE : View.GONE, default = visible}">


                        <com.philips.platform.uid.view.widget.Label
                            android:id="@+id/label_phone"
                            style="@style/AddressItemLabel"
                            android:text="@string/mec_phone" />

                        <com.philips.platform.uid.view.widget.InputValidationLayout
                            android:id="@+id/ll_phone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:phoneNumberRegex="@{pattern.pHONE_NUMBER_PATTERN}"
                            app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                            app:uidTextBoxValidationErrorText="@string/mec_phone_error">

                            <com.philips.platform.uid.view.widget.ValidationEditText
                                android:id="@+id/et_phone1"
                                style="@style/mec_address_validation_text"
                                android:hint="@string/mec_phone_hint"
                                android:text="@={ecsAddress.phone1}"
                                android:inputType="phone"
                                android:maxLines="1"
                                app:uidInputTextWithClearButton="true" />
                        </com.philips.platform.uid.view.widget.InputValidationLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border24_margin"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    style="@style/mec_address_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mec_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
                    android:orientation="vertical"
                    android:padding="@dimen/border16_margin_left_right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.houseNumberEnabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_house_no"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_house_number" />

                    <com.philips.platform.uid.view.widget.InputValidationLayout
                        android:id="@+id/ll_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        app:emptyValidator="@{null}"
                        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                        app:uidTextBoxValidationErrorText="@string/mec_houseNumber_error">

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_house_no"
                            style="@style/mec_address_validation_text"
                            android:hint="@string/mec_house_number_hint"
                            android:text="@={ecsAddress.houseNumber}"
                            android:inputType="textCapWords"
                            android:maxLength="35"
                            android:maxLines="1"
                            app:uidInputTextWithClearButton="true" />
                    </com.philips.platform.uid.view.widget.InputValidationLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.address1Enabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_address1"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_address_line_one" />

                    <com.philips.platform.uid.view.widget.InputValidationLayout
                        android:id="@+id/ll_address_line_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        app:emptyValidator="@{null}"
                        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                        app:uidTextBoxValidationErrorText="@string/mec_address_error">

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_address_line_one"
                            style="@style/mec_address_validation_text"
                            android:layout_height="wrap_content"
                            android:hint="@string/mec_address_line_one_hint"
                            android:text="@={ecsAddress.line1}"
                            android:inputType="textCapWords"
                            android:maxLength="35"
                            android:maxLines="1"
                            app:uidInputTextWithClearButton="true" />
                    </com.philips.platform.uid.view.widget.InputValidationLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.address2Enabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_address2"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_address_line_two" />

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_address_line_two"
                            style="@style/mec_address_validation_text"
                            android:layout_marginTop="@dimen/iap_margin_4dp"
                            android:layout_height="wrap_content"
                            android:hint="(Optional)"
                            android:text="@={ecsAddress.line2}"
                            android:inputType="textCapWords"
                            android:maxLength="35"
                            android:maxLines="1"
                            app:uidInputTextWithClearButton="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.townEnabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_town"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_town" />

                    <com.philips.platform.uid.view.widget.InputValidationLayout
                        android:id="@+id/ll_town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        app:emptyValidator="@{null}"
                        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                        app:uidTextBoxValidationErrorText="@string/mec_town_error">

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_town"
                            style="@style/mec_address_validation_text"
                            android:hint="@string/mec_town_hint"
                            android:text="@={ecsAddress.town}"
                            android:inputType="textCapWords"
                            android:maxLength="35"
                            android:maxLines="1"
                            app:uidInputTextWithClearButton="true" />
                    </com.philips.platform.uid.view.widget.InputValidationLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.postalCodeEnabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_postal_code"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_postal_code" />

                    <com.philips.platform.uid.view.widget.InputValidationLayout
                        android:id="@+id/ll_postal_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        app:emptyValidator="@{null}"
                        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                        app:uidTextBoxValidationErrorText="@string/mec_postal_code_error">

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_postal_code"
                            style="@style/mec_address_validation_text"
                            android:hint="@string/mec_postal_code_hint"
                            android:text="@={ecsAddress.postalCode}"
                            android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                            android:maxLength="10"
                            android:maxLines="1"
                            app:uidInputTextWithClearButton="true" />
                    </com.philips.platform.uid.view.widget.InputValidationLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.stateEnabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/lebel_state"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_state" />

                    <com.philips.platform.uid.view.widget.InputValidationLayout
                        android:id="@+id/ll_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        app:emptyValidator="@{null}"
                        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                        app:uidTextBoxValidationErrorText="@string/mec_state">

                        <com.philips.platform.uid.view.widget.ValidationEditText
                            android:id="@+id/et_state"
                            style="@style/mec_address_validation_text"
                            android:hint="@string/mec_state"
                            android:text="@{ecsAddress.region.name}"
                            android:inputType="text"
                            android:maxLines="1"
                            app:dropDownData="@{mecRegions.regionNames}"
                            app:uidInputTextWithClearButton="true" />
                    </com.philips.platform.uid.view.widget.InputValidationLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp"
                    android:orientation="vertical"
                    android:visibility="@{addressFieldEnabler.countryEnabled ? View.VISIBLE : View.GONE, default = visible}">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/label_country"
                        style="@style/AddressItemLabel"
                        android:text="@string/mec_country" />

                    <com.philips.platform.uid.view.widget.EditText
                        android:id="@+id/et_country"
                        style="@style/mec_address_validation_text"
                        android:layout_marginTop="@dimen/iap_margin_4dp"
                        android:enabled="false"
                        android:inputType="textCapCharacters|textNoSuggestions|textVisiblePassword"
                        android:maxLines="1"
                        android:text="@{pattern.locale}"
                        app:uidInputTextWithClearButton="true" />
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</layout>