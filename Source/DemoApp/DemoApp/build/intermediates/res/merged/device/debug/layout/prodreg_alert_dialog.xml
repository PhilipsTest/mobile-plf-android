<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/uikit_modal_alert_button_left_margin">

        <TextView
            android:id="@+id/dialogTitle"
            style="@style/ProductRegistrationProductHeaderTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_label_text_size" />

        <TextView
            android:id="@+id/dialogDescription"
            style="@style/ProductRegistrationProductSubTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_registration_margin_top"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_message_text_size" />

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_registration_margin_top"
            android:gravity="center"
            android:text="@string/PPR_OK"
            android:textSize="@dimen/uikit_modal_alert_message_text_size" />

    </LinearLayout>
</FrameLayout>