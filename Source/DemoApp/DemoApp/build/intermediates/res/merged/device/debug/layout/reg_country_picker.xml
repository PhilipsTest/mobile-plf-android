<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg_dailog_bg"
    >

    <com.philips.cdp.registration.ui.customviews.XEditText
        android:id="@+id/reg_country_picker_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/reg_Country_Search_Text"
        style="@style/reg_style_tab_hint"
        android:drawableLeft="@drawable/search_icon"
        reglib:fontAssetName="CentraleSans-Light.otf" />


    <ListView
        android:id="@+id/reg_country_picker_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" >
    </ListView>

</LinearLayout>