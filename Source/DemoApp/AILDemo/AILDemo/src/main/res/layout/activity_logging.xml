<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logging"
        android:layout_gravity="center_horizontal"
        ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/appInfraLogComponentName"
                android:hint="ComponentName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                ></EditText>
            <EditText
                android:id="@+id/appInfraComponentVersion"
                android:hint="Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></EditText>

            <Button
                android:id="@+id/appInfraLogCreateLogger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Logger"
                />

            </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Log level below"
        ></TextView>
    <Spinner
        android:id="@+id/appInfraLogSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <CheckBox
        android:checked="true"
        android:id="@+id/appInfraLogConsole"
        android:text="Console Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/appInfraLogFile"
        android:text="File Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <EditText
        android:id="@+id/appInfraLogEvent"
        android:hint="Event ID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        ></EditText>
    <EditText
        android:id="@+id/appInfraLogMessage"
        android:hint="Message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        ></EditText>
    <EditText
        android:id="@+id/appInfraLogCount"
        android:text="1"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></EditText>

<Button
    android:id="@+id/appInfraLogTestButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Test Log"
    />

</LinearLayout>
