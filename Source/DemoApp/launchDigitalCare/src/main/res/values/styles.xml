<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--UI Kit Theme-->
    <style name="app_theme_vertical" parent="Theme.Philips.BrightBlue.Gradient.WhiteBackground"/>

    <style name="style_ctnbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>

        <item name="android:textSize">@dimen/uikit_notification_label_square_round_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">?attr/uikit_baseColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:checked">true</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="style_text_cardview">

        <item name="android:background">@drawable/header_ctn_background</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.9</item>
    </style>

    <style name="sampleactionbarIconHomeImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/actionbar_home_icon_white</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="sampleactionbarFontTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/actionbar_title_support</item>
        <item name="android:textColor">@color/uikit_white</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:layout_toRightOf">@+id/sample_back_to_home_img</item>
    </style>

    <style name="sampleactionbarIconArrowImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/consumercare_actionbar_back_arrow_white</item>
        <item name="android:paddingLeft">12dp</item>
    </style>





    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
