<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.philips.platform.uid.view.widget.NavigationContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uid_shadow_level_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/iap_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:minHeight="?android:attr/actionBarSize">

                    <FrameLayout
                        android:id="@+id/iap_header_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clickable="true"
                        >

                        <ImageView
                            android:id="@+id/iap_iv_header_back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />
                    </FrameLayout>

                    <com.philips.platform.uid.view.widget.ActionBarTextView
                        android:id="@+id/iap_actionBar_headerTitle_lebel"
                        style="@style/UIDToolbarBarTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true" />



                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
    </com.philips.platform.uid.view.widget.NavigationContainer>
</LinearLayout>
