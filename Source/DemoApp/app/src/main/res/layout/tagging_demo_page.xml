    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/privacy_layout"
        android:layout_below="@id/value_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Privacy"
            android:id="@+id/privacy_text"
            />
        <Button
            android:text="Opt In"
            android:id="@+id/opt_in_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Opt Out"
            android:id="@+id/opt_out_btn"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Unknown"
            android:id="@+id/opt_unknown_btn"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tag_layout"
        android:layout_below="@id/privacy_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

    <Button
        android:text="Tagg Page"
        android:id="@+id/tagg_page_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Tagg Action"
        android:id="@+id/tagg_action_button"
        />
        <Button
            android:text="Action Start"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/actionstart"
            />
        <Button
            android:text="Action End"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/actionend"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/action_Layout"
        android:layout_below="@id/tag_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:text="Action Update"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/actionupdate"
            />
        <Button
            android:text="Action Exist"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/actionexists"
            />
        <Button
            android:text="Check for SSl"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/checkssl"
            />
    </LinearLayout>



</RelativeLayout>