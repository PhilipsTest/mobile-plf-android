<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cdp.philips.com.demoapp.LauncherActivity">

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/btn_launch_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Device Pairing as Activity"
        android:padding="2dp"
        android:onClick="launchAsActivity"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_margin="2dp"
         />
    <Button
        android:id="@+id/btn_launch_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Device Pairing as Fragment"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:onClick="launchAsFragment"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:layout_below="@+id/btn_launch_activity"
        />

</RelativeLayout>
