<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/btn_purchase_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/order_history"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_shop_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_purchase_history"
        android:layout_margin="10dp"
        android:text="@string/shop_now"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_launch_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_shop_now"
        android:layout_margin="10dp"
        android:text="@string/launch_product_detail"
        android:visibility="visible" />


    <Button
        android:id="@+id/btn_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_launch_product_detail"
        android:layout_margin="10dp"
        android:text="@string/iap_shopping_cart"
        android:visibility="visible" />
</RelativeLayout>