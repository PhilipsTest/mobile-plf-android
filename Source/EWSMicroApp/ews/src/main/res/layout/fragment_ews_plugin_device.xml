<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.EWSDevicePowerOnViewModel"/>

    </data>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">

            <TextView
                android:id="@+id/ews_hotspot_blinking_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/ews_03_content_1"/>

            <ImageView
                style="@style/EWS.ImageScale"
                android:id="@+id/ews_hotspot_blinking_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:contentDescription="@null"
                android:background="@drawable/ews_product_bg_orig"
                app:setAnimationDrawable="@{@drawable/ic_ews_device_apmode_blinking}"/>

            <TextView
                android:id="@+id/ews_hotspot_blinking_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:text="@string/ews_03_content_2"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ews_hotspot_blinking_yes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.onYesButtonClicked()}"
                android:text="@string/ews_03_button_1"/>

            <Button
                android:id="@+id/ews_hotspot_blinking_no_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/c"
                style="@style/Btn.Secondary"
                android:onClick="@{() -> viewModel.onNoButtonClicked()}"
                android:text="@string/ews_03_button_2"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>