<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.TroubleshootConnectionUnsuccessfulViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">

            <TextView
                android:id="@+id/incorrect_password_title"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"/>

            <ImageView
                android:contentDescription="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setAnimationDrawable="@{@drawable/ic_ews_product_ui_wifi_blinking}"
                android:layout_marginTop="@dimen/e"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/connect_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.showConnectionErrorDeviceNotFound()}"
                android:text="@string/ews_20_button_1"/>

            <Button
                style="@style/Btn.Secondary"
                android:id="@+id/still_having_issues_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.showConnectionErrorDifferentNetwork()}"
                android:text="@string/ews_20_button_2"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>