<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.EWSPressPlayAndFollowSetupViewModel"/>

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">

            <ImageView
                android:id="@+id/ews_press_and_play_icon"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:adjustViewBounds="true"
                android:background="@drawable/ews_product_bg_orig"
                android:contentDescription="@null"
                app:setAnimationDrawable="@{@drawable/ic_ews_device_apmode_blinking}"
                />

            <TextView
                android:id="@+id/ews_press_and_play_desc"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:text="@string/ews_04_content"/>

            <ImageView
                android:id="@+id/ews_open_app_icon"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:adjustViewBounds="true"
                android:background="@drawable/ews_product_bg_orig"
                android:contentDescription="@null"
                app:setAnimationDrawable="@{@drawable/ic_ews_open_app_blinking}"
                />

            <Button
                android:id="@+id/ews_press_and_play_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.onNextButtonClicked()}"
                android:text="@string/ews_04_button_1"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>