<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.TroubleshootWrongWiFiViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/e">

            <TextView
                android:id="@+id/label_ews_phone_reconnected_different_network_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_ews_phone_reconnected_different_network_title"/>

            <TextView
                android:id="@+id/label_ews_troubleshoot_wrong_wifi"
                style="@style/EWS.Txt.HtmlBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                tools:text="@string/label_ews_phone_reconnected_different_network_body"/>

            <ImageView
                android:id="@+id/ews_paired_image"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d"
                android:layout_marginTop="@dimen/d"
                app:srcCompat="@drawable/ews_home_network"
                tools:ignore="ContentDescription"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/troubleshoot_btn"
                style="@style/Btn.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.launchRouterTroubleshooting()}"
                android:text="@string/button_ews_connection_unsuccesful_still_issue"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>