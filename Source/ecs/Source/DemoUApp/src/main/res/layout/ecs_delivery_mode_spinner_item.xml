<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/iap_match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/iap_delivery_mode_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/iap_ups_parcel_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            style="@style/Iap_RadioButtonStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/iap_title_ups_parcel"
                android:textSize="@dimen/title"
                style="@style/iapCentralesansBookFont"
                android:layout_width="match_parent"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/iap_available_time"
                style="@style/UIDLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/iap_retailers_store_name_size_12sp"
                />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/iap_delivery_parcel_amount"
                style="@style/iapCentralesansBookFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/title"
                />

        </LinearLayout>

    </LinearLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/iap_delivery_confirm_btn"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:visibility="gone"
        android:text="@string/iap_confirm"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/uid_gray_level_10"/>
</LinearLayout>