<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iap_applied_vocuher_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    >



    <LinearLayout
        android:id="@+id/iap_voucherItem_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/border16_margin_left_right"
        android:padding="@dimen/border16_margin_left_right"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_voucherItem_label"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_discountedPrecentage_label"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_margin_4dp"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_12"
           />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_discountedPrice_label"
            style="@style/iapCentralesansMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_margin_4dp"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />


    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/iap_cross"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/iap_text_size_16sp"
        fontPath="fonts/iconfont.ttf"
        android:textColor="?attr/uidButtonQuietDefaultNormalIconColor"
        android:text="@string/dls_cross_bold"/>


    <View
        android:id="@+id/line"
        android:layout_marginTop="@dimen/border8_margin"
        style="@style/iap_button_border"
        android:layout_below="@+id/iap_voucherItem_layout"
        />


</RelativeLayout>



