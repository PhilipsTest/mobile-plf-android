<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/demoAppMenus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/appversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/spinner_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appversion"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_margin="5dp" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_login_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_CountrySelection"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Launch UDI As Activity" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_login_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login_activity"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Launch UDI As Fragment" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_Registration"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Logout" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_RefreshSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_logout"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Refresh Session" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_MigrateUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_RefreshSession"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Migrate User To UDI" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_GetUserDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_MigrateUser"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Fetch User Details" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_RefetchUserDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_GetUserDetail"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Refetch User Details" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_IsOIDCToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_RefetchUserDetails"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Check UDI Token" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_InvalidateUDIToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_IsOIDCToken"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:text="Invalidate UDI Token" />


            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_RegistrationPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_InvalidateUDIToken"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:layout_margin="2dp"
                android:text="Launch PR" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_ECS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_RegistrationPR"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Launch ECS" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_MEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_ECS"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Launch MEC" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_IAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_MEC"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Launch IAP" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_MEC"
                android:layout_centerInParent="true"
                android:layout_margin="2dp">

                <com.philips.platform.uid.view.widget.Switch
                    android:id="@+id/switch_marketing_optedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    app:switchPadding="30dp" />

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/btn_UpdateMarketingOptin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:text="Update Marketing Optin" />
            </LinearLayout>


            <com.philips.platform.uid.view.widget.Switch
                android:id="@+id/switch_cookies_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Analytics Consent"
                app:switchPadding="30dp" />

            <com.philips.platform.uid.view.widget.Switch
                android:id="@+id/switch_ab_testing_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:text="A/B Testing Consent"
                app:switchPadding="30dp" />

            <FrameLayout
                android:id="@+id/pimDemoU_mainFragmentContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>