<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/pim_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIM Demo App"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_CountrySelection"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/pim_txtview"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:onClick="launch"
        android:text="Launch PIM MicroApp"
        android:layout_below="@id/spinner_CountrySelection"/>

</RelativeLayout>