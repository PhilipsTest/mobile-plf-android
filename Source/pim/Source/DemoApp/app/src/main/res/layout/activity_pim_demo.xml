<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/pim_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="PIM Demo App" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/selectLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pim_txtview"
        android:layout_centerInParent="true"
        android:layout_margin="5dp" />

  <!--  <aandroidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_CountrySelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLibrary"
        android:layout_centerInParent="true"

        android:layout_margin="5dp" />-->

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLibrary"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:onClick="launch"
        android:text="Launch PIM MicroApp" />

    <CheckBox
        android:id="@+id/pim_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch"
        android:layout_marginStart="@dimen/reg_dimen_8dp"
        android:layout_centerInParent="true"
        android:checked="false"
        android:text="Enable Chuck"/>

</RelativeLayout>