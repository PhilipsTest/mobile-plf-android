<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/pim_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/uidColorBlack"
        android:text="UDI Demo App" />

    <Switch
        android:id="@+id/enableMigrationSwitch"
        android:layout_below="@id/pim_txtview"
        android:text="Test Migration"
        android:switchPadding="20dp"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:textColor="@color/uidColorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/pim_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enableMigrationSwitch"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:checked="false"
        android:paddingStart="30dp"
        android:layoutDirection="rtl"
        android:text="Enable Chuck"/>

    <Spinner
        android:id="@+id/selectLibrary"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pim_checkbox"
        android:layout_marginLeft="5dp" />


    <Spinner
        android:id="@+id/spinner_CountrySelection"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLibrary"
        android:layout_marginLeft="5dp" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_CountrySelection"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Launch Registration" />

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/relaunchProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>