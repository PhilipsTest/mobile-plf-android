<?xml version="1.0" encoding="utf-8"?>

<com.philips.platform.uid.view.widget.SideBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_sidebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/uid_toolbar_layout"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/test_sidebar_left_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="?attr/uidContentPrimaryBackgroundColor">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/test_sidebar_left_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_left_label"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/test_sidebar_right_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="?attr/uidContentPrimaryBackgroundColor">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/test_sidebar_right_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_right_label"/>

    </RelativeLayout>
</com.philips.platform.uid.view.widget.SideBar>