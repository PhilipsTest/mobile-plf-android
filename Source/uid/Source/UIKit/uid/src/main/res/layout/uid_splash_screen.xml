<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/uid_splash_screen"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingEnd="@dimen/uid_splash_screen_margin_horizontal"
    android:paddingStart="@dimen/uid_splash_screen_margin_horizontal">

    <ImageView
        android:id="@id/uid_splash_screen_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@id/uid_splash_screen_app_name"
        fontPath="fonts/centralesanslight.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/uidSplashScreenDefaultTextColor"
        android:textSize="@dimen/uid_splash_screen_app_name_size"
        android:lineSpacingExtra="@dimen/uid_splash_screen_app_name_spacing"/>

</LinearLayout>