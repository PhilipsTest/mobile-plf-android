<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/uid_search_box"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@id/uid_search_icon_holder"
        style="?attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:id="@id/uid_search_box_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/uidSearchBoxAndroidDefaultFocusInputBackgroundColor">

        <ImageView
            android:id="@id/uid_search_back_button"
            android:layout_width="@dimen/uid_searchbox_button_dimen"
            android:layout_height="@dimen/uid_searchbox_button_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/uid_searchbox_back_icon_margin"
            android:background="@color/uidTransparent"
            android:focusable="true" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@id/uid_search_src_text"
            android:layout_width="@dimen/uid_searchbox_search_text_offset"
            android:layout_height="match_parent"
            android:textAlignment="viewStart"
            android:layout_marginStart="@dimen/uid_searchbox_button_padding_end"
            android:layout_weight="1"
            android:background="@null"
            android:dropDownHorizontalOffset="@dimen/uid_searchbox_search_text_offset"
            android:dropDownVerticalOffset="@dimen/uid_searchbox_search_text_offset"
            android:dropDownWidth="match_parent"
            android:ellipsize="end"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:inputType="text|textAutoComplete|textNoSuggestions"
            android:maxLines="1"
            android:textColor="?attr/uidSearchBoxAndroidDefaultNormalInputTextColor"
            android:textColorHint="?attr/uidSearchBoxAndroidDefaultNormalHintTextColor"
            android:textSize="@dimen/uid_searchbox_text_size"
            fontPath="fonts/centralesansmedium.ttf" />

        <FrameLayout
            android:id="@id/uid_search_clear_layout"
            android:layout_width="@dimen/uid_searchbox_button_dimen"
            android:layout_height="@dimen/uid_searchbox_button_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/uid_searchbox_button_margin"
            android:layout_marginStart="@dimen/uid_searchbox_button_margin"
            android:background="@color/uidTransparent">

            <ImageView
                android:id="@id/uid_search_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/uidTransparent"
                android:focusable="true" />
        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/uid_search_decoy_view" />

</LinearLayout>
