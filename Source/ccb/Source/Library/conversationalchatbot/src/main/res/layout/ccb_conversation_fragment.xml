<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">


    <LinearLayout
        android:id="@+id/ccb_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ccb_bot_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/chatbot"
            android:background="#F9F9F9"
            android:backgroundTint="#F9F9F9" />
    </LinearLayout>

        <ScrollView
            android:id="@+id/ccb_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/ccb_image_layout"
            android:layout_above="@+id/ccb_selectionView_layout">

                <LinearLayout
                    android:id="@+id/ccb_chat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/uidColorWhite"
            android:elevation="20dp"
            android:orientation="vertical"
            android:id="@+id/ccb_selectionView_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

    </RelativeLayout>