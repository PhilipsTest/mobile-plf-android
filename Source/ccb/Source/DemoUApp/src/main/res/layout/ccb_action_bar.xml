<com.philips.platform.uid.view.widget.NavigationContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/uid_shadow_level_two"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/demoScreen_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/ccb_demo_app_header_back_button_framelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:clickable="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ccb_demo_app_iv_header_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                   />
            </FrameLayout>


            <com.philips.platform.uid.view.widget.ActionBarTextView
                android:id="@+id/ccb_demo_app_header_title"
                style="@style/UIDToolbarBarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="true" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</com.philips.platform.uid.view.widget.NavigationContainer>