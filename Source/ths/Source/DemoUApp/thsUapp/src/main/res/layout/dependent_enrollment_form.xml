<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_container_layout_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ths_demo_toolbar_layout"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp">

            <include layout="@layout/uid_toolbar_layout" />

        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registration_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ths_demo_toolbar_layout"
        android:layout_above="@+id/ths_demo_shadow">

        <RelativeLayout
            android:id="@+id/registration_form_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/ths_fab_margin"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:paddingRight="@dimen/ths_fab_margin">


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_detail"
                style="@style/ths_title_text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:layout_marginTop="@dimen/ths_margin_top_registration_detail_title"
                android:text="@string/ths_demo_add_dependent" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_more_detail"
                style="@style/ths_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_detail"
                android:layout_marginBottom="@dimen/ths_margin_bottom_more_details"
                android:text="@string/ths_demo_more_details" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_dependant_email_address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/ths_demo_more_detail"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_dependant_email_address_title" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_dependant_email_address"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor"
                android:layout_below="@id/ths_demo_dependant_email_address_title"
                android:layout_marginBottom="@dimen/ths_fab_margin" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_dependant_email_address"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_registration_firstname" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_edit_first_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_first_name"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_edit_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_edit_first_name_container"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_registration_lastname" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_edit_last_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_last_name"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_edit_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_edit_last_name_container"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_registration_dob" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_edit_dob_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_dob"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_edit_dob"
                    style="@style/ths_calendar_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ths_date_placeholder"
                    android:inputType="none" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_edit_dob_container"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_registration_gender" />

            <com.philips.platform.uid.view.widget.RadioGroup
                android:id="@+id/radio_group_single_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:layout_below="@id/ths_demo_gender">

                <com.philips.platform.uid.view.widget.RadioButton
                    android:id="@+id/ths_demo_checkbox_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ths_demo_gender"
                    android:enabled="true"
                    android:text="@string/ths_registration_gender_female" />

                <com.philips.platform.uid.view.widget.RadioButton
                    android:id="@+id/ths_demo_checkbox_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ths_demo_checkbox_female"
                    android:enabled="true"
                    android:text="@string/ths_registration_gender_male" />
            </com.philips.platform.uid.view.widget.RadioGroup>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group_single_line"
                android:layout_marginTop="@dimen/ths_list_space"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                style="@style/ths_title_text_bold"
                android:text="@string/ths_demo_vital_information" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_label"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_demo_blood_pressure" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_vital_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_blood_pressure"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_vital_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Systolic"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_diastolic_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_vital_info_container"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_diastolic_name_demo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textEmailAddress"
                    android:hint="Diastolic"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_diastolic_container"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_demo_temperature" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_temperature_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_temperature"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_temperature_demo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_demo_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_temperature_container"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:text="@string/ths_demo_weight" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_demo_weight_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ths_demo_weight"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_demo_weight_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ths_demo_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        android:paddingEnd="@dimen/ths_fab_margin"
        android:paddingStart="@dimen/ths_fab_margin"
        android:paddingTop="@dimen/ths_fab_margin">

        <com.philips.platform.uid.view.widget.ProgressBarButton
            android:id="@+id/ths_demo_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:uidIsIndeterminateProgressIndicator="true"
            app:uidProgressIndicatorButtonProgressText="Loading.."
            app:uidProgressIndicatorButtonText="@string/ths_demo_add_continue" />
    </RelativeLayout>
</RelativeLayout>