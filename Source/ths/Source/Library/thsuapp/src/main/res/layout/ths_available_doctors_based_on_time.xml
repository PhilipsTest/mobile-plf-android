<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/providerListItemLayoutBasedOnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/uidContentPrimaryBackgroundColor">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/schedule_appointment"
            style="@style/UIDLabel.GridViewHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/ths_schedule_header_title"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="16sp" />


        <View
            android:id="@+id/below_header_label"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/schedule_appointment"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <RelativeLayout
            android:id="@+id/details_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/below_header_label"
            android:visibility="gone">

            <include
                android:id="@+id/provider_detail_container_view"
                layout="@layout/ths_provider_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/separator_details"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/provider_detail_container_view"
                android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ths_calendar_container_layout"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@+id/details_container"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:layout_marginStart="@dimen/ths_fab_margin"
            android:background="@drawable/uid_list_item_selector">


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_practice_icon_layout"
                style="@style/ths_font_icon_style"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="true"
                android:text="@string/dls_calendar" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ths_fab_margin"
                android:layout_toEndOf="@+id/ths_practice_icon_layout"
                android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
                android:maxLines="3"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:textSize="@dimen/ths_body_text"
                android:textStyle="bold" />

            <com.philips.platform.uid.view.widget.Label
                style="@style/ths_font_icon_style"
                android:text="@string/dls_navigationright" />

        </RelativeLayout>


        <View
            android:id="@+id/separator_below_date"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ths_calendar_container_layout"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <RelativeLayout
            android:id="@+id/no_available_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_below_date"
            android:visibility="gone">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/no_available_providers"
                style="@style/UIDLabel.RecyclerViewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/ths_schedule_timeslot_unavailable_title"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/selectanother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_available_providers"
                android:layout_marginBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/ths_select_other_provider"
                android:textColor="?attr/uidContentItemSecondaryDisabledTextColor"
                android:textSize="@dimen/uid_grid_descrption_size" />

            <View
                android:id="@+id/below_selectanother"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/selectanother"
                android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/number_of_available_doctors"
            style="@style/ths_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_available_container"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:paddingRight="@dimen/ths_fab_margin"
            android:text="@string/ths_schedule_header_title" />


        <View
            android:id="@+id/separator_below_number_of_doctors"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/number_of_available_doctors"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/providerListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/separator_below_number_of_doctors"
            android:scrollbars="vertical"/>

    </RelativeLayout>
</ScrollView>