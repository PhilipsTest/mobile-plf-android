<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provider_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/firstDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/telehealth_providerlist_start_end_margin"
        android:layout_marginStart="@dimen/telehealth_providerlist_start_end_margin">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/seeFirstDoctorLabel"
            fontPath="fonts/centralesansbold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/telehealth_providerlist_doctorlabel_verticalmargin"
            android:layout_marginTop="@dimen/telehealth_providerlist_doctorlabel_verticalmargin"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/telehealth_seeFirstDoctor_textsize" />

        <com.philips.platform.ths.utility.THSCustomButtonWithDrawableIcon
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seeFirstDoctorLabel"
            android:drawableEnd="@drawable/ic_right_arrow_show_more"
            android:text="@string/ths_get_started_button_title"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/telehealth_providerlist_doctorlabel_verticalmargin" />

        <com.philips.platform.ths.utility.THSCustomButtonWithDrawableIcon
            android:id="@+id/getScheduleAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seeFirstDoctorLabel"
            android:drawableEnd="@drawable/ic_right_arrow_show_more"
            android:layout_marginBottom="@dimen/telehealth_providerlist_doctorlabel_verticalmargin"
            android:text="@string/ths_schedule_appointment_button_title"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/firstDoctorLayout"
        android:background="?attr/uidContentSecondaryNeutralBackgroundColor">

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/searchBarLabel"
            style="@style/ths_list_item_header"
            android:background="?attr/uidContentSecondaryNeutralBackgroundColor"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/horizontalLine"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:paddingRight="@dimen/ths_fab_margin"
            android:text="@string/ths_provider_list_choose_provider" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchDoctorLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/providerListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:scrollbars="vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>