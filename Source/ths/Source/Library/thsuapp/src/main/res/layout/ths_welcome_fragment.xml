<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/init_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/customer_support"
            layout="@layout/ths_customer_support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ths_list_item_height"
            android:layout_alignParentBottom="true" />

        <include
            android:id="@+id/how_it_works"
            layout="@layout/how_it_works_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ths_list_item_height"
            android:layout_above="@id/customer_support" />


        <include
            android:id="@+id/appointments"
            layout="@layout/appointment_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ths_list_item_height"
            android:layout_above="@id/how_it_works" />

        <include
            android:id="@+id/details"
            layout="@layout/details_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ths_list_item_height"
            android:layout_above="@id/appointments" />

        <RelativeLayout
            android:id="@+id/viewlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/details"
            android:background="?attr/uidContentPrimaryBackgroundColor">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?attr/uidNavigationSecondaryBackgroundColor" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ths_welcome" />

            </FrameLayout>

            <com.philips.platform.ths.utility.THSCustomButtonWithDrawableIcon
                android:id="@+id/ths_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/ths_image_size"
                android:layout_marginLeft="@dimen/ths_fab_margin"
                android:layout_marginRight="@dimen/ths_fab_margin"
                android:text="@string/ths_get_started_button_title"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right_arrow_show_more"
                app:uidAccent="true"/>

            <ImageView
                android:id="@+id/ths_amwell_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_service_provided_by"
                android:paddingLeft="@dimen/ths_fab_margin"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:paddingRight="@dimen/ths_fab_margin"
                android:src="@mipmap/amwell_white_logo" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_service_provided_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/init_amwell"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:textSize="@dimen/ths_body_text"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/ths_fab_margin"
                android:paddingRight="@dimen/ths_fab_margin"
                android:text="@string/ths_confirm_branding"
                android:textColor="?attr/uidLoginScreenDefaultTextColor" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_quick"
                style="@style/ths_body_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ths_service_provided_by"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:background="@android:color/transparent"
                android:maxLines="2"
                android:visibility="gone"
                android:paddingLeft="@dimen/ths_fab_margin"
                android:paddingRight="@dimen/ths_fab_margin"
                android:text="@string/ths_welcome_description"
                android:textColor="?attr/uidLoginScreenDefaultTextColor" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/init_amwell"
                style="@style/ths_body_text_pre_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:enabled="false"
                android:layout_marginTop="24dp"
                android:paddingLeft="@dimen/ths_fab_margin"
                android:paddingRight="@dimen/ths_fab_margin"
                android:text="@string/ths_see_provider"
                android:textColor="?attr/uidLoginScreenDefaultTextColor"
                android:textSize="@dimen/ths_36_sp" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>