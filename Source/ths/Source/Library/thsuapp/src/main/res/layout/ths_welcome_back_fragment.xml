<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_welcome_back_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/uid_grid_title_padding"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    >

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_appointment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="24dp"
        android:text="@string/ths_start_appointment_header_time"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        style="@style/amwellCentralesansBoldFont"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="@dimen/ths_body_text_padding"
        android:paddingTop="@dimen/ths_body_text_padding"
        />

    <View
        android:background="?attr/uidSeparatorContentNormalBackgroundColor"
        android:id="@+id/line_separator"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ths_appointment_time"
        />

    <include
        android:id="@+id/provider_details_layout_container"
        layout="@layout/ths_provider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_separator"
        />

    <View
        android:background="?attr/uidSeparatorContentNormalBackgroundColor"
        android:id="@+id/line_separator_below_details"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/provider_details_layout_container"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_visit_better"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        android:layout_marginTop="@dimen/ths_fab_margin"
        style="@style/ths_body_text_bold"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_start_appointment_message_title"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="16sp"
        android:layout_below="@id/line_separator_below_details"
        />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/email_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ths_body_text"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_start_appointment_message"
        android:layout_below="@id/ths_visit_better"
        />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_get_started"
        android:text="@string/ths_get_started_button_title"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/ths_fab_margin"
        android:layout_marginLeft="@dimen/ths_fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>