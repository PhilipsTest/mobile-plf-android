<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/ths_fab_margin"
    android:paddingRight="@dimen/ths_fab_margin">

    <ScrollView
        android:id="@+id/ths_payment_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ths_payment_detail_continue_button">

        <RelativeLayout
            android:id="@+id/ths_payment_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/uidContentPrimaryBackgroundColor"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_payment_detail_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:layout_marginTop="24dp"
                android:text="@string/ths_payment_header"
                android:textColor="?attr/uidLabelRegularNormalTextColor"
                android:textSize="@dimen/ths_20_sp"
                android:textStyle="bold" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_payment_detail_card_owner_name_label"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_title_label"
                android:text="@string/ths_payment_namelabel" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_payment_detail_card_holder_name_edittext_validation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_owner_name_label"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_credit_card_details_consumer_name_error_string">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_payment_detail_card_holder_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:hint="@string/ths_payment_namefield"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_payment_detail_card_number_label"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_holder_name_edittext_validation_layout"
                android:text="@string/ths_payment_cardnumberlabel" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_payment_detail_card_number_edittext_validation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_number_label"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_payment_cardnumberlabel">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_payment_detail_card_number_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:inputType="number|none" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_payment_detail_card_expiration_date_label"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_number_edittext_validation_layout"
                android:text="@string/ths_payment_expirylabel" />

            <RelativeLayout
                android:id="@+id/ths_payment_detail_card_expiration_date_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_expiration_date_label">

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/ths_payment_detail_card_expiration_month_edittext_validation_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:uidTextBoxValidationErrorText="">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/ths_payment_detail_card_expiration_month_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:digits="0123456789"
                        android:hint="@string/ths_payment_monthfield"
                        android:imeOptions="actionNext"
                        android:inputType="number|none"
                        android:maxLength="2" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_payment_detail_card_expiration_month_year_seperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/ths_payment_detail_card_expiration_month_edittext_validation_layout"
                    android:gravity="center_vertical"
                    android:text="@string/ths_credit_card_details_slash" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/ths_payment_detail_card_expiration_year_edittext_validation_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ths_payment_detail_card_expiration_month_year_seperator"
                    app:uidTextBoxValidationErrorText="">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/ths_payment_detail_card_expiration_year_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:hint="@string/ths_payment_yearfield"
                        android:imeOptions="actionNext"
                        android:inputType="number|none"
                        android:maxLength="4" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ths_payment_detail_expiry_error_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_expiration_date_relativelayout"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ths_payment_detail_expiry_date_error_icon"
                    android:layout_width="@dimen/uid_inline_validation_icon_size"
                    android:layout_height="@dimen/uid_inline_validation_icon_size"
                    android:layout_marginEnd="@dimen/uid_inline_validation_icon_margin_end"
                    android:src="@drawable/uid_ic_data_validation"
                    android:tint="?attr/uidTypographyValidationIconColor" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_payment_detail_expiry_error"
                    style="@style/UIDLabelInlineValidation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ths_payment_detail_expiry_date_error_icon"
                    android:text="@string/ths_credit_card_details_exp_month_error_string" />
            </RelativeLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_payment_detail_card_cvc_label"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_expiry_error_layout"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:text="@string/ths_payment_cvvlabel" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/ths_payment_detail_card_cvc_edittext_validation_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_cvc_label"
                app:uidTextBoxValidationErrorText="">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/ths_payment_detail_card_cvc_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:hint="@string/ths_payment_cvvfield"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="4" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <RelativeLayout
                android:id="@+id/ths_payment_detail_cvc_error_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_cvc_edittext_validation_layout"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ths_payment_detail_cvc_error_icon"
                    android:layout_width="@dimen/uid_inline_validation_icon_size"
                    android:layout_height="@dimen/uid_inline_validation_icon_size"
                    android:layout_marginEnd="@dimen/uid_inline_validation_icon_margin_end"
                    android:src="@drawable/uid_ic_data_validation"
                    android:tint="?attr/uidTypographyValidationIconColor" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_payment_detail_cvc_error"
                    style="@style/UIDLabelInlineValidation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ths_payment_detail_cvc_error_icon"
                    android:text="@string/ths_credit_card_details_cvv_error_string" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ths_payment_detail_card_cvc_help_relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_card_cvc_label"
                android:layout_marginStart="@dimen/ths_fab_margin"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/ths_payment_detail_card_cvc_edittext_validation_layout">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_payment_detail_card_cvc_help_image"
                    style="@style/ths_font_icon_style"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/ths_title_text_line_spacing_extra"
                    android:text="@string/dls_infocircle" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_payment_detail_card_cvc_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ths_payment_detail_card_cvc_help_image"
                    android:text="@string/ths_whats_this"
                    android:textColor="?attr/uidHyperlinkDefaultNormalTextColor" />
            </RelativeLayout>

            <com.philips.platform.uid.view.widget.Label

                android:id="@+id/shipping_address_text_label"
                style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_payment_detail_cvc_error_layout"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:layout_marginTop="@dimen/ths_fab_margin"
                android:text="@string/ths_shipping_address" />

            <com.philips.platform.uid.view.widget.CheckBox
                android:id="@+id/ths_credit_card_details_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shipping_address_text_label"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:text="@string/ths_credit_card_details_address_same_as_shipping_address" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/sa_address_line_one_text"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ths_credit_card_details_checkbox"
                android:text="@string/ths_address_line1" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/sa_shipping_address_line_one_validation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa_address_line_one_text"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_inline_error_message_systolic_value">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/sa_shipping_address_line_one"
                    style="@style/UIDEditTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ths_address_line1_placeholder"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/sa_address_line_two_text"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa_shipping_address_line_one_validation_layout"
                android:text="@string/ths_address_line2" />

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/sa_shipping_address_line_two"
                style="@style/UIDEditTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa_address_line_two_text"
                android:layout_marginBottom="16dp"
                android:hint="@string/ths_optional"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/sa_town_text"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa_shipping_address_line_two"
                android:text="@string/ths_town_city" />

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/sa_town_validation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sa_town_text"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_address_validation_length_string">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/sa_town"
                    style="@style/UIDEditTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ths_city_placeholder"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/sa_postal_code_text"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sa_town_validation_layout"
                android:text="@string/ths_postal_code" />


            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/sa_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sa_postal_code_text"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/ths_pharmacy_search_error">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/sa_postal_code_edittext"
                    style="@style/UIDEditTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="@string/ths_pharmacy_search_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/sa_state_text"
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sa_postal_code"
                android:text="@string/ths_registration_statefield" />


            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/sa_state_text_place_holder"
                style="@style/UIDEditTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa_state_text"
                android:layout_marginBottom="@dimen/ths_fab_margin"
                android:focusable="false"
                android:hint="@string/ths_state_placeholder"
                android:imeOptions="actionNext"
                android:maxLines="1" />

        </RelativeLayout>
    </ScrollView>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_payment_detail_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ths_margin_bottom"
        android:text="@string/ths_ok_continue" />
</RelativeLayout>