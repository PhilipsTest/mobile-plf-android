<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/providerListItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/uid_list_item_selector"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <com.philips.platform.ths.utility.CircularImageView
        android:id="@+id/providerImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/doctor_placeholder" />

    <RelativeLayout
        android:id="@+id/providerDetailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uid_label_margin_start"
        android:layout_toEndOf="@+id/providerImage">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/providerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:layout_marginStart="@dimen/ths_2_dp"
            android:text="Dr. Eylin White"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/uid_recyclerview_item_title_text_size" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/practiceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/providerNameLabel"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="@dimen/ths_2_dp"
            android:text="Pediatrician"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/uid_grid_descrption_size" />

        <com.philips.platform.uid.view.widget.RatingBar
            android:id="@+id/providerRating"
            style="@style/UIDRatingBarStandardDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/practiceNameLabel"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:rating="5" />


        <RelativeLayout
            android:id="@+id/isAvailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/providerRating"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="@dimen/ths_2_dp">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/isAvailableLabel"
                fontPath="fonts/centralesansbook.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/notification_badge"
                android:text="Available Now"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor"
                android:textSize="@dimen/ths_grid_text_size" />

            <com.philips.platform.uid.view.widget.NotificationBadge
                android:id="@+id/notification_badge"
                style="@style/NotificationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/ths_4_dp"
                android:enabled="false"
                android:text="2"
                android:visibility="gone"
                app:backgroundTint="?attr/uidColorLevel45" />
        </RelativeLayout>

    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_providerlist_right_arrow_icon"
        fontPath="fonts/iconfont.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ths_fab_margin"
        android:layout_marginStart="@dimen/ths_fab_margin"
        android:gravity="center_vertical"
        android:text="@string/dls_navigationright"
        android:textAlignment="center"
        android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor" />

    <View
        android:id="@+id/end_layer"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/providerDetailLayout"
        android:background="?attr/uidContentSecondaryNeutralBackgroundColor" />
</RelativeLayout>
