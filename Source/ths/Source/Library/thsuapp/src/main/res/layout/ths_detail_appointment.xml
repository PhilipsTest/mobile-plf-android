<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/providerListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

    <com.philips.platform.ths.utility.CircularImageView
        android:id="@+id/details_providerImage"
        android:layout_width="@dimen/ths_100_dp"
        android:layout_height="@dimen/ths_100_dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/ths_image_size"
        android:src="@drawable/doctor_placeholder" />

    <RelativeLayout
        android:id="@+id/details_providerDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ths_fab_margin"
        android:layout_marginLeft="@dimen/ths_margin_bottom"
        android:layout_marginStart="@dimen/ths_margin_bottom"
        android:layout_marginTop="@dimen/ths_image_size"
        android:layout_toRightOf="@+id/details_providerImage">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/details_providerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:layout_marginRight="@dimen/ths_2_dp"
            android:layout_marginLeft="@dimen/ths_2_dp"
            style="@style/ths_text_book"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/ths_body_text" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/details_practiceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ths_2_dp"
            android:layout_marginLeft="@dimen/ths_2_dp"
            android:layout_below="@+id/details_providerNameLabel"
            android:layout_marginBottom="@dimen/ths_title_padding"
            android:lineSpacingExtra="6sp"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/ths_text_14sp" />

        <com.philips.platform.uid.view.widget.RatingBar
            android:id="@+id/ths_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_practiceNameLabel"
            android:rating="3.6"
            style="@style/UIDRatingBarStandardDisplay"
            android:stepSize=".1"
            android:layout_marginBottom="@dimen/ths_title_padding"
            />

        <RelativeLayout
            android:id="@+id/isAvailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_rating_bar">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/details_isAvailableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/notification_badge"
                android:lineSpacingExtra="6sp"
                android:text="@string/ths_available_time_slots"
                android:layout_marginRight="@dimen/ths_2_dp"
                android:layout_marginLeft="@dimen/ths_2_dp"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:textSize="@dimen/uid_grid_descrption_size" />

            <!--<com.philips.platform.uid.view.widget.Label
                android:id="@+id/notification_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:text="2"
                android:visibility="gone" />-->

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
