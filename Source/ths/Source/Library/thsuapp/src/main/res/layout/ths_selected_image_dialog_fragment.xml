<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidDialogAlertDefaultBackgroundColor">



    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_selected_image_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ths_delete_selected_image_button"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:textSize="32dp"
        fontPath="fonts/iconfont.ttf"
        android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor"
        android:text="@string/dls_cross_bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_selected_image_scroll_left"
            style="@style/ths_font_icon_style"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:layout_marginStart="31dp"
            android:text="@string/dls_navigationleft"
            android:textSize="32dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/selected_image_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_selected_image_scroll_right"
            style="@style/ths_font_icon_style"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:layout_toEndOf="@+id/selected_image_pager"
            android:text="@string/dls_navigationright"
            android:textSize="32dp" />
    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_delete_selected_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/ths_fab_margin"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:text="Delete this photo"
        app:uidAccent="true" />

    <com.philips.platform.uid.view.widget.ProgressBarWithLabel
        android:id="@+id/ths_selected_image_ProgressBarWithLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ths_delete_selected_image_button"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:uidCircularProgressBarSize="middle"
        app:uidIsIndeterminateProgressIndicator="true"
        app:uidLabelPosition="bottom_center" />

</RelativeLayout>