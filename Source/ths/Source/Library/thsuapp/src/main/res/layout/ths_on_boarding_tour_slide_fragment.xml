<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_slide_fragment_layout_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/onboarding_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></FrameLayout>

        <FrameLayout
            android:id="@+id/frame_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:foreground="@drawable/ths_onboarding_gradient"></FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/ths_amwell_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:src="@drawable/amwell_white_logo"
        android:visibility="gone" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/onboarding_page_title"
        style="@style/amwellCentralesansBoldFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ths_list_space"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_Welcome_nav_title"
        android:textColor="?attr/uidLoginScreenDefaultTextColor"
        android:textSize="@dimen/ths_20_sp" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/onboarding_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:paddingBottom="@dimen/ths_69_dp"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:textColor="?attr/uidLoginScreenDefaultTextColor"
        android:textSize="@dimen/ths_body_text" />
    </LinearLayout>

</RelativeLayout>