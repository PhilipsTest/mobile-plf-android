<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/welcome_slide_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onboarding_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/onboarding_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/reg_dimen_8dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="@string/ths_Welcome_nav_title"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/onboarding_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="start"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="80dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:textColor="?attr/uidLoginScreenDefaultTextColor"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>