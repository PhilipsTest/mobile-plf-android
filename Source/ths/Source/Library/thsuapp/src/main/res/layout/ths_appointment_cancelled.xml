<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:paddingBottom="@dimen/ths_fab_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_appointment_cancelled_label"
        style="@style/ths_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ths_margin_between_buttons"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_cancel_appointment_title"
        android:textSize="@dimen/ths_body_text" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_appointment_cancelled_help_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_appointment_cancelled_label"
        android:layout_marginTop="@dimen/ths_fab_margin"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_cancel_appontment_help"
        android:textSize="@dimen/ths_body_text" />

    <LinearLayout
        android:id="@+id/ths_appointment_cancelled_help_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_appointment_cancelled_help_message"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:text="@string/ths_cancel_appointment_call"
            android:textSize="@dimen/ths_body_text" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_appointment_cancelled_help_phone"
            fontPath="fonts/centralesansbook.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:paddingLeft="8dp"
            android:text="@string/ths_customer_support_phone_number"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            android:textSize="@dimen/ths_body_text" />
    </LinearLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_appointment_cancelled_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:text="@string/ths_registration_done"

        />


</RelativeLayout>
