<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/uid_button_corner_radius" android:topLeftRadius="@dimen/uid_button_corner_radius" />
            <solid android:color="?attr/uidButtonPrimaryNormalBackgroundColor"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/uid_button_corner_radius" android:topLeftRadius="@dimen/uid_button_corner_radius" />
            <solid android:color="?attr/uidButtonSecondaryPressedBackgroundColor"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/uid_button_corner_radius" android:topLeftRadius="@dimen/uid_button_corner_radius" />
            <solid android:color="?attr/uidButtonSecondaryNormalBackgroundColor"/>
        </shape>
    </item>
</selector>