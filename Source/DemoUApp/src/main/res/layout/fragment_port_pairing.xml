<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pairing_port" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_client_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/client_provider"
                android:text="@string/client_provider_default" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_client_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/clienttype"
                android:text="@string/clienttype_default" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_client_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/client_id"
                android:text="@string/client_id_default" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_secret_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/secretkey"
                android:text="@string/secret_key_default" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type"
                android:text="@string/di_comm" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/cml_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/permissions_comma_separated"
                android:text="@string/request" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/cml_button_pair"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pair" />

    </LinearLayout>
</android.support.v7.widget.CardView>
