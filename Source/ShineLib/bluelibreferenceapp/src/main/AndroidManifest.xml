<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cdpp.bluelibreferenceapp">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ReferenceApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ReferenceActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PeripheralListActivity"
            android:label="@string/title_peripheral_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".PeripheralDetailActivity"
            android:label="@string/title_peripheral_detail"
            android:parentActivityName=".PeripheralListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PeripheralListActivity" />
        </activity>
    </application>

</manifest>
