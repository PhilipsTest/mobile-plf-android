<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true"
    android:background="?attr/uidContentPrimaryBackgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_time"
            style="@style/iap_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/border16_margin_left_right"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingTop="@dimen/border16_margin_left_right" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border16_margin_left_right">

            <ImageView
                android:id="@+id/iv_order_state"
                android:layout_width="@dimen/border24_margin"
                android:layout_height="@dimen/border24_margin"
                android:gravity="center"
                android:layout_marginEnd="@dimen/iap_product_ctn_12"
                android:background="@drawable/iap_info_image"
                android:scaleType="fitXY" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_order_state"
                style="@style/tvBoldTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/iap_margin_4dp"
                android:layout_toEndOf="@+id/iv_order_state"
                android:text="@string/iap_order_state"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/title" />


        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_number"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border12_margin"
            android:text="@string/iap_order_number_msg"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_product_ctn_12" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_shipping_status_message"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border16_margin_left_right"
            android:gravity="center_vertical"
            android:text="@string/iap_order_status_msg"
            android:textSize="@dimen/title" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_opening_timings"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border24_margin"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_call"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border16_margin_left_right"
            android:layout_marginRight="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border24_margin"
            android:enabled="false"
            android:text="@string/iap_call_us"
            app:uidComponentType="Primary" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:layout_marginTop="@dimen/border12_margin"
            android:background="@drawable/uid_shadow_level_two" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_quantity"
            style="@style/iap_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingRight="@dimen/border16_margin_left_right"
            android:text="@string/iap_no_of_products" />


        <LinearLayout
            android:id="@+id/product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_address_header"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/border16_margin_left_right"
            android:paddingLeft="@dimen/border16_margin_left_right"
            android:paddingTop="@dimen/border16_margin_left_right"
            android:text="@string/iap_your_details"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/border16_margin_left_right">


            <com.philips.platform.uid.view.widget.Label
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_shipping_address"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_shipping_first_name"
                style="@style/iapCentralesansMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/iap_order_one_spacing"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_retailers_store_name_size_12sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_shipping_address"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:textSize="@dimen/iap_retailers_store_name_size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/border16_margin_left_right">

            <com.philips.platform.uid.view.widget.Label
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_billing_address"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_billing_first_name"
                style="@style/iapCentralesansMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/iap_order_one_spacing"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_retailers_store_name_size_12sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_billing_address"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
                android:textSize="@dimen/iap_retailers_store_name_size_12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/uid_shadow_level_two" />

        <LinearLayout
            android:id="@+id/ll_payment_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/border16_margin_left_right">

            <com.philips.platform.uid.view.widget.Label
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_payment_method"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_16sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_card_type"
                style="@style/iapCentralesansMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/iap_text_size_12" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_card_name"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iap_margin_4dp"
                android:textColor="?attr/uidContentItemTertiaryNormalIconColor"
                android:textSize="@dimen/iap_text_size_12" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_card_no"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iap_margin_4dp"
                android:textColor="?attr/uidContentItemTertiaryNormalIconColor"
                android:textSize="@dimen/iap_text_size_12" />
        </LinearLayout>

        <!--Order summary starts-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/uid_shadow_level_two" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_order_summary_header"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border16_margin_left_right"
            android:text="@string/iap_order_summary"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/iap_text_size_16sp" />

        <include
            layout="@layout/iap_order_detail_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border16_margin_left_right" />

        <!--Order summary ends-->
        <!--  <RelativeLayout
              android:id="@+id/invoice_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom"
              android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
              android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
              android:layout_marginTop="@dimen/iap_order_detail_margin_bottom"
              android:visibility="gone">

              <com.philips.platform.uid.view.widget.Label
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/iap_view_invoice" />

              <com.shamanland.fonticon.FontIconTextView
                  android:id="@+id/invoice_arrow"
                  style="@style/iap_right_arrow"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="@dimen/iap_order_margin_top"
                  android:layout_marginStart="@dimen/iap_order_icon_margin_left" />
          </RelativeLayout>-->


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_cancel"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border16_margin_left_right"
            android:text="@string/iap_cancel_order"
            android:visibility="visible"
            app:uidComponentType="Secondary" />

    </LinearLayout>
</ScrollView>
