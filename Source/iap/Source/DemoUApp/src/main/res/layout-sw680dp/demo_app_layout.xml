<RelativeLayout android:layout_width="@dimen/max_width"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:maxWidth="@dimen/max_width"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <include
            android:id="@+id/app_actionbar"
            layout="@layout/action_bar" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/appversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/demoScreen_toolbar"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/ll_ctn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/app_actionbar"
            android:layout_marginLeft="@dimen/border8_margin"
            android:layout_marginRight="@dimen/border8_margin"
            android:visibility="gone"
            android:weightSum="1">

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/et_add_ctn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:hint="Enter CTN" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_add_ctn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:text="Add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_ctn"
            android:layout_margin="@dimen/border8_margin"
            android:visibility="gone"
            android:weightSum="1">

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/et_add_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:hint="Enter Voucher" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_add_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:text="Voucher Add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_enter_proposition_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_voucher"
            android:layout_margin="@dimen/border8_margin"
            android:weightSum="1">

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/et_add_proposition_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:hint="Enter Propositon ID" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_set_proposition_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:text="Set" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_maxCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_enter_proposition_id"
            android:layout_marginLeft="@dimen/border8_margin"
            android:layout_marginRight="@dimen/border8_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/et_max_cart_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.75"
                android:hint="enter max count"
                android:inputType="number" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_set_max_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:text="Set" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mocking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_maxCount"
            android:layout_marginLeft="@dimen/border8_margin"
            android:layout_marginRight="@dimen/border8_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <ToggleButton
                android:id="@+id/toggleHybris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_maxCount"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:checked="true"
                android:enabled="true"
                android:gravity="center"
                android:textOff="Hybris OFF"
                android:textOn="Hybbris ON"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/toggleMock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textOff="Mock OFF"
                android:textOn="Mock ON"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/toggleBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="false"
                android:textOff="Banner OFF"
                android:textOn="Banner ON"
                android:textSize="15sp" />

        </LinearLayout>


        <ListView
            android:id="@+id/product_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:text="@string/register" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_purchase_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_register"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:text="@string/order_history"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_shop_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_purchase_history"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:text="@string/shop_now"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_launch_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_shop_now"
            android:layout_marginTop="2dp"
            android:text="@string/launch_product_detail"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_categorized_shop_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_launch_product_detail"
            android:layout_marginTop="2dp"
            android:text="@string/categorized_shop_now"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_buy_direct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_categorized_shop_now"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:text="@string/buy_direct"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_categorized_shop_now_with_ignore_retailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_categorized_shop_now"
            android:layout_marginTop="2dp"
            android:text="@string/categorized_shop_now_ignore_retailer"
            android:visibility="gone" />

    </RelativeLayout>