<?xml version="1.0" encoding="utf-8"?>
<manifest package="philips.app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:name=".base.AppFrameworkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Philips.DarkBlue.WhiteBackground"
        tools:replace="android:theme,android:label" >
        <activity
            android:name=".introscreen.LaunchActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|locale|layoutDirection"
            android:theme="@style/Theme.Philips.DarkBlue.Gradient">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".homescreen.HamburgerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|locale|layoutDirection"
            android:theme="@style/Theme.Philips.DarkBlue.Gradient"/>
    </application>

</manifest>