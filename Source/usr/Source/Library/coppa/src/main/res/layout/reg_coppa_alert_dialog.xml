<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_dailog_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_create_account_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/reg_layout_margin"
            android:paddingRight="@dimen/reg_layout_margin" >

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_header_dialog_title"
                style="@style/reg_titleTextStyle"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:gravity="left"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="@string/reg_ForgotPwdEmailResendMsg_Title"
                reglib:fontAssetName="CentraleSans-Light.otf" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_dialog_content"
                style="@style/reg_textStyle"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip"
                android:text="@string/reg_ForgotPwdEmailResendMsg"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <com.philips.cdp.registration.ui.customviews.XButton
                android:id="@+id/btn_reg_continue"
                style="@style/reg_style_btn"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:enabled="true"
                android:text="@string/reg_Ok_Btn_Txt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>