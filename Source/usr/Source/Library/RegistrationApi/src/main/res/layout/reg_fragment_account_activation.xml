<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="?attr/uidContentPrimaryBackgroundColor"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/usr_activation_rootLayout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/usr_activation_root_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/reg_dimen_24dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/reg_dimen_16dp"
            android:layout_marginRight="@dimen/reg_dimen_16dp"
            android:paddingBottom="@dimen/reg_dimen_16dp">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activation_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_16dp"
                android:text="@string/reg_DLS_Verify_Email_Title_Txt"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:textSize="@dimen/reg_text_size_20"
                fontPath="fonts/centralesansbold.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activation_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_16dp"
                android:text="@string/reg_DLS_Verify_Email_Sent_Txt"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                />

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_16dp"
                android:text="@string/reg_DLS_Verify_Email_Explainary_Txt"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                />

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_16dp"
                android:text="@string/reg_DLS_Verify_Email_Security_Txt"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                />

            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/usr_activation_emailVerified_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_dimen_24dp"
                android:layout_marginBottom="@dimen/reg_dimen_8dp"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonProgressText="@string/reg_DLS_Verify_Email_Verified_Btn_Title_Txt"
                app:uidProgressIndicatorButtonText="@string/reg_DLS_Verify_Email_Verified_Btn_Title_Txt"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/usr_activation_emailNotReceived_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_12dp"
                android:text="@string/reg_DLS_Verify_Email_Resend_Btn_Title_Txt"
                app:uidComponentType="Secondary"/>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/usr_activation_activation_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_dimen_16dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>