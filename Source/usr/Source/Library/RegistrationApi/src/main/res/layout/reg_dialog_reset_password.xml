<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_dailog_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_create_account_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/reg_dimen_24dp"
            android:layout_marginLeft="@dimen/reg_dimen_24dp"
            android:layout_marginRight="@dimen/reg_dimen_24dp"
            android:layout_marginBottom="@dimen/reg_dimen_8dp">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_alert_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_dimen_24dp"
                android:gravity="left"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text="@string/DLS_Forgot_Password_Alert_Title"
                android:textSize="@dimen/reg_text_size_20"
                fontPath="fonts/centralesansbold.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/usr_alert_content_label"
                android:layout_marginBottom="@dimen/reg_dimen_24dp"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text="@string/DLS_Forgot_Password_Alert_Message_Line1"
                />

            <com.philips.platform.uid.view.widget.Label
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/usr_alert_content2_label"
                android:layout_marginBottom="@dimen/reg_dimen_24dp"
                android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                android:text="@string/DLS_Forgot_Password_Alert_Message_Line2"
                android:visibility="gone"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/usr_alert_continue_button"
                style="@style/UIDImageTextButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DLS_Button_Title_Ok"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>