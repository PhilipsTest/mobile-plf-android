<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/uid_adaptive_layout_width"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/reg_layout_margin_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/reg_image_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/reg_circle_shape"
                android:contentDescription="@string/app_name" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_user_detail_lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/uidColorWhite"
                android:textSize="@dimen/reg_40sp" />

        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/login_details_label"
            style="@style/UIDLabel.Header"
            android:text="@string/reg_Login_Details_Txt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/email_address_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/reg_layout_margin_16"
                android:layout_marginStart="@dimen/reg_layout_margin_16"
                android:layout_marginTop="@dimen/reg_dimen_12dp"
                android:text="@string/reg_Email_address_TitleTxt" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/email_address_value"
                android:layout_width="match_parent"
                android:textDirection="locale"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_address_heading"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_8dp"
                android:text="@string/reg_Email_address_TitleTxt"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mobile_number_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_address_value"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_16dp"
                android:text="@string/reg_Mobile_number_TitleTxt"
                android:visibility="visible" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/mobile_number_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:layout_below="@+id/mobile_number_heading"
                android:layout_marginBottom="@dimen/reg_dimen_8dp"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_8dp"
                android:text="@string/reg_Not_Available"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor"
                android:visibility="visible" />
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.Header"
            android:text="@string/reg_Personal_Details_Txt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_dimen_12dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/name_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:text="@string/reg_Name_TitleTxt" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:layout_below="@+id/name_heading"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_16dp"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/gender_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_value"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_16dp"
                android:text="@string/reg_Gender_TitleTxt" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/gender_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_heading"
                android:textDirection="locale"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_8dp"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/DOB_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_value"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_16dp"
                android:text="@string/reg_DateOfBirth_TitleTxt" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/dob_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DOB_heading"
                android:textDirection="locale"
                android:layout_marginEnd="@dimen/reg_dimen_16dp"
                android:layout_marginStart="@dimen/reg_dimen_16dp"
                android:layout_marginTop="@dimen/reg_dimen_8dp"
                android:textColor="?attr/uidHyperlinkDefaultNormalTextColor" />
        </RelativeLayout>

        <View
            android:id="@+id/dob_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reg_dimen_1dp"
            android:layout_marginTop="@dimen/reg_dimen_16dp"
            android:background="?attr/uidContentSecondaryBackgroundColor"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/reg_dimen_16dp"
            android:layout_marginStart="@dimen/reg_dimen_16dp"
            android:layout_marginTop="@dimen/reg_dimen_16dp"
            android:text="@string/reg_Address_TitleTxt"
            android:visibility="gone" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/MYA_Address_value"
            android:layout_width="match_parent"
            android:textDirection="locale"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/reg_dimen_16dp"
            android:layout_marginStart="@dimen/reg_dimen_16dp"
            android:text="@string/reg_Not_Available"
            android:textColor="?attr/uidHyperlinkDefaultNormalTextColor"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>