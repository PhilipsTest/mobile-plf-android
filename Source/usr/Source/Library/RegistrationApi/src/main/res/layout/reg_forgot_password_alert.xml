<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/reg_dimen_24dp"
              android:paddingRight="@dimen/reg_dimen_24dp"
              android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/usr_alert_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/reg_dimen_16dp"
        android:text="@string/DLS_Forgot_Password_Alert_Message_Line1"
        android:textColor="@color/uid_gray_level_90"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/usr_alert_content2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/reg_dimen_24dp"
        android:text="@string/DLS_Forgot_Password_Alert_Message_Line2"
        android:textColor="@color/uid_gray_level_90"/>

</LinearLayout>