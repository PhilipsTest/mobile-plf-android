<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_reg_err_mapping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.philips.cdp.registration.ui.customviews.XIconTextView
            android:id="@+id/iv_reg_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="@dimen/rag_dimen_2dp"
            android:textColor="@color/reg_error_box_color"/>
        <com.philips.cdp.registration.ui.customviews.XTextView
            android:id="@+id/tv_reg_error_message"
            style="@style/reg_error_textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reg_dimen_16dp"
            android:paddingLeft="@dimen/rag_dimen_2dp"
            android:textColor="@color/reg_error_box_color"
            reglib:fontAssetName="CentraleSans-Book.OTF" />
    </FrameLayout>
</RelativeLayout>
