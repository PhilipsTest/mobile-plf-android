<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/usr_country_selection_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="?attr/uidContentTertiaryBackgroundColor"
    android:orientation="vertical"
    >

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/country_selection_header_TextView"
        android:padding="@dimen/reg_dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/reg_text_size_16"
        android:text="@string/USR_DLS_Country_Selection_Explainary_Text"
        android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
        />

</LinearLayout>

