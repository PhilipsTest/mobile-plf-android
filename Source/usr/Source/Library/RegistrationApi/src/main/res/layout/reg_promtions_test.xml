<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.philips.platform.uid.view.widget.ProgressBarButton
            android:id="@+id/usr_promotion_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/reg_dimen_8dp"
            android:layout_weight="1"
            android:enabled="false"
            app:uidIsIndeterminateProgressIndicator="true"
            app:uidProgressIndicatorButtonProgressText="@string/USR_DLS_SigIn_TitleTxt"
            app:uidProgressIndicatorButtonText="Banner" />

        <com.philips.platform.uid.view.widget.ProgressBarButton
            android:id="@+id/usr_promotion_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/reg_dimen_8dp"
            android:layout_weight="1"
            android:enabled="false"
            app:uidIsIndeterminateProgressIndicator="true"
            app:uidProgressIndicatorButtonProgressText="@string/USR_DLS_SigIn_TitleTxt"
            app:uidProgressIndicatorButtonText="Dialog" />

        <com.philips.platform.uid.view.widget.ProgressBarButton
            android:id="@+id/usr_promotion_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/reg_dimen_8dp"
            android:layout_weight="1"
            android:enabled="false"
            app:uidIsIndeterminateProgressIndicator="true"
            app:uidProgressIndicatorButtonProgressText="@string/USR_DLS_SigIn_TitleTxt"
            app:uidProgressIndicatorButtonText="full" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:visibility="gone">
        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/bannerText"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/uidColorWhite"
            android:padding="@dimen/reg_dimen_4dp"
            android:text="@string/USR_PrivacyNoticeText"
            android:textSize="@dimen/reg_text_size_12" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerImg"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="@dimen/reg_dimen_4dp"
            android:text="@string/USR_PrivacyNoticeText"
            android:textSize="@dimen/reg_text_size_12" />

    </LinearLayout>

</RelativeLayout>