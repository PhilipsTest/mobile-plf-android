<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neura_bg_consent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:id="@+id/neura_overLap_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/nuera_margin_top"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/base_text_neura"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/nuera_margin_between_text"
                android:text="@string/RA_nuera_base_title"
                android:textColor="@color/nuera_text_color"
                android:textSize="@dimen/neura_base_text_size"
                android:textStyle="bold" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/second_text_neura"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_text_neura"
                android:layout_marginBottom="@dimen/network_margin_top_bottom"
                android:text="@string/RA_nuera_second_text"
                android:textColor="@color/nuera_text_color" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/third_text_neura"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_text_neura"
                android:layout_marginBottom="@dimen/network_margin_top_bottom"
                android:text="@string/RA_nuera_what_descp"
                android:textColor="@color/nuera_text_color" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/forth_text_neura"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_text_neura"
                android:layout_marginBottom="@dimen/network_margin_top_bottom"
                android:text="@string/RA_nuera_third_title"
                android:textColor="@color/nuera_text_color" />


            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/allowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forth_text_neura"
                android:layout_marginTop="@dimen/nuera_margin_between_button_text"
                android:text="@string/Ra_neura_allow" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/mayBeLater"
                style="@style/UIDExtraWideButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/allowButton"
                android:layout_marginTop="@dimen/nuera_margin_between_buttons"
                android:background="@color/transparent"
                android:text="@string/RA_neura_mayBeLater" />


            <RelativeLayout
                android:id="@+id/RA_neura_link_holder_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/mayBeLater"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/neura_image"
                    android:layout_width="@dimen/neura_image_width"
                    android:layout_height="@dimen/neura_image_height"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/nuera_margin_image_bottom"
                    android:layout_marginTop="@dimen/nuera_margin_image_top"
                    android:background="@drawable/nuera_logo"
                    android:contentDescription="@string/RA_nuera_image_descp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/neura_image"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/RA_neura_privacy_notice_label"
                        style="@style/UIDLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="@string/RA_nuera_policy"
                        android:textColor="@color/nuera_text_color" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/philipsPrivacy"
                        style="@style/UIDLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:text="@string/RA_nuera_privacy_philips"
                        android:textColor="@color/nuera_text_color" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>