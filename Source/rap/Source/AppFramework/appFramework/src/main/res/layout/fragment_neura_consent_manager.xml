<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scaleType="centerCrop"
    android:background="@drawable/neura_background"
    android:scrollbarStyle="outsideOverlay">


    <LinearLayout
        android:id="@+id/neura_overLap_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/nuera_margin_top"
            android:layout_marginBottom="@dimen/nuera_margin_bottom"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/csw_justInTimeView_consentHeader_label"
                style="@style/neuraBaseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/nuera_margin_between_text"
                android:text="@string/RA_neura_header_title"
                 />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/csw_justInTimeView_consentUserBenefitsDescription_label"
                style="@style/neuraTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csw_justInTimeView_consentHeader_label"
                android:layout_marginBottom="@dimen/nuera_margin_text_bottom"
                android:text="@string/RA_nuera_philips_tailor_text"
                 />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/csw_justInTimeView_consentDescription_label2"
                style="@style/neuraTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/csw_justInTimeView_consentUserBenefitsDescription_label"
                android:layout_marginBottom="@dimen/nuera_margin_text_bottom"
                android:text="@string/RA_nuera_location_info_title"
                />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/csw_justInTimeView_consentHelplink_button"
                style="@style/neuraTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csw_justInTimeView_consentDescription_label2"
                android:layout_marginBottom="@dimen/nuera_margin_image_top"
                android:text="@string/RA_Neura_Consent_HyperLink"
                 />


            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/csw_justInTimeView_consentOk_button"
                style="@style/neuraTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/csw_justInTimeView_consentHelplink_button"
                android:textColor="?attr/uidLoginScreenDefaultTextColor"
                android:text="@string/RA_Neura_Allow_Button" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/csw_justInTimeView_consentLater_label"
                style="@style/neuraTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/csw_justInTimeView_consentOk_button"
                android:textColor="?attr/uidLoginScreenDefaultTextColor"
                android:layout_marginTop="@dimen/nuera_margin_between_buttons"
                android:background="@color/transparent"
                android:text="@string/RA_Neura_MayBeLater_Button" />


            <RelativeLayout
                android:id="@+id/RA_neura_link_holder_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csw_justInTimeView_consentLater_label"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/neura_image"
                    android:layout_width="@dimen/neura_image_width"
                    android:layout_height="@dimen/neura_image_height"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/nuera_margin_image_bottom"
                    android:layout_marginTop="@dimen/nuera_margin_image_top"
                    android:background="@drawable/nuera_logo"
                    android:contentDescription="@string/RA_nuera_image_descp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/neura_image"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/csw_justInTimeView_privacyNeura_label"
                        style="@style/neuraTextLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:paddingStart="@dimen/nuera_link_padding"
                        android:paddingEnd="@dimen/nuera_link_padding"
                        android:paddingLeft="@dimen/nuera_link_padding"
                        android:paddingRight="@dimen/nuera_link_padding"
                        android:text="@string/RA_Neura_Privacy"
                        />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/csw_justInTimeView_privacyPhilips_label"
                        style="@style/neuraTextLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:paddingStart="@dimen/nuera_link_padding"
                        android:paddingEnd="@dimen/nuera_link_padding"
                        android:paddingLeft="@dimen/nuera_link_padding"
                        android:paddingRight="@dimen/nuera_link_padding"
                        android:text="@string/RA_Neura_Philips_Privacy"
                         />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>