<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <ScrollView
        android:id="@+id/usr_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/usr_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/usr_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/usr_btn_registration_with_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:text="Account Setting" />

                <Button
                    android:id="@+id/usr_btn_marketing_opt_in"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:text="Marketing OptIn" />

                <Button
                    android:id="@+id/usr_btn_registration_without_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:text="Registration" />

                <Button
                    android:id="@+id/usr_btn_refresh_token"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_registration"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:text="HSDP Refresh access token Test"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/usr_btn_refresh_user"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usr_btn_refresh_token"
                    android:layout_centerInParent="true"
                    android:text="Refresh user"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/usr_btn_update_date_of_birth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usr_btn_refresh_token"
                    android:layout_centerInParent="true"
                    android:text="Update DOB"
                    android:visibility="visible" />


                <RadioGroup
                    android:id="@+id/usr_genderRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:checkedButton="@+id/usr_Evalution">

                    <RadioButton
                        android:id="@+id/usr_Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/usr_Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />

                </RadioGroup>

                <Button
                    android:id="@+id/usr_btn_update_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usr_btn_refresh_token"
                    android:layout_centerInParent="true"
                    android:text="Update Gender"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/usr_btn_change_configuration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Configuartion"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/usr_ll_configuartion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/usr_myRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:checkedButton="@+id/usr_Evalution">

                    <RadioButton
                        android:id="@+id/usr_Evalution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evaluation" />

                    <RadioButton
                        android:id="@+id/usr_Stagging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staging" />

                    <RadioButton
                        android:id="@+id/usr_Testing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Testing" />

                    <RadioButton
                        android:id="@+id/usr_Production"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Production" />

                    <RadioButton
                        android:id="@+id/usr_Development"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Development" />

                </RadioGroup>

                <CheckBox
                    android:id="@+id/usr_cd_hsdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSDP" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/usr_Apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply" />

                    <Button
                        android:id="@+id/usr_Cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>