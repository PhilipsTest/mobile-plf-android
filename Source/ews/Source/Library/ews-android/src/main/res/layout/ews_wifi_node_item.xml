<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="wifiNode"
            type="com.philips.cdp.dicommclient.networknode.WiFiNode"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_screen_top_margin">

        <ImageView
            android:id="@+id/wifiIconView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_cross_icon"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/ssidLabelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_screen_top_margin"
            android:layout_marginStart="@dimen/default_screen_top_margin"
            android:layout_toEndOf="@+id/wifiIconView"
            android:layout_toStartOf="@+id/wifiSelectedView"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@{wifiNode.SSID}"
            tools:text="BrightEyes #5BrightEyes #5BrightEyes!! 5"/>

        <ImageView
            android:id="@+id/wifiSelectedView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_cross_icon"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>
</layout>