<resources>

  <dimen name="ews_body_text_size">16sp</dimen>
  <dimen name="ews_helper_text_size">12sp</dimen>
  <dimen name="ews_line_spacing_extra">8dp</dimen>
  <dimen name="ews_title_text_size">20sp</dimen>

  <string name="ews_centrale_sans_book" translatable="false">fonts/centralesansbook.ttf</string>
  <string name="ews_centrale_sans_bold" translatable="false">fonts/centralesansbold.ttf</string>

  <style name="Txt" parent="@android:style/Widget.TextView">
    <item name="fontPath">@string/ews_centrale_sans_book</item>
    <item name="android:lineSpacingExtra">@dimen/ews_line_spacing_extra</item>
  </style>

  <style name="Txt.Title">
    <item name="fontPath">@string/ews_centrale_sans_bold</item>
    <item name="android:textSize">@dimen/ews_title_text_size</item>
    <item name="android:textColor">?attr/uidContentItemPrimaryNormalTextColor</item>
  </style>

  <style name="Txt.Body">
    <item name="android:textSize">@dimen/ews_body_text_size</item>
    <item name="android:textColor">?attr/uidContentItemPrimaryNormalTextColor</item>
  </style>

  <style name="Txt.Helper">
    <item name="android:textSize">@dimen/ews_helper_text_size</item>
    <item name="android:textColor">?attr/uidContentItemSecondaryNormalTextColor</item>
  </style>

</resources>