<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.resetconnection.ResetConnectionTroubleshootingViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_screen_side_margin"
            android:paddingStart="@dimen/default_screen_side_margin"
            android:paddingTop="@dimen/default_screen_top_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_H_03_02_label_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_connect_to_label"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@{viewModel.description}" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_image_top_margin"
                android:contentDescription="@null"
                style="@style/EWS.ImageScale"
                android:src="@{viewModel.resetConnectionImage}" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_H_03_02_button_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:text="@string/button_ews_support_reset_connection_yes"
                app:uidComponentType="Primary" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_03_02_button_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_between_button_margin"
                android:text="@string/button_ews_support_reset_connection_no"
                app:uidComponentType="Secondary" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>