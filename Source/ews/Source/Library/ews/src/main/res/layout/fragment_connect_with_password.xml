<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="inputMethodManager"
            type="android.view.inputmethod.InputMethodManager" />

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.settingdeviceinfo.ConnectWithPasswordViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_body_labels_margin"
            android:paddingStart="@dimen/default_body_labels_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_03_01a_label_password_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_screen_top_margin"
                android:text="@{viewModel.title}" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_connect_to_label"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_password_body" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_label_enter_password"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_image_top_margin"
                android:text="@string/label_ews_password_form_password_title" />

            <com.philips.platform.uid.view.widget.ValidationEditText
                android:id="@+id/ews_03_01a_textfield_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_between_button_margin"
                android:inputType="textPassword"
                android:maxLines="1"
                android:onFocusChange="@{(v,hasFocus) -> viewModel.onPasswordFocusChange(v,inputMethodManager,hasFocus)}"
                android:onTextChanged="@{viewModel::onPasswordTextChanged}"
                android:text="@{viewModel.password}"
                app:uidInputTextBorderWidth="@dimen/uid_edittext_stroke_width" />


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_label_password_name"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_image_top_margin"
                android:text="@{viewModel.note}" />

            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/ews_03_01a_textfield_appliance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_between_button_margin"
                android:inputType="text"
                android:maxLines="1"
                android:onFocusChange="@{(v,hasFocus) -> viewModel.onDeviceNameFocusChange(v,inputMethodManager,hasFocus)}"
                android:onTextChanged="@{viewModel::onDeviceNameTextChanged}"
                android:text="@{viewModel.deviceFriendlyName}" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_03_01a_button_password_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{() -> viewModel.onConnectButtonClicked()}"
                android:text="@string/button_ews_password_connect"
                app:uidComponentType="Primary" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>