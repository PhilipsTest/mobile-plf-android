<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:layout_marginBottom="@dimen/savedscreen_product_image_margin">

    <LinearLayout
        android:id="@+id/welcome_screen_parent_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/view_padding"
        android:paddingRight="@dimen/view_padding"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/welcome_screen_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/welcomescreen_image" />

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:maxWidth="@dimen/view_max_width"
            android:textSize="16sp"
            android:text="@string/pse_Product_Support_Desc"/>

        <com.philips.platform.uid.view.widget.Button
            style="@style/UIDExtraWideButton.Center"
            android:id="@+id/find_product_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:maxWidth="@dimen/view_max_width"
            android:textAllCaps="false"
            android:text="@string/Select_Product_Title"/>
    </LinearLayout>

</ScrollView>

