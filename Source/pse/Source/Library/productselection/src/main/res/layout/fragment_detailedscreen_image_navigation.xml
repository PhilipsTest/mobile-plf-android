<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_screen_parent_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_detailed_screen">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detailedscreen_pager"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/savedscreen_product_image_margin"
        android:layout_height="@dimen/productdetails_screen_image"
        android:overScrollMode="never"
        android:layout_weight="1" />

    <com.philips.platform.uid.view.widget.DotNavigationIndicator
        android:id="@+id/detailedscreen_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />
</LinearLayout>