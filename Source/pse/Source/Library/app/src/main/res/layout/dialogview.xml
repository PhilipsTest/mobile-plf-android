<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dip"
            android:textStyle="bold"
            android:text="Add Product"/>
    </FrameLayout>

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/ctn_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:layout_marginTop="37dp"
        android:hint="Add CTN here"/>

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/category_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctn_editText"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:hint="Add Category here"/>

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/catalog_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category_editText"
        android:layout_margin="4dp"
        android:hint="Add CATALOG here"/>

    <com.philips.platform.uid.view.widget.Button
        style="@style/UIDExtraWideButton.Center"
        android:id="@+id/dialog_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/catalog_editText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:text="Submit" />
</RelativeLayout>