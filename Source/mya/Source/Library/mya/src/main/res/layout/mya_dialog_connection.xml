<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/default_screen_side_margin"
    android:paddingStart="@dimen/default_screen_side_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mya_offline_label_title"
        style="@style/Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MYA_offline_title" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mya_offline_label_message"
        style="@style/Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_body_labels_margin"
        android:text="@string/MYA_offline_message" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mya_dialog_offline_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_main_button_top_margin"
        android:text="@android:string/ok"
        app:uidComponentType="Primary" />
</LinearLayout>