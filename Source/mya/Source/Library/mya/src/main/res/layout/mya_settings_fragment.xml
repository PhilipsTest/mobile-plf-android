<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/uid_adaptive_layout_width"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mya_settings_label"
            style="@style/UIDLabel.Header"
            android:text="@string/MYA_Account_settings" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mya_settings_recycler_view"
            android:layout_below="@+id/mya_settings_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mya_settings_logout_btn"
            android:orientation="vertical" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mya_settings_logout_btn"
        style="@style/UIDDefaultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mya_website_layout"
        android:layout_marginEnd="@dimen/MYA_end_margin"
        android:layout_marginStart="@dimen/MYA_start_margin"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:text="@string/MYA_Log_Out" />

    <LinearLayout
        android:id="@+id/mya_website_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/MYA_padding"
        android:background="?attr/uidContentSecondaryBackgroundColor"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/MYA_end_margin"
            android:layout_marginStart="@dimen/MYA_start_margin"
            android:paddingTop="@dimen/MYA_top_margin"
            android:text="@string/MYA_visit_website" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/philips_website"
            style="@style/UIDLabel.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/MYA_bottom_margin"
            android:layout_marginEnd="@dimen/MYA_end_margin"
            android:layout_marginStart="@dimen/MYA_start_margin"
            android:text="@string/MYA_philips_website" />
    </LinearLayout>

</RelativeLayout>