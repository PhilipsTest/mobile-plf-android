<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/uid_adaptive_layout_width"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel.Header"
            android:text="@string/MYA_Account_settings" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mya_settings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/mya_settings_logout_btn"
            style="@style/UIDExtraWideButton.Center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/MYA_end_margin"
            android:layout_marginStart="@dimen/MYA_start_margin"
            android:layout_marginTop="@dimen/MYA_top_margin"
            android:text="@string/MYA_Logout" />

        <LinearLayout
            android:id="@+id/mya_website_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/MYA_padding"
            android:background="?attr/uidContentSecondaryBackgroundColor"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/MYA_end_margin"
                android:layout_marginStart="@dimen/MYA_start_margin"
                android:paddingTop="@dimen/MYA_top_margin"
                android:text="@string/MYA_Info" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/philips_website"
                style="@style/UIDLabel.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/MYA_bottom_margin"
                android:layout_marginEnd="@dimen/MYA_end_margin"
                android:layout_marginStart="@dimen/MYA_start_margin"
                android:text="@string/MYA_Visit_Website" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>