<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/default_screen_side_margin"
    android:paddingStart="@dimen/default_screen_side_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mya_csw_label_error_message_title"
        style="@style/Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/csw_offline_title" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/mya_csw_label_error_message_body"
        style="@style/Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_body_labels_margin"
        android:text="@string/csw_offline_message" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/cws_dialog_error_message_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_main_button_top_margin"
        android:text="@string/csw_ok"
        app:uidComponentType="Primary" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mya_csw_button_cancel_setup_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_between_button_margin"
        android:text="@android:string/cancel"
        app:uidComponentType="Secondary"
        android:visibility="gone"
        />
</LinearLayout>