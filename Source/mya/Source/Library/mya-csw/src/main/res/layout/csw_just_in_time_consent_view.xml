<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/default_screen_side_margin"
                android:paddingStart="@dimen/default_screen_side_margin">

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mya_cws_button_in_time_consent_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_between_button_margin"
        app:uidComponentType="Secondary"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/mya_cws_button_in_time_consent_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mya_cws_button_in_time_consent_later"
        android:layout_marginBottom="@dimen/default_main_button_top_margin"
        app:uidComponentType="Primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mya_cws_button_in_time_consent_ok"
        android:background="?attr/uidContentSecondaryBackgroundColor"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/mya_cws_label_in_time_consent_description"
            style="@style/UIDLabel.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_screen_side_margin"
            android:layout_marginStart="@dimen/default_screen_side_margin"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/philips_website"
            style="@style/UIDLabel.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_screen_side_margin"
            android:layout_marginEnd="@dimen/default_screen_side_margin"
            android:layout_marginStart="@dimen/default_screen_side_margin"/>
    </LinearLayout>

</RelativeLayout>