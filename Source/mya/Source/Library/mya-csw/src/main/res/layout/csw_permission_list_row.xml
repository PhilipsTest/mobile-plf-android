<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <com.philips.platform.uid.view.widget.Switch
        android:id="@+id/toggleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:gravity="center_vertical|end" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentError"
        fontPath="fonts/centralesansbook.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/toggleicon"
        android:layout_alignStart="@id/toggleicon"
        android:layout_below="@id/toggleicon"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="!"
        android:textColor="@color/colorPrimary" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentText"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_toStartOf="@id/toggleicon"
        android:gravity="center_vertical|start"
        tools:text="ConsentText" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentHelp"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/consentText"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_toStartOf="@id/toggleicon"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical|start"
        android:paddingTop="4dp"
        android:text="@string/csw_consent_help_label"
        android:textColor="@color/reg_hyperlink_highlight_color" />

</RelativeLayout>