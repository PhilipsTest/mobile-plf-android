<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <solid android:color="@color/uit_blue_level_50" />
                    <corners android:radius="@dimen/uit_switch_thumb_radius"/>
                    <size android:width="@dimen/uit_switch_thumb_radius_pressed"
                        android:height="@dimen/uit_switch_thumb_radius_pressed" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <corners android:radius="24dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="#FF000000"
                        android:startColor="#00FFFFFF" />
                    <stroke android:width="17dp"
                        android:color="#00ffffff" />

                    <padding android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <solid android:color="@android:color/holo_orange_dark" />
                    <stroke
                        android:width="@dimen/uit_switch_thumb_radius_pressed_unpressed_diff"
                        android:color="#00ffffff"/>
                    <corners android:radius="@dimen/uit_switch_thumb_radius"/>
                    <size android:width="@dimen/uit_switch_thumb_radius"
                        android:height="@dimen/uit_switch_thumb_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <corners android:radius="24dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="#FF000000"
                        android:startColor="#00FFFFFF" />
                    <stroke android:width="17dp"
                        android:color="#00ffffff" />

                    <padding android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <solid android:color="@android:color/holo_orange_dark" />
                    <corners android:radius="@dimen/uit_switch_thumb_radius"/>
                    <size android:width="@dimen/uit_switch_thumb_radius_pressed"
                        android:height="@dimen/uit_switch_thumb_radius_pressed" />
                    <stroke
                        android:width="@dimen/uit_switch_thumb_radius_pressed_unpressed_diff"
                        android:color="#00ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                android:visible="true">
                    <corners android:radius="24dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="#FF000000"
                        android:startColor="#00FFFFFF" />
                    <stroke android:width="17dp"
                        android:color="#00ffffff" />

                    <padding android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"
                    android:visible="true">
                    <solid android:color="@android:color/holo_orange_dark" />
                    <corners android:radius="@dimen/uit_switch_thumb_radius"/>
                    <size android:width="@dimen/uit_switch_thumb_radius_pressed"
                        android:height="@dimen/uit_switch_thumb_radius_pressed" />
                    <stroke
                        android:width="@dimen/uit_switch_thumb_radius_pressed_unpressed_diff"
                        android:color="#00ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
