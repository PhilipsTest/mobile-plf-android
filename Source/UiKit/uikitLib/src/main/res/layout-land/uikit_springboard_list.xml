<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/uikit_gradWindowBackground"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/springboard_list_left_margin"
        android:paddingRight="@dimen/springboard_list_right_margin">

        <TextView
            fontPath="fonts/centralesanslight.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="53dp"
            android:text="@string/uikit_about_screen_apptitle"
            android:textColor="@color/uikit_white"
            android:textSize="38dp" />

        <com.philips.cdp.uikit.UikitSpringBoardLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:orientation="vertical"
            app:uikit_opacityStyle="darker_color">


            <LinearLayout
                android:id="@+id/row_layout2"
                android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    app:uikit_themeStyle="theme" />

                <TextView
                    android:id="@+id/textView1"
                    fontPath="fonts/centralesansbook.ttf"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="11dp"
                    app:uikit_themeStyle="theme" />

                <TextView
                    android:id="@+id/textView2"
                    fontPath="fonts/centralesansbook.ttf"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_layout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"

                android:gravity="center|left"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="11dp"
                    app:uikit_themeStyle="theme" />

                <TextView
                    android:id="@+id/textView3"
