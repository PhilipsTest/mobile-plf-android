                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/row_layout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    app:uikit_themeStyle="theme" />

                <TextView
                    android:id="@+id/textView5"
                    fontPath="fonts/centralesansbook.ttf"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/row_layout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="121dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    app:uikit_themeStyle="theme" />

                <TextView
                    android:id="@+id/textView6"
                    fontPath="fonts/centralesansbook.ttf"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/uikit_springboard_textview_label"
                    android:textColor="@color/uikit_white"
                    android:textSize="20sp" />

            </LinearLayout>


        </com.philips.cdp.uikit.UikitSpringBoardLayout>
    </LinearLayout>
