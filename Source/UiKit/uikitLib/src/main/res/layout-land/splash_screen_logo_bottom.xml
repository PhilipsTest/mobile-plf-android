<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/splash_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/gradBackground">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:layout_marginTop="@dimen/splash_title_margin_top"
        android:layout_centerHorizontal="true"
        style="?attr/splashTitleStyle"/>

    <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
        android:id="@+id/splash_logo"
        android:layout_width="@dimen/splash_logo_width"
        android:layout_height="@dimen/splash_logo_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:vectorsrc="@drawable/philips_logo"
        android:layout_marginBottom="@dimen/splash_logo_margin_bottom"/>

</RelativeLayout>