<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="0dp"
    android:layout_width="0dp"
    android:pivotX="50%" android:pivotY="50%" android:fromDegrees="0"
    android:toDegrees="360">
    <shape android:shape="line" android:innerRadiusRatio="2.5"

        android:thicknessRatio="25" android:useLevel="false">
        <size android:width="106dp" android:height="106dp" />
        <gradient android:type="sweep" android:useLevel="false"
            android:startColor="@android:color/transparent"
            android:endColor="@color/uikit_white"
            android:angle="@integer/circle"
            />
    </shape>
    </rotate>

