<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SplashTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/uikit_splash_title_text_size</item>
        <item name="fontPath">fonts/centralesanslight.ttf</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PTablayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">@dimen/uikit_tab_layout_height_without_image</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="android:background">?attr/gradBackground</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPadding">0dp</item>
        <item name="tabMinWidth">@dimen/uikit_tab_minwidth</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="PTablayout.Image" parent="@style/PTablayout">
        <item name="android:layout_height">@dimen/uikit_tab_layout_height_with_image</item>
    </style>


    <style name="AboutScreenTheme" parent="Theme.Philips.DarkBlue">
        <item name="actionBarStyle">@style/ASActionBar</item>
        <item name="android:windowBackground">@drawable/uikit_grad_verydarkblue_darkblue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AboutScreenTheme.MM">
        <item name="actionBarStyle">@style/ASActionBar.MM</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ASActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="customNavigationLayout">@layout/uikit_about_screen_actionbar</item>
        <item name="height">48dp</item>
    </style>

    <style name="ASActionBar.MM">
        <item name="customNavigationLayout">@layout/uikit_about_screen_actionbar_mm</item>
    </style>

    <style name="Slider">
        <item name="android:thumbOffset">@dimen/slider_padding_left</item>
    </style>

    <style name="NotificationLabel">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/uikit_notification_label_default_radius</item>
        <item name="android:minHeight">@dimen/uikit_notification_label_default_radius</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/uikit_notification_label_square_round_textSize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NotificationLabel.SquareRound">
        <item name="android:minWidth">@dimen/uikit_notification_label_square_round_width</item>
        <item name="android:minHeight">@dimen/uikit_notification_label_square_round_height</item>
    </style>

    <style name="NotificationLabel.Small">
        <item name="android:minWidth">@dimen/uikit_notification_label_small_circle_radius</item>
        <item name="android:minHeight">@dimen/uikit_notification_label_small_circle_radius</item>
        <item name="android:textSize">@dimen/uikit_notification_label_square_round_textSize_small
        </item>
        <item name="notification_label_small">true</item>
    </style>

    <style name="NotificationLabel.Small.SquareBackground">
        <item name="android:minWidth">@dimen/uikit_notification_label_square_round_width_small
        </item>
        <item name="android:minHeight">@dimen/uikit_notification_label_square_round_height_small
        </item>
    </style>

    <style name="HamburgerExpandable">
        <item name="expandable">true</item>
    </style>

    <style name="myAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

</resources>
