<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Placeholder to start PhilipsTheme definition -->
    <style name="PhilipsTheme" parent="@"> </style>

    <!-- Base theme, default is blue color. -->
    <style name="PhilipsTheme.Default">
        <item name="actionBarBackground">@color/philips_blue_actionbar</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <item name="btnBgColor">@color/philips_dark_blue</item>
        <item name="btnBgColorPressed">@color/philips_bright_blue</item>
    </style>

    <style name="PhilipsTheme.Default.Light">
        <item name="android:windowBackground">@color/philips_bright_orange</item>
        <item name="android:colorBackground">@color/philips_blue_actionbar</item>
    </style>

    <style name="PhilipsTheme.Default.Dark">
        <item name="actionBarBackground">@color/philips_dark_blue_actionbar</item>
        <item name="android:windowBackground">@color/philips_dark_blue</item>
        <item name="android:colorBackground">@color/philips_blue_actionbar</item>

    </style>

    <!-- Light Blue themes -->
    <style name="PhilipsTheme.Default.Light.Blue">
        <item name="android:buttonStyle">@style/button.normal.light_blue</item>
    </style>

    <style name="TextAppearance">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="PhilipsTheme.Default.Light.Blue.Gradient">
    </style>



    <!-- Dark Blue themes -->
    <style name="PhilipsTheme.Default.Dark.Blue">
        <item name="android:windowBackground">@color/philips_dark_blue</item>
        <item name="android:colorBackground">@color/philips_dark_blue_actionbar</item>
    </style>

    <style name="PhilipsTheme.Default.Dark.Blue.Gradient">
        <item name="android:windowBackground">@drawable/grad_dark_blue_background</item>
    </style>

    <style name="Philips.button.circle"  parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">@dimen/philips_button_circle_width</item>
        <item name="android:minHeight">@dimen/philips_button_circle_width</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:text">@string/greater</item>
    </style>

    <style name="Philips.button.square" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">@dimen/philips_button_square_width</item>
        <item name="android:minHeight">@dimen/philips_button_square_height</item>
        <item name="android:background">@drawable/square</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:text">@string/cross_mark</item>
    </style>
</resources>
