<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Placeholder to start PhilipsTheme definition -->
    <style name="PhilipsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="splashTitleStyle">@style/PhilipsTheme.SplashTitle</item>
        <item name="actionButtonBgColor">@color/philips_bright_blue</item>
        <item name="actionButtonBgColorPressed">@color/philips_light_blue</item>
        <item name="actionBarBackground">@color/philips_blue_actionbar</item>
        <item name="actionButtonStyleRef">@style/Philips.ActionButton</item>
    </style>

    <!-- Base theme, default is blue color. -->
    <style name="PhilipsTheme.Default">
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <item name="actionButtonBgColor">@color/philips_dark_blue</item>
        <item name="actionButtonBgColorPressed">@color/philips_bright_blue</item>
    </style>

    <style name="PhilipsTheme.Default.Light">
        <item name="android:windowBackground">@color/philips_bright_orange</item>
        <item name="android:colorBackground">@color/philips_blue_actionbar</item>
    </style>

    <style name="PhilipsTheme.Default.Dark">
        <item name="actionBarBackground">@color/philips_dark_blue_actionbar</item>
        <item name="android:windowBackground">@color/philips_dark_blue</item>
        <item name="android:colorBackground">@color/philips_blue_actionbar</item>
    </style>

    <!-- Light Blue themes -->
    <style name="PhilipsTheme.Default.Light.Blue">
        <item name="android:buttonStyle">@style/button.normal.light_blue</item>
    </style>

    <style name="TextAppearance">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="PhilipsTheme.Default.Light.Blue.Gradient">
    </style>



    <!-- Dark Blue themes -->
    <style name="PhilipsTheme.Default.Dark.Blue">
        <item name="android:windowBackground">@color/philips_dark_blue</item>
        <item name="android:colorBackground">@color/philips_dark_blue_actionbar</item>
    </style>

    <style name="PhilipsTheme.Default.Dark.Blue.Gradient">
        <item name="android:windowBackground">@drawable/grad_dark_blue_background</item>
    </style>

    <style name="PhilipsTheme.Default.Dark.Orange">
        <item name="android:windowBackground">@color/philips_dark_orange</item>
        <item name="android:colorBackground">@color/philips_dark_orange</item>
        <item name="actionButtonBgColor">@color/philips_bright_orange</item>
        <item name="actionButtonBgColorPressed">@color/philips_light_orange</item>
    </style>


    <style name="PhilipsTheme.SplashTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
