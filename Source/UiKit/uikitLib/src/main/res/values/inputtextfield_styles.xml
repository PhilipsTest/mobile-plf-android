<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InputStyle" parent="Widget.AppCompat.EditText">
        <item name="fontPath">fonts/centralesans_book.ttf</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">@color/enricher4</item>
        <item name="android:textColor">@color/philips_dark_blue</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="InputStyle.DarkBlue">
        <item name="android:background">@drawable/inputtext_dark_blue_selector</item>
    </style>

</resources>