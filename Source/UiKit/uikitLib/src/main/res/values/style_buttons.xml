<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Button">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingRight">@dimen/button_padding_sides</item>
        <item name="android:paddingLeft">@dimen/button_padding_sides</item>
    </style>

    <style name="Button.Solid">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Solid.DarkBlue">
        <item name="android:background">@drawable/dark_blue_selector</item>
    </style>

    <style name="Button.Solid.BrightOrange">
        <item name="android:background">@drawable/bright_orange_selector</item>
    </style>

    <style name="Button.Solid.BrightAqua">
        <item name="android:background">@drawable/bright_aqua_selector</item>
    </style>

    <style name="Button.OutlinedDarkBlue">
        <item name="android:textColor">@drawable/dark_blue_outlined_text_selector</item>
        <item name="android:background">@drawable/dark_blue_outlined_selector</item>
    </style>

    <style name="Button.OutlinedBrightOrange">
        <item name="android:textColor">@drawable/bright_orange_outlined_text_selector</item>
        <item name="android:background">@drawable/bright_orange_outlined_selector</item>
    </style>

    <style name="Button.OutlinedBrightAqua">
        <item name="android:textColor">@drawable/bright_aqua_outlined_text_selector</item>
        <item name="android:background">@drawable/bright_aqua_outlined_selector</item>
    </style>

    <style name="Button.TransparentDarkBlue">
        <item name="android:textColor">@drawable/dark_blue_outlined_text_selector</item>
        <item name="android:background">@drawable/dark_blue_transparent_selector</item>
    </style>

    <style name="Button.TransparentBrightOrange">
        <item name="android:textColor">@drawable/bright_orange_outlined_text_selector</item>
        <item name="android:background">@drawable/bright_orange_transparent_selector</item>
    </style>

    <style name="Button.TransparentBrightAqua">
        <item name="android:textColor">@drawable/bright_aqua_outlined_text_selector</item>
        <item name="android:background">@drawable/bright_aqua_transparent_selector</item>
    </style>

    <style name="Button.TransparentWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/white_transparent_selector</item>
    </style>

</resources>