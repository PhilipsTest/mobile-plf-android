<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Placeholder to start PhilipsTheme definition -->
    <style name="Theme.Philips" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/HoloActionBar</item>
        <item name="actionBarBackground">@drawable/uikit_grad_dark_blue_background</item>
        <item name="splashTitleStyle">@style/SplashTitle</item>
        <item name="actionButtonStyleRef">@style/Philips.ActionButton</item>
        <item name="actionButtonBgColor">@color/uikit_philips_dark_blue</item>
        <item name="actionButtonBgColorPressed">@color/uikit_philips_light_blue</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="baseColor">@color/uikit_philips_dark_blue</item>
        <item name="gradBackground">@drawable/uikit_grad_dark_blue_background</item>
        <item name="veryLightColor">@color/uikit_philips_very_light_blue</item>
        <item name="splashGradient">@drawable/uikit_grad_blue_bright_to_light</item>
        <item name="android:seekBarStyle">@style/Slider</item>
        <item name="enableStroke">false</item>
        <item name="colorPrimaryDark">?attr/baseColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="fontPath">fonts/centralesans_book.ttf</item>
    </style>

    <style name="HoloActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/actionBarBackground</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>