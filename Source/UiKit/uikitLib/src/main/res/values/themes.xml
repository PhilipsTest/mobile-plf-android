<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Placeholder to start PhilipsTheme definition -->
    <style name="Theme.Philips" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="colorPrimary">?attr/actionBarBackground</item>
        <item name="splashTitleStyle">@style/PhilipsTheme.SplashTitle</item>
        <item name="miscButtonStyle">@style/Misc.button</item>
        <item name="miscButtonBgColor">@color/philips_dark_blue</item>
        <item name="miscButtonBgColorPressed">@color/philips_light_blue</item>
    </style>

    <style name="Theme.Philips.LightBlue">
        <item name="actionBarBackground">@color/philips_very_light_blue</item>
        <item name="android:windowBackground">@color/philips_very_light_blue</item>
        <item name="android:colorBackground">@color/philips_very_light_blue</item>
        <item name="miscButtonBgColor">@color/philips_dark_blue</item>
        <item name="miscButtonBgColorPressed">@color/philips_light_blue</item>
    </style>

    <style name="Theme.Philips.Orange">
        <item name="actionBarBackground">@color/philips_very_light_orange</item>
        <item name="android:windowBackground">@color/philips_very_light_orange</item>
        <item name="android:colorBackground">@color/philips_very_light_orange</item>
        <item name="miscButtonBgColor">@color/philips_dark_orange</item>
        <item name="miscButtonBgColorPressed">@color/philips_light_orange</item>
    </style>

    <style name="Theme.Philips.GradientBlue">
        <item name="android:windowBackground">@drawable/grad_light_blue_background</item>
        <item name="actionBarBackground">@color/philips_bright_blue</item>
        <item name="android:colorBackground">@color/philips_bright_blue</item>
        <item name="miscButtonBgColor">@color/philips_dark_blue</item>
        <item name="miscButtonBgColorPressed">@color/philips_light_blue</item>
    </style>

    <style name="Theme.Philips.GradientOrange">
        <item name="android:windowBackground">@drawable/grad_orange_background</item>
        <item name="actionBarBackground">@color/philips_bright_orange</item>
        <item name="android:colorBackground">@color/philips_bright_orange</item>
        <item name="miscButtonBgColor">@color/philips_dark_orange</item>
        <item name="miscButtonBgColorPressed">@color/philips_light_orange</item>
    </style>

    <style name="Theme.Philips.LightBlue.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Philips.Orange.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Philips.GradientBlue.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Philips.GradientOrange.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>