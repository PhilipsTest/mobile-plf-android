<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Philips.ActionButton" parent="@android:style/Widget.ImageButton">
        <item name="android:minWidth">@dimen/uikit_philips_action_button_radius</item>
        <item name="android:minHeight">@dimen/uikit_philips_action_button_radius</item>
        <item name="android:padding">0dp</item>
        <item name="actionButtonShape">square</item>
    </style>

    <style name="Philips.ActionButton.Circle">
        <item name="actionButtonShape">circle</item>
    </style>

    <style name="Philips.ActionButton.Square">
        <item name="actionButtonShape">square</item>
    </style>

    <style name="Philips.ActionButton.Square.Arrow">
        <item name="actionButtonImageDrawable">@drawable/uikit_right_arrow</item>
    </style>

    <style name="Philips.ActionButton.Square.Plus">
        <item name="actionButtonImageDrawable">@drawable/uikit_plus</item>
    </style>

    <style name="Philips.ActionButton.Square.Minus">
        <item name="actionButtonImageDrawable">@drawable/uikit_minus</item>
    </style>

    <style name="Philips.ActionButton.Square.QuestionMark">
        <item name="actionButtonImageDrawable">@drawable/uikit_question_mark</item>
    </style>

    <style name="Philips.ActionButton.Square.CrossMark">
        <item name="actionButtonImageDrawable">@drawable/uikit_cross</item>
    </style>

    <style name="Philips.ActionButton.Circle.Arrow">
        <item name="actionButtonImageDrawable">@drawable/uikit_right_arrow</item>
    </style>

    <style name="Philips.ActionButton.Circle.Plus">
        <item name="actionButtonImageDrawable">@drawable/uikit_plus</item>
    </style>

    <style name="Philips.ActionButton.Circle.Minus">
        <item name="actionButtonImageDrawable">@drawable/uikit_minus</item>
    </style>

    <style name="Philips.ActionButton.Circle.QuestionMark">
        <item name="actionButtonImageDrawable">@drawable/uikit_question_mark</item>
    </style>

    <style name="Philips.ActionButton.Circle.CrossMark">
        <item name="actionButtonImageDrawable">@drawable/uikit_cross</item>
    </style>

    <style name="Philips.ActionButton.Circle.Float">
        <item name="actionButtonShape">circle</item>
        <item name="actionButtonShadow">true</item>
        <item name="android:elevation">@dimen/uikit_action_button_shadow_radius</item>
        <item name="android:minWidth">@dimen/uikit_philips_action_button_float_radius</item>
        <item name="android:minHeight">@dimen/uikit_philips_action_button_float_radius</item>
    </style>

    <style name="Philips.ActionButton.Circle.Float.Plus">
        <item name="actionButtonImageDrawable">@drawable/uikit_action_icon_plus</item>
    </style>

    <style name="Philips.ActionButton.Circle.Float.Pencil">
        <item name="actionButtonImageDrawable">@drawable/uikit_pencil_01</item>
    </style>

</resources>