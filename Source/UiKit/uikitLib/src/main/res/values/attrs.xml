<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PhilipsUIKit">
        <attr name="actionBarBackground" format="reference|color"/>
        <attr name="outlinedButtonStyle" format="reference"/>
        <attr name="baseColor" format="reference|color"/>
        <attr name="verydarkBaseColor" format="reference|color"/>
        <attr name="listSelectorBackground" format="reference|color"/>
        <attr name="listtextselector" format="reference|color"/>
        <attr name="gradWindowBackground" format="reference|color"/>
        <attr name="listDividerColor" format="reference|color"/>
        <attr name="springBoardDivider" format="reference|color"/>
        <attr name="outlinedButtonTransparentStyle" format="reference"/>
        <attr name="springBoardTextColor" format="reference|color"/>
        <attr name="themeSwitch" format="reference"/>
        <attr name="switchOffColor" format="color"/>
        <attr name="veryLightColor" format="color"/>
        <attr name="brightColor" format="color" />
        <attr name="splashGradient" format="reference"/>
        <attr name="gradientColorForListHeader" format="reference|color"/>
        <attr name="gradientColorForListSectionTitle" format="reference|color"/>
        <attr name="notificationBarGradient" format="reference"/>
        <attr name="tabBarGradient" format="reference"/>
        <attr name="hamburgerGradient" format="reference"/>
        <!--  Definiton of these gradients vary as per the theme -->
        <attr name="baseGradient" format="reference"/>
        <attr name="darkerGradient" format="reference"/>
        <attr name="lighterGradient" format="reference"/>
        <attr name="evenLighterGradient" format="reference"/>
        <attr name="veryLightGradient" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TintableImageView">
        <attr name="themeStyle" format="enum">
            <enum name="none" value="0"/>
            <enum name="theme" value="1"/>
            <enum name="inverted" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="UikitSpringBoardLayout">
        <attr name="opacityStyle" format="enum">
            <enum name="none" value="0"/>
            <enum name="with" value="1"/>

        </attr>
    </declare-styleable>

    <declare-styleable name="ActionButton">
        <attr name="actionButtonShape" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="actionButtonBgColor" format="color"/>
        <attr name="actionButtonBgColorPressed" format="color"/>
        <attr name="actionButtonImageDrawable" format="reference"/>
        <attr name="actionButtonStyleRef" format="reference"/>
        <attr name="actionButtonShadow" format="boolean"/>
    </declare-styleable>

    <attr name="splashTitleStyle" format="reference"/>

    <declare-styleable name="VectorDrawableImageView">
        <attr name="vectorsrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RatingBarView">
        <attr name="isratingbarbig" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="InputTextField">
        <attr name="inputFieldWidth" format="dimension"/>
        <attr name="inputFieldHeight" format="dimension"/>
        <attr name="singleLine" format="boolean"/>
        <attr name="hintText" format="string"/>
        <attr name="errorText" format="string"/>
        <attr name="enabled" format="boolean"/>
        <attr name="errorTextColor" format="color"/>
        <attr name="errorIcon" format="integer"/>
        <attr name="errorBackground" format="reference"/>
    </declare-styleable>

    <attr name="enableStroke" format="boolean"/>
    <attr name="strokeColor" format="color" />

    <declare-styleable name="VectorCompat">
        <attr name="vc_tintMode" format="enum">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
            <enum name="add" value="16" />
        </attr>
        <attr name="vc_tint" format="reference|color"/>
        <attr name="vc_autoMirrored" format="boolean"/>
        <attr name="android:width" />
        <attr name="android:height" />
        <attr name="vc_viewportWidth" format="float"/>
        <attr name="vc_viewportHeight" format="float"/>
        <attr name="android:name"/>
        <attr name="android:alpha"/>
    </declare-styleable>
    <declare-styleable name="VectorCompatGroup">
        <attr name="android:name" />
        <attr name="android:rotation" />
        <attr name="android:pivotX" />
        <attr name="android:pivotY" />
        <attr name="vc_translateX" format="float"/>
        <attr name="vc_translateY" format="float"/>
        <attr name="android:scaleX" />
        <attr name="android:scaleY" />
    </declare-styleable>
    <declare-styleable name="VectorCompatClipPath">
        <attr name="android:name" />
        <attr name="vc_pathData"/>
    </declare-styleable>

    <declare-styleable name="VectorCompatPath">
        <attr name="android:name" />
        <attr name="vc_strokeWidth" format="float" />
        <attr name="vc_strokeColor" format="reference|color" />
        <attr name="vc_strokeAlpha" format="float" />
        <attr name="vc_fillColor" format="reference|color" />
        <attr name="vc_fillAlpha" format="float" />
        <attr name="vc_pathData" format="string" />
        <attr name="vc_trimPathStart" format="float" />
        <attr name="vc_trimPathEnd" format="float" />
        <attr name="vc_trimPathOffset" format="float" />
        <attr name="vc_strokeLineCap" format="enum">
            <enum name="butt" value="0"/>
            <enum name="round" value="1"/>
            <enum name="square" value="2"/>
        </attr>
        <attr name="vc_strokeLineJoin" format="enum">
            <enum name="miter" value="0"/>
            <enum name="round" value="1"/>
            <enum name="bevel" value="2"/>
        </attr>
        <attr name="vc_strokeMiterLimit" format="float"/>
    </declare-styleable>

    <declare-styleable name="slider">
        <attr name="discreteValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="popover_alert">
        <attr name="popover_right_icon" format="reference"/>
        <attr name="popover_left_icon" format="reference"/>
        <attr name="popover_title_text" format="reference|string"/>
        <attr name="popover_opacity" format="float"/>
    </declare-styleable>

    <declare-styleable name="notification_label">
        <attr name="notification_label_small" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="absoluteMinValue" format="integer|float"/>
        <attr name="absoluteMaxValue" format="integer|float"/>
    </declare-styleable>
</resources>
