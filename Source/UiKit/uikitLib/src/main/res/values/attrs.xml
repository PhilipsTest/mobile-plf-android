<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PhilipsUIKit">
        <attr name="actionBarBackground" format="reference|color"/>
        <attr name="outlinedButtonStyle" format="reference"/>
        <attr name="baseColor" format="reference|color"/>
        <attr name="gradBackground" format="reference|color"/>
        <attr name="outlinedButtonTransparentStyle" format="reference"/>
        <attr name="themeSwitch" format="reference"/>
        <attr name="veryLightColor" format="color"></attr>
        <attr name="splashGradient" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ActionButton">
        <attr name="actionButtonShape" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="actionButtonBgColor" format="color"/>
        <attr name="actionButtonBgColorPressed" format="color"/>
        <attr name="actionButtonImageDrawable" format="reference"/>
        <attr name="actionButtonStyleRef" format="reference"/>
        <attr name="actionButtonShadow" format="boolean"/>
    </declare-styleable>

    <attr name="splashTitleStyle" format="reference"/>

    <declare-styleable name="VectorDrawableImageView">
        <attr name="vectorsrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="InputTextField">
        <attr name="hintText" format="string"/>
        <attr name="errorText" format="string"/>
        <attr name="disabled" format="boolean"/>
        <attr name="errorTextColor" format="color"/>
        <attr name="errorIcon" format="integer"/>
        <attr name="errorBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered"/>
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color"/>
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color"/>
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="selectedCircleHeight" format="dimension"/>
        <attr name="selectedCircleWidth" format="dimension"/>
        <attr name="unSelectedCircleHeight" format="dimension"/>
        <attr name="unSelectedCircleWidth" format="dimension"/>
        <attr name="distanceBetweenCircle" format="dimension"/>
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color"/>
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth"/>
        <!-- View background -->
        <attr name="android:background"/>
        <!-- enable Stroke background -->
        <attr name="enableStroke" format="boolean"/>
    </declare-styleable>

</resources>
