<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Philips.button.circle"  parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">@dimen/philips_button_circle_width</item>
        <item name="android:minHeight">@dimen/philips_button_circle_width</item>
        <item name="android:layout_margin">@dimen/philips_msc_button_margin</item>
        <item name="android:padding">@dimen/philips_msc_button_padding</item>
        <item name="android:textSize">@dimen/philips_msc_button_text_size</item>
        <item name="btnShape">@integer/circle</item>
    </style>

    <style name="Philips.button.square" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">@dimen/philips_button_square_width</item>
        <item name="android:minHeight">@dimen/philips_button_square_height</item>
        <item name="android:padding">@dimen/philips_msc_button_margin</item>
        <item name="android:layout_margin">@dimen/philips_msc_button_padding</item>
        <item name="android:textSize">@dimen/philips_msc_button_text_size</item>
        <item name="btnShape">@integer/square</item>
    </style>

    <style name="Philips.button.square.greater">
        <item name="android:text">@string/greater</item>
    </style>

    <style name="Philips.button.square.plus">
        <item name="android:text">@string/plus</item>
    </style>

    <style name="Philips.button.square.minus">
        <item name="android:text">@string/minus</item>
    </style>

    <style name="Philips.button.square.questionMark">
        <item name="android:text">@string/question_mark</item>
    </style>

    <style name="Philips.button.square.crossMark">
        <item name="android:text">@string/cross_mark</item>
    </style>

    <style name="Philips.button.circle.greater">
        <item name="android:text">@string/greater</item>
    </style>

    <style name="Philips.button.circle.plus">
        <item name="android:text">@string/plus</item>
    </style>

    <style name="Philips.button.circle.minus">
        <item name="android:text">@string/minus</item>
    </style>

    <style name="Philips.button.circle.questionMark">
        <item name="android:text">@string/question_mark</item>
    </style>

    <style name="Philips.button.circle.crossMark">
        <item name="android:text">@string/cross_mark</item>
    </style>
</resources>