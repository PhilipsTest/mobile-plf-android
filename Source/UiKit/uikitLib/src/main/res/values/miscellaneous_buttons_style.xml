<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Misc.button" parent="@android:style/Widget.ImageButton">
        <item name="android:minWidth">@dimen/philips_button_square_width</item>
        <item name="android:minHeight">@dimen/philips_button_square_height</item>
        <item name="android:padding">@dimen/philips_msc_button_padding</item>
        <item name="miscButtonShape">square</item>
    </style>

    <style name="Misc.button.circle">
        <item name="miscButtonShape">circle</item>
    </style>

    <style name="Misc.button.square">
        <item name="miscButtonShape">square</item>
    </style>

    <style name="Misc.button.square.arrow">
        <item name="miscButtonImageDrawable">@drawable/arrow</item>
    </style>

    <style name="Misc.button.square.plus">
        <item name="miscButtonImageDrawable">@drawable/plus</item>
    </style>

    <style name="Misc.button.square.minus">
        <item name="miscButtonImageDrawable">@drawable/minus</item>
    </style>

    <style name="Misc.button.square.questionMark">
        <item name="miscButtonImageDrawable">@drawable/question_mark</item>
    </style>

    <style name="Misc.button.square.crossMark">
        <item name="miscButtonImageDrawable">@drawable/cross</item>
    </style>

    <style name="Misc.button.circle.arrow">
        <item name="miscButtonImageDrawable">@drawable/arrow</item>
    </style>

    <style name="Misc.button.circle.plus">
        <item name="miscButtonImageDrawable">@drawable/plus</item>
    </style>

    <style name="Misc.button.circle.minus">
        <item name="miscButtonImageDrawable">@drawable/minus</item>
    </style>

    <style name="Misc.button.circle.questionMark">
        <item name="miscButtonImageDrawable">@drawable/question_mark</item>
    </style>

    <style name="Misc.button.circle.crossMark">
        <item name="miscButtonImageDrawable">@drawable/cross</item>
    </style>

</resources>