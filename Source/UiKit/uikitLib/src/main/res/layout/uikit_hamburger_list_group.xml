<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/hamburger_group_parent"
              android:layout_width="match_parent"
              android:layout_height="@dimen/uikit_hamburger_group_item_height"
              android:background="?attr/baseColor"
              >

    <TextView
        android:id="@+id/hamburger_header"
        fontPath="fonts/centralesansbold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/uikit_hamburger_item_icon_left_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/uikit_hamburger_item_text_title_size"/>

</RelativeLayout>