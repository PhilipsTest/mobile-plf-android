<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_background">

    <TextView
        android:id="@+id/splash_title"
        style="?attr/splashTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_title_margin_top"
        android:text="@string/splash_title"/>

    <ImageView
        android:id="@+id/splash_background"
        android:layout_width="@dimen/splash_logo_width"
        android:layout_height="@dimen/splash_logo_height"
        android:layout_centerInParent="true"
        android:src="@drawable/philips_logo"/>

</RelativeLayout>