<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uikit_philips_bright_blue"
        android:alpha="0.5"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/about_screen">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/uikit_about_screen_apptitle_size"
                android:textColor="#fff"
                fontPath="fonts/centralesansbold.ttf"
                android:text="@string/uikit_about_screen_apptitle"
                android:layout_marginTop="@dimen/uikit_about_screen_layout_top_margin"
                android:layout_marginLeft="@dimen/uikit_about_screen_layout_left_margin"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_title"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/uikit_about_screen_version_margin"
                android:textSize="@dimen/uikit_about_screen_version_copyright_size"
                fontPath="fonts/centralesans_book.ttf"
                android:text="@string/uikit_about_screen_version"
                android:layout_marginLeft="@dimen/uikit_about_screen_version_copyright_left_margin"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/about_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_version"
                android:layout_marginTop="@dimen/uikit_about_screen_copyright_margin"
                android:textSize="@dimen/uikit_about_screen_version_copyright_size"
                android:textColor="#fff"
                fontPath="fonts/centralesans_book.ttf"
                android:text="@string/uikit_about_screen_copyright"
                android:layout_marginLeft="@dimen/uikit_about_screen_version_copyright_left_margin"
                android:includeFontPadding="false"/>

            <LinearLayout
                android:id="@+id/about_termsandpolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_copyright"
                android:layout_marginTop="@dimen/uikit_about_screen_terms_margin"
                android:layout_marginLeft="@dimen/uikit_about_screen_layout_rest_left_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/uikit_about_screen_terms_privacy_content_size"
                    android:textColor="#fff"
                    fontPath="fonts/centralesanslight.ttf"
                    android:text="@string/uikit_about_screen_terms"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/about_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/uikit_about_screen_privacy_margin"
                    android:textSize="@dimen/uikit_about_screen_terms_privacy_content_size"
                    android:textColor="#fff"
                    fontPath="fonts/centralesanslight.ttf"
                    android:text="@string/uikit_about_screen_privacy"
                    android:includeFontPadding="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/about_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_termsandpolicy"
                android:layout_marginRight="@dimen/uikit_about_screen_content_right_margin"
                android:layout_marginTop="@dimen/uikit_about_screen_content_top_margin"
                android:layout_marginLeft="@dimen/uikit_about_screen_layout_rest_left_margin"
                android:textSize="@dimen/uikit_about_screen_terms_privacy_content_size"
                android:textColor="#fff"
                android:lineSpacingExtra="@dimen/uikit_about_screen_content_linespacing"
                fontPath="fonts/centralesanslight.ttf"
                android:includeFontPadding="false"
                android:text="@string/uikit_about_screen_content"/>
        </RelativeLayout>

        <com.philips.cdp.uikit.customviews.VectorDrawableImageView
            android:id="@+id/about_screen_logo"
            android:layout_width="@dimen/uikit_about_screen_logo_width"
            android:layout_height="@dimen/uikit_about_screen_logo_height"
            android:layout_marginTop="@dimen/uikit_about_screen_logo_margin"
            android:layout_marginBottom="@dimen/uikit_about_screen_logo_margin_bottom"
            android:layout_gravity="center"
            app:vectorsrc="@drawable/uikit_philips_logo"/>
    </LinearLayout>

    </ScrollView>
</LinearLayout>