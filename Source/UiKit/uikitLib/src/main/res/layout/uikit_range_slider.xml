<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textviewleft"
        fontPath="fonts/centralesanslight.ttf"
        android:textColor="@color/uikit_philips_slider_text"
        android:textSize="@dimen/slider_text_size_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/slider_range_margin"
        />
    <TextView
        android:id="@+id/textviewright"
        fontPath="fonts/centralesanslight.ttf"
        android:textSize="@dimen/slider_text_size_sp"
        android:textColor="@color/uikit_philips_slider_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/slider_range_margin"
        />
    <com.philips.cdp.uikit.customviews.RangeSeekBar
        android:id="@+id/baserangebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/slider_margin_text_thumb"
        android:layout_below="@+id/textviewleft"
        />

</RelativeLayout>
