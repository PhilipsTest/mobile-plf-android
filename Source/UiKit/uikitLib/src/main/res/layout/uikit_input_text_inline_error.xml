<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="14dp"

    >

<com.shamanland.fonticon.FontIconTextView
    android:id="@+id/error_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/uikit_fonticon_cross"
    android:textSize="13sp"
    android:layout_marginRight="9dp"
    fontPath="fonts/puicon.ttf"
    android:textColor="?attr/erroriconcolorinlineforms"
    />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/invalid_email_format"
        android:layout_toRightOf="@+id/error_image"
        android:fontFamily="fonts/centralesansbook.ttf"
        android:layout_alignBaseline="@id/error_image"
        android:textColor="?attr/errortextcolorinlineforms"
        android:includeFontPadding="false"
   />


</RelativeLayout>

