<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/uikit_tab_selector">

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/uikit_tab_text_size_with_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        fontPath="fonts/centralesansbook.ttf"/>
    <View
        android:id="@+id/tab_divider"
        android:layout_width="@dimen/uikit_tab_divider_width"
        android:layout_height="match_parent"
        android:background="?attr/veryLightColor"
        android:alpha="0.3"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>