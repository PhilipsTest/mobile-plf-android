<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/buttonPB"
        style="?attr/uikit_progressBarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/uikit_spinneronbutton_button_padding_left"
        android:paddingTop="@dimen/uikit_spinneronbutton_button_padding_top"
        android:paddingBottom="@dimen/uikit_spinneronbutton_button_padding_bottom"
        android:text=""
        android:textAllCaps="false" />

    <com.philips.cdp.uikit.customviews.CircularProgressbar
        android:id="@+id/progressBarPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="1"
        android:visibility="visible"
        app:uikit_circularprogresssmall="true"
        app:uikit_grayprogress="true"
        app:uikit_themeable="false"/>

</FrameLayout>