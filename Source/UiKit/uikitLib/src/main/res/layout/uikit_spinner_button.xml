<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.philips.cdp.uikit.customviews.UIKitButton
        android:id="@+id/buttonPB"
        style="?attr/uikit_springBoardButtonOutLinedWithIcon"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:text="Sample button"
        android:textAllCaps="false" />

    <com.philips.cdp.uikit.customviews.CircularProgressbar
        android:id="@+id/progressBarPB"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:indeterminateBehavior="cycle"
        android:indeterminateOnly="false"
        android:max="60"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1"
        android:visibility="visible"
        app:uikit_grayprogress="true" />
</FrameLayout>