<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ratingtheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/framelayout_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        >
        <ImageView
            android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/image"
            android:backgroundTint="?attr/baseColor"/>
    </FrameLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/framelayout_list_image"
    android:layout_toEndOf="@+id/framelayout_list_image"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/text1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DiamondClean"
        fontPath="fonts/centralesansbold.ttf"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:textSize="16dp"
        android:textColor="?attr/baseColor"
        />

    <TextView
        android:id="@+id/text2value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¬209,99*"
        fontPath="fonts/centralesansbook.ttf"
        android:textSize="16dp"
        android:layout_below="@+id/text1Name"
        android:layout_toRightOf="@+id/from"
        android:layout_toEndOf="@+id/from"
        android:textColor="?attr/baseColor"
        />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"
        fontPath="fonts/centralesansbook.ttf"
        android:textSize="10dp"
       android:layout_alignBaseline="@id/text2value"
        android:layout_toRightOf="@+id/framelayout_list_image"
        android:layout_toEndOf="@+id/framelayout_list_image"
        android:textColor="?attr/baseColor"
        />


</RelativeLayout>

</RelativeLayout>