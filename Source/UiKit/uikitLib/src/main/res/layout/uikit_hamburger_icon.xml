<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
        android:id="@+id/hamburger_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:vectorsrc="@drawable/uikit_hamburger_options" />

    <TextView
        android:id="@+id/list_counter"
        style="@style/NotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/hamburger_icon"
        android:layout_alignTop="@+id/hamburger_icon"
        android:text="50"
        android:textSize="5dp" />

</RelativeLayout>