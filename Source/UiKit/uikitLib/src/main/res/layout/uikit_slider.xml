<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slider_linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/slider_framelayout"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lines="1"
            android:textSize="@dimen/slider_text_size"
            android:textColor="?attr/baseColor"
            />

        <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
            android:id="@+id/slider_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:vectorsrc="?attr/indicatorimage" />
    </FrameLayout>
    <SeekBar
        android:id="@+id/slider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider_indicator"
        android:layout_marginLeft="@dimen/slider_padding"
        android:layout_marginRight="@dimen/slider_padding"
        android:layout_marginTop="@dimen/slider_indicator_margin"
        />
</LinearLayout>




