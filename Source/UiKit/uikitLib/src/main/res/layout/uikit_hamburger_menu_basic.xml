<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/philips_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- The main content view -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- &lt;!&ndash; Toolbar instead of ActionBar so the drawer can slide on top &ndash;&gt;
         <android.support.v7.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="@dimen/abc_action_bar_default_height_material"
             android:background="?attr/colorPrimary"
             android:minHeight="?attr/actionBarSize"
             />

         &lt;!&ndash; Real content goes here &ndash;&gt;
         <FrameLayout
             android:id="@+id/frame_container"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"/>-->
    </LinearLayout>

    <!-- The navigation drawer -->
    <android.support.design.widget.NavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/uikit_hamburger_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/actionBarBackground"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

    <ListView
        android:id="@+id/hamburger_list"
        android:layout_width="@dimen/uikit_hamburger_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/actionBarBackground"
        android:divider="?attr/brightColor"
        android:dividerHeight="1dp"
        android:scrollbars="none"></ListView>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>