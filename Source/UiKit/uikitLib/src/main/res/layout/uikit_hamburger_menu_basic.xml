<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/philips_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/gradBackground"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="@dimen/uikit_hamburger_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/gradBackground"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/list_view_parent"
            android:layout_width="@dimen/uikit_hamburger_width"
            android:layout_height="match_parent"
            android:background="?attr/gradBackground">

            <ListView
                android:id="@+id/hamburger_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:divider="?attr/brightColor"
                android:dividerHeight="1dp"
                android:scrollbars="none"></ListView>

            <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
                android:id="@+id/image"
                android:layout_width="@dimen/uikit_hamburger_logo_width"
                android:layout_height="@dimen/uikit_hamburger_logo_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/uikit_hamburger_menu_logo_bottom_margin"
                android:layout_marginTop="@dimen/uikit_hamburger_menu_logo_top_margin"
                android:visibility="gone"
                app:vectorsrc="@drawable/uikit_philips_logo" />
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>