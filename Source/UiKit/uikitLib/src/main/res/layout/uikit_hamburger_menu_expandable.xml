<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/philips_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/list_view_parent"
        style="@style/hamburger"
        android:layout_width="@dimen/uikit_hamburger_width"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/hamburger_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/uikit_hamburger_menu_logo_top_margin"
            android:childDivider="?attr/brightColor"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:groupIndicator="@null"
            android:scrollbars="none"
            android:showDividers="end" />

        <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
            android:id="@+id/image"
            android:layout_width="@dimen/uikit_hamburger_logo_width"
            android:layout_height="@dimen/uikit_hamburger_logo_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/uikit_hamburger_menu_logo_bottom_margin_illegal"
            android:visibility="gone"
            app:vectorsrc="@drawable/uikit_philips_logo" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>