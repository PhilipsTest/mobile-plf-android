<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/philips_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_view_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            style="@style/hamburger"
            android:layout_width="@dimen/uikit_hamburger_width"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/hamburger_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:childDivider="?attr/brightColor"
                android:dividerHeight="1dp"
                android:groupIndicator="@null"
                android:scrollbars="none"
                >

            </ExpandableListView>


            <com.philips.cdp.uikit.costumviews.VectorDrawableImageView
                android:id="@+id/image"
                android:layout_width="@dimen/uikit_hamburger_logo_width"
                android:layout_height="@dimen/uikit_hamburger_logo_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/uikit_hamburger_menu_logo_bottom_margin"
                android:layout_marginTop="@dimen/uikit_hamburger_menu_logo_top_margin"
                android:visibility="gone"
                app:vectorsrc="@drawable/uikit_philips_logo"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>