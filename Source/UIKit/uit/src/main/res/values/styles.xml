<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Philips" parent="Theme.AppCompat.NoActionBar">
        <item name="buttonStyle">@style/UITDefaultButton</item>
        <item name="imageButtonStyle">@style/UITImageButton</item>
        <item name="editTextStyle">@style/UITTextEditBox</item>
        <item name="actionBarStyle">@style/UITNavigationBar</item>
        <item name="android:windowBackground">?attr/uitContentPrimary</item>
        <item name="switchStyle">@style/UIDSwitchStyle</item>
    </style>

    <style name="UIDSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/uid_switch_track</item>
        <!--
                <item name="track">@drawable/uid_switch_track_drawable</item>
        -->
        <item name="android:thumb">@drawable/uid_switch_thumb</item>
        <item name="android:background">@null</item>
        <item name="uidSwitchThumbColorList">@color/uid_switch_thumb_selector</item>
        <item name="uidSwitchTrackColorList">@color/uid_switch_track_selector</item>
    </style>

</resources>
