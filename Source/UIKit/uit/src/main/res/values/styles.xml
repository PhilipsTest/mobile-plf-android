<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Philips" parent="Theme.AppCompat.NoActionBar">
        <item name="buttonStyle">@style/UITDefaultButton</item>
        <item name="imageButtonStyle">@style/UITImageButton</item>
        <item name="editTextStyle">@style/UITTextEditBox</item>
        <item name="android:windowBackground">?attr/uitContentPrimary</item>
        <item name="switchStyle">@style/UIDSwitchStyle</item>
        <item name="android:alertDialogStyle">@style/UIDAlertDialog</item>

        <!-- Action bar and toolbar style-->
        <item name="actionBarStyle">@style/UITNavigationBar</item>
        <item name="android:actionBarStyle">@style/UITNavigationBar</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">@style/UIDToolbar</item>
        <item name="toolbarStyle">@style/UIDToolbar</item>

        <!-- Navigation color for lolipop-->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/uitContentPrimary
        </item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            ?attr/uitActionBarBackground
        </item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">?attr/uitActionBarBackground
        </item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">
            ?attr/uitActionBarBackground
        </item>


    </style>


</resources>