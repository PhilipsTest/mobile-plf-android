<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Philips" parent="Theme.AppCompat.NoActionBar">
        <item name="buttonStyle">@style/UITDefaultButton</item>
        <item name="imageButtonStyle">@style/UITImageButton</item>
        <item name="editTextStyle">@style/UITTextEditBox</item>
        <item name="actionBarStyle">@style/UITNavigationBar</item>
        <item name="android:windowBackground">?attr/uitContentPrimary</item>
        <item name="switchStyle">@style/UIDSwitchStyle</item>
    </style>

    <style name="Philips.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/uit_progress_bar_min_width</item>
    </style>

    <style name="Philips.ProgressBar.Horizontal.WithMargins" parent="Philips.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">@dimen/uit_progress_bar_margin_left</item>
        <item name="android:layout_marginRight">@dimen/uit_progress_bar_margin_right</item>
    </style>

    <declare-styleable name="UIKitProgressBar">
        <attr format="boolean" name="uit_secondary_progress"/>
    </declare-styleable>
</resources>