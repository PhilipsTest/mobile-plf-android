<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UITNavigationBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="height">@dimen/uid_navigation_bar_height</item>
        <item name="actionBarSize">@dimen/uid_navigation_bar_height</item>
        <item name="android:actionBarSize">@dimen/uid_navigation_bar_height</item>
        <item name="android:textColorPrimary">?attr/uitNavigationTextColor</item>
        <item name="android:titleTextStyle">@style/UIDActionBarTitleText</item>
        <item name="titleTextStyle">@style/UIDActionBarTitleText</item>
        <item name="background">?attr/uitActionBarBackground</item>
        <item name="android:background">?attr/uitActionBarBackground</item>
        //TODO define below for DLS
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle
        </item>
        <item name="actionButtonStyle">@style/UIDActionBarButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/UIDActionBarOverflowButton
        </item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="UITNavigationbarUltraLight">
        <item name="uitActionBarBackground">@color/uitColorWhite</item>
        <item name="uitNavigationTextColor">@color/uit_gray_level_75</item>
    </style>

    <style name="UITNavigationbarVeryLight">
        <item name="uitActionBarBackground">?attr/uitColorLevel10</item>
        <item name="uitNavigationTextColor">?attr/uitColorLevel75</item>
    </style>

    <style name="UITNavigationbarLight">
        <item name="uitActionBarBackground">?attr/uitColorLevel25</item>
        <item name="uitNavigationTextColor">@color/uitColorWhite</item>
    </style>

    <style name="UITNavigationbarBright">
        <item name="uitActionBarBackground">?attr/uitColorLevel40</item>
        <item name="uitNavigationTextColor">@color/uitColorWhite</item>
    </style>

    <style name="UITNavigationbarVeryDark">
        <item name="uitActionBarBackground">?attr/uitColorLevel70</item>
        <item name="uitNavigationTextColor">@color/uitColorWhite</item>
    </style>

    <style name="UIDActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/uitNavigationTextColor</item>
        <item name="android:textColorPrimary">?attr/uitNavigationTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/uid_navigation_bar_title_margin_left_right
        </item>
        <item name="android:layout_marginEnd">@dimen/uid_navigation_bar_title_margin_left_right
        </item>
    </style>

    <style name="UIDActionBarOverflowButton" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="srcCompat">@drawable/uid_switch_thumb</item>
        <!--
                <item name="android:src">@drawable/uid_switch_thumb</item> &lt;!&ndash; This is for showing overflow icon with (three vertical dots) in action bar&ndash;&gt;
        -->
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:minHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <style name="UIDActionBarButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:minHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:maxHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:maxWidth">@dimen/uid_navigation_bar_icon_size</item>
    </style>

    <style name="UIDToolbarNavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:maxHeight">@dimen/uid_navigation_bar_height</item>
        <item name="android:maxWidth">@dimen/uid_navigation_bar_height</item>
        <item name="android:minWidth">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:minHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingStart">@dimen/uid_navigation_bar_title_margin_left_right
        </item>
        <item name="android:paddingEnd">@dimen/uid_navigation_bar_title_margin_left_right
        </item>
        <item name="textAllCaps">false</item>

    </style>
    <!--//@style/Widget.AppCompat.Light.ActionBar-->

    <style name="UIDToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:buttonGravity" tools:targetApi="n">top</item>
        <!-- Below properties are for toolbar height-->
        <item name="height">@dimen/uid_navigation_bar_height</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
        <item name="actionBarSize">@dimen/uid_navigation_bar_height</item>
        <item name="android:actionBarSize">@dimen/uid_navigation_bar_height</item>

        <item name="buttonGravity">top</item>
        <item name="titleTextAppearance">@style/UIDToolbarTitleStyle</item>
        <item name="android:maxButtonHeight" tools:targetApi="n">
            @dimen/uid_navigation_bar_icon_maxsize
        </item>
        <item name="maxButtonHeight">@dimen/uid_navigation_bar_icon_maxsize</item>
        <item name="actionButtonStyle">@style/UIDToolbarNavigationButton</item>
        <item name="android:actionButtonStyle">@style/UIDToolbarNavigationButton</item>
        <!--
           <item name="toolbarNavigationButtonStyle">@style/UIDToolbarNavigationButton</item>
         -->
        <item name="background">?attr/uitActionBarBackground</item>
        <item name="android:background">?attr/uitActionBarBackground</item>
        <item name="textAllCaps">false</item>
        <item name="android:titleTextStyle">@style/UIDActionBarTitleText</item>
        <item name="titleTextStyle">@style/UIDActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle
        </item>
        <item name="titleTextColor">?attr/uitNavigationTextColor</item>

    </style>

    <style name="UIDToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="collapseContentDescription">@dimen/uid_navigation_bar_title_margin_left_right
        </item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">?attr/uitNavigationTextColor</item>
        <item name="android:textColorPrimary">?attr/uitNavigationTextColor</item>
        <item name="android:textSize">@dimen/uid_navigation_bar_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/uid_navigation_bar_text_line_spacing</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontPath">fonts/centralesansmedium.ttf</item>
    </style>

    <style name="UITToolbarMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/uitNavigationTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/uid_navigation_bar_text_line_spacing</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontPath">fonts/centralesansmedium.ttf</item>
    </style>

</resources>