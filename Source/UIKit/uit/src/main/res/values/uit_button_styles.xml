<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UITDefaultButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="UITDefaultButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/uit_button_min_height</item>
        <item name="android:minWidth">@dimen/uit_button_min_width</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/uit_button_text_size</item>
        <item name="android:background">@drawable/uit_default_button_background</item>
        <item name="uitButtonBackgroundColorList">@color/uit_default_button_background_selector
        </item>
        <item name="uitButtonTextColorList">@color/uit_default_button_text_selector</item>
        <item name="android:paddingLeft">@dimen/uit_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/uit_button_padding_left_right</item>
        <item name="android:textAppearance">@style/UITDefaultButtonTextAppearance</item>
        <item name="uitButtonImageDrawableWidth">@dimen/uit_imagebutton_image_size</item>
        <item name="uitButtonImageDrawableHeight">@dimen/uit_imagebutton_image_size</item>
        <item name="android:drawablePadding">@dimen/uit_imagebutton_padding</item>
        <item name="uitButtonDrawableColorList">@color/uit_default_button_text_selector</item>
    </style>

    <style name="UITDefaultButton.UITImageTextButton">
        <item name="android:paddingLeft">@dimen/uit_image_text_button_padding_left</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/uit_imagebutton_padding</item>
    </style>

    <style name="UITImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/uit_default_button_background</item>
        <item name="android:minWidth">@dimen/uit_imagebutton_size</item>
        <item name="android:minHeight">@dimen/uit_imagebutton_size</item>
        <item name="android:paddingRight">@dimen/uit_imagebutton_padding</item>
        <item name="android:paddingLeft">@dimen/uit_imagebutton_padding</item>
        <item name="uitImageButtonDrawableWidth">@dimen/uit_imagebutton_image_size</item>
        <item name="uitImageButtonDrawableHeight">@dimen/uit_imagebutton_image_size</item>
        <item name="uitImageButtonDrawableColorList">@color/uit_default_button_text_selector</item>
        <item name="uitImageButtonColorList">@color/uit_default_button_background_selector</item>
    </style>

    <style name="UITTextEditBoxStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/uit_text_editbox_background</item>
        <item name="android:minHeight">@dimen/uit_text_editbox_height</item>
    </style>

</resources>