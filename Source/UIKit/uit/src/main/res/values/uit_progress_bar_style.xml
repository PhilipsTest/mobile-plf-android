<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIDProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/uid_progress_bar_min_width</item>
    </style>

    <style name="UIDProgressBarHorizontalWithMargins" parent="UIDProgressBarHorizontal">
        <item name="android:layout_marginLeft">@dimen/uid_progress_bar_margin_left</item>
        <item name="android:layout_marginRight">@dimen/uid_progress_bar_margin_right</item>
        <item name="android:progressDrawable">@drawable/uid_secondary_progress_bar</item>
    </style>

    <style name="UIDProgressBarCircularSmall" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="UIDProgressBarCircularMiddle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="UIDProgressBarCircularBig" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
    </style>

    <declare-styleable name="UIDProgressBar">
        <attr format="boolean" name="uid_secondary_progress"/>
        <attr format="boolean" name="uid_linear_progress_bar"/>
    </declare-styleable>
</resources>