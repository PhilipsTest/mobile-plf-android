<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIDLabel">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:textSize">@dimen/uid_label_text_size</item>
    </style>

    <style name="UIDLabel.Top">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom</item>
    </style>

    <style name="UIDLabel.Control">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_control</item>
    </style>

    <style name="UIDLabel.ControlLeft">
        <item name="android:layout_marginStart">@dimen/uid_label_margin_left_control</item>
    </style>

    <style name="UIDLabel.Slider">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_slider</item>
    </style>
    
    <style name="UIDLabelDescription">
        <item name="fontPath">fonts/centralesansmedium.ttf</item>
        <item name="android:textSize">@dimen/uid_label_text_size</item>
        <item name="uidLabelTextColor">?attr/uidTextSecondary</item>
        <item name="uidLabelTextAlpha">@dimen/uit_alpha_per_100</item>
    </style>

    <style name="UIDLabelDescription.Slider">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_slider</item>
    </style>
</resources>