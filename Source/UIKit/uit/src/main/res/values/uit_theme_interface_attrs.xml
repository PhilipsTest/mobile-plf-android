<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Buttons -->
    <declare-styleable name="UITButton">
        <attr name="uitButtonNormalColor" format="reference|color"/>
        <attr name="uitButtonPressedColor" format="reference|color"/>
        <attr name="uitButtonDisabledColor" format="reference|color"/>
        <attr name="uitButtonDisabledAlpha" format="reference|float|dimension"/>
        <attr name="uitButtonTextColor" format="reference|color"/>
        <attr name="uitButtonTextPressedColor" format="reference|color"/>
        <attr name="uitButtonTextDisabledAlpha" format="reference|float|dimension"/>
        <attr name="uitButtonBackgroundColorList" format="reference"/>
        <attr name="uitButtonTextColorList" format="reference"/>
        <attr name="uitButtonDrawableColorList" format="reference"/>
        <attr name="uitButtonImageColorList" format="reference"/>
        <attr name="uitButtonImageDrawableHeight" format="dimension"/>
        <attr name="uitButtonImageDrawableWidth" format="dimension"/>
        <attr name="uitButtonImageDrawableSrc" format="reference"/>
        <attr name="uidButtonCenter" format="boolean"/>
        <attr name="uitQuietButtonDisabledAlpha" format="reference|float"/>

    </declare-styleable>

    <declare-styleable name="UITImageButton">
        <attr name="uitImageButtonDrawableHeight" format="dimension"/>
        <attr name="uitImageButtonDrawableWidth" format="dimension"/>
        <attr name="uitImageButtonDrawableSrc" format="reference"/>
        <attr name="uitImageButtonDrawableColorList" format="reference"/>
        <attr name="uitImageButtonColorList" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UITTextEditBox">
        <attr name="uitInputTextFillColor" format="reference|color"/>
        <attr name="uitInputTextFillPressedColor" format="reference|color"/>
        <attr name="uitInputTextFillDisabledColor" format="reference|color"/>
        <attr name="uitInputTextFillDisabledAlpha" format="reference|float|dimension"/>
        <attr name="uitInputTextFillColorList" format="reference"/>
        <attr name="uitInputTextHint" format="reference|color"/>
        <attr name="uitInputText" format="reference|color"/>
        <attr name="uitInputTextFillBackground" format="reference"/>
        <attr name="uitInputTextFillBackgroundColorList" format="reference"/>
        <attr name="uitInputTextBorderBackground" format="reference"/>
        <attr name="uitInputTextBorderWidth" format="reference|dimension"/>
        <attr name="uitInputTextBorderColor" format="reference|color"/>
        <attr name="uitInputTextBorderPressedColor" format="reference|color"/>
        <attr name="uitInputTextBorderPressedColorAlpha" format="reference|float"/>
        <attr name="uitInputTextBorderDisabledColor" format="reference|color"/>
        <attr name="uitInputTextBorderBackgroundColorList" format="reference"/>
        <attr name="uitInputTextTextColor" format="reference|color"/>
        <attr name="uitInputTextTextDisabledColor" format="reference|color"/>
        <attr name="uitInputTextTextDisabledAlpha" format="reference|float"/>
        <attr name="uitInputTextHintTextColor" format="reference|color"/>
        <attr name="uitInputTextHintTextDisabledColor" format="reference|color"/>
        <attr name="uitInputTextHintTextDisabledAlpha" format="reference|float"/>
        <attr name="uitInputTextTextSelector" format="reference"/>
        <attr name="uitInputTextHintTextSelector" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UITActionBar">
        <attr name="uitActionBarBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="UIDSwitch">
        <attr name="uidSwitchThumbColor" format="reference|color"/>
        <attr name="uidSwitchThumbColorList" format="reference|color"/>
        <attr name="uidSwitchThumbDisabledColor" format="reference|color"/>
        <attr name="uidSwitchTrackOnColor" format="reference|color"/>
        <attr name="uidSwitchTrackOffColor" format="reference|color"/>
        <attr name="uidSwitchTrackOffAlpha" format="reference|float"/>
        <attr name="uidSwitchTrackColorList" format="reference|color"/>
        <attr name="uidSwitchTrackDisabledColor" format="reference|color"/>
        <attr name="uidSwitchTrackDisabledAlpha" format="reference|float"/>
        <attr name="uidSwitchBorderColor" format="reference|color"/>
        <attr name="uidSwitchBorderColorAlpha" format="reference|color"/>
        <attr name="uidSwitchBorderColorList" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="UIDProgressBar">
        <attr name="uitControlPrimaryTrackOff" format="reference|color"/>
        <attr name="uitControlPrimaryBuffer" format="reference|color"/>
        <attr name="uitControlPrimaryTrackOffAlpha" format="reference|float"/>
        <attr name="uitControlPrimaryBufferAlpha" format="reference|float"/>
        <attr name="uidLinearProgressBar" format="boolean"/>
        <attr name="circularProgressBarSize" format="enum">
            <enum name="small" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="big" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="UIDDialog">
        <attr name="uitDialogTitleTextColor" format="reference|color"/>
        <attr name="uitDialogBodyTextColor" format="reference|color"/>
        <attr name="uitDialogBackgroundColor" format="reference|color"/>
        <attr name="uitDialogShadowColor" format="reference|color"/>
        <attr name="uitDialogShadowAlpha" format="reference|float"/>
        <attr name="uitDialogDimSubtleLayerColor" format="reference|color"/>
        <attr name="uitDialogDimSubtleLayerAlpha" format="reference|float"/>
        <attr name="uitDialogDimStrongColor" format="reference|color"/>
        <attr name="uitDialogDimStrongColorAlpha" format="reference|float"/>
    </declare-styleable>
</resources>
