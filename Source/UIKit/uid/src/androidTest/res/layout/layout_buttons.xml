<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buttons_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_layout_padding"
        android:layout_marginStart="@dimen/button_layout_padding"
        android:orientation="vertical"
        android:paddingTop="@dimen/button_layout_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/disable_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Enabled"
                android:textOff="Disabled"
                android:checked="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_divider_width"
                android:layout_marginTop="@dimen/button_layout_padding"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:text="@string/individual_buttons_label"
                android:textColor="@android:color/black"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/primary_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/demo_primary_button"/>


            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/alt_primary_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/alternate_primary_label"
                app:uidComponentType="AltPrimary"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/seconday_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/secondary_button_label"
                app:uidComponentType="Secondary"/>

            <com.philips.platform.uid.view.widget.Button
                style="@style/UIDQuietButton"
                android:id="@+id/quiet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_bottom_spacing"
                android:text="@string/quiet_button_label"/>

        </LinearLayout>


        <!--Icon only buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_divider_width"
                android:layout_marginTop="@dimen/button_layout_padding"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/component_bottom_spacing"
                android:paddingStart="@dimen/component_bottom_spacing"
                android:text="@string/buttons_with_icons"
                android:textColor="@android:color/black"/>

            <com.philips.platform.uid.view.widget.ImageButton
                android:id="@+id/demo_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:uidImageButtonDrawableSrc="@android:drawable/ic_dialog_info"
                android:layout_marginTop="@dimen/component_bottom_spacing"/>

            <com.philips.platform.uid.view.widget.ImageButton
                android:id="@+id/quiet_icon_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/UIDQuietIconButton"
                app:uidImageButtonDrawableSrc="@android:drawable/ic_dialog_info"
                android:layout_marginTop="@dimen/component_bottom_spacing"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/quiet_demo_image_text_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:uidImageButtonDrawableSrc="@android:drawable/ic_dialog_info"
                style="@style/UIDDefaultButton.UIDImageTextButton"
                android:drawablePadding="@dimen/uid_imagebutton_padding"
                android:text="@string/buttons_with_icons"
                android:layout_marginTop="@dimen/component_bottom_spacing"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/demo_image_text_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:uidImageButtonDrawableSrc="@android:drawable/ic_dialog_info"
                style="@style/UIDDefaultButton.UIDImageTextButton"
                android:drawablePadding="@dimen/uid_imagebutton_padding"
                android:text="@string/buttons_with_icons"
                android:layout_marginTop="@dimen/component_bottom_spacing"/>

        </LinearLayout>

        <!--Progress on buttons-->
        <LinearLayout
            android:id="@+id/groupProgressButtonsNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <com.philips.platform.uid.view.widget.ProgressIndicatorButton
                    android:id="@+id/progressButtonsNormalDeterminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:uidProgressIndicatorButtonProgress="50"
                    app:uidProgressIndicatorButtonText="@string/progress_button"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupProgressButtonsNormalIndeterminate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <com.philips.platform.uid.view.widget.ProgressIndicatorButton
                    android:id="@+id/progressButtonsNormalIndeterminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:uidIsIndeterminateProgressIndicator="true"
                    app:uidProgressIndicatorButtonText="@string/progress_button"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupProgressButtonsExtraWide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.ProgressIndicatorButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:uidProgressIndicatorButtonProgress="50"
                app:uidProgressIndicatorButtonProgressText="@string/progress_button_loading"
                app:uidProgressIndicatorButtonText="@string/progress_button"/>

            <com.philips.platform.uid.view.widget.ProgressIndicatorButton
                android:id="@+id/buttonsProgressIndicatorExtraWideIndeterminate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonProgressText="@string/progress_button_loading"
                app:uidProgressIndicatorButtonText="@string/progress_button"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>