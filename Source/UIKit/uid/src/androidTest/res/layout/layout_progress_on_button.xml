<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
    <com.philips.platform.uid.view.widget.ProgressIndicatorButton
        android:id="@+id/progressButtonsNormalDeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:uidProgressIndicatorButtonProgress="50"/>


    <com.philips.platform.uid.view.widget.ProgressIndicatorButton
        android:id="@+id/progressButtonsNormalIndeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:uidIsIndeterminateProgressIndicator="true"/>

</LinearLayout>