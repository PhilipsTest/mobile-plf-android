<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:orientation="horizontal">


            <SeekBar
                android:id="@+id/progress_bar_seekbar_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:id="@+id/progress_bar_indeterminate_circular_small"
                    style="@style/UIDProgressBarCircularIndeterminateSmall"
                    />

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar_indeterminate_circular_middle"
                    style="@style/UIDProgressBarCircularIndeterminateMiddle"
                    />

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar_indeterminate_circular_big"
                    style="@style/UIDProgressBarCircularIndeterminateBig"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar_determinate_circular_small"
                    style="@style/UIDProgressBarCircularDeterminateSmall"
                    />

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar_determinate_circular_middle"
                    style="@style/UIDProgressBarCircularDeterminateMiddle"/>

                <com.philips.platform.uid.view.widget.ProgressBar
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar_determinate_circular_big"
                    style="@style/UIDProgressBarCircularDeterminateBig"/>
            </LinearLayout>
        </LinearLayout>

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progress_bar_indeterminate"
            style="@style/UIDProgressBarHorizontalIndeterminateWithMargins"

            app:uidLinearProgressBar="true"/>

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progress_bar"
            style="@style/UIDProgressBarHorizontalDeterminateWithMargins"

            app:uidIsLinearProgressBar="true"/>

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progress_bar_secondary"
            style="@style/UIDProgressBarHorizontalDeterminateWithMargins"

            app:uidIsLinearProgressBar="true"/>

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progress_bar_wide"
            style="@style/UIDProgressBarHorizontalDeterminate"
            app:uidIsLinearProgressBar="true"/>
    </LinearLayout>
</ScrollView>