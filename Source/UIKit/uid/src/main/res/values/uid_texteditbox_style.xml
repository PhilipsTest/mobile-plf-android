<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIDTextEditBox" parent="Base.Widget.AppCompat.EditText">
        <item name="fontPath">fonts/centralesansbook.ttf"</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">@dimen/uid_texteditbox_min_width</item>
        <item name="android:textSize">@dimen/uid_texteditbox_text_size</item>
        <item name="android:paddingLeft">@dimen/uid_texteditbox_text_padding</item>
        <item name="android:paddingRight">@dimen/uid_texteditbox_text_padding</item>
        <item name="android:paddingBottom">@dimen/uid_texteditbox_vertical_padding</item>
        <item name="android:paddingTop">@dimen/uid_texteditbox_vertical_padding</item>
        <item name="android:lineSpacingExtra">@dimen/uid_texteditbox_line_spacing</item>
        <item name="android:lineSpacingMultiplier">
            @integer/uid_texteditbox_font_spacing_multiplier
        </item>
        <item name="uidInputTextFillColorList">@color/uid_texteditbox_fill_selector</item>
        <item name="uidInputTextFillBackground">@drawable/uid_texteditbox_fill</item>
        <item name="uidInputTextFillBackgroundColorList">@color/uid_texteditbox_fill_selector</item>
        <item name="uidInputTextBorderBackground">@drawable/uid_texteditbox_border</item>
        <item name="uidInputTextBorderBackgroundColorList">@color/uid_texteditbox_stroke_selector
        </item>
        <item name="uidInputTextTextSelector">@color/uid_texteditbox_text_selector</item>
        <item name="uidInputTextHintTextSelector">@color/uid_texteditbox_hint_text_selector</item>
    </style>
</resources>