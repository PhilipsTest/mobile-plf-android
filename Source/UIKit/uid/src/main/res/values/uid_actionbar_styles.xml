<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UIDNavigationbarUltraLight">
        <item name="uidActionBarBackground">@color/uidColorWhite</item>
        <item name="uidNavigationTextColor">@color/uid_gray_level_75</item>
    </style>

    <style name="UIDNavigationbarVeryLight">
        <item name="uidActionBarBackground">?attr/uidColorLevel10</item>
        <item name="uidNavigationTextColor">?attr/uidColorLevel75</item>
    </style>

    <style name="UIDNavigationbarLight">
        <item name="uidActionBarBackground">?attr/uidColorLevel25</item>
        <item name="uidNavigationTextColor">@color/uidColorWhite</item>
    </style>

    <style name="UIDNavigationbarBright">
        <item name="uidActionBarBackground">?attr/uidColorLevel40</item>
        <item name="uidNavigationTextColor">@color/uidColorWhite</item>
    </style>

    <style name="UIDNavigationbarVeryDark">
        <item name="uidActionBarBackground">?attr/uidColorLevel70</item>
        <item name="uidNavigationTextColor">@color/uidColorWhite</item>
    </style>

    <style name="UIDToolbarBarTitleText" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/uidNavigationTextColor</item>
        <item name="android:textColorPrimary">?attr/uidNavigationTextColor</item>
    </style>

    <style name="UIDActionBarOverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="srcCompat">@drawable/uid_switch_thumb</item>
        <!-- <item name="android:src">@drawable/uid_switch_thumb</item> &lt;!&ndash; This is for showing overflow icon with (three vertical dots) in action bar
        -->
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:minHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <style name="UIDToolbarNavigationButton" parent="Base.Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:maxHeight">@dimen/uid_navigation_bar_height</item>
        <item name="android:maxWidth">@dimen/uid_navigation_bar_height</item>
        <item name="android:minWidth">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:minHeight">@dimen/uid_navigation_bar_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/uidNavigationTextColor</item>

    </style>

    <style name="UIDToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:buttonGravity" tools:targetApi="n">top</item>
        <!-- Below properties are for toolbar height-->
        <item name="height">@dimen/uid_navigation_bar_height</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
        <item name="actionBarSize">@dimen/uid_navigation_bar_height</item>
        <item name="android:actionBarSize">@dimen/uid_navigation_bar_height</item>
        <item name="titleMargin">20dp</item>
        <item name="titleMarginStart">20dp</item>
        <item name="buttonGravity">top</item>
        <!--
                <item name="titleTextAppearance">@style/UIDToolbarTitleStyle</item>
        -->
        <item name="android:maxButtonHeight" tools:targetApi="n">
            @dimen/uid_navigation_bar_icon_maxsize
        </item>
        <item name="maxButtonHeight">@dimen/uid_navigation_bar_icon_maxsize</item>
        <item name="toolbarNavigationButtonStyle">@style/UIDToolbarNavigationButton</item>
        <item name="android:titleMarginStart" tools:targetApi="n">20dp</item>
        <item name="background">?attr/uidActionBarBackground</item>
        <item name="android:background">?attr/uidActionBarBackground</item>
        <item name="android:titleTextStyle">@style/UIDToolbarBarTitleText</item>
        <item name="titleTextStyle">@style/UIDToolbarBarTitleText</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle
        </item>
        <item name="titleTextColor">?attr/uidNavigationTextColor</item>

    </style>

