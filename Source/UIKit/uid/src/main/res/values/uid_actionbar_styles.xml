    <style name="UIDToolbarMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/uidNavigationTextColor</item>
        <item name="android:textColorPrimary">?attr/uidNavigationTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
