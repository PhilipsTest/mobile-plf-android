<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UIDDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">?attr/uidDatePickerBackgroundColor</item>
        <item name="colorControlActivated">?attr/uidControlPrimaryEnabledColor</item>
        <item name="colorControlHighlight">?attr/uidControlPrimaryEnabledColor</item>
        <item name="textColorAlertDialogListItem">?attr/uidControlPrimaryEnabledColor</item>
        <item name="colorAccent">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:textColorPrimary">?attr/uidTextPrimary</item>
        <item name="android:windowBackground">?attr/uidDatePickerBackgroundColor</item>
        <item name="android:windowTitleStyle">@style/UIDPickerTitleText</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/uidTextPrimary</item>
    </style>


    <style name="UIDTimePicker" parent="@style/UIDDatePicker"
           tools:targetApi="lollipop">
        <item name="colorAccent">?attr/uidNavigationPrimaryColor</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">?attr/uidNavigationPrimaryColor</item>
        <item name="android:numbersTextColor">?attr/uidTextPrimary</item>
        <item name="android:numbersSelectorColor">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:numbersBackgroundColor">?attr/uidControlPrimaryEnabledColor</item>
    </style>

    <style name="UIDPickerTitleText">
        <item name="android:textColor">?attr/uidTextPrimary</item>
    </style>


    <style name="UIDDatePickerStyle" parent="@style/UIDDatePicker"
           tools:targetApi="lollipop">
        <item name="android:headerBackground">?attr/uidNavigationSecondaryColor</item>
        <item name="android:dayOfWeekBackground">?attr/uidNavigationSecondaryColor</item>
        <item name="android:yearListSelectorColor">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:focusedMonthDateColor">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:calendarViewStyle">@style/UIDCalendarViewStyle</item>
        <item name="android:calendarTextColor">?attr/uidTextPrimary</item>
        <item name="android:colorAccent">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:colorControlActivated">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:colorControlHighlight">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:textColor">?attr/uidTextPrimary</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="UIDTimePickerStyle" parent="@style/UIDDatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">?attr/uidNavigationSecondaryColor</item>
        <item name="android:amPmTextColor">?attr/uidTextPrimary</item>
        <item name="android:colorAccent">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:numbersTextColor">?attr/uidTextPrimary</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="UIDCalendarViewStyle" parent="@android:style/Widget.Material.Light.DatePicker"
           tools:targetApi="lollipop">
        <item name="android:focusedMonthDateColor">?attr/uidControlPrimaryEnabledColor
        </item>
        <item name="android:weekNumberColor">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:colorAccent">?attr/uidControlPrimaryEnabledColor</item>
        <item name="android:textColor">?attr/uidTextPrimary</item>
    </style>

</resources>