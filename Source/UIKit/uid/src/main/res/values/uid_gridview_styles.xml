<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIDGridViewText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/uid_grid_title_padding</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/uidColorWhite</item>
    </style>
    <style name="UIDGridViewTitleText" parent="UIDGridViewText">
        <item name="fontPath">fonts/centralesansmedium.ttf</item>
        <item name="android:textSize">@dimen/uid_grid_title_size</item>
    </style>
    <style name="UIDGridViewDescriptionText" parent="UIDGridViewText">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:textSize">@dimen/uid_grid_descrption_size</item>
    </style>
    <style name="UIDGridGradientStyle">
        <item name="gradientStartColor">@color/uidTransparent</item>
        <item name="gradientEndColor">?attr/uidColorLevel90</item>
    </style>
    <style name="UIDGridViewImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="UIDGridViewImageButton">
        <item name="android:layout_width">@dimen/uid_grid_star_icon_size</item>
        <item name="android:layout_height">@dimen/uid_grid_star_icon_size</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>