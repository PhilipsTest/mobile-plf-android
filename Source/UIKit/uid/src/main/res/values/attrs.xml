<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Philipsuid">
        <attr name="uidTextTertiaryColor" format="reference|color"/>
        <attr name="uidApplicationBackground" format="reference|color"/>
        <attr name="uidProgressIndicatorButtonBackgroundColor" format="reference|color"/>
        <attr name="uidProgressIndicatorButtonBackgroundAlpha" format="reference|float"/>
        <attr name="uidControlTrackOffAlpha" format="reference|float"/>
        <attr name="uidControlBufferAlpha" format="reference|float"/>
        <attr name="uidGrayTextTertiary" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="UIDComponentType">
        <attr name="uidComponentType" format="enum">
            <enum name="Primary" value="0"/>
            <enum name="AltPrimary" value="1"/>
            <enum name="Secondary" value="2"/>
        </attr>
    </declare-styleable>
   <!-- Notification Badge-->
    <declare-styleable name="NotificationBadge">
        <attr name="nbTextSize" format="dimension"/>
        <attr name="nbTextColor" format="color" />
        <attr name="nbBackground" format="reference" />
        <attr name="nbAnimationEnabled" format="boolean" />
        <attr name="nbAnimationDuration" format="integer" />
        <attr name="nbMaxTextLength" format="integer" />
        <attr name="nbEllipsizeText" format="string" />
    </declare-styleable>
    <declare-styleable name="notification_badge">
        <attr name="uid_notification_badge_small" format="boolean" />
    </declare-styleable>
</resources>


