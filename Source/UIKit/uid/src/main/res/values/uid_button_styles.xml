<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIDDefaultButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="UIDDefaultButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/uid_button_min_height</item>
        <item name="android:minWidth">@dimen/uid_button_min_width</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/uid_button_text_size</item>
        <item name="android:background">@drawable/uid_default_button_background</item>
        <item name="uidButtonBackgroundColorList">@color/uid_default_button_background_selector
        </item>
        <item name="uidButtonTextColorList">@color/uid_default_button_text_selector</item>
        <item name="android:paddingLeft">@dimen/uid_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/uid_button_padding_left_right</item>
        <item name="android:textAppearance">@style/UIDDefaultButtonTextAppearance</item>
        <item name="uidButtonImageDrawableWidth">@dimen/uid_imagebutton_image_size</item>
        <item name="uidButtonImageDrawableHeight">@dimen/uid_imagebutton_image_size</item>
        <item name="android:drawablePadding">@dimen/uid_imagebutton_padding</item>
        <item name="uidButtonDrawableColorList">@color/uid_default_button_text_selector</item>
    </style>

    <style name="UIDDefaultButton.UIDImageTextButton">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/uid_imagebutton_padding</item>
    </style>

    <style name="UIDImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/uid_default_button_background</item>
        <item name="android:minWidth">@dimen/uid_imagebutton_size</item>
        <item name="android:minHeight">@dimen/uid_imagebutton_size</item>
        <item name="android:paddingRight">@dimen/uid_imagebutton_padding</item>
        <item name="android:paddingLeft">@dimen/uid_imagebutton_padding</item>
        <item name="uidImageButtonDrawableWidth">@dimen/uid_imagebutton_image_size</item>
        <item name="uidImageButtonDrawableHeight">@dimen/uid_imagebutton_image_size</item>
        <item name="uidImageButtonDrawableColorList">@color/uid_default_button_text_selector</item>
        <item name="uidImageButtonColorList">@color/uid_default_button_background_selector</item>
    </style>

    <style name="UIDExtraWideButton" parent="UIDDefaultButton">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="UIDImageTextButton.Center" parent="UIDDefaultButton">
        <item name="android:gravity">left|center_vertical</item>
        <item name="uidButtonCenter">true</item>
        <item name="android:drawablePadding">@dimen/uid_imagebutton_padding</item>
    </style>

    <style name="UIDExtraWideButton.Center">
        <item name="uidButtonCenter">true</item>
    </style>

    <style name="UIDQuietButton" parent="UIDDefaultButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/uid_quiet_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/uid_quiet_button_padding_left_right</item>
        <item name="uidButtonTextColorList">@color/uid_quiet_button_text_selector</item>
        <item name="uidButtonDrawableColorList">@color/uid_quiet_button_text_selector</item>
        <item name="uidImageButtonDrawableColorList">@color/uid_quiet_button_text_selector</item>
        <item name="uidImageButtonColorList">@color/uid_quiet_button_text_selector</item>
    </style>

    <style name="UIDQuietIconButton" parent="UIDImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/uid_quiet_icon_only_padding_left_right</item>
        <item name="android:paddingRight">@dimen/uid_quiet_icon_only_padding_left_right</item>
        <item name="android:maxWidth">@dimen/uid_quiet_button_max_width</item>
        <item name="uidImageButtonColorList">@color/uid_quiet_button_icon_selector</item>
        <item name="uidImageButtonDrawableColorList">@color/uid_quiet_button_icon_selector</item>
    </style>

    <style name="UIDExtraWideQuietButton" parent="UIDQuietButton">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="UIDExtraWideIconQuietButton" parent="UIDQuietButton">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="UIDExtraWideIconQuietButton.Center">
        <item name="uidButtonCenter">true</item>
    </style>
</resources>