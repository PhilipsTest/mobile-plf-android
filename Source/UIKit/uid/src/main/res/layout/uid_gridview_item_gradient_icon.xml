<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/uid_gridView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uid_grid_item_size"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@id/uid_gridView_thumbnail"
        style="@style/UIDGridViewImage"
        android:layout_height="@dimen/uid_grid_item_size" />

    <com.philips.platform.uid.utils.GradientContainer
        style="@style/UIDGridGradientStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_grid_single_line_text_height">

        <FrameLayout
            android:id="@id/uid_gridView_star_icon_holder"
            android:layout_width="@dimen/uid_grid_star_holder_width"
            android:layout_height="@dimen/uid_grid_single_line_text_height"
            android:layout_gravity="center|right">

            <ImageButton
                android:id="@id/uid_gridView_star_icon"
                style="@style/UIDGridViewImageButton"/>
        </FrameLayout>

        <TextView
            android:id="@id/uid_gridView_title"
            style="@style/UIDGridViewTitleText"
            android:layout_gravity="center|left"
            android:layout_marginRight="@dimen/uid_grid_star_holder_width"
            />

    </com.philips.platform.uid.utils.GradientContainer>
</FrameLayout>
