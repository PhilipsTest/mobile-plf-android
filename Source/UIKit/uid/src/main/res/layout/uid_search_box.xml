<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uid_search_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/uid_search_icon_holder"
        style="?attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/uid_search_icon" />

    <LinearLayout
        android:id="@+id/uid_search_box_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uidColorWhite">

        <ImageView
            android:id="@+id/uid_search_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="16dp"
            android:background="@color/uidTransparent"
            android:focusable="true" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/uid_search_src_text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:dropDownHorizontalOffset="0dp"
            android:dropDownVerticalOffset="0dp"
            android:dropDownWidth="match_parent"
            android:ellipsize="end"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text|textAutoComplete|textNoSuggestions"
            android:maxLines="1"
            android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
            android:textColor="@color/uid_gray_level_75"
            android:textColorHint="@color/uid_gray_level_35" />

        <FrameLayout
            android:id="@+id/uid_search_clear_layout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/uidTransparent">

            <ImageView
                android:id="@+id/uid_search_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/uidTransparent"
                android:focusable="true" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
