<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_top_left"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_top_right"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp"/>

    <com.philips.platform.uid.view.widget.ProgressBar
        android:id="@+id/uid_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uid_progress_indicator_label_top_left"
        android:indeterminate="false"
        android:minWidth="@dimen/uid_progress_bar_min_width"
        android:progressDrawable="@drawable/uid_secondary_progress_bar"
        app:uidLinearProgressBar="true"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_bottom_left"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_alignParentStart="true"
        android:layout_below="@id/uid_progress_indicator"
        android:layout_marginTop="7dp"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_bottom_right"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/uid_progress_indicator"
        android:layout_marginTop="7dp"/>
</RelativeLayout>