<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_recyclerview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uid_recyclerview_the_header"
        android:gravity="center_vertical"
        style="@style/UIDLabel.RecyclerViewTitleText"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/uid_recyclerview_title"
        android:id="@+id/uid_recyclerview_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>