<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/uid_gridview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uid_grid_item_size"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        style="@style/UIDGridViewImage"
        android:id="@id/uid_gridview_thumbnail"
        android:layout_height="@dimen/uid_grid_image_height"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@id/uid_gridview_solid_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uid_gridview_thumbnail"
        android:background="?attr/uidControlPrimaryEnabledColor">

        <FrameLayout
            android:id="@id/uid_gridview_star_icon_holder"
            android:layout_width="@dimen/uid_grid_star_holder_width"
            android:layout_height="@dimen/uid_grid_two_line_text_height"
            android:layout_alignParentEnd="true"
            >

            <ImageButton
                style="@style/UIDGridViewImageButton"
                android:id="@id/uid_gridview_star_icon"/>
        </FrameLayout>

        <LinearLayout
            android:id="@id/uid_gridview_two_line_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/uid_grid_two_line_text_height"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/uid_gridview_star_icon_holder"
            android:background="#0000"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@id/uid_gridview_title"
                style="@style/UIDGridViewTitleText"/>

            <TextView
                android:id="@id/uid_gridview_description"
                style="@style/UIDGridViewDescriptionText"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>




