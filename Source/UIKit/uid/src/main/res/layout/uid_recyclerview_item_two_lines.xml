<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/uid_recyclerview_item_two_lines"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/uid_recyclerview_item_two_lines_height"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_recyclerview_two_line_title"
        style="@style/UIDLabel.ListViewMultipleItemTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
        android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_recyclerview_two_line_description"
        style="@style/UIDLabel.ListViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
        android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"/>
</LinearLayout>