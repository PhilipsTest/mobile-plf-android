<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/uid_gridview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uid_grid_item_size"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        style="@style/UIDGridViewImage"
        android:id="@id/uid_gridview_thumbnail"
        android:layout_height="@dimen/uid_grid_item_size"
        android:layout_gravity="bottom"/>
    <FrameLayout
        android:id="@id/uid_gridview_star_icon_holder"
        android:layout_width="@dimen/uid_grid_star_holder_width"
        android:layout_height="@dimen/uid_grid_single_line_text_height"
        android:layout_gravity="top"
        >

        <ImageButton
            style="@style/UIDGridViewImageButton"
            android:id="@id/uid_gridview_star_icon"/>
    </FrameLayout>

</FrameLayout>