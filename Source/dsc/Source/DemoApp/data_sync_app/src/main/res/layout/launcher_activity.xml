<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/dscdemo_launcher_welcome_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:text="@string/dsc_launcher_welcome"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/dscdemo_launcher_button_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dscdemo_launcher_welcome_label"
        android:layout_marginBottom="@dimen/default_screen_side_margin"
        android:text="@string/dscdemo_launcher_fragment"
        app:uidButtonCenter="true"
        app:uidComponentType="Primary"
        />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/dscdemo_launcher_button_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dscdemo_launcher_button_fragment"
        android:layout_marginBottom="@dimen/default_screen_side_margin"
        android:text="@string/dscdemo_launcher_fragment"
        app:uidButtonCenter="true"
        app:uidComponentType="Primary"
        />

</RelativeLayout>