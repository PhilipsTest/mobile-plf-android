<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_sync_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_moments"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/delete_moments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/add"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_delete" />

    <LinearLayout
        android:id="@+id/moment_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/tv_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_moments_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:text="Moments count : 0"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#33cae3e9"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false"
            android:listSelector="@color/colorPrimary"
            android:overScrollFooter="@android:color/transparent"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_set_consents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_logout"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/consent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_set_characteristics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_set_consents"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/set_characteristics"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_set_characteristics"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="User Settings"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_insights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_settings"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/insights"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_add_moment_with_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_last_moment"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/add_moment_with_type"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_last_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_sync_by_date_range"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/fetch_last_moment"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_moment_by_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_insights"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/fetch_moment_by_date_range"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_sync_by_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_moment_by_date_range"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/sync_moment_by_date_range"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_gdpr_features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_sync_by_date_range"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/gdpr_features"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/logout"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
