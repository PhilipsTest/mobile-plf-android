<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_deliver_to_this_address"
            style="@style/iapCentralesansBookFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border16_margin_left_right"
            android:layout_marginEnd="@dimen/border16_margin_left_right"
            android:layout_marginTop="@dimen/border24_margin"
            android:enabled="true"
            app:uidComponentType="Primary"
            android:layout_below="@id/btn_deliver_to_this_address"
            android:text="@string/iap_deliver_to_this_address"
            android:textAllCaps="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_marginTop="@dimen/border24_margin"
        android:layout_height="wrap_content">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_edit_address"
            android:gravity="center"
            android:layout_weight="0.5"
            style="@style/IAPQuietButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_below="@id/btn_deliver_to_this_address"
            android:background="@drawable/address_button_background_border"
            android:text="@string/iap_edit"
            android:textAllCaps="false" />


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_delete_address"
            android:gravity="center"
            style="@style/IAPQuietButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:enabled="true"
            android:layout_below="@id/btn_deliver_to_this_address"
            android:text="@string/iap_delete"
            android:background="@drawable/address_button_background_border"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>