<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/secureStorage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:text="Secure Storage" />

    <Button
        android:id="@+id/EncryptDecrypt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Encrypt and Decrypt" />

    <Button
        android:id="@+id/createPaaasword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create Password" />

    <TextView
        android:id="@+id/devicecapable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Device Capability :" />

    <TextView
        android:id="@+id/devicecapableStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/devicecapable" />

    <TextView
        android:id="@+id/devicelock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Device Secured by Lock :" />

    <TextView
        android:id="@+id/devicelockStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/devicelock" />

    <TextView
        android:id="@+id/old_secure_storage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Old secure storage" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/old_secure_storage_tv"
        android:checked="false"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/isCodeTampered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Test is code tampered"/>

    <Button
        android:id="@+id/isEmulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test is launched by emulator"/>
</LinearLayout>