<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rest Client with service ID"
        android:id="@+id/textView6" />

    <EditText

        android:layout_gravity="center_horizontal"
        android:hint="Enter Service id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextServiceID"

        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Spinner
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerRequestData"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerRequestType"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <EditText

        android:layout_marginRight="20dp"
        android:hint="Path Component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPathComponent"

        />



    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Headers"
        android:id="@+id/buttonSetHeadersSID" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Params"

        android:id="@+id/buttonSetParamsSID" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoke"
        android:id="@+id/buttonInvokeSID" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Response(String/json):"
        />
    <ScrollView
        android:id="@+id/SCROLLER_ID3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"

        android:fillViewport="true">
    <TextView
        android:id="@+id/textViewResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    </ScrollView>

    <ScrollView
        android:id="@+id/SCROLLER_ID4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"

        android:fillViewport="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/responseImageId"/>
    </ScrollView>
</LinearLayout>
