<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Logging"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/appInfraLogComponentName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ComponentName"

            ></EditText>

        <EditText
            android:id="@+id/appInfraComponentVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Version"></EditText>

        <Button
            android:id="@+id/appInfraLogCreateLogger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Logger" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Log level below"></TextView>

    <Spinner
        android:id="@+id/appInfraLogSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!--<CheckBox
        android:checked="true"
        android:id="@+id/appInfraLogConsole"
        android:text="Console Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/appInfraLogFile"
        android:text="File Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
-->


    <EditText
        android:id="@+id/appInfraLogEvent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Event ID"

        ></EditText>

    <EditText
        android:id="@+id/appInfraLogMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Message"

        ></EditText>

    <EditText
        android:id="@+id/appInfraLogCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="1"></EditText>

    <Button
        android:id="@+id/appInfraLogTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Log" />

    <Switch
        android:id="@+id/cloud_logging_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cloud Logging Consent" />

</LinearLayout>
