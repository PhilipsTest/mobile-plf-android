<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Action bar hamburger menu icon -->
    <style name="actionbar_hamburger_menu">
        <item name="android:src">@drawable/actionbar_home_icon_white_1x</item>
    </style>

    <!-- Action bar back arrow button -->
    <style name="actionbar_back_button">
        <item name="android:src">@drawable/actionbar_back_arrow_white</item>
    </style>


    <style name="actionbarIconHomeImageView" parent="actionbar_hamburger_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="actionbarIconArrowImageView" parent="actionbar_back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="actionbarFontTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/actionbar_title_support</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
    </style>

</resources>