<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="@string/app_description"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/launchDigitalCare"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/TextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_button"
            android:text="@string/launch_button_as_activity"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/launchAsFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/launchDigitalCare"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_button"
            android:text="@string/launch_button_as_fragment"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_not_description"
            android:textColor="#000080" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/launchAsFragment"
            android:layout_marginTop="14dp"
            android:text="@string/app_note"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lanuauge"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/country"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </GridLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textview6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridlayout1"
            android:text="Set Product Info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold" />


        <GridLayout
            android:id="@+id/gridlayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textview6"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"></AutoCompleteTextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubCategory : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/subcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"></AutoCompleteTextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CTN : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/ctn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"></AutoCompleteTextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProductTitle : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"></AutoCompleteTextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProdReviewUrl : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/product_review_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone"
                android:textSize="18sp"></AutoCompleteTextView>

        </GridLayout>

    </RelativeLayout>

</ScrollView><!-- From: file:/D:/GIT/DigitalCare/Develop/Source/SampleDigitalCare/launchDigitalCare/src/main/res/layout/activity_digital_care.xml -->