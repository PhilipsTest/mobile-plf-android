<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontIcon.WelcomeArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/welcome_arrow_size</item>
    </style>

    <style name="centralesansBookFont">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="centralesansBoldFont">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="centralesansLightFont">
        <item name="fontPath">fonts/centralesanslight.ttf</item>
    </style>
	
	<style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">?attr/uikit_baseColor</item>
    </style>

    <style name="OnBoarding" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OnBoarding.Title">
        <item name="android:textSize">@dimen/on_boarding_title_text_size</item>
        <item name="android:lineSpacingExtra">4dip</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="OnBoarding.Description">
        <item name="android:textSize">@dimen/on_boarding_description_text_size</item>
        <item name="android:lineSpacingExtra">6dip</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>
    <style name="Overlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>
    <style name="Overlay.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/welcome_arrow_size</item>
        <item name="android:lineSpacingExtra">3dip</item>
    </style>
    <style name="Overlay.GotItButton">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">3dip</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

</resources>
