<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //<!-- Hack for Robolectric to run with appcompat.v7 -->
    <style name="RoboAppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        //<!-- Customize your theme here. -->
    </style>

    <style name="FontIcon.WelcomeArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/welcome_arrow_size</item>
    </style>

    <style name="centralesansBookFont">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="centralesansBoldFont">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="centralesansLightFont">
        <item name="fontPath">fonts/centralesanslight.ttf</item>
    </style>
	
	<style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">?attr/uikit_baseColor</item>
    </style>




</resources>
