<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".homescreen.HomeActivity">

    <TextView
        android:id="@+id/title"
        fontPath="fonts/centralesansbold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/homescreen_left_margin"
        android:layout_marginTop="15dp"
        android:text="Example Title"
        android:textColor="@color/uikit_white"
        android:textSize="21sp" />

    <TextView
        fontPath="fonts/centralesansbook.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="@dimen/homescreen_left_margin"
        android:layout_marginTop="20dp"
        android:text="Example bodytext lorem ipsum dolor sit amet consectetuer adipiscing elit."
        android:textColor="@color/uikit_white"
        android:textSize="14sp" />
</RelativeLayout>
