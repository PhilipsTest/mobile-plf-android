<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/hamburger_menu_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hamburger_menu_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentTop="true">
        <include
            android:id="@+id/hamburger_menu_header_layout"
            layout="@layout/hamburger_menu_header_view"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hamburger_menu_footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/hamburger_menu_footer_layout"
            layout="@layout/hamburger_menu_footer_view"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hamburger_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/hamburger_menu_header_container"
        android:layout_above="@+id/hamburger_menu_footer_container"/>

</RelativeLayout>