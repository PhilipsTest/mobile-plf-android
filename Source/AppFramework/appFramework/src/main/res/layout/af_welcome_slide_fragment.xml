<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/welcome_slide_fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/af_welcome_center_page_bg"
    >

    <TextView
        android:id="@+id/welcome_slide_small_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/intro_small_text_margin_bottom"
        android:layout_marginEnd="@dimen/intro_margin_left"
        android:layout_marginStart="@dimen/intro_margin_left"
        android:layout_marginTop="@dimen/intro_small_text_margin_top"
        android:text="@string/introduction_screen_one_bottom_text"
        android:textColor="@color/white"
        android:textSize="@dimen/intro_small_text_font"
        fontPath="fonts/centralesansbook.ttf"
        />

    <TextView
        android:id="@+id/welcome_slide_large_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/welcome_slide_small_text"
        android:layout_marginEnd="@dimen/intro_margin_left"
        android:layout_marginStart="@dimen/intro_margin_left"
        android:text="@string/introduction_screen_top_text"
        android:textColor="@color/white"
        android:textSize="@dimen/intro_large_textfont"
        fontPath="fonts/centralesansxbold.ttf"
        />

</RelativeLayout>