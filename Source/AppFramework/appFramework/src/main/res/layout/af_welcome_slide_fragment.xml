<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/welcome_slide_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/welcome_slide_large_text"
            style="@style/OnBoarding.Title"
            android:layout_above="@+id/welcome_slide_small_text"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_twenty_four"
            android:gravity="left" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/welcome_slide_small_text"
            style="@style/OnBoarding.Description"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:minLines="4"
            android:layout_marginBottom="@dimen/margin_ninty_six"
            android:gravity="left" />



    </LinearLayout>
</ScrollView>