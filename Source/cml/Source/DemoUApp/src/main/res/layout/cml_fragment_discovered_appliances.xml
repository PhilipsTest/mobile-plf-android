<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/cml_my_id" />

        <TextView
            android:id="@+id/cml_textViewAppId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="@string/cml_my_id" />

    </FrameLayout>

    <Switch
        android:id="@+id/cml_sw_startstop_discovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/cml_perform_discovery" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editFilterModelIdWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editFilterModelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="@string/cml_filter_model_id_hint"
            android:inputType="textNoSuggestions"
            tools:text="Comma separated model ids" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/cml_listViewAppliances"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:listSelector="@color/colorAccent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cml_clearAppliancesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/cml_clear_appliances"
            android:elevation="4dp"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_delete"
            tools:elevation="4dp"
            tools:fabSize="auto" />
    </RelativeLayout>
</LinearLayout>
