<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvFirmwareSearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Firmware images directory" />

    <ListView
        android:id="@+id/lvFirmwareImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:fadeScrollbars="false"
        android:listSelector="@color/colorAccent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/timeoutWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/timeoutEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/timeout"
            android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnUploadFirmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/upload_firmware" />

    <Button
        android:id="@+id/btnDeployFirmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deploy_firmware" />

    <Button
        android:id="@+id/btnCancelFirmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_firmware" />

    <ProgressBar
        android:id="@+id/progressUploadFirmware"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/lblFirmwareState"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFirmwareState"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dip"
                tools:text="State value" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/lblFirmwareVersion"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFirmwareVersion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dip"
                tools:text="Version value" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/lblFirmwareStatusMsg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFirmwareStatusMsg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lines="2"
                android:padding="3dip"
                tools:text="Status value" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/lblFirmwareCanUpgrade"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCanUpgrade"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="N/A"
                android:padding="3dip"
                tools:text="Can upgrade value" />
        </TableRow>

    </TableLayout>
</LinearLayout>
