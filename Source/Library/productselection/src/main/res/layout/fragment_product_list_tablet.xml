<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productListContainerTablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:weightSum="1.0">

    <RelativeLayout
        android:id="@+id/fragmentTabletProductList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.39"
        android:tag="ProductListingFragment"></RelativeLayout>

    <View
        android:id="@+id/listViewSeperator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.01"
        android:background="@drawable/split_view_seperator_bg" />


    <RelativeLayout
        android:id="@+id/fragmentTabletProductDetailsParent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:background="#cccccc">

    </RelativeLayout>

</LinearLayout>