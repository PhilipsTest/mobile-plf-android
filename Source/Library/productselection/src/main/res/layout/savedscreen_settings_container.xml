<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/savedScreen_screen_child_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/savedscreen_productcontainer_marigin"
    android:layout_marginRight="@dimen/savedscreen_productcontainer_marigin"
    android:orientation="horizontal"
    android:weightSum="7"
    tools:showIn="@layout/fragment_saved_screen">


    <com.philips.cdp.productselection.customview.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="3"
        android:paddingRight="@dimen/savedscreen_product_settings_paddingleft"
        android:text="@string/Confirmation_Change_Selection"
        android:textColor="#B9B9B9"
        android:textSize="@dimen/title_text_size_small"
        custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Light.otf" />

    <Button
        android:id="@+id/savedscreen_button_settings"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/savedscreen_product_settings_buttonmargin"
        android:layout_marginLeft="@dimen/savedscreen_product_settings_buttonmargin"
        android:layout_weight="4"
        android:text="@string/Confirmation_Change"
        android:textAllCaps="false" />


</LinearLayout>