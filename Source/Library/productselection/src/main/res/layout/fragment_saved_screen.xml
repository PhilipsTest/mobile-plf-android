<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/savedscreen_product_image_margin"
    android:background="#ffffff">


    <LinearLayout
        android:id="@+id/savedScreen_screen_parent_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/savedscreen_top_container_height"
            android:background="?attr/uikit_veryLightColor">

            <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.SliderMarginBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/savedscreen_productcontainer_marigin"
                android:gravity="center|left"
                android:text="@string/Confirmation_Selected"
                android:textSize="@dimen/title_text_size_small"
                custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Light.otf" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/savedScreen_screen_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/savedScreen_screen_child_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/savedscreen_productcontainer_marigin"
                android:layout_marginRight="@dimen/savedscreen_productcontainer_marigin"
                android:orientation="horizontal"
                android:weightSum="18"
                tools:showIn="@layout/fragment_saved_screen">

                <ImageView
                    android:id="@+id/savedscreen_productimage"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/savedscreen_productcontainer_height"
                    android:layout_margin="@dimen/savedscreen_product_image_margin"
                    android:layout_weight="6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/savedscreen_product_text_container_height"
                    android:layout_weight="5">

                    <com.philips.platform.uid.view.widget.Label
                        style="@style/UIDLabel.SliderMarginBottom"
                        android:id="@+id/savedscreen_productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:lineSpacingExtra="@dimen/savedscreen_product_text_linespacing"
                        android:textSize="@dimen/title_text_size_small"
                        android:textStyle="bold"
                        custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Bold.otf" />


                    <com.philips.platform.uid.view.widget.Label
                        style="@style/UIDLabel.SliderMarginBottom"
                        android:id="@+id/savedscreen_productvariant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/savedscreen_productname"
                        android:layout_marginTop="10dp"
                        android:textColor="#B9B9B9"
                        android:textSize="@dimen/title_text_size_small"
                        android:text="hhhhhi"
                        custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Light.otf" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/green_tick"
                        android:foregroundGravity="right|center"
                        android:scaleType="fitXY" />

                </RelativeLayout>


            </LinearLayout>

            <include layout="@layout/savedscreen_settings_container" />

            <com.philips.platform.uid.view.widget.Button
                style="@style/UIDExtraWideButton.Center"
                android:id="@+id/savedscreen_button_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/savedscreen_product_text_container_height"
                android:text="@string/Continue_Btntxt"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>