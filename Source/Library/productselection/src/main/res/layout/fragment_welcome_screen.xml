<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/welcome_screen_parent_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/welcome_screen_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/welcomescreen_image" />

        <TextView
            android:id="@+id/welcome_screen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/Select_Product_Desc"
            android:textColor="?attr/baseColor"
            android:textSize="@dimen/title_text_size_small" />

        <RelativeLayout
            android:id="@+id/welcome_screen_parent_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:layout_marginTop="35dp"
            android:padding="1dp"
            android:background="@drawable/selector_find_product_button_bg">
            <RelativeLayout
                android:id="@+id/welcome_screen_parent_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/welcome_screen_find_product_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/savedscreen_productcontainer_marigin"
                    android:src="@drawable/mp_search" />

                <TextView
                    android:id="@+id/welcome_screen_find_product_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/savedscreen_productcontainer_marigin"
                    android:text="@string/Select_Product_Find"
                    android:textColor="?attr/baseColor"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size_medium"
                    android:layout_alignBottom="@+id/welcome_screen_find_product_search"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
<!--

            <com.shamanland.fonticon.FontIconTextView
                android:id="@+id/welcome_screen_arrow"
                style="@style/ui_kit_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
-->

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
