<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_news_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_email"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="0dip"
                    android:text="@string/Philips_News_Description_Normal_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_title_text_size_medium_neg"

                    android:orientation="horizontal">


                    <com.philips.cdp.registration.ui.customviews.XTextView
                        style="@style/reg_textStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:text="&#8226;"
                        android:layout_marginRight="8dip"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <com.philips.cdp.registration.ui.customviews.XTextView
                            android:id="@+id/tv_explain_value_to_user"
                            style="@style/reg_textStyle"
                            android:layout_marginBottom="0dip"
                            android:text="@string/Philips_News_Description_First_Bulleted_Title_lbltxt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                        <com.philips.cdp.registration.ui.customviews.XTextView
                            style="@style/reg_textStyle"
                            android:layout_marginBottom="0dip"
                            android:textStyle="italic"
                            android:id="@+id/tv_first_desc"
                            android:layout_marginTop="@dimen/reg_title_text_size_medium_neg"
                            android:text="@string/Philips_News_Description_First_Bulleted_Description_lbltxt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_title_text_size_medium"
                    android:orientation="horizontal">


                    <com.philips.cdp.registration.ui.customviews.XTextView
                        style="@style/reg_textStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:text="&#8226;"
                        android:layout_marginRight="8dip"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.philips.cdp.registration.ui.customviews.XTextView
                            style="@style/reg_textStyle"
                            android:layout_marginBottom="0dip"
                            android:text="@string/Philips_News_Description_Second_Bulleted_Title_lbltxt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                        <com.philips.cdp.registration.ui.customviews.XTextView
                            style="@style/reg_textStyle"
                            android:textStyle="italic"
                            android:id="@+id/tv_second_desc"
                            android:layout_marginTop="@dimen/reg_title_text_size_medium_neg"
                            android:text="@string/Philips_News_Description_Second_Bulleted_Description_lbltxt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                    </LinearLayout>
                </LinearLayout>


                <com.philips.cdp.registration.ui.customviews.XTextView
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="@dimen/reg_margin_bottom"
                    android:text="@string/Philips_News_Description_Withdrawal_Opportunity_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

            </LinearLayout>

            <View
                style="@style/reg_line"
                android:layout_marginBottom="@dimen/reg_margin_bottom" />

            <RelativeLayout
                android:id="@+id/rl_reg_btn_back_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/reg_btn_back"
                    style="@style/reg_style_btn"
                    android:enabled="true"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin"
                    android:text="@string/Philips_News_Back_btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/RegistrationFeb9/Source/Library/RegistrationApi/src/main/res/layout/fragment_philips_news.xml -->