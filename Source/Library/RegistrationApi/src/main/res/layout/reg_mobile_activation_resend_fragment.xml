         <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_reg_create_account_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_verify_title"
                    style="@style/reg_textStyle"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:text="Did not receive a SMS?"
                    android:textSize="@dimen/reg_title_text_size"
                    android:textStyle="bold"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />


                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_verify"
                    style="@style/reg_textStyle"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:text="@string/reg_phone_number_update_desc2"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_verify_text"
                    style="@style/reg_textStyle"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:text="@string/reg_phone_number_update_desc1"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XEditText
                    android:id="@+id/rl_reg_number_field"
                    style="@style/reg_style_tab_hint"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:hint="@string/reg_your_phone_number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxLength="@integer/reg_et_name_max_length"
                    reglib:fontAssetName="CentraleSans-Light.otf" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_reg_singin_options"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_resend_update"
                    style="@style/reg_style_btn"
                    android:text="@string/reg_Resend_SMS_title"
                    android:enabled="false"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <ProgressBar
                    android:id="@+id/pb_reg_activate_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:padding="@dimen/reg_pb_padding"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                style="@style/reg_text_background"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginLeft="@dimen/reg_layout_margin"
                android:layout_marginRight="@dimen/reg_layout_margin"
                android:layout_marginTop="0dip">


                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_code_received"
                    style="@style/reg_forgot_password"
                    android:background="@drawable/reg_btn_forgot_selector"
                    android:text="@string/reg_sms_received"
                    android:layout_height="@dimen/reg_btn_height"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />


            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>