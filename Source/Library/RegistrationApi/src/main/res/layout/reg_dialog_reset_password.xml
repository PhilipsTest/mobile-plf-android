<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_dailog_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_create_account_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/reg_dimen_16dp"
            android:paddingRight="@dimen/reg_dimen_16dp">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_alert_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:gravity="left"
                android:text="@string/reg_ForgotPwdEmailResendMsg_Title"
                android:textSize="@dimen/reg_text_size_20"
                android:textColor="@color/uid_gray_level_90"
                android:textStyle="bold"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/usr_alert_content_label"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip"
                android:textColor="@color/uid_gray_level_90"
                android:text="@string/reg_ForgotPwdEmailResendMsg"
                />

            <com.philips.platform.uid.view.widget.Label
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/usr_alert_content2_label"
                android:layout_marginBottom="@dimen/reg_dimen_24dp"
                android:layout_marginTop="0dip"
                android:textColor="@color/uid_gray_level_90"
                android:text="@string/reg_ForgotPwdEmailResendMsg"
                android:visibility="gone"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/usr_alert_continue_button"
                style="@style/UIDImageTextButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reg_DLS_Button_Title_Ok"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>