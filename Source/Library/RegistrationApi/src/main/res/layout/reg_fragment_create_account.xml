<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_layout_top"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_padding_left_16dp"
                android:paddingRight="@dimen/reg_layout_padding_right_16dp">

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    android:textColor="@color/uid_gray_level_90" />


                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/rl_reg_first_name_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/rl_reg_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:uidInputTextWithClearButton="true" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>


                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:textColor="@color/uid_gray_level_90" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/rl_reg_last_name_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/rl_reg_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:uidInputTextWithClearButton="true" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>


                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/uid_gray_level_90" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/textbox_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/reg_field_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:uidInputTextWithClearButton="true" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/uid_gray_level_90" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/rl_reg_password_field_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/rl_reg_password_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>

                <LinearLayout
                    android:id="@+id/reg_create_password_validation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:max="100"
                        android:maxHeight="5dp"
                        android:minHeight="5dp"
                        android:progress="5"
                        android:progressDrawable="@drawable/reg_password_strength_weak"
                        android:secondaryProgress="100"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/passwordStrength"
                        style="@style/UIDLabel.MarginTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weak"
                        android:textColor="@color/uid_signal_red_level_15" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/password_description"
                        style="@style/reg_text_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/uid_signal_red_level_15"
                        android:padding="@dimen/reg_margin_bottom"
                        android:text="@string/reg_password_description"
                        android:textColor="?attr/uidLabelDescriptorNormalTextColor" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_margin_bottom"
                    android:layout_marginTop="10dip" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_first_to_know"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="@dimen/reg_err_mapping_padding"
                    android:gravity="center|left"
                    android:paddingLeft="35dp"
                    android:text="@string/reg_Opt_In_Be_The_First"
                    android:visibility="gone"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.platform.uid.view.widget.CheckBox
                    android:id="@+id/checkbox_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_Receive_Philips_News_lbltxt" />

                <com.philips.platform.uid.view.widget.CheckBox
                    android:id="@+id/checkbox_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/reg_TermsAndConditionsAcceptanceText" />

                <com.philips.cdp.registration.ui.customviews.XRegError
                    android:id="@+id/cb_reg_accept_terms_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_margin_bottom"
                    android:visibility="gone" />

                <com.philips.platform.uid.view.widget.ProgressBarButton
                    android:id="@+id/buttonsProgressIndicatorExtraWideIndeterminate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom_24"
                    android:layout_marginTop="@dimen/reg_margin_top_24"
                    android:enabled="false"
                    app:uidIsIndeterminateProgressIndicator="true"
                    app:uidProgressIndicatorButtonText="@string/reg_Create_Account_CreateMyPhilips_btntxt" />

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/btn_reg_switch_login"
                    style="@style/UIDImageTextButton.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_reg_singin_options"
                    android:layout_marginBottom="@dimen/reg_margin_bottom_24"
                    android:text="Switch to login"
                    app:uidComponentType="Secondary" />

                <com.philips.cdp.registration.ui.customviews.XRegError
                    android:id="@+id/reg_error_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_margin_top_24" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>