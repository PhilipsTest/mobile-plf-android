<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="?attr/uidContentPrimaryBackgroundColor"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/usr_marketingScreen_rootLayout_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/usr_marketingScreen_rootContainer_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/reg_layout_margin_12dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/reg_margin_24"
            android:weightSum="1">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_marketingScreen_headTitle_Lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:layout_marginTop="@dimen/reg_margin_top_24"
                android:text="@string/reg_Opt_In_What_Are_You_Going_To_Get"
                android:textSize="@dimen/reg_error_alert_size"
                android:textStyle="bold"/>


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_marketingScreen_specialOffer_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_Opt_In_Special_Offers"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/reg_button_text_size"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_marketingScreen_joinNow_Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_Opt_In_Join_Now"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/reg_button_text_size"/>

            <LinearLayout
                android:id="@+id/usr_marketingScreen_newsContainer_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?attr/uidContentTertiaryBackgroundColor"
                android:orientation="vertical"
                android:paddingEnd="@dimen/reg_layout_padding_16dp"
                android:paddingStart="@dimen/reg_layout_padding_16dp">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/usr_marketingScreen_philipsNews_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_12dp"
                    android:layout_marginTop="@dimen/reg_text_size_12"
                    android:text="@string/reg_Receive_Philips_News_lbltxt"
                    android:textColor="?attr/uidContentItemDefaultNormalSubtleBodyTextColor"/>
            </LinearLayout>

            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/usr_marketingScreen_countMe_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_10dp"
                android:layout_marginTop="@dimen/reg_margin_top_24"
                android:enabled="false"
                android:textStyle="normal"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonText="@string/reg_Opt_In_Count_Me_In"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/usr_marketingScreen_maybeLater_button"
                style="@style/UIDImageTextButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom_24"
                android:text="@string/reg_Opt_In_May_Be_later"
                android:textStyle="normal"
                app:uidComponentType="Secondary"/>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/usr_marketingScreen_error_regerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>