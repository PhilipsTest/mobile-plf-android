<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/reg_layout_margin_16dp"
            android:layout_marginStart="@dimen/reg_layout_margin_16dp"
            android:orientation="vertical"
            android:weightSum="1">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/reg_what_are_you_txt"
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                    android:layout_marginTop="@dimen/reg_margin_top_24"
                    android:gravity="left"
                    android:text="@string/reg_Opt_In_What_Are_You_Going_To_Get"
                    android:textSize="@dimen/reg_error_alert_size"
                    android:textStyle="bold"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/reg_special_officer_txt"
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                    android:gravity="left"
                    android:text="@string/reg_Opt_In_Special_Offers"
                    android:textSize="@dimen/reg_button_text_size"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_reg_Join_now"
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_20dp"
                    android:gravity="left"
                    android:text="@string/reg_Opt_In_Join_Now"
                    android:textSize="@dimen/reg_button_text_size"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/uid_group_blue_level_10"
                android:paddingLeft="@dimen/reg_layout_padding_16dp"
                android:paddingRight="@dimen/reg_layout_padding_16dp"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_reg_philips_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                    android:layout_marginBottom="@dimen/reg_layout_margin_12dp"
                    android:text="@string/reg_Receive_Philips_News_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_reg_philips_news_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_14dp"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/btn_reg_count_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_10dp"
                android:layout_marginTop="@dimen/reg_margin_top_24"
                android:enabled="false"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonText="@string/reg_Opt_In_Count_Me_In" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_reg_no_thanks"
                style="@style/UIDImageTextButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_reg_singin_options"
                android:layout_marginBottom="@dimen/reg_margin_bottom_24"
                android:text="@string/reg_Opt_In_No_Thanks"
                app:uidComponentType="Secondary" />

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg_activate_acct"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>