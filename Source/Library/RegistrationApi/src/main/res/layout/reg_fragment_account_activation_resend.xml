<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg">

    <ScrollView
        android:id="@+id/usr_activationresend_rootLayout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/usr_activationresend_root_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
            android:layout_marginRight="@dimen/reg_layout_margin_16dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activationresend_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_24"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_resend_mail_title"
                android:textColor="@color/uid_gray_level_90"
                android:textSize="@dimen/reg_text_size_20"
                android:textStyle="bold"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activationresend_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_12dp"
                android:text="@string/reg_verify_resend_mail_desc"
                android:textColor="@color/uid_gray_level_90"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_resend_mail_desc2"
                android:textColor="@color/uid_gray_level_90"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reg_verify_resend_mail_edittext_label"
                android:textColor="@color/uid_gray_level_90"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/usr_activationresend_emailormobile_inputValidationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_activationresend_emailormobile_textfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:enabled="false"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/usr_activationresend_emailResend_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:uidIsIndeterminateProgressIndicator="true"
                android:layout_marginBottom="@dimen/reg_layout_margin_12dp"
                app:uidProgressIndicatorButtonProgressText="@string/reg_verify_resend_mail_button_resend"
                app:uidProgressIndicatorButtonText="@string/reg_verify_resend_mail_button_resend"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/usr_activationresend_return_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_10dp"
                app:uidComponentType="Secondary"
                android:text="@string/reg_verify_resend_mail_button_return"/>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/usr_activationresend_activation_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:visibility="gone"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>