<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg">

    <ScrollView
        android:id="@+id/usr_activation_rootLayout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/usr_activation_root_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
            android:layout_marginRight="@dimen/reg_layout_margin_16dp"
            android:layout_marginTop="@dimen/reg_layout_top"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activation_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="Email needs to be verified"
                android:textColor="@color/uid_gray_level_90"
                android:textSize="@dimen/reg_text_size_20"
                android:textStyle="bold"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/alertDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="Please click on the link in the email we've sent you."
                android:textColor="@color/uid_gray_level_90"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_activation_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="The email may not arrive immediately but it is on its way."
                android:textColor="@color/uid_gray_level_90"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Button
                style="@style/UIDImageTextButton.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'll check again"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>