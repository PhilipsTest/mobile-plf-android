<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
            android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
            android:layout_marginRight="@dimen/reg_layout_margin_16dp"
            android:layout_marginTop="@dimen/reg_margin_24"
            android:orientation="vertical">


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_reg_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_mobile_title"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/reg_text_size_20"
                android:textStyle="bold"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_reg_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_mobile_desc1"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_20dp"
                android:text="@string/reg_verify_mobile_desc2"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/usr_forgotpassword_inputId_inputValidationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="inline_error_message">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_ValidationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    app:uidInputTextBorderWidth="@dimen/uid_edittext_stroke_width"
                    android:maxLength="6"
                    android:maxLines="1"/>
            </com.philips.platform.uid.view.widget.InputValidationLayout>


            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/btn_reg_Verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_8dp"
                android:enabled="false"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonProgressText="@string/reg_verify_mobile_verify_button"
                app:uidProgressIndicatorButtonText="@string/reg_verify_mobile_verify_button"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_reg_resend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_Verify_SMS_Did_Not_Receive_SMS"
                app:uidComponentType="Secondary"/>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>