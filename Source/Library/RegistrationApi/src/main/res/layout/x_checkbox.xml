<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/reg_x_checkbox_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reg_layout_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_x_checkbox"
        android:layout_width="@dimen/reg_x_checkbox_width"
        android:layout_height="@dimen/reg_x_checkbox_height"
        android:orientation="vertical">


        <com.philips.cdp.registration.ui.customviews.XIconTextView
            android:id="@+id/reg_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/reg_text_heading_one_color"
            android:text="@string/ic_reg_check"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/reg_tv_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        />
</LinearLayout>