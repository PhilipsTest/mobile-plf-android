<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/reg_layout_margin_16dp"
            android:layout_marginStart="@dimen/reg_layout_margin_16dp"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/usr_forgotpassword_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_24"
                android:text="@string/reg_Receive_Philips_News_Meaning_lbltxt"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/reg_text_size_20"
                android:textStyle="bold"
                reglib:fontPath="fonts/centralesansbook.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_philips_communication_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_philips_communication_content1"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontPath="fonts/centralesansbook.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_philips_communication_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_philips_communication_content2"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontPath="fonts/centralesansbook.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_philips_communication_content4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_philips_communication_content4"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontPath="fonts/centralesansbook.ttf"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_philips_communication_content6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_philips_communication_content6"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontPath="fonts/centralesansbook.ttf"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>