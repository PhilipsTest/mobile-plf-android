<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="?attr/uidContentPrimaryBackgroundColor">

    <ScrollView
        android:id="@+id/usr_activation_rootLayout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/usr_activation_root_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
            android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
            android:layout_marginRight="@dimen/reg_layout_margin_16dp"
            android:layout_marginTop="@dimen/reg_margin_24"
            android:orientation="vertical">


            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tv_reg_verify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_mobile_title"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/reg_text_size_20"
                android:textStyle="bold"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/reg_verify_mobile_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_verify_mobile_desc1"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_20dp"
                android:text="@string/reg_verify_mobile_desc2"
                android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
                reglib:fontAssetName="CentraleSans-Book.OTF"/>

            <LinearLayout
                android:id="@+id/verificationcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_24"
                android:orientation="horizontal"
                android:weightSum="6">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/usr_forgotpassword_inputId_textField6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="1"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="false"/>
            </LinearLayout>

            <com.philips.platform.uid.view.widget.ProgressBarButton
                android:id="@+id/btn_reg_Verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_8dp"
                android:enabled="false"
                app:uidIsIndeterminateProgressIndicator="true"
                app:uidProgressIndicatorButtonProgressText="@string/reg_verify_mobile_verify_button"
                app:uidProgressIndicatorButtonText="@string/reg_verify_mobile_verify_button"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/btn_reg_resend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_layout_margin_16dp"
                android:text="@string/reg_Verify_SMS_Did_Not_Receive_SMS"
                app:uidComponentType="Secondary"/>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>




