<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:orientation="vertical"
    android:weightSum="100"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="99"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_create_account_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/reg_welcome_id"
                    style="@style/UIDLabel.MarginTop"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="0dip"
                    android:text="Log in now"
                    android:textSize="@dimen/reg_title_text_size" />

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                    android:paddingLeft="@dimen/reg_layout_padding_left_16dp"
                    android:paddingRight="@dimen/reg_layout_padding_right_16dp"
                    android:text="Email or phone number"
                    android:textColor="@color/uid_gray_level_90" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/rl_reg_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/reg_layout_padding_left_16dp"
                    android:paddingRight="@dimen/reg_layout_padding_right_16dp"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/usr_loginScreen_login_textField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:uidInputTextWithClearButton="true" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.MarginTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_layout_margin_16dp"
                    android:paddingLeft="@dimen/reg_layout_padding_left_16dp"
                    android:paddingRight="@dimen/reg_layout_padding_right_16dp"
                    android:text="Password"
                    android:textColor="@color/uid_gray_level_90" />

                <com.philips.platform.uid.view.widget.InputValidationLayout
                    android:id="@+id/rl_reg_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_padding_left_16dp"
                    android:paddingRight="@dimen/reg_layout_padding_right_16dp"
                    app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                    app:uidTextBoxValidationErrorText="inline_error_message">

                    <com.philips.platform.uid.view.widget.ValidationEditText
                        android:id="@+id/usr_loginScreen_password_textField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.philips.platform.uid.view.widget.InputValidationLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_attention_box"
                style="@style/reg_text_background"
                android:layout_marginTop="0dip"
                android:visibility="gone">

                <com.philips.cdp.registration.ui.customviews.XHavingProblems
                    android:id="@+id/view_having_problem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin"
                    android:paddingTop="@dimen/reg_margin_bottom"
                    android:visibility="gone" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_resend_details"
                    style="@style/reg_text_description"
                    android:text="@string/reg_VerifyEmail_ResendErrorMsg_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <RelativeLayout
                android:id="@+id/rl_reg_welcome_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingLeft="@dimen/reg_layout_margin_16dp"
                android:paddingRight="@dimen/reg_layout_margin_16dp">

                <com.philips.platform.uid.view.widget.ProgressBarButton
                        android:id="@+id/btn_reg_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:uidIsIndeterminateProgressIndicator="true"
                        app:uidProgressIndicatorButtonProgressText="@string/reg_SigIn_TitleTxt"
                        app:uidProgressIndicatorButtonText="@string/reg_SigIn_TitleTxt" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/reg_forgot_password_text"
        style="@style/UIDLabel.MarginTop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginLeft="@dimen/reg_layout_margin_16dp"
        android:layout_marginBottom="32dp"
        android:text="Forgot password?"
        android:textSize="12sp" />

</LinearLayout>