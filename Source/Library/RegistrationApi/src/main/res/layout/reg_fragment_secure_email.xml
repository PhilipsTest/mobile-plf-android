<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/reg_layout_margin"
            android:paddingRight="@dimen/reg_layout_margin">


            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/reg_secure_data_title_txt"
                style="@style/reg_textStyle"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:gravity="left"
                android:text="@string/reg_Account_secure_data_Title_txt"
                android:textSize="@dimen/reg_error_alert_size"
                android:textStyle="bold"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_philips_news"
                style="@style/reg_textStyle"
                lineSpacingExtra="xxdp"
                android:layout_marginBottom="0dip"
                android:gravity="center|left"
                android:text="@string/reg_Account_secure_data_Title_lbltxt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <com.philips.cdp.registration.ui.customviews.LoginIdEditText
                android:id="@+id/rl_reg_securedata_email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_margin_bottom" />

            <com.philips.cdp.registration.ui.customviews.XButton
                android:id="@+id/btn_reg_secure_data_email"
                style="@style/reg_style_btn"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:enabled="true"
                android:text="@string/reg_Account_secure_data_Title_email_btntxt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />


            <com.philips.cdp.registration.ui.customviews.XButton
                android:id="@+id/btn_reg_secure_data_email_later"
                style="@style/reg_style_btn"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:background="@drawable/reg_btn_forgot_selector"
                android:enabled="true"
                android:text="@string/reg_Account_secure_data_Title_skip_btntxt"
                android:textColor="@drawable/reg_btn_secondary_text_selector"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg_activate_acct"
                android:visibility="gone"
                android:layout_marginTop="@dimen/reg_margin_bottom" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/add_email_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>