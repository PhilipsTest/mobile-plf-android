<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/wizard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/vitals" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/help_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wizard_button"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/vitals_want"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            style="@style/UIDAlertDialogTitleTextStyle"
            android:textSize="16dp"
            />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/visit_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/help_visit"
            android:layout_marginBottom="16dp"
            android:text="@string/vitals_blood_pressure"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            style="@style/UIDAlertDialogTitleTextStyle"
            android:textSize="16dp"
            />

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/systolic"
            android:layout_below="@id/visit_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vitals_systolic"
            android:enabled="true"
            android:layout_marginBottom="8dp"
            />

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/diastolic"
            android:layout_below="@id/systolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vitals_diastolic"
            android:layout_marginBottom="16dp"
            />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/additional_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diastolic"
            android:text="@string/temperature"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            style="@style/UIDLabelDescription"
            />

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/edit_farenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_comment"
            android:layout_marginBottom="24dp"
            android:enabled="true"
            android:hint="@string/vitals_faranheit" />

       <!-- <com.philips.platform.uid.view.widget.Label
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vitals_f"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/edit_farenheit"
            android:layout_below="@id/additional_comment"
            />-->

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_farenheit"
            android:text="@string/weight"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            style="@style/UIDLabelDescription"
            />

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/ponds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:layout_marginBottom="24dp"
            android:enabled="true"
            android:hint="@string/vitals_ponds" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/vitals_continue_btn"
            style="@style/UIDImageTextButton.Center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ponds"
            android:enabled="false"
            android:layout_marginBottom="20dp"
            android:text="Continue" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/vitals_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vitals_continue_btn"
            android:text="@string/vitals_skip"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/uidLabelRegularNormalTextColor"
            style="@style/UIDLabelDescription"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</ScrollView>