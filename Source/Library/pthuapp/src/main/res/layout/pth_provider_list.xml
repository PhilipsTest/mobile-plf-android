<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<ImageView
    android:id="@+id/providerImage"
    android:layout_marginStart="@dimen/uid_label_margin_start"
    android:layout_centerVertical="true"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="18dp"
    android:layout_width="84dp"
    android:layout_height="84dp"
    android:src="@drawable/doctor_pic"/>

    <RelativeLayout
        android:id="@+id/providerDetailLayout"
        android:layout_toRightOf="@+id/providerImage"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/uid_label_margin_start"
        android:layout_marginLeft="@dimen/uid_label_margin_start"
        android:layout_height="wrap_content">
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/providerNameLabel"
        android:textSize="@dimen/uid_recyclerview_item_title_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uid_grid_icon_padding"
        android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:text="Dr. Eylin White"/>
    <com.philips.platform.uid.view.widget.Label
        android:layout_below="@+id/providerNameLabel"
        android:id="@+id/practiceNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/uid_grid_descrption_size"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:text="Pediatrician"/>
        <RelativeLayout
            android:layout_below="@+id/practiceNameLabel"
            android:id="@+id/isAvailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.philips.platform.uid.view.widget.Label
                android:layout_toRightOf="@+id/isAvailableImage"
                android:id="@+id/isAvailableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uid_label_margin_start"
                android:layout_marginStart="@dimen/uid_alert_dialog_message_line_spacing"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:textSize="@dimen/uid_grid_descrption_size"
                android:text="Available Now"/>
            <ImageView
                android:id="@+id/isAvailableImage"
                android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/green_tick"/>
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.RatingBar
            android:layout_below="@id/isAvailableLayout"
            android:id="@+id/providerRating"
            style="@style/UIDRatingBarStandardDisplay"
            android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
            android:layout_marginBottom="@dimen/uid_label_margin_left_control"
            android:rating="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View android:background="@color/uid_gray_level_5"
        android:layout_below="@+id/providerDetailLayout"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        />
</RelativeLayout>