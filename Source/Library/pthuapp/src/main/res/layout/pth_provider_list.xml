<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    >
<ImageView
    android:id="@+id/providerImage"
    android:layout_centerVertical="true"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/doctor_pic"/>

    <RelativeLayout
        android:id="@+id/providerDetailLayout"
        android:layout_toRightOf="@+id/providerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/providerNameLabel"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:text="Dr. Eylin White"/>
    <com.philips.platform.uid.view.widget.Label
        android:layout_below="@+id/providerNameLabel"
        android:id="@+id/practiceNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:textSize="10sp"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:text="Pediatrician"/>
        <RelativeLayout
            android:layout_below="@+id/practiceNameLabel"
            android:id="@+id/isAvailableLayout"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.philips.platform.uid.view.widget.Label
                android:layout_marginStart="16sp"
                android:layout_toRightOf="@+id/isAvailableImage"
                android:id="@+id/isAvailableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:text="Available Now"/>
            <ImageView
                android:id="@+id/isAvailableImage"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="16sp"
                android:src="@drawable/green_tick"/>
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.RatingBar
            android:layout_below="@id/isAvailableLayout"
            android:layout_marginTop="7dp"
            android:layout_marginStart="16sp"
            android:id="@+id/providerRating"
            style="@style/UIDRatingBarStandardDisplay"
            android:rating="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View android:background="@color/uid_gray_level_10"
        android:layout_below="@+id/providerDetailLayout"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        />
</RelativeLayout>