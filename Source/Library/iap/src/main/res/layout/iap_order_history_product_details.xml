<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top">

<com.android.volley.toolbox.NetworkImageView
    android:id="@+id/iv_product_image"
    style="@style/networkImage"
    android:layout_alignParentStart="true" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
    android:layout_toEndOf="@id/iv_product_image"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_productName"
        style="@style/tvBoldTitle"
        android:layout_alignParentStart="true"
        android:scrollHorizontally="false" />

    <TextView
        android:id="@+id/tv_product_number"
        style="@style/tvTitle"
        android:layout_below="@+id/tv_productName"
        android:layout_marginStart="@dimen/iap_quantity_price_start_margin"
        android:layout_marginTop="3dp"
        android:text="hrdfd" />

</RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_marginTop="@dimen/iap_selection_address_layout_margin"
        android:background="?attr/uikit_listDividerColor"
        android:layout_below="@+id/iv_product_image" />

</RelativeLayout>
