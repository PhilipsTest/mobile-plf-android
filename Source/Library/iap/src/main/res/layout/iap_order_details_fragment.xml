<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/iap_order_detail_margin_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:background="@color/uikit_enricher7">

            <TextView
                android:id="@+id/tv_time"
                style="@style/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top">

            <TextView
                android:id="@+id/order_number_text"
                style="@style/tvBoldTitle"
                android:text="@string/iap_order_number"
                android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"/>

            <TextView
                android:id="@+id/tv_order_number"
                style="@style/tvBoldTitle"
                android:layout_alignBaseline="@id/order_number_text"
                android:layout_toEndOf="@id/order_number_text"
                android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"/>

            <TextView
                android:id="@+id/tv_order_state"
                style="@style/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/order_number_text"
                android:layout_below="@+id/order_number_text"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:text="Order state" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:layout_marginTop="@dimen/iap_selection_address_layout_margin"
            android:background="?attr/uikit_listDividerColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom">

            <TextView
                android:id="@+id/total_item_text"
                style="@style/iap_order_total_items"
                android:text="@string/iap_total" />

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/iap_order_total_items"
                android:layout_alignBaseline="@id/total_item_text"
                android:layout_toEndOf="@id/total_item_text" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tvBoldTitle"
                android:layout_alignParentEnd="true"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="@dimen/iap_shopping_cart_footer_total_size"
                android:layout_marginEnd="@dimen/iap_shipping_address_margin_left" />
        </RelativeLayout>

      <!--  <include layout="@layout/iap_order_history_shopping_item" /> -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:background="?attr/uikit_listDividerColor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shipping_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iap_order_detail_margin_bottom"
            android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom"
            android:layout_marginEnd="@dimen/iap_order_detail_margin_bottom"
            android:layout_marginStart="@dimen/iap_order_detail_margin_bottom"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/quantity"
            android:text="@string/iap_order_processing_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:background="?attr/uikit_listDividerColor"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/track_order_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:gravity="center_vertical">

            <TextView
                style="@style/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
                android:text="@string/iap_track_order"
                android:textColor="?attr/uikit_baseColor" />

            <com.shamanland.fonticon.FontIconTextView
                android:id="@+id/track_order_arrow"
                style="@style/iap_right_arrow_product_catalog"
                android:layout_marginEnd="10dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                style="@style/tvHeaderTitle"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/iap_shipping_address" />

            <TextView
                android:id="@+id/tv_shipping_first_name"
                style="@style/iapCentralesansBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="?attr/uikit_baseColor" />

            <TextView
                android:id="@+id/tv_shipping_address"
                style="@style/tvTitle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/tvHeaderTitle"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="@string/iap_billing_address" />

            <TextView
                android:id="@+id/tv_billing_first_name"
                style="@style/iapCentralesansBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="?attr/uikit_baseColor" />

            <TextView
                android:id="@+id/tv_billing_address"
                style="@style/tvTitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payment_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                style="@style/tvHeaderTitle"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="@string/iap_payment_by" />

            <TextView
                android:id="@+id/tv_card_type"
                style="@style/tvTitle"
                android:layout_marginTop="5dp"
                android:text="@string/mastercard" />

        </LinearLayout>


        <View
            android:id="@+id/payment_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:background="?attr/uikit_listDividerColor" />

        <RelativeLayout
            android:id="@+id/invoice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
            android:layout_marginTop="@dimen/iap_order_detail_margin_bottom"
            android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_invoice" />

            <com.shamanland.fonticon.FontIconTextView
                android:id="@+id/invoice_arrow"
                style="@style/iap_right_arrow"
                android:layout_marginLeft="@dimen/iap_order_icon_margin_left"
                android:layout_marginRight="@dimen/iap_order_margin_top"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_paynow"
            style="?attr/uikit_outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_shipping_address_continue_button_height"
            android:layout_marginBottom="@dimen/iap_shipping_address_continue_margin_bottom"
            android:layout_marginEnd="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:layout_marginStart="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:text="@string/iap_buy"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/uikit_outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_shipping_address_cancel_button_height"
            android:layout_marginBottom="@dimen/network_margin_left_right"
            android:layout_marginEnd="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:layout_marginStart="@dimen/iap_shipping_address_cancel_button_margin_left_right"
            android:text="@string/iap_cancel_order"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
