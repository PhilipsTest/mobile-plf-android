<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_order_header_top_margin">

            <TextView
                android:id="@+id/order_number_text"
                style="@style/tvOrderHeaderTitle"
                android:text="@string/iap_order_number" />

            <TextView
                android:id="@+id/tv_order_number"
                style="@style/tvOrderHeaderTitle"
                android:layout_alignBaseline="@id/order_number_text"
                android:layout_toEndOf="@id/order_number_text" />

            <TextView
                android:id="@+id/tv_order_state"
                style="@style/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_number_text"
                android:layout_below="@+id/order_number_text"
                android:layout_marginBottom="@dimen/iap_selection_address_layout_margin"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                android:text="Order state" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:background="?attr/uikit_listDividerColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/iap_order_detail_margin_bottom"
            android:paddingTop="@dimen/iap_order_detail_margin_bottom">

            <TextView
                android:id="@+id/tv_time"
                style="@style/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_marginTop="0dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:background="?attr/uikit_listDividerColor" />

        <LinearLayout
            android:id="@+id/product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom"
            android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top">

            <TextView
                android:id="@+id/total_item_text"
                style="@style/iap_order_total_items"
                android:text="@string/iap_total" />

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/iap_order_total_items"
                android:layout_alignBaseline="@id/total_item_text"
                android:layout_toEndOf="@id/total_item_text"
                android:text="@string/iap_items" />

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvOrderHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/iap_order_price_margin_right" />
        </RelativeLayout>

        <!--  <include layout="@layout/iap_order_history_shopping_item" /> -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/uikit_enricher7">

            <TextView
                android:id="@+id/shipping_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/iap_order_detail_margin_bottom"
                android:layout_marginEnd="@dimen/iap_order_detail_margin_bottom"
                android:layout_marginStart="@dimen/iap_order_detail_margin_bottom"
                android:layout_marginTop="@dimen/iap_order_detail_margin_bottom"
                android:text="@string/iap_not_shipped_msg"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="@dimen/quantity" />

        </RelativeLayout>

