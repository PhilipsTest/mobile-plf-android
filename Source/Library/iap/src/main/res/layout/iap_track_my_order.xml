<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_track_order_title"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
            android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_top"
            android:text="@string/iap_track_order_title"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_track_order_number"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_selection_address_select_address_margint_bottom"
            android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
            android:text="#"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_track_order_text"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_selection_address_select_address_margint_bottom"
            android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
            android:text="@string/iap_track_package_text"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/iap_shipping_to" />

        <TextView
            android:id="@+id/tv_shipping_first_name"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/uikit_baseColor" />

        <TextView
            android:id="@+id/tv_shipping_address"
            style="@style/tvTitle" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_track"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_track_my_shipment" />


</RelativeLayout>
