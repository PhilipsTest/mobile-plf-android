<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/iap_match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/extra_option"
        style="@style/ButtonsCategoryStyle"
        android:textSize="18sp"
        android:background="@color/uid_gray_level_10"
        android:text="@string/iap_product_catalog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/iap_info_image"
            android:scaleType="fitXY"/>

        <com.philips.platform.uid.view.widget.Label
            style="@style/UIDLabel"
            android:id="@+id/product_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_in_cart"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        style="@style/UIDLabel"
        android:id="@+id/empty_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:text="@string/iap_empty_cart"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
        android:textSize="18sp" />

    <com.philips.platform.uid.view.widget.Button
        style="@style/UIDExtraWideButton.Center"
        android:id="@+id/btn_continue_shopping"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/iap_btn_height_45"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:text="@string/iap_continue_shopping" />
</LinearLayout>
