<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/iap_match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/extra_option"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uikit_enricher7"
        android:paddingBottom="@dimen/border16_margin_left_right"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:textColor="?attr/uidContentItemDefaultNormalDescriptorIconColor"
        android:textSize="@dimen/title"
        android:text="@string/iap_product_catalog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/iap_info_image"
            android:scaleType="fitXY"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/product_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/iapCentralesansBoldFont"
            android:text="@string/nothing_in_cart"
            android:textSize="@dimen/iap_text_size_16sp"/>
    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/empty_cart"
        android:textSize="@dimen/title"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:text="@string/iap_empty_cart"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

    <com.philips.platform.uid.view.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/iapCentralesansBookFont"
        android:id="@+id/btn_continue_shopping"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:text="@string/iap_continue_shopping" />
</LinearLayout>
