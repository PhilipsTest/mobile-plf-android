<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/extra_option"
                style="@style/ButtonsCategoryStyle"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:background="@color/uid_gray_level_10"
                android:text="@string/iap_extra_option" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/delivery_ups_title"
                style="@style/UIDLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right"
                android:text="@string/iap_delivery_ups_parcel"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/delivery_free_description"
                    style="@style/UIDLabel"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_delivery_free_description" />

                <com.shamanland.fonticon.FontIconTextView
                    android:id="@+id/right_arrow"
                    style="@style/iap_right_arrow_product_catalog"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </LinearLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/iap_tv_delivery_price"
                style="@style/UIDLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right"
                android:text="$0.00" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/cart_Summary"
                style="@style/ButtonsCategoryStyle"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dip"
                android:textSize="18sp"
                android:background="@color/uid_gray_level_10"
                android:text="@string/iap_cart_summary" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_vat"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_1x_daily_collection" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_daily_collection_val"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$29.99" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/advance_collection"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_1x_advance_collection" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/advance_collection_value"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$10.00" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_delivery_via_ups"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_delivery_via_ups" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_delivery_ups_val"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$0.00" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_total"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_total"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_total_cost"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$330.00"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:paddingLeft="@dimen/border16_margin_left_right"
                android:paddingRight="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_vat_inclusive"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iap_including_tax" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/iap_tv_including_tax"
                    style="@style/UIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$20.00" />
            </GridLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
</ScrollView>