<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/extra_option"
        style="@style/ButtonsCategoryStyle"
        android:background="@color/uid_gray_level_10"
        android:layout_alignParentTop="true"
        android:text="@string/iap_extra_option" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/delivery_ups_title"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:layout_height="wrap_content"
        android:text="@string/iap_delivery_ups_parcel"
        style="@style/UIDLabel"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/delivery_free_description"
        style="@style/UIDLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:text="@string/iap_delivery_free_description"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/iap_tv_delivery_price"
        style="@style/UIDLabel"
        android:text="$0.00"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/cart_Summary"
        style="@style/ButtonsCategoryStyle"
        android:layout_marginTop="10dip"
        android:background="@color/uid_gray_level_10"
        android:layout_alignParentTop="true"
        android:text="@string/iap_cart_summary" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_vat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iap_1x_daily_collection"
            style="@style/UIDLabel"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_divider_bottom_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$29.99"
            style="@style/UIDLabel"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/advance_collection"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iap_1x_advance_collection"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/advance_collection_val"
            style="@style/UIDLabel"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"/>
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_delivery_via_ups"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iap_delivery_via_ups"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_vat_value_uk_shopping_cart"
            style="@style/UIDLabel"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_totalItems"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iap_total"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_totalcost"
            style="@style/UIDLabel"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$330.00"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingRight="@dimen/border16_margin_left_right"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_vat_inclusive"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iap_including_vat"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_tv_vat_value"
            style="@style/UIDLabel"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20.00"/>
    </GridLayout>


</LinearLayout>