<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        style="@style/networkImage"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/product_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toEndOf="@+id/image">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/product_name"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Daily Collection Miniblender"
            android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
            android:textSize="16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/actual_price"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginRight="15dip"
            android:layout_marginTop="@dimen/reg_layout_margin_10dp"
            android:text="$1000"
            android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
            android:textSize="16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/price_label"
            style="@style/UIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="@dimen/reg_layout_margin_10dp"
            android:layout_toRightOf="@+id/actual_price"
            android:text="$777"
            android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dip"
        android:layout_toEndOf="@+id/product_details"
        android:layout_toRightOf="@+id/product_details"
        android:background="@drawable/consumercare_info" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/image"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@drawable/background_boder_rect_buttons"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actual_price"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/quantity_label"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/iap_shopping_cart_image_right"
                android:includeFontPadding="false"
                android:text="@string/iap_product_item_quantity"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="@dimen/quantity" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/quantity_val"
                style="@style/tvTitle"
                android:layout_alignBaseline="@id/quantity_label"
                android:layout_toEndOf="@id/quantity_label"
                android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/call"
            style="@style/UIDImageTextButton.Center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Delete" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/buttons_layout"
        android:background="#CCCCCC" />
</RelativeLayout>