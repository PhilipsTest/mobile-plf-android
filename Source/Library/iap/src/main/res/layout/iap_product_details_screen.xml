<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/border16_margin_left_right"
            android:paddingStart="@dimen/border16_margin_left_right"
            android:paddingTop="@dimen/border24_margin_bottom">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/product_description"
                style="@style/iapCentralesansBoldFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="?attr/uidTextPrimary"
                app:uidLabelTextSize="@dimen/iap_product_description" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ctn"
                style="@style/iapCentralesansBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/product_description"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/border8_margin"
                android:textColor="?attr/uidTextSecondary"
                app:uidLabelTextSize="16sp" />

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/ctn"
                android:layout_below="@id/product_description"
                android:layout_marginEnd="@dimen/iap_product_detail_right_padding"
                android:layout_marginStart="@dimen/iap_image_bottom_margin"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/tv_discounted_price"
                    style="@style/iapCentralesansBoldFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="?attr/uidTextTertiary"
                    app:uidLabelTextSize="@dimen/iap_product_ctn" />

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/individual_price"
                    style="@style/iapCentralesansBoldFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="?attr/uidTextPrimary"
                    app:uidLabelTextSize="@dimen/iap_product_original_price" />

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iap_product_detail_image_height"
                android:layout_below="@+id/price_container"
                android:layout_marginTop="@dimen/border24_margin_bottom" />

            <com.philips.cdp.uikit.customviews.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pager"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/border24_margin_bottom"
                android:paddingTop="@dimen/border24_margin_bottom" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/product_overview"
                style="@style/UIDLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/indicator"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/border16_margin_left_right"
                app:uidLabelTextSize="@dimen/iap_product_overview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/product_overview"
                android:orientation="vertical"
                android:paddingBottom="@dimen/border16_margin_left_right"
                android:paddingTop="@dimen/border16_margin_left_right">

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/add_to_cart"
                    style="@style/UIDImageTextButton.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:enabled="true"
                    android:text="@string/iap_add_to_cart"
                    android:textColor="?attr/uidPrimaryText"
                    android:visibility="visible" />

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/buy_from_retailor"
                    style="@style/UIDImageTextButton.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_to_cart"
                    android:enabled="true"
                    android:text="@string/iap_buy_from_retailers"
                    android:textColor="?attr/uidPrimaryText"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>