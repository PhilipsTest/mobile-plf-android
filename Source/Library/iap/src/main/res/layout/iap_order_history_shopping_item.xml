<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tv_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/iap_order_margin_top"
        android:paddingBottom="@dimen/iap_order_margin_top"
        android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
        android:background="@color/uikit_enricher7">

        <TextView
            android:id="@+id/tv_time"
            style="@style/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/iap_shopping_cart_image_margin_top" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top">

        <TextView
            android:id="@+id/order_number_text"
            style="@style/tvOrderHeaderTitle"
            android:text="@string/iap_order_number"/>

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/tvOrderHeaderTitle"
            android:layout_alignBaseline="@id/order_number_text"
            android:layout_toEndOf="@id/order_number_text"/>

        <TextView
            android:id="@+id/tv_order_state"
            style="@style/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_number_text"
            android:layout_below="@+id/order_number_text"
            android:layout_marginTop="@dimen/iap_order_margin_top"
            android:layout_marginBottom="@dimen/iap_selection_address_layout_margin"
            android:text="Order state" />

        <com.shamanland.fonticon.FontIconTextView
            android:id="@+id/arrow"
            style="@style/iap_order_right_arrow"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:background="?attr/uikit_listDividerColor" />

    <LinearLayout
        android:id="@+id/product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


    <RelativeLayout
        android:id="@+id/quantity_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginTop="@dimen/iap_order_detail_margin_bottom"
        android:layout_marginBottom="@dimen/iap_select_retailer_left_margin">

        <TextView
            android:id="@+id/total_item_text"
            style="@style/iap_order_total_items"
            android:text="@string/iap_total" />

        <TextView
            android:id="@+id/tv_total_item"
            style="@style/iap_order_total_items"
            android:layout_alignBaseline="@id/total_item_text"
            android:layout_toEndOf="@id/total_item_text" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tvOrderHeaderTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/iap_order_price_margin_right" />
    </RelativeLayout>

</LinearLayout>