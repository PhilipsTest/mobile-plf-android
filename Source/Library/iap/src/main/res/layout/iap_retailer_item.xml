<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/iap_retailers_item_min_height">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iap_retailer_image"
        android:layout_width="92dp"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/iap_retailers_image_top"
        android:layout_marginEnd="@dimen/iap_image_margin_right"
        android:layout_marginStart="@dimen/iap_select_retailer_left_margin"
        android:layout_marginTop="@dimen/iap_retailers_image_top" />

    <TextView
        android:id="@+id/iap_online_store_name"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_retailers_store_name_top_margin"
        android:layout_marginTop="@dimen/iap_retailers_store_name_top_margin"
        android:layout_toEndOf="@id/iap_retailer_image"
        android:includeFontPadding="false"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="@dimen/iap_retailers_store_name_size" />

    <TextView
        android:id="@+id/iap_online_store_availability"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iap_online_store_name"
        android:layout_marginBottom="@dimen/iap_retailers_store_name_top_margin"
        android:layout_toEndOf="@id/iap_retailer_image"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="@dimen/iap_retailers_store_name_size" />

    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/retailer_arrow"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/iap_select_retailer_right_margin"
        android:layout_marginEnd="@dimen/iap_select_retailer_right_margin" />
</RelativeLayout>