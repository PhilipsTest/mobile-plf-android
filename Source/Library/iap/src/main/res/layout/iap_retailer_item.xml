<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border16_margin_left_right">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iap_retailer_image"
        android:layout_width="@dimen/network_image_height"
        android:layout_height="@dimen/network_image_width"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/border12_margin" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/iap_online_store_name"
        style="@style/iapCentralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border4_margin"
        android:layout_toEndOf="@id/iap_retailer_image"
        android:includeFontPadding="false"
        app:uidLabelTextSize="@dimen/iap_retailers_store_name_size" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/iap_online_store_availability"
        style="@style/iapCentralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iap_online_store_name"
        android:layout_toEndOf="@id/iap_retailer_image"
        app:uidLabelTextSize="@dimen/iap_retailers_store_name_size" />

    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/retailer_arrow"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>