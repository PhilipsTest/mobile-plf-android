<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ratingtheme"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/iap_retailer_cross_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        >

        <ImageView
            android:id="@+id/iap_retailer_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/iap_select_retailer_right_margin"
            android:paddingTop="@dimen/iap_select_retailer_right_margin"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/select_retailer"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iap_retailer_cross_container"
        android:layout_marginBottom="@dimen/iap_select_retailer_bottom_margin"
        android:text="@string/iap_select_retailer"
        android:textSize="@dimen/iap_select_retailer_text_size"
        android:textColor="?attr/uikit_baseColor"
        android:paddingLeft="@dimen/iap_select_retailer_left_margin"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/select_retailer"
        android:background="?attr/uikit_listDividerColor"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/iap_retailer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:listSelector="@android:color/transparent"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>