<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.philips.platform.uid.view.widget.NavigationContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uid_shadow_level_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/iap_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:minHeight="?android:attr/actionBarSize">

                    <FrameLayout
                        android:id="@+id/iap_header_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clickable="true"
                        android:paddingStart="@dimen/border16_margin_left_right">

                        <ImageView
                            android:id="@+id/iap_iv_header_back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"/>
                    </FrameLayout>

                    <com.philips.platform.uid.view.widget.ActionBarTextView
                        android:id="@+id/iap_actionBar_headerTitle_lebel"
                        style="@style/UIDToolbarBarTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true" />

                    <FrameLayout
                        android:id="@+id/cart_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/cart_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:paddingEnd="@dimen/network_margin_left_right" />

                        <com.philips.cdp.uikit.customviews.BadgeView
                            android:id="@+id/item_count"
                            style="@style/NotificationLabel.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginBottom="15dp" />
                    </FrameLayout>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
    </com.philips.platform.uid.view.widget.NavigationContainer>
</LinearLayout>