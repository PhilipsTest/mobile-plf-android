<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_catalog_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border16_margin_left_right">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="@dimen/network_image_width"
        android:layout_height="@dimen/network_image_height"
        android:layout_marginEnd="@dimen/border12_margin"
        android:src="@drawable/no_icon" />

    <LinearLayout
        android:id="@+id/price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/iap_image_bottom_margin"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_toStartOf="@id/arrow"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_discounted_price"
            fontPath="fonts/iapCentralesansBookFont.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/uidTextPrimary"
            android:visibility="gone"
            app:uidLabelTextSize="16sp" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/tv_price"
            fontPath="fonts/iapCentralesansBookFont.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/uidTextSecondary"
            app:uidLabelTextSize="16sp" />
    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_product_name"
        fontPath="fonts/iapCentralesansBookFont.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border4_margin"
        android:lineSpacingExtra="@dimen/border4_margin"
        android:layout_marginEnd="@dimen/border16_margin_left_right"
        android:layout_toEndOf="@id/image"
        android:layout_toStartOf="@id/price_container"
        android:text="DiamondClean"
        android:textColor="?attr/uidTextPrimary"
        app:uidLabelTextSize="16sp" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_ctn"
        fontPath="fonts/iapCentralesansBookFont.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name"
        android:layout_marginBottom="@dimen/border4_margin"
        android:layout_toEndOf="@id/image"
        android:text="HX8332/11"
        android:textColor="?attr/uidTextSecondary"
        app:uidLabelTextSize="16sp" />

    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/arrow"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
    />

</RelativeLayout>