<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/checkout_steps"
        android:id="@+id/tv_checkout_header_steps"
        />
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_select_address"
        android:layout_below="@+id/tv_checkout_header_steps"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uikit_enricher7"
        android:text="@string/iap_selection_select_address"
        android:paddingBottom="@dimen/border16_margin_left_right"
        android:paddingLeft="@dimen/border16_margin_left_right"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
        android:textSize="@dimen/iap_text_size_16sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/shipping_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_cancel"
        android:layout_marginLeft="@dimen/border16_margin_left_right"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:layout_marginBottom="@dimen/iap_selection_address_layout_margin"
        android:layout_below="@+id/tv_select_address" />

    <Button
        android:id="@+id/btn_cancel"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/iap_selection_address_cancel_margin_bottom"
        android:layout_marginEnd="@dimen/iap_selection_address_layout_margin"
        android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
        android:text="@string/iap_cancel"
        android:textAllCaps="false" />


</RelativeLayout>