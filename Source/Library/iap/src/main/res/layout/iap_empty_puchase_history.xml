<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="@dimen/iap_order_header_top_margin"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_empty_purchase_history_title"
            style="@style/tvOrderHeaderTitle"
            android:text="@string/iap_no_items" />

        <TextView
            android:id="@+id/tv_empty_order_history"
            style="@style/tvTitle"
            android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_top"
            android:text="@string/iap_empty_purchase_history" />

        <TextView
            android:id="@+id/tv_from_other_channel"
            style="@style/tvTitle"
            android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_bottom"
            android:text="@string/iap_other_channel" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue_shopping"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_continue_shopping" />

</RelativeLayout>
