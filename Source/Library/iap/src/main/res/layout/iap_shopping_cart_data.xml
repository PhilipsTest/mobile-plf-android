<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/parent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image"
            style="@style/networkImage"
            android:layout_marginTop="0dip"
            android:layout_width="110dip"
            android:layout_height="110dip"/>

        <RelativeLayout
            android:id="@+id/product_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:layout_toEndOf="@+id/image">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/price"
                style="@style/UIDLabel"
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Daily Collection Miniblender"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"/>

            <com.shamanland.fonticon.FontIconTextView
                android:id="@+id/dots"
                style="@style/iap_right_arrow_product_catalog"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toEndOf="@+id/price"
                android:layout_toRightOf="@+id/price"
                />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/out_of_stock"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginRight="15dip"
                android:layout_marginTop="@dimen/reg_layout_margin_10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="$1000"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/text1Name"
                style="@style/UIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginTop="@dimen/reg_layout_margin_10dp"
                android:layout_toRightOf="@+id/out_of_stock"
                android:text="$777"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="16sp" />
        </RelativeLayout>
    </GridLayout>

    <View
        android:id="@+id/line"
        style="@style/iap_button_border"
        android:layout_below="@+id/parent_id"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@drawable/background_boder_rect1"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1Name"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/from"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/iap_shopping_cart_image_right"
                android:text="@string/iap_product_item_quantity"
                android:textColor="@color/uid_quiet_button_icon_selector"
                android:textSize="@dimen/quantity" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/text2value"
                style="@style/tvTitle"
                android:layout_alignBaseline="@id/from"
                android:layout_toEndOf="@id/from"
                android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                android:textColor="@color/uid_quiet_button_icon_selector"
                android:textSize="14sp" />
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/delete_btn"
            style="@style/UIDQuietButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/iap_delete"/>

    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/iap_button_border"
        android:layout_below="@+id/buttons_layout"/>
</RelativeLayout>