<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/border16_margin_left_right"
    android:paddingEnd="@dimen/border16_margin_left_right"
    android:paddingStart="@dimen/border16_margin_left_right"
    android:paddingTop="@dimen/border16_margin_left_right">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_cancel_order_history_title"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iap_cancel_order_number"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
        android:textSize="@dimen/header" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_cancel_order"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:textSize="@dimen/iap_text_size_16sp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:text="@string/iap_cancel_order_dls_msg"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/iap_cancel_order_ref"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/iap_text_size_16sp"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:text="@string/iap_cancel_order_dls_for_your_ref_sg"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_opening_timings"
        style="@style/iapCentralesansBookFont"
        android:layout_width="match_parent"
        android:textSize="@dimen/iap_text_size_16sp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/border16_margin_left_right"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/bt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
        android:layout_marginTop="@dimen/border16_margin_left_right" />


</LinearLayout>

