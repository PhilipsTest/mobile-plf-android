<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_create_account_validation_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_confirm_approval_title"
                    style="@style/reg_titleTextStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="0dip"
                    android:paddingLeft="0dip"
                    android:text="@string/Request_Parental_consent_Title"
                    android:visibility="visible"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>

                <com.philips.cdp.registration.ui.customviews.XTextView
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="0dip"
                    android:gravity="left"
                    android:text="@string/Parental_consent_reconfirm_title_desc1"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>

                <com.philips.cdp.registration.ui.customviews.XTextView
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="0dip"
                    android:gravity="left"
                    android:text="@string/Parental_consent_reconfirm_title_desc2"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_parental_consent_reconfirm_confirm"
                    style="@style/reg_style_btn"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginTop="@dimen/reg_marginTopButton"

                    android:background="@drawable/reg_btn_enabled_rect"
                    android:text="@string/Parental_consent_reconfirm_btn_confirm"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_parental_consent_reconfirm_cancel"
                    style="@style/reg_style_btn"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginTop="@dimen/reg_marginTopButton"
                    android:background="@drawable/reg_btn_forgot_rect"
                    android:text="@string/Parental_consent_reconfirm_btn_cancel"
                    android:textColor="@color/reg_text_heading_one_color"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>


