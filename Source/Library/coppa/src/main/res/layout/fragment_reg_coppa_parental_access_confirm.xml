<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/reg_line"
                android:layout_marginTop="@dimen/reg_header_margin_top" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_how_old"
                style="@style/reg_textStyle"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/Coppa_Age_Verification_How_Old_Txt"
                android:textSize="@dimen/reg_title_text_size_medium"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View
                style="@style/reg_line"
                android:layout_marginTop="0dip" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_birth_year"
                style="@style/reg_textStyle"
                android:layout_marginTop="0dip"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/Coppa_Age_Verification_Year_Of_Birth_Txt"
                android:textSize="@dimen/reg_title_text_size_medium"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View
                style="@style/reg_line"
                android:layout_marginTop="0dip" />

            <RelativeLayout
                android:id="@+id/rl_reg_continue_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:layout_marginTop="@dimen/reg_coppa_button_margin_top"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_continue"
                    style="@style/reg_style_btn"
                    android:enabled="true"
                    android:text="@string/Continue_Btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>