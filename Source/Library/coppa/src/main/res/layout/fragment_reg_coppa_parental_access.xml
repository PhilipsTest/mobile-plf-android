<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_parent_access_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/reg_welcome_id"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:text="@string/Coppa_Parent_Access_Attempt_Txt"
                    android:textSize="@dimen/reg_title_text_size_medium"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/reg_header_margin_top"
                            android:background="@drawable/reg_under_age_tab" />

                        <com.philips.cdp.registration.ui.customviews.XButton
                            android:id="@+id/btn_reg_under_16"
                            style="@style/reg_style_btn"
                            android:layout_marginRight="15dip"
                            android:enabled="true"
                            android:text="@string/Coppa_Age_Verification_UnderAge_Txt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/reg_header_margin_top"
                            android:background="@drawable/reg_over_age_tab" />

                        <com.philips.cdp.registration.ui.customviews.XButton
                            android:id="@+id/btn_reg_over_16"
                            style="@style/reg_style_btn"
                            android:enabled="true"
                            android:text="@string/Coppa_Age_Verification_OverAge_Txt"
                            reglib:fontAssetName="CentraleSans-Book.OTF" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>