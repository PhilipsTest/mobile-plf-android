<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ews_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/EWSToolbar">

            <ImageView
                android:id="@+id/ic_close"
                android:layout_marginStart="@dimen/default_screen_side_margin"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross_icon"
                android:contentDescription=""
                android:layout_height="wrap_content"/>

            <com.philips.platform.uid.view.widget.ActionBarTextView
                android:id="@+id/toolbar_title"
                style="@style/UIDToolbarBarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
</layout>