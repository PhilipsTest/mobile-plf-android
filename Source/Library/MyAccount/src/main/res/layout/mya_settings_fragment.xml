<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/uid_adaptive_layout_width"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        style="@style/UIDLabel.Header"
        android:text="@string/MYA_Account_settings"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_layout"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/country_heading"
            android:layout_marginStart="@dimen/MYA_start_margin"
            android:layout_marginEnd="@dimen/MYA_end_margin"
            android:text="@string/MYA_Country" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/settings_country_value"
            android:layout_marginStart="@dimen/MYA_start_margin"
            android:layout_marginEnd="@dimen/MYA_end_margin"
            android:textColor="?attr/uidHyperlinkDefaultNormalTextColor"
            android:layout_below="@+id/country_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
            android:background="@null"
            android:clickable="false"
            android:contentDescription="@string/action_settings"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_right_arrow_show_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:background="?attr/uidContentSecondaryBackgroundColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/uid_recyclerview_header_height"
        android:id="@+id/consent_layout"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/privacy_settings_heading"
            android:layout_marginLeft="@dimen/MYA_start_margin"
            android:layout_marginRight="@dimen/MYA_end_margin"
            android:text="@string/Mya_Privacy_Settings" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
            android:background="@null"
            android:clickable="false"
            android:contentDescription="@string/action_settings"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_right_arrow_show_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:background="?attr/uidContentSecondaryBackgroundColor"/>

    <com.philips.platform.uid.view.widget.Button
        style="@style/UIDDefaultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MYA_start_margin"
        android:layout_marginEnd="@dimen/MYA_end_margin"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:id="@+id/mya_settings_logout_btn"
        android:text="@string/MYA_Log_Out"/>
    <com.philips.platform.uid.view.widget.Label
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MYA_top_margin"
        android:layout_marginLeft="@dimen/MYA_start_margin"
        android:layout_marginRight="@dimen/MYA_end_margin"
        style="@style/UIDLabel.Header"
        android:text="@string/MYA_visit_website"/>
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/philips_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MYA_start_margin"
        android:layout_marginRight="@dimen/MYA_end_margin"
        style="@style/UIDLabel.Header"
        android:text="@string/MYA_philips_website"/>


</LinearLayout>