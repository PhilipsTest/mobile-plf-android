<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="config"
            type="com.philips.cdp2.ews.configuration.BaseContentConfiguration"/>
        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.EWSGettingStartedViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                style="@style/EWS.ImageScale"
                android:contentDescription="@null"
                android:id="@+id/ews_gs_image_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ews_onboarding_image"
                />

            <TextView
                android:id="@+id/ews_01_00_label_get_started_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/e"
                android:layout_marginStart="@dimen/e"
                android:layout_marginTop="@dimen/e"
                android:text= "@{String.format(@string/label_ews_get_started_title, @string/ews_device_name_default)}"
                app:stringFormat="@{@string/label_ews_get_started_title}"
                app:content="@{config.deviceName}"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:id="@+id/ews_gs_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:background="@color/color_panel">

                <ImageView
                    android:contentDescription="@null"
                    android:layout_width="@dimen/ews_gs_icon_size"
                    android:layout_height="@dimen/ews_gs_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/d"
                    android:layout_marginStart="@dimen/e"
                    app:srcCompat="@drawable/dls_wificonnection"/>

                <TextView
                    style="@style/EWS.Txt.Small.Extra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d"
                    android:layout_marginEnd="@dimen/e"
                    android:layout_marginStart="@dimen/d"
                    android:layout_marginTop="@dimen/d"
                    android:layout_weight="1"
                    android:text= "@{String.format(@string/label_ews_get_started_description, @string/ews_device_name_default)}"
                    app:stringFormat="@{@string/label_ews_get_started_description}"
                    app:content="@{config.deviceName}"
                    android:textColor="@color/colorPrimary"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ews_01_00_button_get_started_get_started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/e"
                android:layout_marginStart="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.onGettingStartedButtonClicked()}"
                android:text="@string/button_ews_get_started_get_started"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>