<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/default_screen_side_margin"
        android:paddingStart="@dimen/default_screen_side_margin">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ews_02_02b_enable_location_label"
            style="@style/Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ews_location_services_title" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ews_02_02b_enable_location_body"
            style="@style/Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_body_labels_margin"
            android:text="@string/label_ews_location_services_body" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/ews_02_02b_enable_location_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_main_button_top_margin"
            android:text="@string/label_ews_location_services_go_to_location_settings" />
    </LinearLayout>

</layout>