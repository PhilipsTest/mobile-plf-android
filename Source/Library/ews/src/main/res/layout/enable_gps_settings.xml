<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/e"
        android:layout_marginStart="@dimen/e"
        android:orientation="vertical"
        android:padding="@dimen/d">

        <TextView
            android:id="@+id/ews_04_02_label_cancel_setup_title"
            style="@style/Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ews_enable_gps_settings_title"/>

        <TextView
            android:id="@+id/ews_verify_device_body"
            style="@style/Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:text="@string/label_ews_enable_gps_settings_body"/>

        <Button
            android:id="@+id/ews_04_02_button_cancel_setup_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:onClick="@{(v) -> listener.onClick(v)}"
            android:text="@string/button_ews_enable_gps_settings"/>
    </LinearLayout>

</layout>