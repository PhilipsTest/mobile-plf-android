<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.EWSWiFIPairedViewModel"/>

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">


            <TextView
                android:id="@+id/ews_04_01_label_succesful_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/label_ews_succesful_title"
                />

            <TextView
                android:id="@+id/ews_paired_body"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/label_ews_succesful_body"
                />

            <ImageView
                style="@style/EWS.ImageScale"
                android:id="@+id/ews_paired_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ews_connection_succesful"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ews_04_01_button_succesful_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.onStartClicked()}"
                android:text="@string/button_ews_succesful_start"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>