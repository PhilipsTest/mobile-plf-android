<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.hotspotconnectionfailure.ConnectionUnsuccessfulViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/d">

            <TextView
                android:id="@+id/ews_H_03_00_a_label_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/e"
                android:gravity="center"
                android:text="@string/label_ews_connection_unsuccesful_title"/>

            <TextView
                android:id="@+id/connection_unsuccessful_body"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ews_H_03_00_a_label_title"
                android:layout_above="@+id/ews_H_03_00_a_button_yes"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:gravity="center|top"
                android:text="@string/label_ews_connection_unsuccesful_body"/>

            <Button
                android:id="@+id/ews_H_03_00_a_button_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ews_H_03_00_a_button_no"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:onClick="@{() -> viewModel.onNeedHelpButtonClicked()}"
                android:text="@string/button_ews_connection_unsuccesful_yes"/>

            <Button
                android:id="@+id/ews_H_03_00_a_button_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:onClick="@{() -> viewModel.onNoHelpNeededButtonClicked()}"
                android:text="@string/button_ews_connection_unsuccesful_no"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>