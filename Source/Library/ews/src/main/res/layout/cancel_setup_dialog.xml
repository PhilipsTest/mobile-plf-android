<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.CancelSetupViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/e"
        android:layout_marginStart="@dimen/e"
        android:layout_marginTop="@dimen/e"
        android:orientation="vertical"
        android:padding="@dimen/d">

        <TextView
            android:id="@+id/ews_04_02_label_cancel_setup_title"
            style="@style/EWS.Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e"
            android:text="@string/label_ews_cancel_setup_title"/>

        <TextView
            android:id="@+id/ews_verify_device_body"
            style="@style/EWS.Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:text="@string/label_ews_cancel_setup_body"/>

        <Button
            android:id="@+id/ews_04_02_button_cancel_setup_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:onClick="@{() -> viewModel.cancelSetup()}"
            android:text="@string/button_ews_cancel_setup_yes"/>

        <Button
            style="@style/Btn.Secondary"
            android:id="@+id/ews_04_02_button_cancel_setup_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/c"
            android:onClick="@{() -> viewModel.dismissDialog()}"
            android:text="@string/button_ews_cancel_setup_no"/>
    </LinearLayout>

</layout>