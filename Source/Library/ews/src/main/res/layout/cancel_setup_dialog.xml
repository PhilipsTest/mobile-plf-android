<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/d"
    android:paddingBottom="@dimen/default_screen_bottom_margin"
    android:paddingEnd="@dimen/default_screen_side_margin"
    android:paddingStart="@dimen/default_screen_side_margin"
    android:paddingTop="@dimen/default_screen_top_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ews_04_02_label_cancel_setup_title"
        style="@style/Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_ews_cancel_setup_title" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ews_verify_device_body"
        style="@style/Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_body_labels_margin"
        android:text="@string/label_ews_cancel_setup_body" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ews_04_02_button_cancel_setup_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_main_button_top_margin"
        android:text="@string/button_ews_cancel_setup_yes"
        app:uidComponentType="Primary" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ews_04_02_button_cancel_setup_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_between_button_margin"
        android:text="@string/button_ews_cancel_setup_no"
        app:uidComponentType="Secondary" />
</LinearLayout>