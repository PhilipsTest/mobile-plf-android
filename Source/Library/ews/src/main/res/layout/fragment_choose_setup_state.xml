<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.ChooseSetupStateViewModel"/>

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_margin="@dimen/e"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ews_11_title"/>

            <TextView
                style="@style/EWS.Txt.Body"
                android:layout_marginBottom="@dimen/d"
                android:layout_marginEnd="@dimen/e"
                android:layout_marginStart="@dimen/e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ews_11_content"/>

            <View style="@style/EWSDivider"/>

            <TextView
                style="@style/EWS.Txt.Body"
                android:layout_marginBottom="@dimen/d"
                android:layout_marginEnd="@dimen/e"
                android:layout_marginStart="@dimen/e"
                android:layout_marginTop="@dimen/d"
                android:drawableEnd="@drawable/ic_dls_navigationright_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/a"
                android:onClick="@{()-> viewModel.onFreshSetupIsChosen()}"
                android:text="@string/ews_11_button_1"/>

            <View style="@style/EWSDivider"/>

            <TextView
                style="@style/EWS.Txt.Body"
                android:layout_marginBottom="@dimen/d"
                android:layout_marginEnd="@dimen/e"
                android:layout_marginStart="@dimen/e"
                android:drawableEnd="@drawable/ic_dls_navigationright_16"
                android:layout_marginTop="@dimen/d"
                android:drawablePadding="@dimen/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.onExistingSetupIsChosen()}"
                android:text="@string/ews_11_button_2"/>

            <View style="@style/EWSDivider"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>