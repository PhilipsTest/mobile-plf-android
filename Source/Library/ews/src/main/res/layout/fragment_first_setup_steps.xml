<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.setupsteps.FirstSetupStepsViewModel" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_body_labels_margin"
            android:paddingStart="@dimen/default_body_labels_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_02_01_label_plug_in_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_screen_top_margin"
                android:text="@string/label_ews_plug_in_title_default" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_hotspot_blinking_desc"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@{viewModel.body}" />

            <ImageView
                android:id="@+id/ews_hotspot_blinking_icon"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_image_top_margin"
                android:background="@drawable/ews_product_bg_orig"
                android:contentDescription="@null"
                app:setAnimationDrawable="@{@drawable/ic_ews_device_apmode_blinking}" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_02_01_button_plug_in_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{() -> viewModel.onYesButtonClicked()}"
                android:text="@string/button_ews_plug_in_next"
                app:uidComponentType="Primary" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>