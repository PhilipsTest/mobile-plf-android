<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/d"
              android:layout_marginRight="@dimen/d"
              android:orientation="vertical">

    <TextView
        android:id="@+id/ews_H_03_03_label_title"
        style="@style/EWS.Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="Enable the setup mode on the [device name]"/>

    <TextView
        android:id="@+id/ews_connect_to_label"
        style="@style/EWS.Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="Enable the setup mode on the [device name]. This text needs to be configured by proposition."/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:layout_marginBottom="@dimen/e"
        android:src="@drawable/ews_product_reset_device"/>

    <Button
        android:id="@+id/ews_H_03_03_button_done"
        style="@style/Btn.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/b"
        android:text="DONE"/>

</LinearLayout>