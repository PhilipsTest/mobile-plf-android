<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.wificonnectionfailure.WrongWifiNetworkViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ews_04_00a_label_phone_reconnected_different_network_title"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:text="@string/label_ews_phone_reconnected_different_network_title"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ews_04_00a_label_phone_reconnected_different_network_body"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ews_04_00a_label_phone_reconnected_different_network_title"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:text="@{viewModel.description}"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ic_wrong_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ews_04_00a_label_phone_reconnected_different_network_body"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:padding="@dimen/b"
                android:src="@drawable/temp_icon" />


            <Button
                android:id="@+id/ews_04_00a_ok_button"
                style="@style/Btn.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/d"
                android:text="@string/button_ews_phone_reconnected_different_network_confirm" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
