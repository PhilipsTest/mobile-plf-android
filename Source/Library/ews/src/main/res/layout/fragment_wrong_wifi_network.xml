<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.wificonnectionfailure.WrongWifiNetworkViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_screen_side_margin"
            android:paddingStart="@dimen/default_screen_side_margin"
            android:paddingTop="@dimen/default_screen_top_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_04_00a_label_phone_reconnected_different_network_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_ews_phone_reconnected_different_network_title" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_04_00a_label_phone_reconnected_different_network_body"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@{viewModel.description}"
                tools:text="@string/label_ews_phone_reconnected_different_network_body"/>

            <ImageView
                android:id="@+id/ic_wrong_wifi"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_image_top_margin"
                android:contentDescription="@null"
                android:src="@drawable/ews_home_network" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_04_00a_ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{()->viewModel.onButtonClick()}"
                android:text="@string/button_ews_phone_reconnected_different_network_confirm"
                app:uidComponentType="Primary" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
