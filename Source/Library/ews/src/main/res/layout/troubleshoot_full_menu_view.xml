<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.philips.cdp2.ews.view.dialog.OnDeviceAPModeTroubleshootListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/EWS.Txt.Title"
            android:id="@+id/ews_H_03_02_label_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ews_full_menu_title"/>

        <TextView
            style="@style/EWS.Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:text="@string/label_ews_full_menu_body"/>

        <ImageView
            style="@style/EWS.ImageScale"
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:background="@drawable/ews_product_bg_orig"
            app:srcCompat="@drawable/ic_ews_troubleshoot_full_menu"/>

        <Button
            android:id="@+id/ews_H_03_02_button_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d"
            android:onClick="@{() -> listener.showResetConnectionGuidelineView()}"
            android:text="@string/button_ews_full_menu_yes"/>

    </LinearLayout>

</layout>