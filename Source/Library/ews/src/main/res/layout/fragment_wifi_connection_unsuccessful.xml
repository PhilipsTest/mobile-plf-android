<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.wificonnectionfailure.WIFIConnectionUnsuccessfulViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ews_04_00b_label_phone_not_found_on_network_title"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:text="@string/label_ews_phone_not_found_on_network_title"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wrong_wifi_body"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:text="@{viewModel.description}"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/wrong_wifi_note"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginEnd="@dimen/d"
                android:layout_marginStart="@dimen/d"
                android:layout_marginTop="@dimen/d"
                android:background="@color/dls_aqua_50_opacity_25"
                android:padding="@dimen/b"
                android:text="@string/label_ews_phone_not_found_on_network_note"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/ews_04_00b_button_try_again"
                style="@style/Btn.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d"
                android:onClick="@{()->viewModel.onTryAgainClicked()}"
                android:text="@string/button_ews_phone_not_found_on_network_try_again" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
