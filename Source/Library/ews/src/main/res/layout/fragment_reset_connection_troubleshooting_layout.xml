<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:layout_marginLeft="@dimen/d"
                android:layout_marginRight="@dimen/d">

    <TextView
        android:id="@+id/ews_connect_title"
        style="@style/EWS.Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="Has [device name] left setup?"/>

    <TextView
        android:id="@+id/ews_connect_to_label"
        style="@style/EWS.Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="Has the [device name] left setup mode? This text needs to be configured by the proposition."/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:layout_marginBottom="@dimen/e"
        android:src="@drawable/ews_product_reset_device"/>

    <Button
        android:id="@+id/reset_connection_yes_button"
        style="@style/Btn.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/b"
        android:text="YES"/>

    <Button
        android:id="@+id/reset_connection_no_button"
        style="@style/Btn.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d"
        android:text="NO"/>

</LinearLayout>