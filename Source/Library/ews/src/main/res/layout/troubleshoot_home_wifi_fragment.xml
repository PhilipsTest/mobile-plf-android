<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.homewifi.TroubleshootHomeWiFiViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_screen_bottom_margin"
            android:layout_marginEnd="@dimen/default_screen_side_margin"
            android:layout_marginStart="@dimen/default_screen_side_margin"
            android:layout_marginTop="@dimen/default_screen_top_margin"
            android:background="@color/white">

            <TextView
                android:id="@+id/ews_01_01b_label_select_network_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ic_close"
                android:text="@string/label_ews_home_network_title" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.onCloseButtonClicked()}"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/label_ews_home_network_body"
                style="@style/EWS.Txt.HtmlBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ews_01_01b_label_select_network_title"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                tools:text="@string/label_ews_home_network_body" />

            <ImageView
                android:id="@+id/ews_paired_image"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_ews_home_network_body"
                android:layout_marginTop="@dimen/default_image_top_margin"
                app:srcCompat="@drawable/ews_home_network"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>