<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_screen_side_margin"
            android:paddingStart="@dimen/default_screen_side_margin">

            <TextView
                android:id="@+id/ews_01_01b_label_select_network_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ic_close"
                android:text="@string/label_ews_select_wakeup_wifi_title" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/label_ews_home_network_body"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ews_01_01b_label_select_network_title"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_select_wakeup_wifi_body" />

            <TextView
                android:id="@+id/label_ews_select_wakeup_wifi_steps_1"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_ews_home_network_body"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_select_wakeup_wifi_steps_1" />


            <TextView
                android:id="@+id/label_ews_select_wakeup_wifi_steps_2"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_ews_select_wakeup_wifi_steps_1"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_select_wakeup_wifi_steps_2" />

            <TextView
                android:id="@+id/label_ews_select_wakeup_wifi_steps_3"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_ews_select_wakeup_wifi_steps_2"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_select_wakeup_wifi_steps_3" />

            <TextView
                android:id="@+id/label_ews_select_wakeup_wifi_steps_4"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_ews_select_wakeup_wifi_steps_3"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_select_wakeup_wifi_steps_4" />


            <ImageView
                android:id="@+id/ews_paired_image"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_ews_select_wakeup_wifi_steps_4"
                android:layout_marginTop="@dimen/default_image_top_margin"
                app:srcCompat="@drawable/ews_home_network"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>