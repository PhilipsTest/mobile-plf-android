<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.troubleshooting.homewifi.TroubleshootHomeWiFiViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/e">

        <TextView
            android:id="@+id/label_ews_home_network_title"
            style="@style/EWS.Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ic_close"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label_ews_home_network_title"/>

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/label_ews_home_network_title"
            android:tint="@color/black"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="@{() -> viewModel.onCloseButtonClicked()}"/>

        <TextView
            android:id="@+id/label_ews_home_network_body"
            style="@style/EWS.Txt.HtmlBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_ews_home_network_title"
            android:layout_marginTop="@dimen/e"
            tools:text="@string/label_ews_home_network_body"
            />

        <ImageView
            style="@style/EWS.ImageScale"
            android:id="@+id/ews_paired_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_ews_home_network_body"
            android:layout_marginTop="@dimen/d"
            app:srcCompat="@drawable/ews_home_network"
            tools:ignore="ContentDescription"/>
    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>