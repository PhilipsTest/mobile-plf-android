<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.viewmodel.EWSResetDeviceViewModel"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">

            <TextView
                android:id="@+id/ews_reset_wul_device_header"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/ews_12_content_header"/>

            <TextView
                android:id="@+id/ews_reset_wul_device_desc"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/ews_12_content"/>

            <ImageView
                android:id="@+id/ews_hotspot_blinking_icon"
                style="@style/EWS.ImageScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ews_product_reset_device"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ews_02_01_button_plug_in_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:onClick="@{() -> viewModel.onContinueButtonClicked()}"
                android:text="@string/ews_12_button"/>

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_02_02_button_verify_ready_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/c"
                android:background="@drawable/button_secondary"
                android:text="@string/button_ews_connection_unsuccesful_still_issue"
                android:visibility="invisible"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>