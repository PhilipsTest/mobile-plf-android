<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/d"
              android:layout_marginRight="@dimen/d"
              android:orientation="vertical">

    <TextView
        style="@style/EWS.Txt.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="Accidentally connected to wrong phone?"/>

    <TextView
        style="@style/EWS.Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e"
        android:text="If your device has been connected to another phone by accident. you may see this screen."/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d"
        android:layout_marginTop="@dimen/b"
        android:src="@drawable/ews_product_reset_device"/>

    <TextView
        style="@style/EWS.Txt.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/e"
        android:text="Do you see this screen?"/>

    <Button
        android:id="@+id/reset_connection_yes_button"
        style="@style/Btn.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/b"
        android:text="YES"/>

    <Button
        android:id="@+id/reset_connection_no_button"
        style="@style/Btn.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d"
        android:text="NO"/>

</LinearLayout>