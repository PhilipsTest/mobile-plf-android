<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.homewificonnection.ConnectingDeviceWithWifiViewModel" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_body_labels_margin"
            android:paddingStart="@dimen/default_body_labels_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_03_00_label_establishing_connection_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_screen_top_margin"
                android:text="@string/label_ews_connecting_device_title" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/connecting_dialog_body"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_connecting_device_body" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.ProgressBar
                android:id="@+id/progressBar"
                style="@style/UIDProgressBarCircularIndeterminateBig"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{() -> viewModel.onCancelButtonClicked()}"
                android:text="@string/button_ews_connecting_device_cancel"
                app:uidComponentType="Secondary" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>