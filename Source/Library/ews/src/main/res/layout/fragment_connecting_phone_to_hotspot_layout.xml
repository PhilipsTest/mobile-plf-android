<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.hotspotconnection.ConnectingPhoneToHotspotWifiViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_screen_bottom_margin"
            android:layout_marginEnd="@dimen/default_screen_side_margin"
            android:layout_marginStart="@dimen/default_screen_side_margin"
            android:layout_marginTop="@dimen/default_screen_top_margin"
            android:orientation="vertical">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_03_00_label_establishing_connection_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_ews_establishing_connection_title"
                android:textAlignment="center" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/connecting_dialog_body"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@string/label_ews_establishing_connection_body"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/e" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/cancel_button_hotspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{() -> viewModel.handleCancelButtonClicked()}"
                android:text="@string/button_cancel"
                app:uidComponentType="Primary" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
