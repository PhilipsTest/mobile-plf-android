<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.hotspotconnection.ConnectingPhoneToHotspotWifiViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/e" />

        <TextView
            android:id="@+id/ews_03_00_label_establishing_connection_title"
            style="@style/EWS.Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_marginEnd="@dimen/d"
            android:layout_marginStart="@dimen/d"
            android:layout_marginTop="@dimen/e"
            android:text="@string/label_ews_establishing_connection_title"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/connecting_dialog_body"
            style="@style/EWS.Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ews_03_00_label_establishing_connection_title"
            android:layout_marginBottom="@dimen/e"
            android:layout_marginEnd="@dimen/d"
            android:layout_marginStart="@dimen/d"
            android:layout_marginTop="@dimen/d"
            android:text="@string/label_ews_establishing_connection_body"
            android:textAlignment="center" />

        <Button
            android:id="@+id/cancel_button_hotspot"
            style="@style/Btn.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/d"
            android:onClick="@{() -> viewModel.handleCancelButtonClicked()}"
            android:text="@string/button_cancel" />

    </RelativeLayout>
</layout>
