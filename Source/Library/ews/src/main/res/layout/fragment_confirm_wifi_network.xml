<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.confirmwifi.ConfirmWifiNetworkViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_screen_bottom_margin"
            android:paddingEnd="@dimen/default_body_labels_margin"
            android:paddingStart="@dimen/default_body_labels_margin">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_01_01_label_confirm_connection_title"
                style="@style/Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_screen_top_margin"
                android:text="@string/label_ews_confirm_connection_title" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/desc_wifi_display"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_body_labels_margin"
                android:text="@{viewModel.title}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:background="?attr/uidContentTertiaryBackgroundColor">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/wifi_display_confirm_text"
                    style="@style/Txt.Helper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/default_body_labels_bottom_margin"
                    android:layout_marginEnd="@dimen/default_body_labels_margin"
                    android:layout_marginStart="@dimen/default_body_labels_margin"
                    android:layout_marginTop="@dimen/default_body_labels_margin"
                    android:text="@{viewModel.helper}" />
            </LinearLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ews_01_01_label_current_wifi1"
                style="@style/Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_screen_side_margin"
                android:text="@{viewModel.note}" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_01_01_button_confirm_connection_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_main_button_top_margin"
                android:onClick="@{() -> viewModel.onYesButtonClicked()}"
                android:text="@string/button_ews_confirm_connection_yes"
                app:uidComponentType="Primary" />

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ews_01_01_button_confirm_connection_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_between_button_margin"
                android:onClick="@{() -> viewModel.onNoButtonClicked()}"
                android:text="@string/button_ews_confirm_connection_no"
                app:uidComponentType="Secondary" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>