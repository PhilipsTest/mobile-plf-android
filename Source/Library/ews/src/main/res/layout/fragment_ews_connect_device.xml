<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="inputMethodManager"
            type="android.view.inputmethod.InputMethodManager" />

        <variable
            name="viewModel"
            type="com.philips.cdp2.ews.settingdeviceinfo.SetDeviceInfoViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/e"
            android:paddingStart="@dimen/e">

            <TextView
                android:id="@+id/ews_03_01a_label_password_title"
                style="@style/EWS.Txt.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@{viewModel.title}" />

            <TextView
                android:id="@+id/ews_connect_to_label"
                style="@style/EWS.Txt.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/label_ews_password_connect_to" />

            <TextView
                android:id="@+id/ews_03_01a_home_wifi_label"
                style="@style/EWS.Txt.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/e"
                android:drawablePadding="@dimen/b"
                android:drawableStart="@drawable/dls_wificonnection"
                android:text="@{viewModel.homeWiFiSSID}"
                tools:text="Wifi Name" />

            <TextView
                android:id="@+id/ews_label_enter_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@string/label_ews_password_form_password_title" />

            <com.philips.cdp.uikit.customviews.UikitPasswordEditText
                android:id="@+id/ews_03_01a_textfield_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:hint="@string/label_ews_password_password_placeholder"
                android:onFocusChange="@{(v,hasFocus) -> viewModel.onPasswordFocusChange(v,inputMethodManager,hasFocus)}"
                android:onTextChanged="@{viewModel::onPasswordTextChanged}"
                android:text="@{viewModel.password}" />

            <TextView
                android:id="@+id/ews_label_password_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e"
                android:text="@{viewModel.note}" />

            <EditText
                android:id="@+id/ews_03_01a_textfield_appliance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d"
                android:onFocusChange="@{(v,hasFocus) -> viewModel.onDeviceNameFocusChange(v,inputMethodManager,hasFocus)}"
                android:onTextChanged="@{viewModel::onDeviceNameTextChanged}"
                android:text="@{viewModel.deviceFriendlyName}" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ews_03_01a_button_password_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/e"
                android:layout_marginTop="@dimen/c"
                android:onClick="@{() -> viewModel.onConnectButtonClicked()}"
                android:text="@string/button_next" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>