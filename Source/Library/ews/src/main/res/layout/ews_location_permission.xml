<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/default_screen_side_margin"
        android:paddingStart="@dimen/default_screen_side_margin">

        <com.philips.platform.uid.view.widget.Label
            style="@style/Txt.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/label_ews_location_permission_title" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ews_label_body"
            style="@style/Txt.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_body_labels_margin"
            android:gravity="left|top"
            android:text="@string/label_ews_location_permission_body" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/ews_button_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_main_button_top_margin"
            android:text="@string/button_ews_location_permission_yes"
            app:uidComponentType="Primary" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/ews_button_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_between_button_margin"
            android:text="@string/button_ews_location_permission_no"
            app:uidComponentType="Secondary" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>