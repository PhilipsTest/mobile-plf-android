<resources>

    <style name="Btn" parent="Button.BrightBlue">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Btn.Primary">
        <item name="android:textColor">@drawable/button_primary_text_color_selector</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Btn.Secondary" parent="Btn.Primary">
        <item name="android:textColor">@drawable/button_secondary_text_color_selector</item>
        <item name="android:background">@drawable/button_secondary_selector</item>
    </style>

    <style name="Btn.Secondary.Dark" parent="Btn.Secondary">
        <item name="android:textColor">@drawable/button_secondary_dark_text_color_selector</item>
        <item name="android:background">@drawable/button_secondary_dark_selector</item>
    </style>

    <style name="Btn.Quiet">
        <item name="android:textColor">@drawable/button_quiet_text_color_selector</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


</resources>