<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="4dp"
        android:paddingEnd="0dp">

        <com.philips.platform.uid.view.widget.ProgressBar
            android:id="@+id/progressBar"
            style="@style/UIDProgressBarCircularIndeterminateSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/consentError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="!"
            fontPath="fonts/centralesansbook.ttf"
            android:textColor="@color/colorPrimary" />

    </FrameLayout>

    <com.philips.platform.uid.view.widget.Switch
        android:id="@+id/toggleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/status"
        android:checked="false"
        android:gravity="center_vertical|end" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentText"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/toggleicon"
        android:gravity="center_vertical|start"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:text="ConsentText" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentHelp"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/consentText"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical|start"
        android:text="@string/csw_consent_help_label"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>