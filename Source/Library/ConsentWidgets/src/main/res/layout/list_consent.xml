<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.philips.platform.uid.view.widget.Switch
        android:id="@+id/toggleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/layout_margin_left_right"
        android:checked="false"
        android:gravity="center_vertical|end" />

    <com.philips.platform.uid.view.widget.Label
        style="@style/TestButtonTexts"
        android:id="@+id/consentText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/toggleicon"
        android:gravity="center_vertical|start"
        tools:text="Hallo"/>

    <com.philips.platform.uid.view.widget.Label
        style="@style/TestButtonTexts"
        android:id="@+id/consentHelp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/consentText"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical|start"
        android:text="@string/csw_what_does_this_mean" />

</RelativeLayout>