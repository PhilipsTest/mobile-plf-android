<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.philips.platform.uid.view.widget.Switch
            android:id="@+id/toggleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center_vertical|end" />


        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="0dp"
            android:paddingStart="4dp">

            <com.philips.platform.uid.view.widget.ProgressBar
                android:id="@+id/progressBar"
                style="@style/UIDProgressBarCircularIndeterminateSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/consentError"
                fontPath="fonts/centralesansbook.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="!"
                android:textColor="@color/colorPrimary" />

        </FrameLayout>

    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentText"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_toStartOf="@id/status"
        android:gravity="center_vertical|start"
        tools:text="ConsentText" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/consentHelp"
        style="@style/TestButtonTexts"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/consentText"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical|start"
        android:textColor="@color/reg_hyperlink_highlight_color"
        android:text="@string/csw_consent_help_label" />

</RelativeLayout>