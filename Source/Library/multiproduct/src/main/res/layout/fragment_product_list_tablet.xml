<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mp_activity_background_color">

    <LinearLayout
        android:id="@+id/productListContainerTablet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7">

        <fragment
            android:id="@+id/fragmentTabletProductList"
            android:name="com.philips.multiproduct.listfragment.ProductListingFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <fragment
            android:id="@+id/fragmentTabletProductDetails"
            android:name="com.philips.multiproduct.detailedscreen.DetailedScreenFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

    </LinearLayout>
</ScrollView>