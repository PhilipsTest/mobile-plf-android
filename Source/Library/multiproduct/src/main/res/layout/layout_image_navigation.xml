<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_detailed_screen">

    <android.support.v4.view.ViewPager
        android:id="@+id/detailedscreen_pager"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/productdetails_screen_image"
        android:layout_weight="1" />

    <com.philips.cdp.uikit.customviews.CircleIndicator
        android:id="@+id/detailedscreen_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />
</LinearLayout>