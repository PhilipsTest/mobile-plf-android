<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mp_activity_background_color">


    <LinearLayout
        android:id="@+id/savedScreen_screen_parent_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/savedscreen_top_container_height"
            android:background="?attr/veryLightColor">

            <com.philips.multiproduct.customview.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/savedscreen_productcontainer_marigin"
                android:gravity="center|left"
                android:text="You have selected"
                android:textColor="?attr/baseColor"
                android:textSize="@dimen/title_text_size_small"
                custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Light.otf" />
        </RelativeLayout>

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/savedscreen_productcontainer_height"
            android:layout_marginLeft="@dimen/savedscreen_productcontainer_marigin"
            android:layout_marginRight="@dimen/savedscreen_productcontainer_marigin"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_margin"
            android:weightSum="9"
            tools:showIn="@layout/fragment_saved_screen">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/savedscreen_product_image_margin"
                android:layout_weight="3"
                android:background="@drawable/navigation_image"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/savedscreen_product_text_container_height"
                android:layout_weight="2">

                <com.philips.multiproduct.customview.CustomFontTextView
                    android:id="@+id/savedscreen_productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="@dimen/savedscreen_product_text_linespacing"
                    android:paddingRight="@dimen/activity_margin"
                    android:text="Jamie Oliver Food Processor"
                    android:textColor="?attr/baseColor"
                    android:textSize="@dimen/title_text_size_small"
                    android:textStyle="bold"
                    custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Bold.otf" />


                <com.philips.multiproduct.customview.CustomFontTextView
                    android:id="@+id/savedscreen_productvariant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/savedscreen_product_variant_margin_bottom"
                    android:paddingRight="@dimen/activity_margin"
                    android:text="HR7781/01"
                    android:textColor="#B9B9B9"
                    android:textSize="@dimen/title_text_size_small"
                    custom:multiproductFontAssetName="multiproductfonts/CentraleSans-Light.otf" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/green_tick"
                    android:foregroundGravity="right|center"
                    android:scaleType="fitXY" />

            </RelativeLayout>


        </LinearLayout>

        <include layout="@layout/savedscreen_settings_container" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/savedscreen_divider"
            android:alpha=".1"
            android:background="?attr/baseColor"></LinearLayout>-->

        <Button
            android:id="@+id/savedscreen_button_viewproductdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/savedscreen_product_text_container_height"
            android:text="Continue to Support"
            android:textAllCaps="false" />


    </LinearLayout>


</ScrollView>