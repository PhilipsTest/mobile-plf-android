<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:fillViewport="false">

    <!-- Write Product Review custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" -->
    <LinearLayout
        android:id="@+id/write_product_review_include_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/review_write_rate_productimage"
                style="@style/write_product_review_ProdImage"
                android:contentDescription="@string/product_name" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/review_write_rate_name"
                style="@style/write_product_review_Product_Header"
                android:layout_alignTop="@id/review_write_rate_productimage"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/review_write_rate_variant"
                style="@style/write_product_review_Product_Variant"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </RelativeLayout>

        <!-- Productname descriptions-->

        <LinearLayout
            android:id="@+id/review_write_rate_product_ratingview_verticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                android:id="@+id/review_write_rate_product_header"
                style="@style/write_product_review_header_styles"
                android:text="@string/bazzarvoice_productreview_writescreen_ratethisproduct_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

            </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            <RatingBar
                android:id="@+id/review_write_rate_product_ratingBar"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_write_rate_product_ratingview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/review_write_rate_product_header_horizontal"
                style="@style/write_product_review_header_styles"
                android:layout_width="160dp"
                android:text="@string/bazzarvoice_productreview_writescreen_ratethisproduct_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

            </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            <RatingBar
                android:id="@+id/review_write_rate_product_ratingBar_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fitsSystemWindows="true" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/summaryParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/review_write_rate_product_header_summary"
                style="@style/write_product_review_edittext"
                android:hint="@string/bazzarvoice_productreview_writescreen_Summary_hint"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            <RelativeLayout
                android:id="@+id/summary_verified_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/support_btn_height">

                <RelativeLayout
                    android:id="@+id/reviewSummaryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:gravity="right|center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:id="@+id/reviewSummaryIconInvalid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_error_alert"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/reviewSummaryIconValid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_valid_alert"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_up_arrow_summary"
                android:layout_width="@dimen/err_alert_width"
                android:layout_height="@dimen/err_alert_width"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/review_write_rate_product_header_summary"
                android:layout_marginRight="@dimen/err_top_arrow_margin_right"
                android:src="@drawable/consumercare_dc_arrow_up"
                android:visibility="gone" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/tv_summary"
                style="@style/write_product_review_edittext"
                android:layout_below="@+id/iv_up_arrow_summary"
                android:layout_marginTop="@dimen/err_edit_fields_margin_top"
                android:background="@drawable/consumercare_error_rect"
                android:text="@string/EmptyField_ErrorMsg"
                android:visibility="gone"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/descParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/desc_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/review_write_rate_product_header_description"
                    style="@style/write_product_review_edittext"
                    android:layout_height="100dp"
                    android:gravity="left"
                    android:hint="@string/bazzarvoice_productreview_writescreen_descriptionhint"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
                <!--
                                <RelativeLayout
                                    android:id="@+id/desc_verified_field"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/support_btn_height">

                                    <RelativeLayout
                                        android:id="@+id/reviewDescIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right|center_vertical"
                                        android:layout_alignParentRight="true"
                                        android:paddingBottom="2dp"
                                        android:paddingLeft="3dp"
                                        android:paddingRight="4dp"
                                        android:paddingTop="2dp">

                                        <ImageView
                                            android:id="@+id/incorrect_icon_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:contentDescription="@string/product_name"
                                            android:src="@drawable/consumercare_dc_error_alert" />

                                        <ImageView
                                            android:id="@+id/correct_icon_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:contentDescription="@string/product_name"
                                            android:src="@drawable/consumercare_dc_valid_alert" />
                                    </RelativeLayout>
                                </RelativeLayout>-->


                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                    android:id="@+id/textcount_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/textcount_minmum"
                    android:text="0"
                    android:textColor="@color/text_header_color"
                    android:textSize="@dimen/title_text_size_small"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                    android:id="@+id/textcount_minmum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/50+"
                    android:textColor="@color/text_bazzarvoice_edittext_color"
                    android:textSize="@dimen/title_text_size_small"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            </RelativeLayout>
            <!--
                        <ImageView
                            android:id="@+id/iv_up_arrow_desc"
                            android:layout_width="@dimen/err_alert_width"
                            android:layout_height="@dimen/err_alert_width"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/desc_edit_text"
                            android:layout_marginRight="@dimen/err_top_arrow_margin_right"
                            android:src="@drawable/consumercare_dc_arrow_up" />

                        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                            android:id="@+id/tv_desc"
                            style="@style/write_product_review_edittext"
                            android:layout_below="@+id/iv_up_arrow_desc"
                            android:layout_marginTop="@dimen/err_edit_fields_margin_top"
                            android:background="@drawable/consumercare_error_rect"
                            android:text="@string/EmptyField_ErrorMsg"
                            android:visibility="gone"
                            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />-->
        </RelativeLayout>


        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

            android:id="@+id/review_write_rate_product_nickname_header"
            style="@style/write_product_review_header_styles"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/bazzarvoice_productreview_writescreen_pickname_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />


        <RelativeLayout
            android:id="@+id/nameParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <!--
                        <RelativeLayout
                            android:id="@+id/name_verified_field"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/support_btn_height">

                            <RelativeLayout
                                android:id="@+id/reviewNameIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="2dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="4dp"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/reviewNameIconInvalid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/product_name"
                                    android:visibility="gone"
                                    android:src="@drawable/consumercare_dc_error_alert" />

                                <ImageView
                                    android:id="@+id/reviewNameIconValid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/product_name"
                                    android:visibility="gone"
                                    android:src="@drawable/consumercare_dc_valid_alert" />
                            </RelativeLayout>

                        </RelativeLayout>
            -->

            <EditText
                android:id="@+id/review_write_rate_product_nickname_header_value"
                style="@style/write_product_review_edittext"
                android:hint="@string/bazzarvoice_productreview_writescreen_pickname_hint_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            <RelativeLayout
                android:id="@+id/name_verified_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/support_btn_height">

                <RelativeLayout
                    android:id="@+id/reviewNameIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:id="@+id/reviewNameIconInvalid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_error_alert"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/reviewNameIconValid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_valid_alert"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_up_arrow_name"
                android:layout_width="@dimen/err_alert_width"
                android:layout_height="@dimen/err_alert_width"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/review_write_rate_product_nickname_header_value"
                android:layout_marginRight="@dimen/err_top_arrow_margin_right"
                android:src="@drawable/consumercare_dc_arrow_up"
                android:visibility="gone" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/tv_name"
                style="@style/write_product_review_edittext"
                android:layout_below="@+id/iv_up_arrow_name"
                android:layout_marginTop="@dimen/err_edit_fields_margin_top"
                android:background="@drawable/consumercare_error_rect"
                android:text="@string/EmptyField_ErrorMsg"
                android:visibility="gone"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </RelativeLayout>

        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
            android:id="@+id/review_write_rate_product_email_header"
            style="@style/write_product_review_header_styles"
            android:layout_marginBottom="10dp"
            android:text="@string/bazzarvoice_productreview_writescreen_email_header_text"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <RelativeLayout
            android:id="@+id/emailParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/review_write_rate_product_email_header_value"
                style="@style/write_product_review_edittext"
                android:hint="@string/bazzarvoice_productreview_writescreen_email_hint_text"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

            <RelativeLayout
                android:id="@+id/email_verified_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/support_btn_height">

                <RelativeLayout
                    android:id="@+id/reviewEmailIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:id="@+id/reviewEmailIconInvalid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_error_alert"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/reviewEmailIconValid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/product_name"
                        android:src="@drawable/consumercare_dc_valid_alert"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_up_arrow_email"
                android:layout_width="@dimen/err_alert_width"
                android:layout_height="@dimen/err_alert_width"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/review_write_rate_product_email_header_value"
                android:layout_marginRight="@dimen/err_top_arrow_margin_right"
                android:src="@drawable/consumercare_dc_arrow_up"
                android:visibility="gone" />

            <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
                android:id="@+id/tv_email"
                style="@style/write_product_review_edittext"
                android:layout_below="@+id/iv_up_arrow_email"
                android:layout_marginTop="@dimen/err_edit_fields_margin_top"
                android:background="@drawable/consumercare_error_rect"
                android:text="@string/kemailFieldErrorText"
                android:visibility="gone"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </RelativeLayout>

        <View
            android:id="@+id/your_product_review_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/your_product_review_parent_one"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="#cccccc" />


        <!-- Terms and Condition-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/review_write_rate_product_terms"
                    style="@style/write_product_review_header_styles"
                    android:text="@string/bazzarvoice_productreview_writescreen_termsandconditions_text"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>


                <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView

                    android:id="@+id/review_write_rate_product_terms_termstext"
                    style="@style/write_product_review_header_styles"
                    android:layout_marginTop="0dp"
                    android:text="@string/bazzarvoice_productreview_writescreen_termsandconditions_text_two"
                    android:textColor="#4888B3"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf">

                </com.philips.cdp.digitalcare.customview.DigitalCareFontTextView>

            </LinearLayout>

            <!--   <Switch
                   android:id="@+id/review_write_rate_product_terms_switch"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/title_text_size_medium"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_weight="3.0" />-->

            <CheckBox
                android:id="@+id/review_write_rate_product_terms_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:scaleX="1.3"
                android:scaleY="1.2" />

        </LinearLayout>


        <View
            android:id="@+id/your_product_review_divider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/your_product_review_parent_one"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/actionbar_height"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">


            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/your_product_review_cancel_button"
                style="@style/fontButton"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/consumercare_selector_no_thanks_button_bg"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textColor="@color/button_background"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />


            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/your_product_review_send_button"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/marginTopButton"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/bazzarvoice_productreview_writescreen_previewButtonText"
                android:textAlignment="center"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>