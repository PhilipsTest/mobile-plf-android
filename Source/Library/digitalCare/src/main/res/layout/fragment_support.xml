<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/optionParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin">

        <com.philips.cdp.digitalcare.customview.DigitalCareFontTextView
            android:id="@+id/optionHelp"
            style="@style/supportHomeHelpText"
            android:text="@string/how_can_we_help"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Light.otf" />
    </LinearLayout>

</ScrollView>