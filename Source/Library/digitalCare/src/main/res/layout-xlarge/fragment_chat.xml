<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chatScrollView"
    android:background="@color/transparent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/chatNowImageParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chatnow_bg"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:contentDescription="@string/chat_desc" />

            <TextView
                android:id="@+id/helpText"
                style="@style/chatNowHelpText"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/chatDesc"
            style="@style/chatNowDesc"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:text="@string/chat_desc"
            custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Book.otf" />

        <LinearLayout
            android:id="@+id/chatNowParentPort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/chatNoThanksParent"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_weight="1"
                android:padding="2dp">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/chatNoThanks"
                    style="@style/fontButton"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/selector_no_thanks_button_bg"
                    android:text="@string/cancel"
                    android:textColor="@color/button_background"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />
            </RelativeLayout>

            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/chatNow"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_weight="1"
                android:text="@string/chat_now"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatNowParentLand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="350dp"
            android:layout_weight="1"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/chatNoThanksParentLand"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_weight="1"
                android:padding="2dp">

                <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/chatNoThanksLand"
                    style="@style/fontButton"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/selector_no_thanks_button_bg"
                    android:text="@string/cancel"
                    android:textColor="@color/button_background"
                    custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />
            </RelativeLayout>

            <com.philips.cdp.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/chatNowLand"
                style="@style/fontButton"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_weight="1"
                android:text="@string/chat_now"
                custom:digitalcareFontAssetName="digitalcarefonts/CentraleSans-Bold.otf" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </ScrollView>
