<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="actionbarIconHomeImageView">
        <item name="android:src">@drawable/consumercare_actionbar_home_icon_white_1x</item>
        <item name="android:layout_width">@dimen/actionbar_icon_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="actionbarIconArrowImageView">
        <item name="android:src">@drawable/consumercare_actionbar_back_arrow_white</item>
        <item name="android:layout_width">@dimen/actionbar_icon_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="actionbarFontTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/actionbar_icon_margin</item>
        <item name="android:text">@string/dcc_Help_Support</item>
        <item name="android:textColor">@color/uikit_white</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
    </style>

</resources>