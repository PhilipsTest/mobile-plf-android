<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="productreview_header_textone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
        <item name="android:text">Before we begin, please read our guidlines</item>
    </style>


    <style name="productreview_header_texttwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
        <item name="android:text">We want to publish your review, so please follow these guidlines
        </item>
    </style>


    <style name="productreview_expandable_contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>


    <!-- Your Review Fragment-->
    <style name="productyoureview_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
        <item name="android:text">@string/bazzarvoice_productreview_preview_header_text</item>
    </style>


    <style name="your_product_review_rating_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>

    <style name="your_product_preview_rating_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>

    <style name="your_product_preview_rating_header_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_review_text</item>
    </style>

    <style name="your_product_review_rating_ratingbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/your_product_review_rating_header_text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="your_product_review_userdefined_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>


    <!-- WriteReview-->

    <style name="write_product_review_header_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_review_text</item>
    </style>


    <style name="write_product_review_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/support_btn_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/consumercare_shape_edit_text</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>


    <style name="write_product_review_ProdImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="write_product_review_Product_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
        <item name="android:layout_toRightOf">@id/review_write_rate_productimage</item>
    </style>

    <style name="write_product_review_Product_Variant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_below">@id/review_write_rate_name</item>
        <item name="android:layout_alignLeft">@id/review_write_rate_name</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?attr/uikit_LightColor</item>
    </style>

    <!-- Thankyou Header -->
    <style name="your_product_review_thankyou_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
        <item name="android:text">@string/bazzarvoice_productreview_thankyou_headertitle</item>
    </style>


    <style name="your_product_review_thankyou_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>


</resources>