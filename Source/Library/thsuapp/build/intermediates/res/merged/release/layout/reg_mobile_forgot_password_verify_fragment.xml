<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:reglib="http://reg.lib/schema"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/reg_layout_bg"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_reg_create_account_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_welcome"
                    style="@style/reg_titleTextStyle"
                    android:text="@string/reg_Forgot_Password_Title"
                    reglib:fontAssetName="CentraleSans-Light.otf" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_verify"
                    style="@style/reg_textStyle"
                    android:layout_marginTop="@dimen/reg_header_margin_top"
                    android:text="@string/reg_Account_ActivationCode_ResetPassword_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.OtpEditTextWithResendButton
                    android:id="@+id/rl_reg_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"/>

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rl_reg_singin_options"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_Verify"
                    style="@style/reg_style_btn"
                    android:enabled="false"
                    android:text="@string/reg_Account_ActivationCode_Verify_Account"
                    reglib:fontAssetName="CentraleSans-Book.OTF"/>

                <ProgressBar
                    android:id="@+id/pb_reg_activate_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/reg_pb_padding"
                    android:visibility="gone"/>
            </RelativeLayout>


            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                style="@style/reg_text_background"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip">

                <com.philips.cdp.registration.ui.customviews.XMobileHavingProblems
                    android:id="@+id/view_reg_verify_hint"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin"
                    android:paddingTop="@dimen/reg_margin_bottom"/>



            </LinearLayout>


            <!--<View-->
                <!--style="@style/reg_line"-->
                <!--android:layout_marginBottom="@dimen/reg_margin_bottom"/>-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>