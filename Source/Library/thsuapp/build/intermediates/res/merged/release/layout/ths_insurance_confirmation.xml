<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/pth_fab_margin"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_insurance_confirmation_situation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pth_margin_top"
        android:text="To give an accurate cost estimation, we need to know your insurance situation"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="@dimen/pth_body_text"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_insurance_confirmation_chosse_situation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_insurance_confirmation_situation"

        android:layout_marginTop="25dp"
        android:text="Choose one of these optios:"
        android:textColor="@color/awsdk_color_black"
        android:textSize="@dimen/pth_body_text"
        android:textStyle="bold" />

    <com.philips.platform.uid.view.widget.RadioGroup

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pth_insurance_confirmation_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_insurance_confirmation_chosse_situation"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/pth_insurance_confirmation_radio_option_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="I have insurance" />


        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/pth_insurance_confirmation_radio_option_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="I do not have insurance" />
    </com.philips.platform.uid.view.widget.RadioGroup>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_insurance_confirmation_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:text="Continue" />

</RelativeLayout>