<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/pth_fab_margin"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin"
    android:orientation="vertical">

    <!--
        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/pth_intake_follow_up_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Step 5 of 5: Medicines"
            android:textSize="@dimen/pth_body_text" />-->
    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_intake_follow_up_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Step 5 of 5: Medicines" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_follow_up_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_follow_up_label"

        android:layout_marginTop="@dimen/pth_margin_top"
        android:text="When can the provider call you, for a follow up, if needed ?"
        android:textColor="@color/awsdk_color_black"
        android:textSize="@dimen/pth_body_text"
        android:textStyle="bold" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_follow_up_phone_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_follow_up_question"
        android:layout_marginTop="@dimen/pth_margin_top"
        android:text="Phone number"

        android:textColor="@color/awsdk_color_black" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/pth_intake_follow_up_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_follow_up_phone_number_label"
        android:hint="Phone Number"></com.philips.platform.uid.view.widget.EditText>


    <com.philips.platform.uid.view.widget.CheckBox
        android:id="@+id/pth_intake_follow_up_nopp_agree_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_follow_up_phone_number"
        android:layout_marginTop="@dimen/pth_margin_top"
        android:checked="false"
        android:text="I have read and agree to the" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_follow_up_i_agree_link_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_follow_up_nopp_agree_check_box"

        android:autoLink="web"
        android:text="@string/ths_nopp"
        android:textColor="@color/uid_group_blue_level_25" />


    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_intake_follow_up_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:layout_marginTop="@dimen/pth_margin_top"
        android:text="Continue" />
</RelativeLayout>