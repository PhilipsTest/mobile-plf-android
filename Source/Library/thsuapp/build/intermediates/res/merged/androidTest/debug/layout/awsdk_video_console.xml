<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/awsdk_video_console"
              style="@style/awsdk_video_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:keepScreenOn="true"
              android:orientation="vertical"
              android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/awsdk_visit_button_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/awsdk_video_visit_button_bar_height"
            android:background="@drawable/awsdk_bg_navbar_gradient"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awsdk_visit_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="@dimen/awsdk_video_visit_time_left_margin_start"
                android:layout_marginStart="@dimen/awsdk_video_visit_time_left_margin_start"
                android:text="@string/awsdk_console_time_left_1"
                android:textColor="@color/awsdk_video_visit_time_left"
                android:textSize="@dimen/awsdk_video_visit_time_left_text_size"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/awsdk_video_visit_button_bar_inner_layout_margin_end"
                android:layout_marginRight="@dimen/awsdk_video_visit_button_bar_inner_layout_margin_end">

                <ImageView
                    android:id="@+id/awsdk_button_refresh_video"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/awsdk_image_desc_refresh_video"
                    android:visibility="gone"
                    android:src="@drawable/awsdk_visit_refresh"/>

                <ImageView
                    android:id="@+id/awsdk_button_invite_guest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/awsdk_video_visit_button_bar_button_margin_start"
                    android:layout_marginStart="@dimen/awsdk_video_visit_button_bar_button_margin_start"
                    android:contentDescription="@string/awsdk_image_desc_invite_guest"
                    android:visibility="gone"
                    android:src="@drawable/awsdk_visit_inviteguest"/>

                <TextView
                    android:id="@+id/awsdk_button_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/awsdk_video_visit_button_bar_button_margin_start"
                    android:layout_marginStart="@dimen/awsdk_video_visit_button_bar_button_margin_start"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:text="@string/awsdk_button_bar_end"
                    android:textAllCaps="true"
                    android:textColor="@color/awsdk_video_visit_button_end"
                    android:textSize="@dimen/awsdk_video_visit_button_bar_button_end_text_size"/>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/awsdk_visit_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/awsdk_video_visit_console_background">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/awsdk_visit_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/awsdk_video_visit_console_background" >

                <ProgressBar
                    style="@style/awsdk_video_console_progress_bar"
                    android:id="@+id/awsdk_video_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/awsdk_visit_text_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_chainStyle="spread"/>

                <LinearLayout
                    android:id="@+id/awsdk_visit_text_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/awsdk_padding_layout"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/awsdk_video_progressbar"
                    app:layout_constraintBottom_toTopOf="@+id/awsdk_video_console_buttons">

                    <TextView
                        android:id="@+id/awsdk_visit_message_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/awsdk_video_visit_message_text_margin_bottom"
                        android:maxLines="@integer/awsdk_video_console_visit_text_max_lines"
                        android:gravity="center"
                        android:textSize="@dimen/awsdk_video_visit_message_text_size"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        tools:text="@string/awsdk_conversation_waiting_for_provider"/>

                    <TextView
                        android:id="@+id/awsdk_visit_error_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/awsdk_video_visit_message_text_margin_bottom"
                        android:gravity="center"
                        android:text="@string/awsdk_video_error_wait_or_cancel"
                        android:textSize="@dimen/awsdk_video_visit_error_text_size"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/awsdk_visit_cancel_no_charge_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/awsdk_video_visit_message_text_margin_bottom"
                        android:gravity="center"
                        android:text="@string/awsdk_video_error_cancel_no_charge"
                        android:textSize="@dimen/awsdk_video_visit_cancel_no_charge_text_size"
                        android:visibility="invisible"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/awsdk_video_console_buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"><!-- the code will toggle this to horizontal on orientation change -->

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/awsdk_button_call_back"
                        style="@style/awsdk_video_console_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/awsdk_video_visit_console_button_margin_bottom"
                        android:layout_marginEnd="@dimen/awsdk_video_visit_console_button_margin_end"
                        android:layout_marginLeft="@dimen/awsdk_video_visit_console_button_margin_start"
                        android:layout_marginRight="@dimen/awsdk_video_visit_console_button_margin_end"
                        android:layout_marginStart="@dimen/awsdk_video_visit_console_button_margin_start"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/awsdk_video_error_call_back"
                        android:visibility="gone"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/awsdk_button_cancel"
                        style="@style/awsdk_video_console_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/awsdk_video_visit_console_button_margin_bottom"
                        android:layout_marginEnd="@dimen/awsdk_video_visit_console_button_margin_end"
                        android:layout_marginLeft="@dimen/awsdk_video_visit_console_button_margin_start"
                        android:layout_marginRight="@dimen/awsdk_video_visit_console_button_margin_end"
                        android:layout_marginStart="@dimen/awsdk_video_visit_console_button_margin_start"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/awsdk_video_error_cancel_visit"
                        android:visibility="gone"/>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/awsdk_visit_control_bar"
            layout="@layout/awsdk_video_control_bar"/>

    </LinearLayout><!-- this layout will be pinned to the bottom b/c the other linearlayout has weight of 1 -->
</LinearLayout>
