<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PTHCircularPBBig">
        <item name="pth_cirucular_pb">@style/UIDProgressBarCircularIndeterminateBig</item>
    </style>

    <style name="PTHCircularPBSmall">
        <item name="pth_cirucular_pb">@style/UIDProgressBarCircularIndeterminateSmall</item>
    </style>

    <style name="PTHCircularPBMedium">
        <item name="pth_cirucular_pb">@style/UIDProgressBarCircularIndeterminateMiddle</item>
    </style>

    <style name="amwellCentralesansBookFont">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="amwellCentralesansBoldFont">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="ths_list_item">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:layout_height">@dimen/ths_list_item_height</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/pth_fab_margin</item>
        <item name="android:layout_marginRight">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalTitleTextColor</item>
    </style>

    <style name="ths_list_header">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:background">?attr/uidContentSecondaryBackgroundColor</item>
        <item name="android:layout_height">@dimen/ths_list_height_height</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/pth_fab_margin</item>
        <item name="android:layout_marginRight">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:paddingBottom">@dimen/ths_title_padding</item>
        <item name="android:paddingTop">@dimen/ths_title_padding</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
    </style>

    <style name="ths_body_text">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:layout_height">@dimen/ths_list_height_height</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/pth_fab_margin</item>
        <item name="android:layout_marginRight">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:paddingBottom">@dimen/ths_body_text_padding</item>
        <item name="android:paddingTop">@dimen/ths_body_text_padding</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalBodyTextColor</item>
    </style>

    <style name="ths_skip_text">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:paddingBottom">@dimen/ths_body_text_padding</item>
        <item name="android:paddingTop">@dimen/ths_body_text_padding</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">@string/vitals_skip</item>
    </style>

    <style name="ths_title_text">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:layout_height">@dimen/ths_list_height_height</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/pth_fab_margin</item>
        <item name="android:layout_marginRight">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_title_text</item>
        <item name="android:paddingBottom">@dimen/ths_title_padding</item>
        <item name="android:paddingTop">@dimen/ths_title_padding</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalTitleTextColor</item>
    </style>

    <style name="ths_calendar">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:layout_height">@dimen/ths_list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/pth_fab_margin</item>
        <item name="android:layout_marginRight">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalTitleTextColor</item>
        <item name="android:drawablePadding">@dimen/uid_recyclerview_drawable_padding</item>
        <item name="android:drawableLeft">@drawable/ic_calender</item>
    </style>

    <style name="ths_list_item_header">
        <item name="android:padding">@dimen/pth_fab_margin</item>
        <item name="android:textSize">@dimen/pth_body_text</item>
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
        <item name="android:background">?attr/uidContentSecondaryBackgroundColor</item>
    </style>

    <style name="ths_mobile_wizard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ths_list_item_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">?attr/uidButtonPrimaryFocusBackgroundColor</item>
        <item name="android:textColor">?attr/uidContentPrimaryBackgroundColor</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
