<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/pth_fab_margin"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_insurance_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pth_margin_top_large"
        android:layout_alignParentTop="true"
        android:text="Pilease fill your insurance details"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="@dimen/pth_body_text"
        android:textStyle="bold" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_insurance_detail_search_label"
        android:layout_below="@+id/pth_insurance_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pth_margin_top_large"
        android:text="Insurance Provider"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="@dimen/pth_body_text" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/pth_insurance_detail_provider_select_edit_text"
        android:layout_below="@+id/pth_insurance_detail_search_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_search_category_default"
        android:enabled="false"
        android:textColor="@color/awsdk_color_black"

        >

    </com.philips.platform.uid.view.widget.EditText>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/pth_insurance_detail_provider_spinner"
        android:layout_below="@+id/pth_insurance_detail_provider_select_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.AppCompatSpinner>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_insurance_detail_edit_text_label"
        android:layout_below="@+id/pth_insurance_detail_provider_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Subscription ID"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="@dimen/pth_body_text" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/pth_insurance_detail_subscription_edit_text"
        android:layout_below="@+id/pth_insurance_detail_edit_text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.philips.platform.uid.view.widget.CheckBox
        android:id="@+id/pth_insurance_detail_is_primary_subscriber_checkbox"
        android:layout_below="@+id/pth_insurance_detail_subscription_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/pth_margin_top"
        android:checked="false"
        android:text="I'm not the primary subscriber" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_insurance_detail_continue_button"
        android:layout_above="@+id/pth_insurance_detail_skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="Continue" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_insurance_detail_skip_button"
        app:uidComponentType="Secondary"
        style="@style/UIDImageTextButton.Center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"

        android:text="Skip this" />

</RelativeLayout>