<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_visit_for"
        style="@style/amwellCentralesansBoldFont"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
        android:paddingStart="@dimen/ths_fab_margin"
        android:paddingEnd="@dimen/ths_fab_margin"
        android:layout_marginTop="@dimen/ths_image_size"
        android:layout_marginBottom="@dimen/ths_image_size"
        android:paddingTop="@dimen/ths_title_padding"
        android:paddingBottom="@dimen/ths_title_padding"
        android:text="@string/ths_visit_for"
        android:textSize="@dimen/ths_title_text" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/choose_person"
        android:layout_marginLeft="@dimen/ths_fab_margin"
        android:layout_marginRight="@dimen/ths_fab_margin"
        android:layout_below="@id/ths_visit_for"
        android:text="@string/ths_select_name"
        style="@style/ths_body_text"
        android:layout_marginBottom="@dimen/ths_conditions_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/choose_person"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <RelativeLayout
        android:id="@+id/ths_parent_container"
        android:layout_width="match_parent"
        android:layout_below="@id/horizontalLine"
        android:background="@drawable/uid_list_item_selector"
        android:layout_height="?android:attr/listPreferredItemHeight">

        <RelativeLayout
            android:id="@+id/ths_practice_icon_layout"
            android:layout_width="@dimen/ths_icon_layout_size"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ths_fab_margin">

            <ImageView
                android:id="@+id/ths_parent_logo"
                android:src="@mipmap/child_icon"
                android:layout_width="@dimen/ths_image_size"
                android:layout_height="@dimen/ths_image_size" />
        </RelativeLayout>


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_parent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ths_practice_icon_layout"
            android:layout_toStartOf="@+id/ths_practice_arrow_image"
            android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
            android:maxLines="3"
            android:textColor="?attr/uidLabelValueNormalTextColor"
            android:textSize="@dimen/ths_body_text"
            android:text="test"
            android:textStyle="bold" />

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:id="@+id/ths_practice_arrow_image"
            android:text="@string/dls_navigationright"
            fontPath="fonts/iconfont.ttf"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/ths_recycler_view_dependent_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_parent_container"
         />

</RelativeLayout>

