<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_id_practice_label"
        style="@style/ths_list_item_header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:textSize="@dimen/ths_body_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ths_recycler_view_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_id_practice_label"
        android:layout_centerInParent="true" />

    <!-- Will be removed after Welcome screen -->
    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_appointment_list"
        android:layout_width="match_parent"
        android:text="Appointments"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_visit_list"
        android:text="@string/visit_history"
        android:layout_above="@id/ths_appointment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>

