<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_scheduled_visits_list_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ths_list_item"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="@string/ths_select_date_and_time" />

    <View
        android:id="@+id/ths_scheduled_appintment_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ths_appointment_date"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

   <!-- <include
        android:id="@+id/provider_details_layout_container"
        layout="@layout/ths_provider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_scheduled_appintment_separator"
        />-->
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/provider_details_layout_container"
        android:layout_width="match_parent"
        android:layout_below="@+id/ths_scheduled_appintment_separator"
        android:text="Dr. Elyne"
        style="@style/ths_list_item"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:drawableRight="@mipmap/right_arrow_icon"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/ths_scheduled_appintment_below_provider_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ths_list_space"
        android:layout_below="@+id/provider_details_layout_container"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
</RelativeLayout>