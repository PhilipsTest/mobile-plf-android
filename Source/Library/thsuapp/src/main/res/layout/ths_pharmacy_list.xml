<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/pharmacy_list_layout"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/pharmacy_list_layout_item"
        android:layout_height="wrap_content">
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pharmacy_name"
        style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miller Drug mail order"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pharmacy_address_line_one"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/pharmacy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miller Drug mail order"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pharmacy_address_line_two"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miller Drug mail order"
        android:layout_alignBaseline="@+id/pharmacy_address_line_one"
        android:layout_alignBottom="@+id/pharmacy_address_line_one"
        android:layout_toEndOf="@+id/pharmacy_address_line_one" />
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pharmacy_state"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miller Drug mail order"
        android:layout_below="@id/pharmacy_address_line_one" />
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pharmacy_zip_code"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miller Drug mail order"
        android:layout_alignBaseline="@+id/pharmacy_state"
        android:layout_alignBottom="@+id/pharmacy_state"
        android:layout_toEndOf="@+id/pharmacy_state" />
        <ImageView
            android:id="@+id/right_arrow_pharmacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_below="@id/pharmacy_list_layout_item"
        android:layout_height="1dp"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
</RelativeLayout>