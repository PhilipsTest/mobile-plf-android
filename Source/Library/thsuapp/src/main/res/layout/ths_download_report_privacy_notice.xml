<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical"


    >

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_download_report_privacy_notice_header_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy notice"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        fontPath="fonts/centralesansbold.ttf"
        android:textSize="20sp">

    </com.philips.platform.uid.view.widget.Label>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_download_report_privacy_notice_content_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_download_report_privacy_notice_header_label"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/ths_download_report_privacy_notice_text_body">


    </com.philips.platform.uid.view.widget.Label>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_download_report_hippa_notice_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_download_report_privacy_notice_content_label"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_download_report_privacy_notice_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_download_report_hippa_notice_link"
        android:text="Ok, I understand"
        android:layout_margin="12dp"

        />


</RelativeLayout>
