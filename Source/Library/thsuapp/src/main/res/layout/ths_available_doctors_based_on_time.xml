<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/providerListItemLayoutBasedOnDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/schedule_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/ths_scedule_appointment"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        style="@style/UIDLabelDescription"
        android:textSize="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <RelativeLayout
        android:id="@+id/details_container"
        android:layout_below="@id/schedule_appointment"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/provider_detail_container_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/ths_provider_list" />

    <View android:background="@color/uid_gray_level_5"
        android:layout_below="@+id/provider_detail_container_view"
        android:layout_width = "match_parent"
        android:layout_height="10dp"
        android:id="@+id/separator_details"
        />
    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/calendar_view"
        style="@style/UIDLabel.RecyclerViewItemOneLineTitleText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_recyclerview_item_one_line_height"
        android:layout_marginEnd="@dimen/uid_recyclerview_margin_left_right"
        android:layout_marginStart="@dimen/uid_recyclerview_margin_left_right"
        android:drawablePadding="@dimen/uid_recyclerview_drawable_padding"
        android:drawableLeft="@drawable/ic_calender"
        android:text = "some"
        android:textColor="@color/uid_signal_cyan_level_45"
        android:layout_below="@id/details_container"
        android:gravity="start|center_vertical"/>


    <View android:background="@color/uid_gray_level_5"
        android:layout_below="@id/calendar_view"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator_below_date"
        />

    <RelativeLayout
        android:id="@+id/no_available_container"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/separator_below_date"
        android:layout_height="wrap_content">
    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/no_available_providers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/ths_no_available_appointments"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        style="@style/UIDLabelDescription"
        android:textSize="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <com.philips.platform.uid.view.widget.Label
        android:layout_below="@+id/no_available_providers"
        android:id="@+id/selectanother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/uid_grid_descrption_size"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:layout_marginBottom="10dp"
        android:text="@string/ths_select_other_provider"/>

    <View android:background="@color/uid_gray_level_5"
        android:layout_below="@+id/selectanother"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:id="@+id/below_selectanother"
        />

    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/number_of_available_doctors"
        android:layout_below="@id/no_available_container"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/ths_scedule_appointment"
        style="@style/UIDLabel.RecyclerViewItemOneLineTitleText"
        android:textSize="16dp"
        android:paddingLeft="16dip"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:background="@color/uid_gray_level_5"
        />

    <View android:background="@color/uid_gray_level_5"
        android:layout_below="@+id/number_of_available_doctors"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator_below_number_of_doctors"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/providerListRecyclerView"
        android:layout_below="@id/separator_below_number_of_doctors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>