<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidSeparatorContentNormalBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_waiting_room_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="6sp"
            android:text="This concludes your visit with"

            android:textColor="?attr/uidLabelValueNormalTextColor"
            android:textSize="@dimen/ths_body_text" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_appointment_date"
            style="@style/ths_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ths_waiting_room_title_label"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:paddingRight="@dimen/ths_fab_margin"
            android:text="@string/ths_select_date_and_time"
            android:visibility="gone" />

        <View
            android:id="@+id/ths_waiting_room_provider_top_grey_boundary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ths_appointment_date"
            android:background="@color/uid_gray_level_10"></View>

        <RelativeLayout
            android:id="@+id/ths_waiting_room_provider_detail_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_waiting_room_provider_top_grey_boundary"
            android:background="?attr/uidContentPrimaryBackgroundColor">

            <include layout="@layout/ths_provider_details_c_list">


            </include>

        </RelativeLayout>

        <View
            android:id="@+id/ths_wrap_up_provider_detail_seperator_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ths_waiting_room_provider_detail_relativelayout"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <RelativeLayout
            android:id="@+id/ths_wrap_up_cost_detail_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_wrap_up_provider_detail_seperator_bottom"
            android:background="?attr/uidContentPrimaryBackgroundColor"
            android:minHeight="@dimen/ths_list_item_height">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_wrap_up_payment_cost"
                style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ths_fab_margin"

                android:textSize="30sp"></com.philips.platform.uid.view.widget.Label>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/ths_wrap_up_payment_label"
                style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ths_fab_margin"
                android:layout_marginRight="100dp"
                android:layout_toLeftOf="@+id/ths_wrap_up_payment_cost"
                android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
                android:text="Your credit card was charged"
                android:textSize="@dimen/ths_body_text"></com.philips.platform.uid.view.widget.Label>


        </RelativeLayout>

        <View
            android:id="@+id/ths_wrap_up_cost_detail_seperator_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ths_wrap_up_cost_detail_relativelayout"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_wrap_up_visit_report_title_label"
            style="@style/UIDLabel.RecyclerViewItemDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ths_list_item_height"
            android:layout_below="@+id/ths_wrap_up_cost_detail_seperator_bottom"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
            android:text="Your visit report"
            android:textSize="@dimen/ths_body_text" />

        <FrameLayout
            android:id="@+id/ths_wrap_up_visit_report_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_wrap_up_visit_report_title_label">

            <!--start of visit summary report  body-->
            <RelativeLayout
                android:id="@+id/ths_wrap_up_visit_summary_report_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="?attr/uidContentPrimaryBackgroundColor">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_wrap_up_visit_summary_report_download_label"
                    style="@style/UIDLabel.RecyclerViewItemOneLineTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/ths_fab_margin"
                    android:gravity="center_vertical"
                    android:text="@string/ths_visit_summary_report_info">

                </com.philips.platform.uid.view.widget.Label>
            </RelativeLayout>
            <!--end of visit summary report  body-->



            <!--start of visit history report  body-->
            <RelativeLayout
                android:id="@+id/ths_wrap_up_visit_report_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ths_list_item_height"
                android:visibility="gone"
                android:background="?attr/uidContentPrimaryBackgroundColor">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_wrap_up_visit_report_download_label"
                    style="@style/UIDLabel.RecyclerViewItemOneLineTitleText"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/ths_fab_margin"
                    android:gravity="center_vertical"
                    android:text="Download Report">

                </com.philips.platform.uid.view.widget.Label>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/ths_wrap_up_visit_report_download_link"
                    style="@style/UIDLabel.RecyclerViewItemSubtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/ths_wrap_up_visit_report_download_label"
                    android:gravity="center_vertical"
                    android:text="PDF (21MB)">

                </com.philips.platform.uid.view.widget.Label>

                <ImageView
                    android:id="@+id/ths_wrap_up_visit_report_arrow_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ths_fab_margin"
                    android:gravity="center_vertical"
                    android:src="@mipmap/right_arrow_icon"></ImageView>

            </RelativeLayout>
            <!--end of visit history report  body-->


        </FrameLayout>

        <View
            android:id="@+id/ths_wrap_up_download_report_title_seperator_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ths_wrap_up_visit_report_framelayout"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />


        <RelativeLayout
            android:id="@+id/ths_wrap_up_pharmacy_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_wrap_up_download_report_title_seperator_bottom">

            <include
                android:id="@+id/pharmacy_include"
                layout="@layout/ths_pharmacy_shipping_fragment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:id="@+id/ths_visit_summary_continue_button_top_seperator"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/ths_wrap_up_pharmacy_relativelayout"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ths_visit_summary_continue_button_top_seperator"
            android:background="?attr/uidContentPrimaryBackgroundColor">

            <com.philips.platform.uid.view.widget.Button
                android:id="@+id/ths_visit_summary_continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ths_margin_between_buttons"

                android:layout_marginLeft="@dimen/ths_fab_margin"
                android:layout_marginRight="@dimen/ths_fab_margin"
                android:layout_marginTop="@dimen/ths_margin_between_buttons"
                android:background="?attr/uidContentPrimaryBackgroundColor"

                android:text="Continue" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>