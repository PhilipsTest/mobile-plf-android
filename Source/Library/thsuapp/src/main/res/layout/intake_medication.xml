<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin"
    android:orientation="vertical">


    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_intake_medication_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Step 3 of 5: Medicines" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_medication_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pth_intake_medication_label"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="Do you currently use medication? If so, please add your medication to share with the provider"
        android:textColor="@color/awsdk_color_black"
        android:textSize="@dimen/pth_body_text"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/pth_intake_medication_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/pth_intake_medication_question"
        android:layout_marginTop="20dp">

    </ListView>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pth_search_medication_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/pth_intake_medication_listview">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pth_existing_medication_list_row_label"

            style="?android:attr/dropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_toLeftOf="@+id/pth_search_medication_list_row_right_icon"
            android:ellipsize="marquee"
            android:text="Add medication"
            android:minHeight="@dimen/uid_recyclerview_item_one_line_height"
            android:paddingEnd="@dimen/uid_recyclerview_margin_left_right"
            android:paddingStart="@dimen/uid_recyclerview_margin_left_right"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
            android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

        <ImageView
            android:id="@+id/pth_search_medication_list_row_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignBottom="@+id/pth_existing_medication_list_row_label"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_get" />


    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/pth_intake_medication_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pth_intake_medication_skip_step_label"

        android:text="Continue" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_medication_skip_step_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="Skip this step"
        android:textSize="@dimen/pth_body_text" />
</RelativeLayout>