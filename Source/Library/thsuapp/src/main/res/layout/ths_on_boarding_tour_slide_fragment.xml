<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/welcome_slide_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <com.philips.platform.uid.view.widget.Label
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/onboarding_page_title"
            android:layout_alignParentTop="true"
            android:text="@string/ths_welcome"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:gravity="center" />

        <com.philips.platform.uid.view.widget.Label
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/onboarding_page_text"
            android:layout_alignParentBottom="true"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:layout_marginBottom="90dp"
            android:minLines="4"
            android:gravity="left" />

    </RelativeLayout>
</ScrollView>