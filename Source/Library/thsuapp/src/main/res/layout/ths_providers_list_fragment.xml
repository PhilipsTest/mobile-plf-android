<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/provider_list_container"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/firstDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/seeFirstDoctorLabel"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
            android:text="See the first available doctor"/>
        <ImageView
            android:id="@+id/dummyDoctorImage"
            android:layout_below="@+id/seeFirstDoctorLabel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_centerInParent="true"
            android:src="@drawable/doctor_placeholder"
             />
        <com.philips.platform.uid.view.widget.Button
            android:layout_below="@id/dummyDoctorImage"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:text="Get started"
            android:background="@color/uid_blue_level_55"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.Button
            android:layout_below="@id/dummyDoctorImage"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/getScheduleAppointmentButton"
            android:layout_width="match_parent"
            android:text="Get started"
            android:visibility="gone"
            android:background="@color/uid_blue_level_55"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/firstDoctorLayout"
        android:id="@+id/searchDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/uidContentSecondaryBackgroundColor"
        >

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/searchBarLabel"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ths_list_header"
            android:text="Or pick one of these providers"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_below="@+id/searchDoctorLayout"
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/providerListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>