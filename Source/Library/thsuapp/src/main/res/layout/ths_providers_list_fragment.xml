<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provider_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/firstDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/seeFirstDoctorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor" />

        <ImageView
            android:id="@+id/dummyDoctorImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/seeFirstDoctorLabel"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/doctor_placeholder" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dummyDoctorImage"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/getScheduleAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dummyDoctorImage"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchDoctorLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/firstDoctorLayout"
        android:background="?attr/uidContentSecondaryBackgroundColor">
        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
        <com.philips.platform.uid.view.widget.Label
            android:layout_below="@+id/horizontalLine"
            android:id="@+id/searchBarLabel"
            style="@style/ths_list_header"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/ths_fab_margin"
            android:paddingRight="@dimen/ths_fab_margin"
            android:gravity="center_vertical"
            android:text="@string/ths_provider_pick_provider_text" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchDoctorLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/providerListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>