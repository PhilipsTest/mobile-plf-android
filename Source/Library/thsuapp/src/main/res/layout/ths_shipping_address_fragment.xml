<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shipping_address_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/ths_fab_margin">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/shipping_address_text_label"
        style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ths_address_shipping_address_string" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/sa_address_line_one_text"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_address_text_label"
        android:text="@string/ths_address_address_line_one" />

    <com.philips.platform.uid.view.widget.InputValidationLayout
        android:id="@+id/sa_shipping_address_line_one_validation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa_address_line_one_text"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
        app:uidTextBoxValidationErrorText="@string/inline_error_message_systolic_value">

        <com.philips.platform.uid.view.widget.ValidationEditText
            android:id="@+id/sa_shipping_address_line_one"
            style="@style/UIDEditTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/ths_address_enter_first_address_line"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1" />
    </com.philips.platform.uid.view.widget.InputValidationLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/sa_address_line_two_text"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa_shipping_address_line_one_validation_layout"
        android:text="@string/ths_address_address_line_two" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/sa_shipping_address_line_two"
        style="@style/UIDEditTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa_address_line_two_text"
        android:layout_marginBottom="16dp"
        android:hint="@string/ths_address_optional_string"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/sa_town_text"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa_shipping_address_line_two"
        android:text="@string/ths_address_town_city_string" />

    <com.philips.platform.uid.view.widget.InputValidationLayout
        android:id="@+id/sa_town_validation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sa_town_text"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
        app:uidTextBoxValidationErrorText="@string/inline_error_message_systolic_value">

        <com.philips.platform.uid.view.widget.ValidationEditText
            android:id="@+id/sa_town"
            style="@style/UIDEditTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/ths_address_enter_town_city"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1" />
    </com.philips.platform.uid.view.widget.InputValidationLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/sa_postal_code_text"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sa_town_validation_layout"
        android:text="@string/ths_address_postal_code_string" />


    <com.philips.platform.uid.view.widget.InputValidationLayout
        android:id="@+id/sa_postal_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sa_postal_code_text"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
        app:uidTextBoxValidationErrorText="@string/inline_error_message_systolic_value">

        <com.philips.platform.uid.view.widget.ValidationEditText
            android:id="@+id/sa_postal_code_edittext"
            style="@style/UIDEditTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="@string/ths_pharmacy_search_hint"
            android:imeOptions="actionDone" />
    </com.philips.platform.uid.view.widget.InputValidationLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/sa_state_text"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sa_postal_code"
        android:text="@string/ths_address_state_string" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sa_state_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sa_state_text"
        android:background="?attr/uidTextBoxDefaultDisabledBackgroundColor">

    </android.support.v7.widget.AppCompatSpinner>


</RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ths_fab_margin"
        android:layout_alignParentBottom="true">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/update_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ths_ok_continue_button_string" />
    </RelativeLayout>
</RelativeLayout>
