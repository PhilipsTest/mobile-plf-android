<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/wizard_button"
        style="@style/ths_mobile_wizard"
        android:text="@string/symptoms" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/continue_btn"
        style="@style/UIDImageTextButton.Center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/pth_fab_margin"
        android:layout_marginRight="@dimen/pth_fab_margin"
        android:enabled="false"
        android:text="Continue" />

    <ScrollView
        android:id="@+id/scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/continue_btn"
        android:layout_below="@id/wizard_button"
        android:layout_marginBottom="24dp">

        <RelativeLayout
            android:id="@+id/symptoms_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/help_visit"
                style="@style/ths_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ths_conditions_margin_top"
                android:layout_marginTop="@dimen/pth_fab_margin"
                android:paddingLeft="@dimen/pth_fab_margin"
                android:paddingRight="@dimen/pth_fab_margin"
                android:text="@string/help_visit" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/visit_reason"
                style="@style/ths_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_visit"
                android:layout_marginBottom="@dimen/ths_checkbox_bottom_margin"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin"
                android:text="@string/visit_reason"
                android:textSize="@dimen/pth_body_text" />

            <LinearLayout
                android:id="@+id/checkbox_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/visit_reason"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin"
                android:orientation="vertical">

            </LinearLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/additional_comment"
                style="@style/ths_list_item"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/checkbox_container"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin"
                android:text="@string/additional_reason" />

            <!-- TODO: Spoorti - Need to check what is text box filled style and change it-->
            <com.philips.platform.uid.view.widget.EditText
                android:id="@+id/edit_farenheit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="10"
                android:layout_below="@id/additional_comment"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin"
                android:enabled="true"
                android:hint="@string/write_here" />

            <com.philips.platform.uid.view.widget.ImageButton
                android:id="@+id/camera_click_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_farenheit"
                android:layout_alignStart="@+id/edit_farenheit"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin"
                android:layout_marginStart="12dp"
                android:background="@drawable/reg_circle"
                app:uidImageButtonDrawableSrc="@mipmap/camera_icon"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/imagelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_farenheit"
                android:layout_marginLeft="@dimen/pth_fab_margin"
                android:layout_marginRight="@dimen/pth_fab_margin" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>