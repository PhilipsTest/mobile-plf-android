<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provider_not_available"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/provider_detail_container_view"
        layout="@layout/ths_provider_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/provider_detail_container_view"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <RelativeLayout
        android:id="@+id/calender_view_layout"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:layout_below="@id/separator"
        android:layout_height="wrap_content">
        <com.philips.platform.uid.view.widget.Label
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:id="@+id/calendar_view_calender_icon"
            android:text="@string/dls_calendar"
            fontPath="fonts/iconfont.ttf"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor"
            android:layout_height="?android:attr/listPreferredItemHeight"/>
        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ths_calendar_left"
            android:paddingTop="@dimen/ths_fab_margin"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/ths_fab_margin" />
        <com.philips.platform.uid.view.widget.Label
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:id="@+id/calendar_view_right_arrow"
            android:text="@string/dls_navigationright"
            fontPath="fonts/iconfont.ttf"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor"
            android:layout_height="?android:attr/listPreferredItemHeight"/>
    </RelativeLayout>

    <View
        android:id="@+id/below_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/calender_view_layout"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/no_available_providers"
        style="@style/amwellCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/below_calendar_view"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/ths_body_text_padding"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/ths_body_text_padding"
        android:text="@string/ths_with"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="16sp" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/selectanother"
        style="@style/amwellCentralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_available_providers"
        android:layout_marginBottom="10dp"
        android:paddingBottom="@dimen/ths_body_text_padding"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/ths_body_text_padding"
        android:text="@string/ths_select_other_provider"
        android:textColor="?attr/uidContentItemSecondaryNormalTextColor"
        android:textSize="@dimen/uid_grid_descrption_size" />

    <View
        android:id="@+id/below_select_other"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/selectanother"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/below_providers"
        style="@style/ths_list_header"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/below_select_other"
        android:paddingLeft="@dimen/ths_fab_margin"
        android:paddingRight="@dimen/ths_fab_margin"
        android:text="Or pick on these doctors to schedule an appointment" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/providerListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/below_providers"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="vertical"/>

</RelativeLayout>