<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_height="?android:attr/listPreferredItemHeight">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pth_existing_medication_list_row_label"
        android:layout_toLeftOf="@+id/pth_existing_medication_list_row_delete"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingStart="@dimen/uid_recyclerview_margin_left_right"
        android:paddingEnd="@dimen/uid_recyclerview_margin_left_right"
        android:minHeight="@dimen/uid_recyclerview_item_one_line_height"
        android:ellipsize="marquee"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor" />

    <ImageView
        android:id="@+id/pth_existing_medication_list_row_delete"
        android:layout_alignBottom="@+id/pth_existing_medication_list_row_label"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>

