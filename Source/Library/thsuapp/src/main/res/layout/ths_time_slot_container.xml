<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_time_slot_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View android:background="@color/uid_gray_level_5"
        android:id="@+id/line_separator"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        />
    <com.philips.platform.uid.view.widget.Label
        android:layout_below="@+id/line_separator"
        android:id="@+id/select_time"
        android:background="@color/uid_gray_level_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ths_select_time"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:padding="@dimen/uid_grid_title_padding"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        />

    <include layout="@layout/calender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_time"
        />

    <View android:background="@color/uid_gray_level_5"
        android:id="@+id/line_separator_2"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/calendar_container"
        />

    <com.philips.platform.ths.providerdetails.THSExpandableHeightGridView
        android:id="@+id/grid"
        android:layout_below="@id/line_separator_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>