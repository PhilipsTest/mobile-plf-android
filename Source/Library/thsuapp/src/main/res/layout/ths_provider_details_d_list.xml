<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/providerListItemLayout">
    <ImageView
        android:id="@+id/details_providerImage"
        android:layout_marginStart="@dimen/uid_label_margin_start"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/doctor_pic"/>

    <RelativeLayout
        android:id="@+id/details_providerDetailLayout"
        android:layout_toRightOf="@+id/details_providerImage"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/uid_label_margin_start"
        android:layout_marginLeft="@dimen/uid_label_margin_start"
        android:layout_height="wrap_content">
        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/details_providerNameLabel"
            android:textSize="@dimen/uid_recyclerview_item_title_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uid_grid_icon_padding"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:textColor="?attr/uidLabelValueNormalTextColor" />
        <com.philips.platform.uid.view.widget.Label
            android:layout_below="@+id/details_providerNameLabel"
            android:id="@+id/details_practiceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/uid_grid_descrption_size"
            android:textColor="?attr/uidLabelValueNormalTextColor" />
        <RelativeLayout
            android:layout_below="@+id/details_practiceNameLabel"
            android:id="@+id/isAvailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.philips.platform.uid.view.widget.Label
                android:layout_toRightOf="@+id/details_isAvailableImage"
                android:id="@+id/details_isAvailableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uid_label_margin_start"
                android:layout_marginStart="@dimen/uid_alert_dialog_message_line_spacing"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:text="@string/ths_available_time_slots"
                android:textSize="@dimen/uid_grid_descrption_size" />

            <com.philips.platform.uid.view.widget.NotificationBadge
                android:id="@+id/notification_badge"
                android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
                style="@style/NotificationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:backgroundTint="?attr/uidColorLevel45"
                android:text="2"/>

            <ImageView
                android:id="@+id/details_isAvailableImage"
                android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/green_tick"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
