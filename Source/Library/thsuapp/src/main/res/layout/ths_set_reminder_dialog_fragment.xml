<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/set_reminder_header_text"
        android:text="@string/ths_set_remainder"
        style="@style/ths_title_text"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.philips.platform.uid.view.widget.RadioGroup
        android:id="@+id/ths_reminder_radio_group"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_no_reminder"
            android:text="@string/ths_rb_no_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_15_mins"
            android:text="@string/ths_rb_15_mins_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_one_hour"
            android:text="@string/ths_rb_one_hour_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_four_hours"
            android:text="@string/ths_rb_four_hours_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_eight_hours"
            android:text="@string/ths_rb_eight_hours_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_one_day"
            android:text="@string/ths_rb_one_day_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.philips.platform.uid.view.widget.RadioButton
            android:id="@+id/ths_rb_one_week"
            android:text="@string/ths_rb_one_week_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.philips.platform.uid.view.widget.RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">
        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/cancel_reminder_dialog"
            style="@style/UIDExtraWideIconQuietButton.Center"
            android:layout_toLeftOf="@+id/set_reminder_confirmation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/cancel"
            android:layout_marginTop="7dp" />

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/set_reminder_confirmation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="@string/ths_set_button_text"
            android:layout_marginTop="7dp" />
    </RelativeLayout>
</LinearLayout>