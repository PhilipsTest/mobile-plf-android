<?xml version="1.0" encoding="utf-8"?>
<com.philips.platform.ths.pharmacy.customtoggle.SegmentControl
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pharmacy_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerVertical="true"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:orientation="horizontal"
    android:padding="12dp">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/segment_control_view_one"
        style="?attr/uidButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:background="@drawable/segment_background_left"
        android:text="@string/ths_retail_button_text" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/segment_control_view_two"
        style="?attr/uidButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/segment_background_right"
        android:text="@string/ths_mail_order_pharmacy_button_text" />

    <com.philips.platform.uid.view.widget.ImageButton
        android:id="@+id/switch_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="12dp" />
</com.philips.platform.ths.pharmacy.customtoggle.SegmentControl>