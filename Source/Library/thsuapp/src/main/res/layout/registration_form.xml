        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_edit_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ths_dob"
            style="@style/ths_calendar_right"
            android:text="@string/ths_gender"
            />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ths_edit_dob"
        android:text="@string/ths_gender"
        />

    <com.philips.platform.uid.view.widget.CheckBox
        android:id="@+id/ths_checkbox_female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ths_gender"
        android:enabled="true"
        android:text="@string/ths_female"/>

    <com.philips.platform.uid.view.widget.CheckBox
        android:id="@+id/ths_checkbox_male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ths_checkbox_female"
        android:enabled="true"
        android:text="@string/ths_male"/>

