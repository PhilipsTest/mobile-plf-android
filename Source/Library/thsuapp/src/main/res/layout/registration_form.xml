        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/ths_edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ths_list_item"
            android:layout_below="@id/ths_checkbox_male">

        </android.support.v7.widget.AppCompatSpinner>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_continue"
        android:layout_below="@id/ths_edit_location"
        android:text="@string/ths_continue"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pth_fab_margin"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>