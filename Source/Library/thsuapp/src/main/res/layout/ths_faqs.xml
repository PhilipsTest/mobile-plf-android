<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hippa_notice_container"
    android:layout_width="match_parent"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_ans"
        android:layout_below="@id/ths_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>