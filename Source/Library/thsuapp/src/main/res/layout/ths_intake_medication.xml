<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_medication_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/pth_intake_medication_continue_button">


        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/pth_intake_medication_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Step 3 of 5: Medicines" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/pth_intake_medication_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pth_intake_medication_label"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Do you currently use medication? If so, please add your medication to share with the provider"
            android:textColor="@color/awsdk_color_black"
            android:textSize="@dimen/pth_title_text"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/pth_intake_medication_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/pth_intake_medication_question"
            android:layout_marginTop="20dp">

        </ListView>


    </RelativeLayout>


    <com.philips.platform.uid.view.widget.Button

        android:id="@+id/pth_intake_medication_continue_button"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pth_intake_medication_skip_step_label"
        android:layout_marginBottom="@dimen/pth_margin_between_buttons"
        android:text="Continue" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_intake_medication_skip_step_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pth_margin_bottom"
        android:text="Skip this step"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        style="@style/UIDLabelDescription"
        android:gravity="center_horizontal"
         />

</RelativeLayout>
