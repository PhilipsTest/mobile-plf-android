<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_waiting_room_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_marginTop="@dimen/pth_margin_top"
        android:text="you are waiting to see"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="@dimen/pth_title_text"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/ths_waiting_room_provider_detail_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_waiting_room_title_label">

        <ImageView
            android:id="@+id/details_providerImage"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="@dimen/uid_label_margin_start"
            android:layout_marginTop="18dp"
            android:src="@drawable/doctor_pic" />

        <RelativeLayout
            android:id="@+id/details_providerDetailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/uid_label_margin_start"
            android:layout_marginStart="@dimen/uid_label_margin_start"
            android:layout_toRightOf="@+id/details_providerImage">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/details_providerNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
                android:layout_marginTop="@dimen/uid_grid_icon_padding"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:textSize="30sp" />

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/details_practiceNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/details_providerNameLabel"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:textSize="@dimen/uid_grid_descrption_size" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ths_waiting_room_progressbar_container"
        android:layout_below="@+id/ths_waiting_room_provider_detail_relativelayout"
        android:layout_above="@+id/ths_insurance_detail_continue_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
</RelativeLayout>
    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_waiting_room_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/pth_margin_between_buttons"

        android:text="Cancel visit" />
</RelativeLayout>