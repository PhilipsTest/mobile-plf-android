<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uid_dialog_shadow_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ths_selected_image_scroll_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ths_selected_image_enlarged"
        android:src="@mipmap/left_arrow_icon" />

    <ImageView
        android:id="@+id/ths_selected_image_enlarged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/ths_selected_image_scroll_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ths_selected_image_enlarged"
        android:src="@mipmap/right_arrow_icon" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_delete_selected_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

</RelativeLayout>