<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uid_dialog_shadow_background"
    >

    <ImageView
        android:id="@+id/ths_selected_image_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ths_delete_selected_image_button"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/cross_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/ths_selected_image_scroll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_arrow_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/selected_image_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/ths_selected_image_scroll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow_icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/selected_image_pager"
            android:layout_marginStart="25dp" />
    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_delete_selected_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete this photo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>