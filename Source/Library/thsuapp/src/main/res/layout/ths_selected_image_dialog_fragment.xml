<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ths_selected_image_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ths_delete_selected_image_button"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:padding="@dimen/ths_32dp"
        android:src="@mipmap/dls_cross_bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/ths_selected_image_scroll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dls_navigation_left"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/selected_image_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/ths_selected_image_scroll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dls_navigation_right"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/selected_image_pager"
            android:layout_marginStart="25dp" />
    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_delete_selected_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete this photo"
        app:uidAccent ="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>