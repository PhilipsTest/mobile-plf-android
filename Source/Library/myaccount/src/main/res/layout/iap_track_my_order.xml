<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_track_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_track_order_title"
            style="@style/tvOrderHeaderTitle"
            android:text="@string/iap_track_order" />

        <TextView
            android:id="@+id/tv_track_order_number"
            style="@style/tvOrderHeaderTitle"
            android:layout_marginStart="@dimen/iap_order_one_spacing"
            android:text="#" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_track_order_text"
        style="@style/tvTitle"
        android:layout_below="@id/ll_track_order"
        android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
        android:text="@string/iap_track_package" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_track_order_text"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
        android:layout_marginStart="@dimen/iap_shipping_address_margin_left"
        android:orientation="vertical">

        <TextView
            style="@style/tvHeaderTitle"
            android:layout_marginStart="0dp"
            android:text="@string/iap_shipped_to" />

        <TextView
            android:id="@+id/tv_shipping_first_name"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_order_one_spacing"
            android:layout_marginTop="@dimen/iap_order_margin_top"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/tv_shipping_address"
            style="@style/tvTitle"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/iap_track_order_button_margin_bottom"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_track_shipment" />

</RelativeLayout>
