<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ProductRegistrationHeaderTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">22sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ProductRegistrationSubTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ProductRegistrationConnectHeaderTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ProductRegistrationConnectSubTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ProductRegistrationProductHeaderTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="ProductRegistrationProductSubTitleTheme">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ProductRegistrationCtnTheme">
        <item name="android:textColor">@color/uikit_enricher4</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="DateOfPurchaseStyle">
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textColor">#0066a1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>
</resources>
