<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="UIDLabel" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:textColor">?attr/uidLabelValueNormalTextColor</item>
        <item name="android:textAppearance">@style/UIDLabelTextAppearance</item>
        <item name="android:lineSpacingExtra">@dimen/uid_label_line_spacing</item>
        <item name="android:lineSpacingMultiplier">@integer/uid_label_font_spacing_multiplier</item>
    </style>

    <style name="UIDLabelTextAppearance">
        <item name="android:textColor">?attr/uidLabelRegularNormalTextColor</item>
        <item name="android:textSize">@dimen/uid_label_text_size</item>
    </style>

    <style name="UIDLabel.MarginTop">
        <item name="android:layout_marginTop">@dimen/uid_label_margin_bottom</item>
    </style>

    <style name="UIDLabel.MarginEnd">
        <item name="android:layout_marginEnd">@dimen/uid_label_margin_start</item>
    </style>

    <style name="UIDLabel.MarginBottom">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_control</item>
    </style>

    <style name="UIDLabel.MarginStart">
        <item name="android:layout_marginStart">@dimen/uid_label_margin_left_control</item>
    </style>

    <style name="UIDLabel.SliderMarginBottom">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_slider</item>
    </style>

    <style name="UIDLabelDescription">
        <item name="fontPath">fonts/centralesansmedium.ttf</item>
        <item name="android:textColor">?attr/uidLabelRegularNormalTextColor</item>
    </style>

    <style name="UIDLabelDescription.MarginStart">
        <item name="android:layout_marginStart">@dimen/uid_label_margin_left_control</item>
    </style>

    <style name="UIDLabelDescription.SliderMarginBottom">
        <item name="android:layout_marginBottom">@dimen/uid_label_margin_bottom_slider</item>
    </style>


    <style name="UIDLabel.ProductRegistrationHeaderTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalTitleTextColor</item>
        <item name="android:textSize">@dimen/pr_title_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationSubTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalBodyTextColor</item>
        <item name="android:textSize">@dimen/fab_margin</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationConnectHeaderTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationConnectSubTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationProductHeaderTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationProductSubTitleTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalTitleTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.ProductRegistrationCtnTheme">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalDescriptorTextColor</item>
        <item name="android:textSize">@dimen/pr_c_value_sm</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.DateOfPurchaseStyle">
        <item name="android:textColor">?attr/uidContentItemDefaultNormalSubtitleTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textColor">#0066a1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="Prod_Reg_Generic_Style">
        <item name="android:paddingLeft">@dimen/pr_left_padding_sm</item>
        <item name="android:paddingRight">@dimen/pr_right_padding_sm</item>
        <item name="android:paddingTop">@dimen/pr_top_padding_sm</item>
        <item name="android:paddingBottom">@dimen/pr_bottom_padding_sm</item>
    </style>

</resources>
