<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/action_bar_lyt"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height">

    <RelativeLayout
        android:id="@+id/action_bar_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

        <ImageView
            android:id="@+id/home_icon"
            style="@style/actionbarIconHomeImageView"
            android:contentDescription="@string/img_description"/>

        <ImageView
            android:id="@+id/back_to_home_img"
            style="@style/actionbarIconArrowImageView"
            android:contentDescription="@string/img_description"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/action_bar_title"
        style="@style/actionbarFontTextView"/>
</RelativeLayout>
