<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/parent_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/success_background_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pr_success_image_height"
            android:visibility="gone"/>

        <LinearLayout
            style="@style/Prod_Reg_Generic_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pr_success_title_textview"
                style="@style/ProductRegistrationHeaderTitleTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PPR_RegSuccess_Lbltxt"/>


            <TextView
                android:id="@+id/pr_success_thanks_textView"
                style="@style/ProductRegistrationSubTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pr_top_padding_sm"
                android:text="@string/PPR_Thank_You_Lbltxt"/>

            <TextView
                android:id="@+id/pr_success_configurable_textView"
                style="@style/ProductRegistrationSubTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pr_top_padding_sm"
                android:text="@string/prod_reg_success_conf_text"/>

            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pr_bottom_padding_sm"
                android:layout_marginTop="@dimen/pr_d_value_sm"
                android:text="@string/PPR_Continue"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/register_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:text="@string/PPR_Register_Next"
                android:textAllCaps="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/back_to_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:text="@string/PPR_Back_To_List"
                android:textAllCaps="false"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>