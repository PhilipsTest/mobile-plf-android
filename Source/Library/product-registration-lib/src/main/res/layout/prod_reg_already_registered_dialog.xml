<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/uikit_modal_alert_button_left_margin">

    <TextView
        style="@style/ProductRegistrationProductHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Serial has been registered before"/>

    <TextView
        android:id="@+id/serial_number_message"
        style="@style/ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text=""/>

    <TextView
        style="@style/ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text="If this number is correct and your product is brand new, please contact customer care for further assistance."/>

    <Button
        android:id="@+id/button_change_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text="Change serial number"/>

    <Button
        android:id="@+id/button_contact_customer_care"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text="Contact customer care"/>

</LinearLayout>