<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/conf_action_textview"
        android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
        android:textSize="@dimen/pr_title_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_margintop"
        android:layout_marginBottom="@dimen/fab_margin"
        android:text="@string/PPR_RegYourProduct_Lbltxt"
        android:textStyle="bold"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/conf_subtext_two_textview"
        android:textColor="?attr/uidContentItemDefaultNormalSubtitleTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/pr_subtitle_textsize"
        android:text="@string/prod_reg_benefits_conf_message"
        />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/yes_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/PPR_Yes_Btntxt"
        android:textAllCaps="false"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/no_thanks_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:text="@string/PPR_RegLater_Btntxt"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/pr_margintop"
        app:uidComponentType="Secondary"
       />
</LinearLayout>
