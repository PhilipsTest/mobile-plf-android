<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/pr_e_value_sm"
                android:paddingTop="@dimen/pr_e_value_sm">

    <ScrollView
        android:id="@+id/pr_single_product_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_register"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/friendly_name"
                style="@style/ProductRegistrationProductHeaderTitleTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pr_e_value_sm"
                android:layout_marginRight="@dimen/pr_e_value_sm"/>

            <TextView
                android:id="@+id/product_title"
                style="@style/ProductRegistrationProductSubTitleTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/friendly_name"
                android:layout_below="@+id/friendly_name"
                android:layout_marginRight="@dimen/pr_e_value_sm"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/product_ctn"
                style="@style/ProductRegistrationCtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/friendly_name"
                android:layout_below="@+id/product_title"
                android:layout_marginRight="@dimen/pr_e_value_sm"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/serial_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/friendly_name"
                android:layout_below="@+id/product_ctn"
                android:layout_marginRight="@dimen/pr_e_value_sm"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serial_number_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/pr_e_value_sm"
                android:layout_marginRight="@dimen/pr_e_value_sm"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"/>

            <com.philips.cdp.uikit.customviews.InlineForms
                android:id="@+id/InlineForms_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:paddingBottom="@dimen/pr_d_value_sm"
                android:paddingTop="@dimen/pr_d_value_sm"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/date_edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/PhilipsTextInputLayoutTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/PPR_Date_Of_Purchase_Lbltxt"
                        android:textColor="?attr/uikit_baseColor"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/date_edit_text"
                        style="@style/PhilipsTextInputLayoutStyleEnabled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="?attr/uikit_brightColor"
                        android:textSize="16sp"/>
                </LinearLayout>

            </com.philips.cdp.uikit.customviews.InlineForms>

            <com.philips.cdp.uikit.customviews.InlineForms
                android:id="@+id/InlineForms_serial_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InlineForms_date"
                android:layout_marginTop="@dimen/pr_c_value_sm"
                android:paddingBottom="@dimen/pr_d_value_sm"
                android:paddingTop="@dimen/pr_d_value_sm"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/serial_edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/serial_number"
                        android:textColor="?attr/uikit_baseColor"
                        android:textSize="16sp"/>


                    <EditText
                        android:id="@+id/serial_edit_text"
                        style="@style/PhilipsTextInputLayoutStyleEnabled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="?attr/uikit_brightColor"
                        android:textSize="16sp"/>

                </LinearLayout>
            </com.philips.cdp.uikit.customviews.InlineForms>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pr_e_value_sm"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:text="@string/PPR_Register_Btntxt"
        android:textAllCaps="false"/>
</RelativeLayout>
