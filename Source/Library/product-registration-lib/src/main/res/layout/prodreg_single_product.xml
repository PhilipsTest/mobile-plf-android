<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/parent_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin">


        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/product_title"
            style="@style/ProductRegistrationHeaderTitleTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pr_a_value_sm"
            android:layout_marginTop="@dimen/pr_margintop"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/product_ctn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:orientation="horizontal"
            >

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/tick_icon"
                fontPath="fonts/puicon.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/prodreg_circle_tick"
                android:gravity="center"
                android:text="@string/uikit_fonticon_tick_bold"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:textSize="7sp"
                android:visibility="gone"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/product_ctn"
                style="@style/ProductRegistrationCtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/product_registered"
                style="@style/ProductRegistrationCtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PPR_registered"
                android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_ctn_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/pr_c_value_sm"
            android:layout_marginTop="@dimen/pr_margintop"
            android:scaleType="fitCenter"
            android:src="@drawable/prodreg_placeholder"/>

        <LinearLayout
            android:id="@+id/serial_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:orientation="vertical"
            android:visibility="gone">


            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PPR_SerialNum_Lbltxt"
                android:textColor="?attr/uidContentItemDefaultNormalSubtitleTextColor"
                android:textSize="14sp"/>


            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/serial_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/PPR_Invalid_SerialNum_ErrMsg">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/field_serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/PPR_Please_Enter_SerialNum_Txtfldtxt"
                    android:maxLines="1"
                    app:uidInputTextWithClearButton="true" />
            </com.philips.platform.uid.view.widget.InputValidationLayout>

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/findSerialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pr_b_value_sm"
                android:layout_marginStart="5dp"
                android:text="@string/PPR_Find_Serial_Number"
                android:textColor="?attr/uidContentItemDefaultNormalSubtitleTextColor"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serial_edit_text_layout"
            android:orientation="vertical"
            android:visibility="gone">


            <com.philips.platform.uid.view.widget.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PPR_Date_Of_Purchase_Lbltxt"
                android:textColor="?attr/uidContentItemDefaultNormalSubtitleTextColor"
                android:textSize="14sp"/>

            <com.philips.platform.uid.view.widget.InputValidationLayout
                android:id="@+id/data_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:uidTextBoxValidationErrorDrawable="@drawable/uid_ic_data_validation"
                app:uidTextBoxValidationErrorText="@string/PPR_Invalid_SerialNum_ErrMsg">

                <com.philips.platform.uid.view.widget.ValidationEditText
                    android:id="@+id/date_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/prodreg_calendar_inverted"
                    android:hint="@string/purchase_date_format"
                    />
            </com.philips.platform.uid.view.widget.InputValidationLayout>
        </LinearLayout>

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_edit_text_layout"
            android:layout_marginTop="@dimen/pr_margintop"
            android:text="@string/PPR_Register_Btntxt"
            android:textAllCaps="false"/>

        <LinearLayout
            android:id="@+id/successLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_register"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                style="@style/Prod_Reg_Generic_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/pr_success_title_textview"
                    style="@style/ProductRegistrationHeaderTitleTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PPR_RegSuccess_Lbltxt"/>


                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/pr_success_thanks_textView"
                    style="@style/ProductRegistrationSubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pr_top_padding_sm"
                    android:text="@string/PPR_Extended_Warranty_Lbltxt"/>

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/pr_success_configurable_textView"
                    style="@style/ProductRegistrationSubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pr_top_padding_sm"
                    android:text="@string/prod_reg_success_conf_text"/>

                <com.philips.platform.uid.view.widget.Button
                    android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pr_bottom_padding_sm"
                    android:layout_marginTop="@dimen/pr_d_value_sm"
                    android:text="@string/PPR_Continue"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

