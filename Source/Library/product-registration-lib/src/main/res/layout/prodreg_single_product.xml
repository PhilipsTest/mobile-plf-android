<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/pr_e_value_sm"
                android:paddingTop="@dimen/pr_e_value_sm">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="34sp"/>

    <TextView
        android:id="@+id/series_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_title"
        android:layout_below="@+id/product_title"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="28sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ctn_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_title"
        android:layout_below="@+id/series_title"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:textColor="@color/uikit_enricher4"
        android:textSize="24sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/serial_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_title"
        android:layout_below="@+id/ctn_number_tv"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/InlineForms_date"
        android:layout_below="@+id/serial_number_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:scaleType="fitCenter"/>

    <com.philips.cdp.uikit.customviews.InlineForms
        android:id="@+id/InlineForms_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/InlineForms_serial_number"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:paddingBottom="@dimen/pr_d_value_sm"
        android:paddingLeft="@dimen/pr_e_value_sm"
        android:paddingRight="@dimen/pr_e_value_sm"
        android:paddingTop="@dimen/pr_d_value_sm"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.5"
                android:text="@string/date_of_purchase"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="?attr/uikit_brightColor"
                android:textSize="28sp"/>
        </LinearLayout>
    </com.philips.cdp.uikit.customviews.InlineForms>

    <com.philips.cdp.uikit.customviews.InlineForms
        android:id="@+id/InlineForms_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:paddingBottom="@dimen/pr_d_value_sm"
        android:paddingLeft="@dimen/pr_e_value_sm"
        android:paddingRight="@dimen/pr_e_value_sm"
        android:paddingTop="@dimen/pr_d_value_sm"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/serial_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.5"
                android:text="Serial number:"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="28sp"/>


            <EditText
                android:id="@+id/serial_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="?attr/uikit_brightColor"
                android:textSize="28sp"/>

        </LinearLayout>
    </com.philips.cdp.uikit.customviews.InlineForms>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pr_e_value_sm"
        android:layout_marginLeft="@dimen/pr_e_value_sm"
        android:layout_marginRight="@dimen/pr_e_value_sm"
        android:text="@string/register_text"
        android:textAllCaps="false"/>
</RelativeLayout>
