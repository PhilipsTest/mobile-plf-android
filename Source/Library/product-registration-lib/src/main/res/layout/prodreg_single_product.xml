<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

    <com.philips.cdp.uikit.customviews.PuiEditText
        android:id="@+id/date_edit_text"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/serial_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        app:errorText="Invalid date"
        app:errorTextColor="@color/uikit_philips_bright_orange"
        />

    <com.philips.cdp.uikit.customviews.PuiEditText
        android:id="@+id/serial_edit_text"
        android:layout_width="@dimen/prodreg_edittext_width"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        app:errorText="Invalid serial number"
        app:errorTextColor="@color/uikit_philips_bright_orange"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Register"/>
</RelativeLayout>
