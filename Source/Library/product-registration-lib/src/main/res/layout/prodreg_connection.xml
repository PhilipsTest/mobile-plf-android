<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >


    <TextView
        android:id="@+id/pr_all_success_textview"
        style="@style/ProductRegistrationConnectHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pr_d_value_sm"
        android:layout_marginLeft="@dimen/pr_left_padding_sm"
        android:layout_marginRight="@dimen/pr_right_padding_sm"
        android:layout_marginTop="@dimen/pr_top_padding_sm"
        android:text="@string/PPR_AllProducts_Registered_Lbltxt"/>

    <TextView
        style="@style/ProductRegistrationConnectSubTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pr_all_success_textview"
        android:background="?attr/uikit_veryLightColor"
        android:paddingBottom="@dimen/pr_d_value_sm"
        android:paddingLeft="@dimen/pr_left_padding_sm"
        android:paddingRight="@dimen/pr_bottom_padding_sm"
        android:paddingTop="@dimen/pr_d_value_sm"
        android:text="@string/PPR_Do_You_Want_To_Reg_Lbltxt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pr_bottom_padding_sm"
        android:layout_marginLeft="@dimen/pr_left_padding_sm"
        android:layout_marginRight="@dimen/pr_right_padding_sm"
        android:orientation="vertical">


        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PPR_Back_Btntxt"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/connect_product_btn"
            style="?attr/uikit_outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/PPR_Connect_Product_Btntxt"
            android:textAllCaps="false"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>