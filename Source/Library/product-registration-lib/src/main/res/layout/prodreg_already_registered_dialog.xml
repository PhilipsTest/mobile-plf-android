<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/serial_number_title_message"
        style="@style/UIDLabel.ProductRegistrationProductHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/serial_number_registered_message"
        style="@style/UIDLabel.ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text=""
        android:visibility="gone"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/serial_number_warranty_message"
        style="@style/UIDLabel.ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text="@string/PPR_Continue"/>

</LinearLayout>
</FrameLayout>