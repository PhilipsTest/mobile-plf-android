<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_id"
        android:layout_width="@dimen/uikit_modal_alert_dialog_width"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/uikit_modal_alert"
        android:minHeight="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogTitle"
            fontPath="fonts/centralesansbook.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/uikit_modal_alert_button_left_margin"
            android:layout_marginTop="10dp"
            android:text="@string/uikit_modal_alert_label"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_label_text_size"/>

        <TextView
            android:id="@+id/dialogDescription"
            fontPath="fonts/centralesansbook.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/uikit_modal_alert_button_left_margin"
            android:layout_marginRight="@dimen/uikit_modal_alert_text_right_margin"
            android:text="@string/uikit_modal_alert_message"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/uikit_modal_alert_message_text_size"/>

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minWidth="@dimen/uikit_modal_alert_button_width"
            android:text="OK"
            android:textAllCaps="false"
            android:textSize="@dimen/uikit_modal_alert_message_text_size"/>
    </RelativeLayout>
</FrameLayout>
