<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.ProgressBar
        android:id="@+id/progress_bar"
        style="@style/UIDProgressBarCircularDeterminateMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/dialogDescription"
        fontPath="fonts/centralesansbook.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:textColor="?attr/uidContentItemDefaultNormalSubtitleTextColor"
        android:textSize="20sp"/>

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogDescription"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/pr_margintop"
        android:layout_marginTop="@dimen/pr_c_value_sm"
        android:text="@string/PRG_Close"
        android:textAllCaps="false"
        app:uidComponentType="Secondary"
        />
</RelativeLayout>
