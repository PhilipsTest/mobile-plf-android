<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/pr_e_value_tablet">

    <TextView
        android:id="@+id/friendly_name"
        style="@style/ProductRegsitraionProductHeaderTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pr_first_launch_padding_left"
        android:layout_marginRight="@dimen/pr_first_launch_padding_right"/>

    <TextView
        android:id="@+id/product_title"
        style="@style/ProductRegsitraionProductSubTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendly_name"
        android:layout_below="@+id/friendly_name"
        android:layout_marginTop="@dimen/pr_c_value_tablet"/>

    <TextView
        android:id="@+id/product_ctn"
        style="@style/ProductRegsitraionCtnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendly_name"
        android:layout_below="@+id/product_title"
        android:layout_marginTop="@dimen/pr_c_value_tablet"/>

    <TextView
        android:id="@+id/serial_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendly_name"
        android:layout_below="@+id/product_ctn"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serial_number_tv"
        android:layout_marginLeft="@dimen/pr_first_launch_padding_left"
        android:layout_marginRight="@dimen/pr_first_launch_padding_right"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:scaleType="fitCenter"/>

    <com.philips.cdp.uikit.customviews.InlineForms
        android:id="@+id/InlineForms_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:paddingBottom="@dimen/pr_c_value_tablet"
        android:paddingTop="@dimen/pr_c_value_tablet"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/PhilipsTextInputLayoutTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date_of_purchase"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/date_edit_text"
                style="@style/PhilipsTextInputLayoutStyleEnabled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="?attr/uikit_brightColor"
                android:textSize="16sp"/>
        </LinearLayout>
    </com.philips.cdp.uikit.customviews.InlineForms>

    <com.philips.cdp.uikit.customviews.InlineForms
        android:id="@+id/InlineForms_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InlineForms_date"
        android:paddingBottom="@dimen/pr_c_value_tablet"
        android:paddingTop="@dimen/pr_c_value_tablet"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/serial_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/PhilipsTextInputLayoutTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Serial number:"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/serial_edit_text"
                style="@style/PhilipsTextInputLayoutStyleEnabled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="?attr/uikit_brightColor"
                android:textSize="16sp"/>

        </LinearLayout>
    </com.philips.cdp.uikit.customviews.InlineForms>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InlineForms_serial_number"
        android:layout_marginBottom="@dimen/pr_e_value_sm"
        android:layout_marginLeft="@dimen/pr_first_launch_padding_left"
        android:layout_marginRight="@dimen/pr_first_launch_padding_right"
        android:text="@string/register_text"
        android:textAllCaps="false"/>
</RelativeLayout>
