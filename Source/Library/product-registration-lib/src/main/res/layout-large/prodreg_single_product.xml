<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/parent_id"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pr_e_value_tablet"
            android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pr_e_value_sm"
        android:paddingEnd="@dimen/pr_first_launch_padding_right"
        android:paddingStart="@dimen/pr_first_launch_padding_left">

        <TextView
            android:id="@+id/friendly_name"
            style="@style/ProductRegistrationProductHeaderTitleTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/product_title"
            style="@style/ProductRegistrationProductSubTitleTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friendly_name"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/product_ctn"
            style="@style/ProductRegistrationCtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:layout_marginTop="@dimen/pr_a_value_tablet"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_ctn"
            android:layout_marginTop="@dimen/pr_c_value_tablet"
            android:minHeight="140dp"
            android:minWidth="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/product_placeholder"/>

        <com.philips.cdp.uikit.customviews.InlineForms
            android:id="@+id/InlineForms_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:layout_marginTop="@dimen/pr_c_value_tablet"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/date_edit_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/PPR_Date_Of_Purchase_Lbltxt"
                    android:textColor="?attr/uikit_baseColor"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/date_edit_text"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:hint="@string/PPR_Please_Enter_Date_Lbltxt"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="?attr/uikit_LightColor"
                    android:textColorHint="?attr/uikit_LightColor"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.philips.cdp.uikit.customviews.InlineForms>

        <LinearLayout
            android:id="@+id/serial_number_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/InlineForms_date"
            android:layout_marginTop="@dimen/pr_c_value_tablet"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.philips.cdp.uikit.customviews.InlineForms
                android:id="@+id/InlineForms_serial_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                android:id="@+id/serial_edit_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/PhilipsTextInputLayoutTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/PPR_SerialNum_Lbltxt"
                    android:textColor="?attr/uikit_baseColor"
                    android:textSize="16sp"/>


                <EditText
                    android:id="@+id/serial_edit_text"
                    style="@style/PhilipsTextInputLayoutStyleEnabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:hint="@string/PPR_Please_Enter_SerialNum_Txtfldtxt"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="?attr/uikit_LightColor"
                    android:textColorHint="?attr/uikit_LightColor"
                    android:textSize="16sp"/>

            </LinearLayout>
        </com.philips.cdp.uikit.customviews.InlineForms>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pr_right_padding_sm"
                android:layout_marginStart="@dimen/pr_left_padding_sm"
                android:text="@string/PPR_Find_Serial_Number"
                android:textColor="?attr/uikit_LightColor"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serial_number_parent_layout"
            android:layout_marginTop="33dp"
            android:text="@string/PPR_Register_Btntxt"
            android:textAllCaps="false"/>
    </RelativeLayout>
</ScrollView>