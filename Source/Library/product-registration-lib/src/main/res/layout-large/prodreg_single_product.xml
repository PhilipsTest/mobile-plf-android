<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/parent_id"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pr_e_value_tablet"
            android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pr_e_value_sm"
        android:paddingEnd="@dimen/pr_first_launch_padding_right"
        android:paddingStart="@dimen/pr_first_launch_padding_left">

        <TextView
            android:id="@+id/friendly_name"
            style="@style/ProductRegistrationProductHeaderTitleTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/product_title"
            style="@style/ProductRegistrationProductSubTitleTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friendly_name"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/product_ctn"
            style="@style/ProductRegistrationCtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:layout_marginTop="@dimen/pr_a_value_tablet"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_ctn"
            android:layout_marginTop="@dimen/pr_c_value_tablet"
            android:minHeight="140dp"
            android:minWidth="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/product_placeholder"/>


        <LinearLayout
            android:id="@+id/serial_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:layout_marginTop="@dimen/pr_top_padding_sm"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PPR_SerialNum_Lbltxt"
                android:textColor="?attr/uikit_LightColor"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/serial_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pr_registration_margin_bottom"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/pr_registration_margin_top"
                android:ellipsize="end"
                android:hint="@string/PPR_Please_Enter_SerialNum_Txtfldtxt"
                android:maxLines="1"
                android:textColor="?attr/uikit_LightColor"
                android:textSize="16sp"/>


            <LinearLayout
                android:id="@+id/serial_number_error_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pr_registration_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pr_circle"
                    android:gravity="center"
                    android:text="@string/uikit_question_mark"
                    android:textColor="@color/uikit_white"/>

                <TextView
                    android:id="@+id/serialErrorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/PPR_Find_Serial_Number"
                    android:textColor="?attr/uikit_LightColor"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serial_edit_text_layout"
            android:layout_marginTop="@dimen/pr_c_value_tablet"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PPR_Date_Of_Purchase_Lbltxt"
                android:textColor="?attr/uikit_LightColor"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pr_registration_margin_bottom"
                android:layout_marginTop="@dimen/pr_registration_margin_top"
                android:drawableEnd="@drawable/ic_launcher"
                android:ellipsize="end"
                android:hint="@string/PPR_Please_Enter_Date_Lbltxt"
                android:maxLines="1"
                android:textColor="?attr/uikit_LightColor"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/date_error_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.shamanland.fonticon.FontIconTextView
                    android:id="@+id/inline_error_icon"
                    fontPath="fonts/puicon.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/uikit_fonticon_cross"
                    android:textColor="?attr/uikit_erroriconcolorinlineforms"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dateErrorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/uikit_erroriconcolorinlineforms"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_edit_text_layout"
            android:layout_marginTop="33dp"
            android:text="@string/PPR_Register_Btntxt"
            android:textAllCaps="false"/>

        <LinearLayout
            android:id="@+id/successLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/pr_first_launch_padding_right"
                android:paddingStart="@dimen/pr_first_launch_padding_left"
                android:paddingTop="@dimen/pr_first_launch_padding_top">

                <TextView
                    android:id="@+id/pr_success_title_textview"
                    style="@style/ProductRegistrationHeaderTitleTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/PPR_RegSuccess_Lbltxt"
                    />


                <TextView
                    android:id="@+id/pr_success_thanks_textView"
                    style="@style/ProductRegistrationSubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pr_success_title_textview"
                    android:layout_marginTop="@dimen/pr_c_value_tablet"
                    android:text="@string/PPR_Thank_You_Lbltxt"/>

                <TextView
                    android:id="@+id/pr_success_configurable_textView"
                    style="@style/ProductRegistrationSubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pr_success_thanks_textView"
                    android:layout_marginTop="@dimen/pr_top_padding_sm"
                    android:text="@string/prod_reg_success_conf_text"
                    />

                <LinearLayout
                    android:id="@+id/reg_more_btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pr_success_configurable_textView"
                    android:layout_marginBottom="@dimen/pr_bottom_padding_sm"
                    android:layout_marginTop="@dimen/pr_d_value_tablet"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/continueButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PPR_Continue"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/register_next_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/pr_c_value_tablet"
                        android:text="@string/PPR_Register_Next"
                        android:textAllCaps="false"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/back_to_list_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/pr_c_value_tablet"
                        android:text="@string/PPR_Back_To_List"
                        android:textAllCaps="false"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>