<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingEnd="@dimen/pr_first_launch_padding_right"
                  android:paddingStart="@dimen/pr_first_launch_padding_left">

        <ImageView
            android:id="@+id/device_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="@dimen/pr_top_padding_sm_tablet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_top_padding_sm_tablet"
            android:text="@string/PPR_Find_Serial_Number"
            android:textColor="?attr/uikit_verydarkBaseColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_d_value_tablet"
            android:text="@string/PPR_find_serial_number_help_message"
            android:textColor="?attr/uikit_baseColor"/>

        <TextView
            android:id="@+id/serial_number_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_d_value_tablet"
            android:textColor="?attr/uikit_baseColor"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pr_d_value_tablet"
            android:text="@string/PPR_ok_i_found_it"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>