<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pr_first_launch_padding_left"
                android:paddingRight="@dimen/pr_first_launch_padding_right"
                android:paddingTop="@dimen/pr_first_launch_padding_top">

    <TextView
        android:id="@+id/conf_action_textview"
        style="@style/ProductRegistrationHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:text="@string/PPR_RegYourProduct_Lbltxt"/>

    <TextView
        android:id="@+id/conf_subtext_textview"
        style="@style/ProductRegistrationSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conf_action_textview"
        android:layout_below="@+id/conf_action_textview"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:text="@string/pr_first_launch_subtext_first"/>

    <TextView
        android:id="@+id/conf_subtext_two_textview"
        style="@style/ProductRegistrationSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conf_action_textview"
        android:layout_below="@+id/conf_subtext_textview"
        android:text="@string/prod_reg_benefits_conf_message"
        />

    <Button
        android:id="@+id/yes_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conf_subtext_two_textview"
        android:layout_marginTop="@dimen/pr_d_value_tablet"
        android:text="@string/PPR_Yes_Btntxt"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/no_thanks_button"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yes_register_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:text="@string/PPR_RegLater_Btntxt"
        android:textAllCaps="false"/>

</RelativeLayout>