<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pr_first_launch_padding_left"
                android:paddingRight="@dimen/pr_first_launch_padding_right"
                android:paddingTop="@dimen/pr_first_launch_padding_top">

    <TextView
        android:id="@+id/conf_action_textview"
        style="@style/ProductRegsitraionHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/prod_reg_register_product_message"/>

    <TextView
        android:id="@+id/conf_subtext_textview"
        style="@style/ProductRegsitraionSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conf_action_textview"
        android:layout_below="@+id/conf_action_textview"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:text="@string/pr_first_launch_subtext_first"/>

    <TextView
        android:id="@+id/conf_subtext_two_textview"
        style="@style/ProductRegsitraionSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conf_action_textview"
        android:layout_below="@+id/conf_subtext_textview"
        android:text="@string/pr_first_launch_subtext_second"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/yes_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conf_subtext_textview"
        android:layout_marginTop="@dimen/pr_d_value_tablet"
        android:text="@string/register_text"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/no_thanks_button"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yes_register_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/pr_c_value_tablet"
        android:text="@string/no_thanks_text"
        android:textAllCaps="false"/>

</RelativeLayout>