<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraBearing="45"
        map:cameraTargetLat="12.920102"
        map:cameraTargetLng="77.571412"
        map:cameraTilt="0"
        map:cameraZoom="13"
        map:mapType="normal"
        map:uiCompass="true"
        map:uiRotateGestures="true"
        map:uiScrollGestures="true"
        map:uiTiltGestures="true"
        map:uiZoomControls="false"
        map:uiZoomGestures="true" />

    <include layout="@layout/locate_search" />

    <RelativeLayout
        android:id="@+id/locate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/placelistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/placelistview_margin_top"
            android:background="@color/white"
            android:divider="#cccccc"
            android:dividerHeight="1dp"
            android:visibility="gone" >
        </ListView>

        <ScrollView
            android:id="@+id/showLayoutscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/showLayoutscroll_margin_top" >

            <LinearLayout
                android:id="@+id/showlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:paddingBottom="@dimen/showlayout_padding_bottom"
                android:paddingLeft="@dimen/showlayout_padding_left"
                android:paddingRight="@dimen/showlayout_padding_right"
                android:paddingTop="@dimen/showlayout_padding_top"
                android:visibility="gone" >

                <!-- Title -->

                <TextView
                    android:id="@+id/show_place_title"
                    style="@style/locateNearText"
                    android:text=""
                    android:textStyle="bold"
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <!-- Address -->

                <TextView
                    android:id="@+id/show_place_address"
                    style="@style/locateNearText"
                    android:text=""
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <com.philips.cl.di.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/getdirection"
                    style="@style/fontButton"
                    android:text="@string/get_directions" />

                <com.philips.cl.di.digitalcare.customview.DigitalCareFontButton
                    android:id="@+id/call"
                    style="@style/fontButton"
                    android:text="@string/call" />

                <TextView
                    android:id="@+id/contactUsOpeningHours"
                    style="@style/contactUsHelpText"
                    android:layout_marginBottom="0dp"
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <TextView
                    android:id="@+id/firstRowText"
                    style="@style/contactUsBottomText"
                    android:visibility="gone"
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <TextView
                    android:id="@+id/secondRowText"
                    style="@style/contactUsBottomText"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    custom:fontAssetName="fonts/centralesans-book.otf" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>