<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/products_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F4F9"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/toplayout"
                style="@style/viewProductDetails_TopContainer" >

                <ImageView
                    android:id="@+id/productimage"
                    style="@style/viewProductDetails_ProdImage"
                    android:contentDescription="@string/product_name"
                    android:src="@drawable/viewproduct_productimage" />

                <TextView
                    android:id="@+id/name"
                    style="@style/viewProductDetails_Product_Header"
                    android:layout_alignTop="@+id/productimage"
                    android:text="@string/product_name"
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <TextView
                    android:id="@+id/variant"
                    style="@style/viewProductDetails_Product_Variant"
                    android:text="@string/product_variant"
                    custom:fontAssetName="fonts/centralesans-book.otf" />
            </RelativeLayout>

            <View
                android:id="@+id/topline"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/toplayout"
                android:background="#cccccc" />

            <!-- Buttons -->

            <RelativeLayout
                android:id="@+id/prodbuttons"
                style="@style/viewProductDetails_ManualButtons_Container" >

                <com.philips.cl.di.dev.pa.digitalcare.customview.FontButton
                    android:id="@+id/manual_open"
                    style="@style/viewProductDetails_Buttons"
                    android:contentDescription="@string/product_name"
                    android:text="@string/product_open_manual"
                     />

                <com.philips.cl.di.dev.pa.digitalcare.customview.FontButton
                    android:id="@+id/manual_download"
                    style="@style/viewProductDetails_Buttons"
                    android:layout_below="@+id/manual_open"
                    android:contentDescription="@string/product_name"
                    android:text="@string/product_download_manual"
                    custom:fontAssetName="fonts/centralesans-book.otf" />

                <com.philips.cl.di.dev.pa.digitalcare.customview.FontButton
                    android:id="@+id/prodinfo_button"
                    style="@style/viewProductDetails_Buttons"
                    android:layout_below="@+id/manual_download"
                    android:contentDescription="@string/product_name"
                    android:text="@string/product_information"
                    custom:fontAssetName="fonts/centralesans-book.otf" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Video Ads -->

        <RelativeLayout
            android:id="@+id/prodads_layout"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_below="@+id/subContainer"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/adimage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/product_name"
                android:scaleType="fitXY"
                android:src="@drawable/viewproduct_video_image_phone" />

            <ImageView
                android:id="@+id/leftarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:contentDescription="@string/product_name"
                android:src="@drawable/viewproduct_video_leftarrow" />

            <ImageView
                android:id="@+id/rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:contentDescription="@string/product_name"
                android:src="@drawable/viewproduct_videorightarrow" />

            <ImageButton
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/product_name"
                android:src="@drawable/viewproduct_video_play" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>