<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:background="@color/activity_bg" >

    <LinearLayout
        android:id="@+id/products_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/toplayout"
            style="@style/viewProductDetails_TopContainer"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin" >

            <ImageView
                android:id="@+id/productimage"
                style="@style/viewProductDetails_ProdImage"
                android:contentDescription="@string/product_name"
                android:src="@drawable/viewproduct_productimage" />

            <TextView
                android:id="@+id/name"
                style="@style/viewProductDetails_Product_Header"
                android:layout_alignTop="@+id/productimage"
                android:text="@string/product_name"
                custom:fontAssetName="fonts/centralesans-book.otf" />

            <TextView
                android:id="@+id/variant"
                style="@style/viewProductDetails_Product_Variant"
                android:text="@string/product_variant"
                custom:fontAssetName="fonts/centralesans-book.otf" />
        </RelativeLayout>

        <View
            android:id="@+id/topline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <!-- Buttons -->

        <RelativeLayout
            android:id="@+id/prodbuttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="20dp" >

            <com.philips.cl.di.dev.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/manual_open"
                style="@style/fontButton"
                android:contentDescription="@string/product_name"
                android:text="@string/product_open_manual" />

            <com.philips.cl.di.dev.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/manual_download"
                style="@style/fontButton"
                android:layout_below="@+id/manual_open"
                android:contentDescription="@string/product_name"
                android:text="@string/product_download_manual"
                custom:fontAssetName="fonts/centralesans-book.otf" />

            <com.philips.cl.di.dev.digitalcare.customview.DigitalCareFontButton
                android:id="@+id/prodinfo_button"
                style="@style/fontButton"
                android:layout_below="@+id/manual_download"
                android:contentDescription="@string/product_name"
                android:text="@string/product_information"
                custom:fontAssetName="fonts/centralesans-book.otf" />
        </RelativeLayout>

