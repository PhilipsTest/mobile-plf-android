<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:background="@color/activity_bg">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <LinearLayout
            android:id="@+id/firstParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tellus_philips_submitreview_text"
                style="@style/supportHomeHelpText"
                android:layout_gravity="fill_horizontal"
                android:text="@string/rate_playstore_headertext"
                android:textStyle="bold"
                custom:fontAssetName="fonts/centralesans-bold.otf" />

            <TextView
                style="@style/supportHomeHelpText"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="0dp"
                android:text="@string/rate_philips_description"
                android:textColor="@color/text_sub_header_color"
                android:textSize="@dimen/title_text_size_medium"
                custom:fontAssetName="fonts/centralesans-book.otf" />

            <com.philips.cl.di.dev.pa.digitalcare.customview.FontButton
                android:id="@+id/tellus_PlayStoreReviewButton"
                style="@style/fontButton"
                android:text="@string/rate_playstore_buttontext"
                custom:fontAssetName="fonts/centralesans-book.otf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/secondParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/supportHomeHelpText"
                android:layout_gravity="fill_horizontal"
                android:text="@string/rate_philips_headertext"
                custom:fontAssetName="fonts/centralesans-bold.otf" />

            <TextView
                style="@style/supportHomeHelpText"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="0dp"
                android:text="@string/rate_philips_description"
                android:textColor="@color/text_sub_header_color"
                android:textSize="@dimen/title_text_size_medium"
                custom:fontAssetName="fonts/centralesans-book.otf" />

            <com.philips.cl.di.dev.pa.digitalcare.customview.FontButton
                android:id="@+id/tellus_PhilipsReviewButton"
                style="@style/fontButton"
                android:text="@string/rate_philips_buttontext"
                custom:fontAssetName="fonts/centralesans-book.otf" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>