<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="contactUsHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>

    <style name="contactUsFontButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/support_btn_height</item>
        <item name="android:background">@drawable/selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>
    
    <style name="contactUsBottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/text_sub_header_color</item>
        <item name="android:textSize">@dimen/title_text_size_small</item>
    </style>

</resources>