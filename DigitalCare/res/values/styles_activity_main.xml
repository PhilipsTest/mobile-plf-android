<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="optionImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">14dp</item>
         <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="optionFontButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/option_button_bg_selector</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="optionHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textSize">@dimen/help_text_size_large</item>
    </style>

</resources>