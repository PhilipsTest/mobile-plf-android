<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="prodRegImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="prodRegFontButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">120dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="prodRegHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/option_button_bg_blue</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
    </style>

</resources>