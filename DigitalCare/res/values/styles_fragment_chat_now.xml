<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="chatNowHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:textColor">@color/actionbar_title_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_largest</item>
        <item name="android:text">@string/can_we_help_you</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
    </style>

    <style name="chatNowDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/button_bg</item>
        <item name="android:text">@string/chat_desc</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
    </style>

    <style name="chatNowFontButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/support_btn_height</item>
        <item name="android:background">@drawable/selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
    </style>

</resources>