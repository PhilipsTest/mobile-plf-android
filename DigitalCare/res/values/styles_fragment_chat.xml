<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="chatNowHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_largest</item>
        <item name="android:text">@string/can_we_help_you</item>
        <item name="android:paddingEnd">@dimen/activity_margin</item>
        <item name="android:paddingStart">@dimen/activity_margin</item>
    </style>

    <style name="chatNowDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/text_sub_header_color</item>
        <item name="android:text">@string/chat_desc</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
        <item name="android:paddingEnd">@dimen/activity_margin</item>
        <item name="android:paddingStart">@dimen/activity_margin</item>
    </style>

</resources>