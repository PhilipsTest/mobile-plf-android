<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="supportHomeImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="supportHomeFontButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/support_btn_height</item>
        <item name="android:background">@drawable/selector_option_button_bg</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/btn_text_size_large</item>
    </style>
    
    <style name="supportHomeHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/option_button_bg_blue</item>
        <item name="android:textSize">@dimen/title_text_size_large</item>
    </style>

</resources>