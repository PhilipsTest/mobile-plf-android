<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_sign_in_with"
                style="@style/reg_textStyle"
                android:layout_marginBottom="0dip"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/RegSignWith_Lbltxt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_almost_done"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cdp.registration.ui.customviews.XTextView
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:text="@string/Social_SignIn_AlmostDone_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XEmail
                    android:id="@+id/rl_reg_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:visibility="gone" />
            </LinearLayout>

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_periodic_offers_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <CheckBox
                    android:id="@+id/cb_reg_register_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reg_checkbox_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="0dip"
                    android:text="@string/Create_Account_PeridicOffers_lbltxt"
                    android:textColor="@color/reg_text_heading_one_color"
                    android:textSize="@dimen/reg_title_text_size_medium" />
            </LinearLayout>

            <View
                style="@style/reg_line"
                android:layout_marginBottom="@dimen/reg_margin_bottom" />

            <RelativeLayout
                android:id="@+id/rl_reg_btn_continue_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/reg_btn_continue"
                    style="@style/reg_style_btn"
                    android:enabled="false"
                    android:text="@string/Continue_Btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <ProgressBar
                    android:id="@+id/pb_reg_social_almost_done_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/reg_pb_padding"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg_activate_acct"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>