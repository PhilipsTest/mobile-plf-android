<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_reg_create_account_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XUserName
                    android:id="@+id/rl_reg_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="@dimen/reg_header_margin_top" />

                <com.philips.cdp.registration.ui.customviews.XEmail
                    android:id="@+id/rl_reg_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom" />

                <com.philips.cdp.registration.ui.customviews.XPassword
                    android:id="@+id/rl_reg_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom" />
            </LinearLayout>



            <LinearLayout
                style="@style/reg_text_background"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip">

                <com.philips.cdp.registration.ui.customviews.XPasswordHint
                    android:id="@+id/view_reg_password_hint"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_margin_bottom"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_accept_terms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <CheckBox
                    android:id="@+id/cb_reg_accept_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reg_checkbox_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="0dip"
                    android:textColor="@color/reg_text_heading_one_color"
                    android:textSize="@dimen/reg_title_text_size_medium" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_accept_terms"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="0dip"
                    android:gravity="center|left"
                    android:text="@string/TermsAndConditionsAcceptanceText"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/cb_reg_accept_terms_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone" />

            <View
                android:id="@+id/reg_accept_terms_line"
                style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <CheckBox
                    android:id="@+id/cb_reg_register_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reg_checkbox_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="0dip"
                    android:text="@string/ReciveMarketing_PeridicOffers_lbltxt"
                    android:textColor="@color/reg_text_heading_one_color"
                    android:textSize="@dimen/reg_title_text_size_medium" />
            </LinearLayout>

            <View
                style="@style/reg_line"
                android:layout_marginBottom="@dimen/reg_margin_bottom" />

            <RelativeLayout
                android:id="@+id/rl_reg_singin_options"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_height"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_register"
                    style="@style/reg_style_btn"
                    android:enabled="false"
                    android:text="@string/Create_Account_CreateMyPhilips_btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <ProgressBar
                    android:id="@+id/pb_reg_activate_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/reg_pb_padding"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>