<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_welcome"
                style="@style/reg_titleTextStyle"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/Signin_Success_Hello_lbltxt"
                reglib:fontAssetName="CentraleSans-Light.otf" />

            <View style="@style/reg_line" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_sign_in_using"
                style="@style/reg_textStyle"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/InitialSignedIn_SignedInUsing_lbltxt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_email_details_container"
                style="@style/reg_textStyle"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/InitialSignUp_EmailVerification_EmailInfo_lbltxt"
                android:visibility="gone"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View style="@style/reg_line" />

            <FrameLayout
                android:id="@+id/fl_reg_receive_philips_news"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_btn_height">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin">

                    <CheckBox
                        android:id="@+id/cb_reg_receive_philips_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/reg_checkbox_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip"
                        android:textColor="@color/reg_text_heading_one_color"
                        android:textSize="@dimen/reg_title_text_size_medium" />

                    <com.philips.cdp.registration.ui.customviews.XTextView
                        android:id="@+id/tv_reg_philips_news"
                        style="@style/reg_textStyle"
                        android:layout_marginBottom="0dip"
                        android:gravity="center|left"
                        android:text="@string/Receive_Philips_News_lbltxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_reg_welcome_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_gravity="center"
                    android:padding="@dimen/reg_pb_padding"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_reg_attention_box"
                style="@style/reg_text_background"
                android:layout_marginTop="0dip">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_more_account_Setting"
                    style="@style/reg_text_description"
                    android:text="@string/Access_More_Account_Setting_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <View
                android:id="@+id/reg_view_line"
                style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/rl_reg_continue_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <FrameLayout
                    android:id="@+id/fl_reg_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_sign_out"
                        style="@style/reg_style_btn"
                        android:layout_height="@dimen/reg_btn_height"
                        android:enabled="true"
                        android:text="@string/SignOut_btntxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_log_out_from_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/reg_btn_height"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>