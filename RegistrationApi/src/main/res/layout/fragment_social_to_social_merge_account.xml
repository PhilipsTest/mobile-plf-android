<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_account_merge_sign_in"
                style="@style/reg_textStyle"
                android:layout_marginBottom="0dip"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/Merge_your_Account"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_account_merge_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_provider_Details"
                    style="@style/reg_textStyle"
                    android:text="@string/Account_Merge_social_UsedEmail_Error_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_conflict_provider"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:text="@string/Social_provider_merge_account"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_merge_account_box"
                style="@style/reg_text_background"
                android:layout_marginTop="0dip">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_merge_account_box"
                    style="@style/reg_text_description"
                    android:text="@string/merge_social_provider_box"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <RelativeLayout
                android:id="@+id/rl_reg_btn_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <FrameLayout
                    android:id="@+id/fl_reg_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_merg"
                        style="@style/reg_style_btn"
                        android:enabled="true"
                        android:text="@string/Account_Merge_Merge_btntxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_merge_sign_in_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_reg_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/fl_reg_sign_in">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_cancel"
                        style="@style/reg_forgot_password"
                        android:layout_height="@dimen/reg_btn_height"
                        android:background="@drawable/reg_btn_forgot_rect"
                        android:text="@string/cancel"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>