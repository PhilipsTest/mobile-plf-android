<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="reg_style_tab_hint">
        <item name="android:textSize">@dimen/btn_reg_text_size</item>
        <item name="android:paddingLeft">@dimen/reg_home_tiltle_padding</item>
        <item name="android:paddingRight">@dimen/reg_home_tiltle_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Divider -->
    <style name="reg_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/reg_devider_color</item>
        <item name="android:layout_marginTop">@dimen/reg_margin_bottom</item>
        <item name="android:layout_marginBottom">@dimen/reg_margin_bottom</item>
    </style>

    <style name="reg_textStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_marginBottom">@dimen/reg_margin_bottom</item>
        <item name="android:textColor">@color/reg_text_heading_one_color</item>
        <item name="android:textSize">@dimen/reg_title_text_size_medium</item>
    </style>

    <style name="reg_text_description">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/reg_text_desc_color</item>
        <item name="android:paddingTop">@dimen/reg_margin_bottom</item>
        <item name="android:paddingBottom">@dimen/reg_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/reg_layout_margin</item>
        <item name="android:paddingRight">@dimen/reg_layout_margin</item>
        <item name="android:textSize">@dimen/reg_title_text_size_small</item>
    </style>

    <style name="reg_text_background">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/reg_text_desc_bg</item>
        <item name="android:layout_marginTop">@dimen/reg_common_margin_top</item>
    </style>

    <style name="reg_titleTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/reg_text_heading_one_color</item>
        <item name="android:textSize">@dimen/reg_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/reg_header_margin_top</item>
        <item name="android:paddingLeft">@dimen/reg_layout_margin</item>
        <item name="android:paddingRight">@dimen/reg_layout_margin</item>
    </style>

    <style name="reg_error_textStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/reg_title_text_size_medium</item>
    </style>

    <style name="reg_forgot_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/reg_forgot_text_color</item>
        <item name="android:textSize">@dimen/btn_reg_text_size</item>
    </style>

    <!-- Header style -->
    <style name="reg_style_homescreen_title">
        <item name="android:textSize">@dimen/reg_header_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Small Button Style -->
    <style name="reg_style_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/reg_btn_selector</item>
        <item name="android:paddingBottom">@dimen/reg_btn_padding_top</item>
        <item name="android:paddingTop">@dimen/reg_btn_padding_top</item>
        <item name="android:paddingLeft">@dimen/reg_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/reg_btn_padding_left</item>
        <item name="android:minHeight">@dimen/reg_btn_height</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@drawable/reg_btn_text_selector</item>
        <item name="android:textSize">@dimen/btn_reg_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>