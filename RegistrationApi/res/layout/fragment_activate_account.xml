<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_veify_email"
            style="@style/textStyle"
            android:layout_marginTop="@dimen/margin_bottom"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:text="@string/verify_email" >
        </TextView>

        <View
            android:id="@+id/line_id"
            style="@style/line" >
        </View>

        <LinearLayout
            android:id="@+id/ll_welcome_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <TextView
                style="@style/textStyle"
                android:text="@string/sent_email" >
            </TextView>

            <TextView
                style="@style/textStyle"
                android:text="@string/ready_email" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_create_account_container"
            style="@style/textBackground"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_resend_details"
                style="@style/textStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingRight="@dimen/layout_margin"
                android:text="@string/press_resend" >
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_singin_options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <Button
                android:id="@+id/activate_acct_btn"
                style="@style/buttonStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:background="@drawable/navigation_bar"
                android:text="@string/activate_account" />

            <Button
                android:id="@+id/resend_btn"
                style="@style/resend_btn"
                android:layout_below="@+id/activate_acct_btn"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:background="@drawable/resend"
                android:text="@string/resend" />

            <ProgressBar
                android:id="@+id/pb_spinner"
                android:layout_width="@dimen/rg_fb_icon_height"
                android:layout_height="@dimen/rg_fb_icon_height"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:indeterminateDrawable="@drawable/bts_progress_drawable"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>