<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_reg_email_verified_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reg_btn_height"
        android:background="@drawable/reg_et_focus_disable"
        >

        <FrameLayout
            android:id="@+id/fl_reg_align"
            android:layout_width="@dimen/reg_err_alert_width"
            android:layout_height="@dimen/reg_err_alert_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/reg_x_edit_field_margin"
            android:layout_marginLeft="@dimen/reg_x_edit_field_margin"
            android:layout_marginRight="@dimen/reg_x_edit_field_margin_right"
            android:layout_marginTop="@dimen/reg_x_edit_field_margin" >

            <ImageView
                android:id="@+id/iv_reg_email_error_alert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc"
                android:src="@drawable/reg_error_alert"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_reg_valid_email_alert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc"
                android:src="@drawable/reg_valid_alert"
                android:visibility="gone" />
        </FrameLayout>

        <com.philips.cl.di.reg.ui.customviews.XEditText
            android:id="@+id/et_reg_email"
            style="@style/reg_style_tab_hint"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/fl_reg_align"
            android:hint="@string/TraditionalSignIn_EmailAddPlaceHolder_txtFiled"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:maxLength="@integer/reg_et_email_max_length"
            reglib:fontAssetName="fonts/CentraleSans-Light.otf" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_reg_up_arrow"
        android:layout_width="@dimen/reg_arrow_up_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_reg_email_verified_field"
        android:layout_marginRight="@dimen/reg_arrow_margin_right"
        android:src="@drawable/reg_up_arrow"
        android:visibility="gone" />

    <com.philips.cl.di.reg.ui.customviews.XTextView
        android:id="@+id/tv_reg_name_err"
        style="@style/reg_error_textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_reg_up_arrow"
        android:layout_marginTop="@dimen/reg_edit_fields_margin_top"
        android:background="@drawable/reg_rect"
        android:padding="@dimen/reg_edit_fields_padding"
        android:text="@string/EmptyField_ErrorMsg"
        android:visibility="gone"
        reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

</RelativeLayout>