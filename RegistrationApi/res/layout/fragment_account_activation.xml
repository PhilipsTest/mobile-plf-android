<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cl.di.reg.ui.customviews.XTextView
                android:id="@+id/tv_reg_veify_email"
                style="@style/reg_textStyle"
                android:layout_marginBottom="0dip"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/verify_email"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_welcome_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cl.di.reg.ui.customviews.XTextView
                    android:id="@+id/tv_reg_email"
                    style="@style/reg_textStyle"
                    android:text="@string/sent_email"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

                <com.philips.cl.di.reg.ui.customviews.XTextView
                    style="@style/reg_textStyle"
                    android:text="@string/ready_email"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                style="@style/reg_text_background"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip" >

                <com.philips.cl.di.reg.ui.customviews.XTextView
                    android:id="@+id/tv_reg_resend_details"
                    style="@style/reg_text_description"
                    android:text="@string/press_resend"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_reg_singin_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <FrameLayout
                    android:id="@+id/fl_reg_align_activate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginTop="@dimen/reg_margin_bottom" >

                    <com.philips.cl.di.reg.ui.customviews.XButton
                        android:id="@+id/btn_reg_activate_acct"
                        style="@style/reg_style_btn"
                        android:enabled="true"
                        android:text="@string/activate_account"
                        reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_activate_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

                <com.philips.cl.di.reg.ui.customviews.XRegError
                    android:id="@+id/reg_email_verified_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fl_reg_align_activate"
                    android:layout_marginTop="@dimen/reg_margin_bottom"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/reg_email_verified_error"
                    android:layout_marginTop="@dimen/reg_margin_bottom" >

                    <com.philips.cl.di.reg.ui.customviews.XButton
                        android:id="@+id/btn_reg_resend"
                        style="@style/reg_btn_resend"
                        android:background="@drawable/reg_btn_resend_rect"
                        android:text="@string/resend"
                        reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_resend_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>
            </RelativeLayout>

            <com.philips.cl.di.reg.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg_activate_acct"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>