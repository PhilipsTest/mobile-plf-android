<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_create_account_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/reg_layout_margin"
            android:paddingRight="@dimen/reg_layout_margin" >

            <com.philips.cl.di.reg.ui.customviews.XTextView
                style="@style/reg_titleTextStyle"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:gravity="left"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="@string/reset_password"
                reglib:fontAssetName="fonts/CentraleSans-Light.otf" />

            <com.philips.cl.di.reg.ui.customviews.XTextView
                style="@style/reg_textStyle"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:layout_marginTop="0dip"
                android:text="@string/reset_password_link"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

            <com.philips.cl.di.reg.ui.customviews.XButton
                android:id="@+id/btn_reg_continue"
                style="@style/reg_style_btn"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:enabled="true"
                android:text="@string/continue_login"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>