<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_reg_create_account_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/reg_layout_margin"
        android:paddingRight="@dimen/reg_layout_margin" >

        <com.philips.cl.di.reg.ui.customviews.XTextView
            style="@style/reg_titleTextStyle"
            android:layout_marginTop="@dimen/reg_account_margin_bottom"
            android:text="@string/reset_password" 
            reglib:fontAssetName="fonts/CentraleSans-Light.otf"/>
        
        <com.philips.cl.di.reg.ui.customviews.XTextView
            style="@style/reg_textStyle"
            android:text="@string/reset_password_link" 
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            reglib:fontAssetName="fonts/CentraleSans-Book.OTF"/>
        
        <com.philips.cl.di.reg.ui.customviews.XButton
            android:id="@+id/btn_reg_continue"
            style="@style/btn_reg_style"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            android:background="@drawable/reg_header_bg"
            android:text="@string/continue_login" 
            reglib:fontAssetName="fonts/CentraleSans-Book.OTF"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>