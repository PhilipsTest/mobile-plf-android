<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin"
        android:paddingRight="@dimen/layout_margin" >

        <TextView
            android:id="@+id/tv_welcome"
            style="@style/textStyle"
            android:text="@string/sign_in_philips" >
        </TextView>

        <EditText
            android:id="@+id/et_signin_email"
            style="@style/style_tab_reg_hint"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:hint="@string/mail_address"
            android:inputType="textEmailAddress"
            android:maxLength="40" >
			<requestFocus />
        </EditText>

        <EditText
            android:id="@+id/et_signin_password"
            style="@style/style_tab_reg_hint"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:hint="@string/enter_password"
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <View
        android:id="@+id/line_id"
        style="@style/line"
        android:layout_marginBottom="@dimen/margin_bottom" >
    </View>

    <LinearLayout
        android:id="@+id/second_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin"
        android:paddingRight="@dimen/layout_margin" >

        <Button
            android:id="@+id/sign_in_btn"
            style="@style/buttonStyle"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:background="@drawable/navigation_bar"
            android:text="@string/sign_in" >
        </Button>

        <Button
            android:id="@+id/forgot_password"
            style="@style/buttonStyle"
            android:background="@drawable/navigation_bar"
            android:text="@string/forgot_password" >
        </Button>
    </LinearLayout>

</LinearLayout>