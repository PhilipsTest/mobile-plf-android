<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/account_margin_bottom" />

        <LinearLayout
            android:id="@+id/first_part"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <EditText
                android:id="@+id/et_reg_fname"
                style="@style/style_tab_reg_hint"
                android:layout_marginBottom="@dimen/edit_margin_bottom"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:maxLength="40" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/et_reg_email"
                style="@style/style_tab_reg_hint"
                android:layout_marginBottom="@dimen/edit_margin_bottom"
                android:hint="@string/mail_address"
                android:inputType="textEmailAddress" >
            </EditText>

            <EditText
                android:id="@+id/et_reg_password"
                style="@style/style_tab_reg_hint"
                android:layout_marginBottom="@dimen/edit_margin_bottom"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_part"
            style="@style/textBackground"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/password_details"
                style="@style/textStyle"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingRight="@dimen/layout_margin"
                android:text="@string/password_details" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_part"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <CheckBox
                android:id="@+id/cb_register_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_bottom" >
            </CheckBox>

            <TextView
                android:id="@+id/periodic_offer_id"
                style="@style/textStyle"
                android:layout_marginLeft="@dimen/margin_bottom"
                android:text="@string/periodic_offers" >
            </TextView>
        </LinearLayout>

        <View
            android:id="@+id/line_id"
            style="@style/line"
            android:layout_marginBottom="@dimen/margin_bottom" >
        </View>

        <LinearLayout
            android:id="@+id/fourth_part"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <Button
                android:id="@+id/btn_register"
                style="@style/buttonStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:background="@drawable/navigation_bar"
                android:text="@string/create_phi_account" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>