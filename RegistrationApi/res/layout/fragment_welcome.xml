<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/reg_layout_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cl.di.reg.ui.customviews.XTextView
                android:id="@+id/tv_reg_welcome"
                style="@style/reg_titleTextStyle"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/RegWelcomeText"
                reglib:fontAssetName="CentraleSans-Light.otf" />

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_email_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cl.di.reg.ui.customviews.XTextView
                    android:id="@+id/tv_reg_sign_in_using"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:text="@string/InitialSignedIn_SignedInUsing_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <include layout="@layout/reg_email_details" />
            </LinearLayout>

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_continue_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cl.di.reg.ui.customviews.XButton
                    android:id="@+id/btn_reg_continue"
                    style="@style/reg_style_btn"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:enabled="true"
                    android:text="@string/SignInSuccess_Continue_btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cl.di.reg.ui.customviews.XButton
                    android:id="@+id/btn_reg_sign_out"
                    style="@style/reg_forgot_password"
                    android:layout_height="@dimen/reg_btn_height"
                    android:background="@drawable/reg_btn_forgot_rect"
                    android:text="@string/SignInSuccess_SignOut_btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/reg_scroll_margin" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>