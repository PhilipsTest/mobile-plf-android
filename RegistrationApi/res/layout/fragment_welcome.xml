<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.philips.cl.di.reg.ui.customviews.XTextView
            android:id="@+id/tv_welcome"
            style="@style/titleTextStyle"
            android:layout_marginTop="@dimen/edit_margin_bottom"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:text="@string/welcome_to_philips"
            reglib:fontAssetName="fonts/CentraleSans-Light.otf" />

        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/email_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <com.philips.cl.di.reg.ui.customviews.XTextView
                style="@style/textStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="@string/mail_Sent_to"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

            <com.philips.cl.di.reg.ui.customviews.XTextView
                style="@style/textStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="@string/check_email"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

            <com.philips.cl.di.reg.ui.customviews.XTextView
                style="@style/textStyle"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="@string/continue_use_app"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF"/>
        </LinearLayout>

        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/continue_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin" >

            <com.philips.cl.di.reg.ui.customviews.XButton
                style="@style/buttonStyle"
                android:background="@drawable/navigation_bar"
                android:text="@string/continue_login"
                reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>