<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.philips.cl.di.reg.ui.customviews.XTextView
                android:id="@+id/tv_reg_welcome"
                style="@style/reg_titleTextStyle"
                android:layout_marginTop="@dimen/reg_edit_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/welcome_to_philips"
                reglib:fontAssetName="fonts/CentraleSans-Light.otf" />

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_email_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/reg_margin_bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cl.di.reg.ui.customviews.XTextView
                    android:id="@+id/tv_reg_sign_in_using"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:text="@string/you_have_sign_in"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

                <include layout="@layout/reg_email_details" />
            </LinearLayout>

            <View style="@style/reg_line" />

            <LinearLayout
                android:id="@+id/ll_reg_continue_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" >

                <com.philips.cl.di.reg.ui.customviews.XButton
                    android:id="@+id/btn_reg_continue"
                    style="@style/btn_reg_style"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:background="@drawable/reg_header_bg"
                    android:text="@string/continue_login"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />

                <com.philips.cl.di.reg.ui.customviews.XButton
                    android:id="@+id/btn_reg_sign_out"
                    style="@style/reg_forgot_password"
                    android:background="@drawable/reg_forgot_password"
                    android:text="@string/sign_out"
                    reglib:fontAssetName="fonts/CentraleSans-Book.OTF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>