<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_create_account_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin"
        android:paddingRight="@dimen/layout_margin" >

        <com.philips.cl.di.reg.ui.customviews.XTextView
            style="@style/titleTextStyle"
            android:layout_marginTop="@dimen/account_margin_bottom"
            android:text="@string/reset_password" 
            reglib:fontAssetName="fonts/CentraleSans-Light.otf"/>
        
        <com.philips.cl.di.reg.ui.customviews.XTextView
            style="@style/textStyle"
            android:text="@string/reset_password_link" 
            android:layout_marginBottom="@dimen/margin_bottom"
            reglib:fontAssetName="fonts/CentraleSans-Book.OTF"/>
        
        <com.philips.cl.di.reg.ui.customviews.XButton
            android:id="@+id/continue_btn"
            style="@style/buttonStyle"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:background="@drawable/navigation_bar"
            android:text="@string/continue_login" 
            reglib:fontAssetName="fonts/CentraleSans-Book.OTF"/>
    </LinearLayout>
</ScrollView>