<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_homescreen_title">
        <item name="android:textSize">@dimen/reg_header_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/reg_btn_enable_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/reg_home_tiltle_padding</item>
    </style>

    <style name="reg_style_tab_hint">
        <item name="android:textSize">@dimen/reg_et_hint_size</item>
        <item name="android:paddingLeft">@dimen/reg_home_tiltle_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="reg_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/reg_line_color</item>
    </style>

    <style name="password_details">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/reg_password_details_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/reg_home_tiltle_padding</item>
    </style>

    <style name="btn_reg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/reg_btn_text_color</item>
        <item name="android:textSize">@dimen/btn_reg_text_size_large</item>
    </style>

    <style name="reg_textStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/reg_text_header_color</item>
        <item name="android:paddingBottom">@dimen/reg_home_tiltle_padding</item>
        <item name="android:textSize">@dimen/reg_title_text_size_medium</item>
    </style>
	
    <style name="reg_text_description">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/reg_text_desc_color</item>
        <item name="android:paddingBottom">@dimen/reg_home_tiltle_padding</item>
        <item name="android:textSize">@dimen/reg_title_text_size_medium</item>
    </style>
    
    <style name="reg_text_background">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/reg_text_background</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">@dimen/reg_home_tiltle_padding</item>
    </style>

    <style name="reg_titleTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/reg_text_header_color</item>
        <item name="android:layout_marginBottom">@dimen/reg_home_tiltle_padding</item>
        <item name="android:textSize">@dimen/reg_title_text_size_large</item>
    </style>

    <style name="reg_error_textStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/reg_title_text_size_medium</item>
    </style>
 
    <style name="reg_forgot_password">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/reg_text_color</item>
        <item name="android:textSize">@dimen/btn_reg_text_size_large</item>
    </style>

    <style name="reg_btn_resend">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/reg_err_msg_color</item>
        <item name="android:textSize">@dimen/btn_reg_text_size_large</item>
    </style>

    <style name="reg_btn_disable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/reg_btn_disable_text_color</item>
        <item name="android:textSize">@dimen/btn_reg_text_size_large</item>
    </style>

    <!-- Configurable -->


    <!-- Header style -->

    <style name="reg_style_homescreen_title">
        <item name="android:textSize">@dimen/reg_header_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/reg_btn_enable_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>