<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <com.philips.cl.di.dev.pa.view.FontTextView 
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/setup_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/setup_actionbar_cancel_btn"
        android:layout_toRightOf="@+id/setup_actionbar_back_img"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:singleLine="true"
        android:textColor="@color/philips_blue"
        android:textSize="@dimen/title_text_size_medium_dp"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

    
    <ImageButton
        android:id="@+id/setup_actionbar_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/image_btn_bg"
        android:contentDescription="@string/img_description"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="8dp"
        android:src="@drawable/cross_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/setup_actionbar_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/clickable_image_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/img_description"
        android:padding="12dp"
        android:src="@drawable/back_arrow" />

    <com.philips.cl.di.dev.pa.view.FontButton
        xmlns:custom="http://schemas.android.com/apk/res/com.philips.cl.di.dev.pa"
        android:id="@+id/setup_actionbar_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blue_button_selector"
        android:text="@string/decline"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small_dp"
        android:visibility="gone"
        custom:fontAssetName="fonts/centralesanslight.ttf" />

</RelativeLayout>